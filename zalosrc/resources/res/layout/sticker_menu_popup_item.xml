<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <View
        android:layout_gravity="right"
        android:id="@+id/chat_menu_popup_item_divider"
        android:background="#d0d4d9"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="39dp"/>
    <RelativeLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_alignParentLeft="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="15dp"
            android:textColor="?attr/sticker_panel_menu_popup_text_color"
            android:id="@+id/lable_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/icon_menu"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
