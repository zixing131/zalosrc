<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.uicontrol.StoryIntroItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <include layout="@layout/story_item_content_layout"/>
    <include layout="@layout/story_item_animation_layout"/>
    <com.zing.zalo.feed.mvp.storymusic.view.StoryBoxLyric
        android:id="@+id/story_box_lyric"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/story_overlay_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_gravity="top"
            android:id="@+id/story_top_gradient"
            android:background="@drawable/story_top_gradient"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/story_bottom_gradient"
            android:background="@drawable/story_bottom_gradient"
            android:layout_width="match_parent"
            android:layout_height="90dp"/>
        <RelativeLayout
            android:layout_gravity="top"
            android:id="@+id/story_details_top_layout"
            android:paddingTop="@dimen/story_details_top_layout_padding_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/story_item_avatar_layout"/>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/ll_story_item_top_right_controls"
                android:layout_toRightOf="@+id/story_avatar_layout"
                android:layout_alignTop="@+id/ll_story_item_top_right_controls"
                android:layout_alignBottom="@+id/ll_story_item_top_right_controls">
                <com.zing.zalo.p077ui.widget.StoryInfoCustomFrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:leftView="@+id/tv_story_username"
                    app:rightView="@+id/ll_story_item_top_right_info">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="@color/cM0"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_story_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        style="@style/t_normal_m"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/ll_story_item_top_right_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="@color/white_60"
                            android:id="@+id/tv_story_create_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:maxLines="1"
                            android:includeFontPadding="false"
                            style="@style/t_normal"/>
                    </LinearLayout>
                </com.zing.zalo.p077ui.widget.StoryInfoCustomFrameLayout>
                <com.zing.zalo.feed.mvp.storymusic.view.StorySongInfoView
                    android:id="@+id/story_song_info_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <include layout="@layout/story_top_right_controls_layout"/>
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:id="@+id/btn_music_speaker"
                android:background="@drawable/bg_btn_speaker_story_off"
                android:padding="8dp"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="24dp"
                android:scaleType="center"
                android:layout_below="@+id/story_avatar_layout"
                android:layout_alignLeft="@+id/story_avatar_layout"
                app:srcCompatEx="@drawable/zds_ic_speaker_solid_24"/>
        </RelativeLayout>
        <com.zing.zalo.uicontrol.PlaylistProgressBar
            android:id="@+id/story_playlist_progress_bar"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
        <View
            android:id="@+id/story_black_overlay"
            android:background="@color/black_50"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ViewStub
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/stub_story_item_view_bottom_layout"
            android:inflatedId="@+id/story_details_item_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ViewStub
            android:layout_gravity="bottom"
            android:id="@+id/stub_story_item_view_error_layout"
            android:layout="@layout/story_details_item_view_error_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/fl_story_item_overlay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</com.zing.zalo.uicontrol.StoryIntroItemView>
