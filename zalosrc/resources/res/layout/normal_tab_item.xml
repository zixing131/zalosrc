<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.zdesign.component.tab.TabItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/itemContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_min="@dimen/tab_item_min_width">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/leadingContainer"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tab_leading_item_marginRight">
                <com.zing.zalo.zdesign.component.TrackingImageView
                    android:id="@+id/tab_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="@dimen/tab_leading_item_max_width"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/textContainer"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:ellipsize="end"
                    android:id="@+id/txtContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/t_normal_m"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/trailing_container"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/tab_trailing_item_marginLeft">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:ellipsize="end"
                    android:id="@+id/txtNumber"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="@dimen/tab_trailing_item_max_width"
                    style="@style/t_normal"/>
                <FrameLayout
                    android:id="@+id/custom_container"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="@dimen/tab_trailing_item_max_width"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <com.zing.zalo.zdesign.component.Badge
            android:id="@+id/dot_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/badge_marginLeft"
            android:layout_marginTop="@dimen/badge_marginTop"
            android:layout_marginRight="@dimen/badge_marginRight"
            app:layout_constraintLeft_toRightOf="@+id/itemContainer"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/indicator"
        android:background="@drawable/tab_indicator_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/indicator_height"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
</com.zing.zalo.zdesign.component.tab.TabItemView>
