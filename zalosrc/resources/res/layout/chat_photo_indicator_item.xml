<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/chat_photo_indicator_item"
        android:background="#404040"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <include layout="@layout/holo_circular_progress_bar_micro"/>
    <View
        android:layout_gravity="center"
        android:id="@+id/chat_photo_indicator_item_selected"
        android:background="@drawable/chat_indicator_item_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
