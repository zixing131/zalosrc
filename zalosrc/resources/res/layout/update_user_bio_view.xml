<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <RelativeLayout
        android:id="@+id/layout_bio"
        android:background="@drawable/stencils_comment_bg"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="136dp">
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_alignParentTop="true">
            <EditText
                android:textSize="16sp"
                android:gravity="top|left"
                android:id="@+id/user_bio"
                android:background="@drawable/rectangle_transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="45dp"
                android:hint="@string/str_bio_hint"
                android:maxLength="@integer/ext_profile_limit_lenght_text_large"
                style="@style/MaterialEditText"/>
            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_ipt_clear"
                android:scaleType="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13sp"
            android:textColor="?attr/TextColor2"
            android:gravity="right"
            android:id="@+id/tv_count_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="11dp"
            android:text="20/200"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/cb_push_feed_update"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left"
            android:checked="true"
            android:button="@drawable/mat_btn_radio_circle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/tv_push_feed_update"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_push_feed_avt_cover_update"
            android:layout_toRightOf="@+id/cb_push_feed_update"
            android:layout_centerVertical="true"/>
        <View
            android:id="@+id/push_feed_option_overlay"
            android:background="?attr/SecondaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_push_feed_update"
            android:layout_alignBottom="@+id/tv_push_feed_update"/>
    </RelativeLayout>
</LinearLayout>
