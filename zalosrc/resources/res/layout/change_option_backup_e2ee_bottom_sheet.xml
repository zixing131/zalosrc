<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_content_parent"
    android:background="@drawable/bg_introduce_backup_rules_btm_sheet"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="41dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:src="@drawable/album_bottom_sheet_handle"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor1"
            android:id="@+id/tv_title_setting_backup_e2ee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="@string/str_setting_backup_e2ee"
            android:layout_weight="1"/>
        <com.zing.zalo.zdesign.component.Switch
            android:id="@+id/sw_enable_backup_e2ee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Switch.Medium"/>
    </LinearLayout>
</LinearLayout>
