<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/layout_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/popup_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/layout_picker"
                android:background="@drawable/bottom_view_bg_popup_rounded_top_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="20dp"
                    android:textColor="?attr/TextColor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="28dp"
                    android:text="@string/str_config_self_delete_conversation_title"
                    app:fstyle="medium"/>
                <NumberPicker
                    android:theme="?attr/SelfDeleteConversationPicker"
                    android:id="@+id/number_picker"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>
                <com.zing.zalo.p077ui.widget.RobotoButton
                    android:id="@+id/btn_start"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/str_saved"
                    android:textAllCaps="true"
                    style="@style/btnType1.medium"/>
                <com.zing.zalo.p077ui.widget.RobotoButton
                    android:textSize="@dimen/mat_btn_style_medium_text"
                    android:textColor="?attr/TextColor2"
                    android:id="@+id/btn_cancel"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/str_btn_back"
                    android:textAllCaps="true"
                    app:fstyle="medium"/>
            </LinearLayout>
        </FrameLayout>
    </com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout>
</FrameLayout>
