<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/SecondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:idTrailingButton="button_create"
            app:leadingType="back"
            app:middleTitleText="@string/str_create_group_poll_title"
            app:middleType="title"
            app:trailingTextButton="@string/str_create_cap"
            app:trailingType="text"
            style="@style/WhiteZdsActionBar.AppType"/>
        <com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout
            android:id="@+id/keyboard_aware_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.ScrollView
                android:id="@+id/sv_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/container_setting_and_add_options">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/container_content"
                        android:background="?attr/PrimaryBackgroundColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/pin_checker_container"
                            android:background="?attr/SecondaryBackgroundColor"
                            android:layout_width="match_parent"
                            android:layout_height="48dp">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:id="@+id/pin_wrap"
                                android:background="@drawable/item_background_ripple"
                                android:paddingLeft="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/ic_pin_checker"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/icn_form_radio_unchecked"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor2"
                                    android:ellipsize="end"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:text="@string/str_pin_to_top_group_chat_v2"
                                    android:maxLines="1"
                                    app:maxScaledTextSize="20dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <com.zing.zalo.uicontrol.CustomEditText
                            android:textSize="20dp"
                            android:textColor="?attr/TextColor1"
                            android:textColorHint="?attr/TextColor3"
                            android:gravity="start|center_vertical"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/et_group_poll_question"
                            android:paddingLeft="16dp"
                            android:paddingTop="24dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:hint="@string/str_poll_input_question_hint"
                            android:lineSpacingExtra="6dp"
                            android:inputType="textMultiLine"
                            android:textCursorDrawable="@drawable/chat_bar_text_cursor"
                            style="@style/MaterialEditText"/>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/container_list_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="16dp"
                            android:textColor="?attr/AppPrimaryColor"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/btn_add_option"
                            android:background="?attr/selectableItemBackground"
                            android:paddingLeft="16dp"
                            android:paddingTop="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/str_poll_button_add_option"
                            android:includeFontPadding="false"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="?attr/PrimaryBackgroundColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/btn_advanced_settings"
                            android:background="?attr/selectableItemBackground"
                            android:paddingLeft="16dp"
                            android:paddingTop="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:ellipsize="end"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_poll_advance_setting_text"
                                    android:maxLines="1"
                                    android:includeFontPadding="false"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="14dp"
                                    android:textColor="?attr/TextColor2"
                                    android:ellipsize="end"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/str_poll_advance_setting_desc"
                                    android:maxLines="1"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/zds_ic_chevron_down_line_24"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/advance_settings_container"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="14dp"
                                android:textColor="?attr/SectionTitleColor1"
                                android:paddingLeft="16dp"
                                android:paddingTop="18dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str_settings_in_advanced_poll"
                                app:fstyle="medium"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:id="@+id/setting_choose_end_time"
                                android:background="@drawable/list_selector"
                                android:paddingLeft="16dp"
                                android:paddingTop="18dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_poll_end_time_option_setting_text"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="14dp"
                                    android:textColor="?attr/TextColor2"
                                    android:id="@+id/tv_end_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="@string/str_poll_end_time_option_no_limit_subtitle"/>
                            </LinearLayout>
                            <View
                                android:background="?attr/ItemSeparatorColor"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/setting_anonymous"
                                android:background="@drawable/list_selector"
                                android:paddingLeft="16dp"
                                android:paddingTop="18dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_poll_anonymous_setting_text"
                                    android:layout_weight="1"/>
                                <com.zing.zalo.p077ui.widget.StencilSwitch
                                    android:id="@+id/setting_anonymous_switch"
                                    android:layout_width="42dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="8dp"/>
                            </LinearLayout>
                            <View
                                android:background="?attr/ItemSeparatorColor"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/setting_hide_vote_preview"
                                android:background="@drawable/list_selector"
                                android:paddingLeft="16dp"
                                android:paddingTop="18dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_poll_hide_vote_preview_setting_text"
                                    android:layout_weight="1"/>
                                <com.zing.zalo.p077ui.widget.StencilSwitch
                                    android:id="@+id/setting_hide_vote_preview_switch"
                                    android:layout_width="42dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="8dp"/>
                            </LinearLayout>
                            <View
                                android:background="?attr/ItemSeparatorColor"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/setting_multi_choice"
                                android:background="@drawable/list_selector"
                                android:paddingLeft="16dp"
                                android:paddingTop="18dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_poll_multi_choice_setting_text"
                                    android:layout_weight="1"/>
                                <com.zing.zalo.p077ui.widget.StencilSwitch
                                    android:id="@+id/setting_multi_choice_switch"
                                    android:layout_width="42dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="8dp"/>
                            </LinearLayout>
                            <View
                                android:background="?attr/ItemSeparatorColor"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/setting_add_new_option"
                                android:background="@drawable/list_selector"
                                android:paddingLeft="16dp"
                                android:paddingTop="18dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="18dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:id="@+id/setting_add_new_option_text"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_poll_add_option_setting_text"
                                    android:layout_weight="1"/>
                                <com.zing.zalo.p077ui.widget.StencilSwitch
                                    android:id="@+id/setting_add_new_option_switch"
                                    android:layout_width="42dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="8dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.zing.zalo.p077ui.widget.ScrollView>
        </com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout>
    </LinearLayout>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
