<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/zch_divider_popup_action"
    android:showDividers="middle">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="16dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="16dp"
            android:textColor="@color/zch_text_secondary"
            android:gravity="center"
            android:id="@+id/txtTitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="14dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center"
            android:id="@+id/txtMessage"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp"
            package:zchFontStyle="regular"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lytActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/zch_divider_popup_action"
        android:showDividers="middle">
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_accent_blue"
            android:gravity="center"
            android:id="@+id/btnPositive"
            android:background="@drawable/zch_bg_ripple_rectangle"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/zch_popup_confirm_button_height"
            android:includeFontPadding="false"
            android:layout_weight="1"
            package:zchFontStyle="regular"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_accent_blue"
            android:gravity="center"
            android:id="@+id/btnNeutral"
            android:background="@drawable/zch_bg_ripple_rectangle"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/zch_popup_confirm_button_height"
            android:includeFontPadding="false"
            android:layout_weight="1"
            package:zchFontStyle="regular"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_secondary"
            android:gravity="center"
            android:id="@+id/btnNegative"
            android:background="@drawable/zch_bg_ripple_rectangle"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/zch_popup_confirm_button_height"
            android:includeFontPadding="false"
            android:layout_weight="1"
            package:zchFontStyle="regular"/>
    </LinearLayout>
</LinearLayout>
