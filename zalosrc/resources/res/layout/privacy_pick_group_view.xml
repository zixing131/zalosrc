<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/str_privacy_pick_group_title"
        app:middleType="title"
        style="@style/WhiteZdsActionBar.AppType"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_search"
        android:background="?attr/PrimaryBackgroundColor"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoEditText
            android:textSize="@dimen/f5"
            android:textColor="@color/cMtxt5"
            android:textColorHint="@color/cMtxt5"
            android:layout_gravity="center_vertical"
            android:id="@+id/edit_search"
            android:background="@drawable/bg_search_share_view"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:hint="@string/str_groupname"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_searchbox_n"
            android:drawablePadding="12dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
        android:id="@+id/multi_state"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msvEmptyLayout="@layout/layout_empty_state"
        app:msvErrorLayout="@layout/layout_error_state"/>
</LinearLayout>
