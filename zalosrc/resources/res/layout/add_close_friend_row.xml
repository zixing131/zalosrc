<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:zalo="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layoutcontact"
    android:background="@drawable/stencils_contact_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.GroupAvatarView
        android:layout_gravity="center_vertical"
        android:id="@+id/buddy_dp"
        android:duplicateParentState="true"
        android:layout_width="@dimen/avt_image_size_default"
        android:layout_height="@dimen/avt_image_size_default"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
        android:layout_marginTop="@dimen/padding_item"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:layout_marginBottom="@dimen/padding_item"
        android:src="0x7f080958"
        android:adjustViewBounds="true"
        zalo:isSmallSize="true"
        style="@style/myImageView"/>
    <LinearLayout
        android:orientation="vertical"
        android:duplicateParentState="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/HeaderFormTitleColor"
            android:ellipsize="end"
            android:id="@+id/name"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/constant_Contact"
            android:lines="1"
            android:singleLine="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/description"
            android:visibility="gone"
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/constant_Contact"
            android:lines="1"
            android:singleLine="true"/>
    </LinearLayout>
    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/pick_friend_checkbox"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:button="@drawable/mat_btn_circle_check_blue"/>
</LinearLayout>
