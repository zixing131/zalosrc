<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.camera.videos.videospeed.VideoSpeedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_speed_layout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/overlay_view"
        android:background="@color/black_50"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:id="@+id/speed_save_text"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/str_story_save"
        android:shadowColor="@color/black_40"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:layout_marginEnd="4dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/speed_indicator_text"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="210dp"
        app:fstyle="thin"/>
    <LinearLayout
        android:layout_gravity="end"
        android:orientation="vertical"
        android:id="@+id/right_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="16dp">
        <com.zing.zalo.camera.videos.customviews.VideoSpeedSeekBar
            android:layout_gravity="center_horizontal"
            android:id="@+id/video_speed_seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/reverse_button"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@drawable/_icn_story_reverse"/>
    </LinearLayout>
</com.zing.zalo.camera.videos.videospeed.VideoSpeedLayout>
