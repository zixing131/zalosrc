<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_header_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imvRetry">
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/imvAvatar"
            android:layout_width="@dimen/avt_comment"
            android:layout_height="@dimen/avt_comment"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:scaleType="fitXY"/>
        <View
            android:id="@+id/icn_avatar_online_status"
            android:background="@drawable/icn_feed_detail_online"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/imvAvatar"
            android:layout_alignBottom="@+id/imvAvatar"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/tvUserName"
            android:paddingRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_content_padding"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/imv_like_comment"
            android:layout_toRightOf="@+id/imvAvatar"
            android:layout_alignTop="@+id/imvAvatar"
            style="@style/Feed.Comment.CommentorName"/>
        <ImageView
            android:id="@+id/imv_comment_unsupport"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="0x7f080d84"
            android:layout_toRightOf="@+id/imvAvatar"
            android:layout_below="@+id/tvUserName"
            android:layout_alignLeft="@+id/tvUserName"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:layout_gravity="left"
            android:id="@+id/tvMessage"
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imv_like_comment"
            android:layout_toRightOf="@+id/imvAvatar"
            android:layout_below="@+id/imv_comment_unsupport"
            android:layout_alignLeft="@+id/tvUserName"
            style="@style/Feed.Comment.Caption"/>
        <ImageView
            android:id="@+id/imv_like_comment"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="0x7f080f14"
            android:layout_alignTop="@+id/imvAvatar"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/imvRetry"
        android:visibility="gone"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="@dimen/feed_content_padding"
        android:layout_marginRight="@dimen/oa_padding"
        android:src="@drawable/ic_retry_line_circle_24"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
