<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:tag="layout/music_detail_bottom_sheet_layout_0"
    android:background="@drawable/bg_music_detail_bottom_sheet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/icn_slide_hint"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/album_bottom_sheet_handle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/layout_music_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/icn_slide_hint">
        <RelativeLayout
            android:id="@+id/song_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true">
            <com.zing.zalo.p077ui.widget.imageview.RoundCornerImageView
                android:id="@+id/song_thumb"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:round_radius="8dp"/>
            <RelativeLayout
                android:id="@+id/song_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/song_thumb"
                android:layout_alignTop="@+id/song_thumb"
                android:layout_alignBottom="@+id/song_thumb">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_primary"
                    android:ellipsize="end"
                    android:id="@+id/song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    style="@style/t_large_m"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="14dp"
                    android:textColor="?attr/text_tertiary"
                    android:ellipsize="end"
                    android:id="@+id/artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:layout_below="@+id/song_name"/>
                <LinearLayout
                    android:id="@+id/zing_mp3_button"
                    android:background="@drawable/bg_profile_music_zingmp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <com.androidquery.util.RecyclingImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/zing_mp3_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="0x7f08175f"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="12dp"
                        android:textColor="?attr/text_primary"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/str_listen_on_zing_mp3"
                        style="@style/t_xxsmall"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/progress_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/song_info_container"
            android:layout_centerVertical="true">
            <com.zing.zalo.zdesign.component.slider.ZdsSlider
                android:id="@+id/song_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button_container"
                app:prefixText="00:00"
                app:prefixType="text"
                app:sliderType="single_thumb_slider"
                app:suffixText="--:--"
                app:suffixType="text"
                style="@style/Slider_NeutralTheme"/>
            <FrameLayout
                android:id="@+id/button_container"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <com.androidquery.util.RecyclingImageView
                    android:id="@+id/playback_button"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_btn_profile_music_pause"/>
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/loading_button"
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:indeterminate="true"
                    android:indeterminateDrawable="@drawable/profile_music_loading"
                    android:indeterminateDuration="1500"
                    android:indeterminateBehavior="repeat"/>
            </FrameLayout>
        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/progress_container"/>
        <com.zing.zalo.zdesign.component.TrackingTextView
            android:textColor="?attr/button_tertiary_text"
            android:gravity="center"
            android:id="@+id/post_feed_button"
            android:background="@drawable/stencils_contact_bg"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_bts_post_on_timeline_profile_music"
            android:layout_below="@+id/divider"
            android:layout_centerHorizontal="true"
            style="@style/t_normal_m"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_error_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/icn_slide_hint">
        <com.zing.zalo.feed.components.EmptyContentView
            android:id="@+id/layout_empty_content_no_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_error_can_not_stream"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/icn_slide_hint">
        <com.zing.zalo.p077ui.widget.imageview.RoundCornerImageView
            android:id="@+id/song_thumb_error_can_not_stream"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:src="0x7f080bf8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:round_radius="8dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/song_name_error_can_not_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:layout_below="@+id/song_thumb_error_can_not_stream"
            android:layout_centerHorizontal="true"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/artist_name_error_can_not_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:layout_below="@+id/song_name_error_can_not_stream"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/description_error_can_not_stream"
            android:background="@drawable/bg_music_detail_not_exist_zing_mp3_error_desc"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/artist_name_error_can_not_stream">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <com.zing.zalo.p077ui.widget.AspectRatioImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_warning_circle_solid_notification_color_3"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="14dp"
                    android:textColor="?attr/TextColor1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/str_music_post_song_not_exist"
                    android:maxLines="1"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
