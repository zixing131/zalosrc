<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_link_activated_layout"
    android:background="?attr/PrimaryBackgroundColor"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/settings_layout"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <com.androidquery.util.RecyclingImageView
                android:id="@+id/imv_group_qr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/decor_qrcode"/>
            <ProgressBar
                android:theme="@style/CircularProgress"
                android:layout_gravity="center"
                android:id="@+id/pb_group_qrcode_loading"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateDuration="1500"
                android:indeterminateBehavior="repeat"
                style="@style/ProgressBarCircleNormal"/>
        </FrameLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/HeaderFormTitleColor"
            android:gravity="center"
            android:id="@+id/tv_group_link_info"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/str_hint_share_group_link"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_rect_8dp_co_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f1"
                android:textColor="?attr/AppPrimaryColor"
                android:gravity="center"
                android:id="@+id/tv_group_link_url"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="24dp"
                android:paddingTop="10dp"
                android:paddingRight="24dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/LinkColor"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_custom_group_link"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/str_custom_group_link"
                android:includeFontPadding="false"
                app:fstyle="medium"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_group_link_manage_functions"
            android:paddingLeft="@dimen/msg_item_padding_l_r"
            android:paddingRight="@dimen/msg_item_padding_l_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
