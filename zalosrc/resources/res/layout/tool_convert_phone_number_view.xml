<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:k="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutHint"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f13"
            android:textColor="?attr/TextColor1"
            android:id="@+id/tvHintConvertPhone"
            android:background="?attr/PrimaryBackgroundColor"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
    <FrameLayout
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:paddingBottom="52dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            k:msvEmptyLayout="@layout/layout_empty_tool_convert"
            k:msvErrorLayout="@layout/layout_error_state"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutError"
            android:background="?attr/PrimaryBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="16dp"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="40dp"
                android:text="@string/str_content_dialog_permission_convert_phone"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnReload"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/str_bt_reload"
                android:textAllCaps="true"
                style="@style/btnType1.small"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/layoutNotSupport"
            android:background="?attr/PrimaryBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:layout_width="162dp"
                android:layout_height="@dimen/imv_multi_state_height"
                android:layout_marginTop="17dp"
                android:src="0x7f080fce"
                android:scaleType="fitCenter"
                android:contentDescription="Image"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TextColor2"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvNotSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="40dp"
                android:text="@string/str_tool_convert_phone_number_not_support"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/layoutSuccess"
            android:background="?attr/PrimaryBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:layout_width="162dp"
                android:layout_height="@dimen/imv_multi_state_height"
                android:layout_marginTop="61dp"
                android:scaleType="fitCenter"
                android:contentDescription="Image"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f1"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvTitleSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp"
                android:text="@string/str_msg_convert_phone_done"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TextColor2"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvContentSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="40dp"
                android:text="@string/str_tool_convert_phone_number_success"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_select_all"
        android:background="?attr/PrimaryBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:elevation="6dp">
        <CheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/checkboxAll"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:button="@drawable/mat_btn_radio_circle"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f4"
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:id="@+id/tv_select_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/select_all"
            k:disableScaleTextSize="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f4"
            android:textColor="@drawable/bg_btn_type1_text"
            android:gravity="center"
            android:id="@+id/btnConvert"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"
            android:minWidth="94dp"
            android:text="@string/str_btn_convert_phone_number"
            k:disableScaleTextSize="true"
            style="@style/btnType1.medium"/>
    </LinearLayout>
</LinearLayout>
