<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="Danh sách log"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_actions"
        android:background="@drawable/res_call_bg_footer_create_group_call"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="15dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_btn_delete"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:text="Xóa"
            android:lines="1"
            android:singleLine="true"
            android:layout_weight="1"
            style="@style/btnType2.medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_btn_send"
            android:layout_width="0dp"
            android:layout_margin="16dp"
            android:text="Gửi"
            android:lines="1"
            android:singleLine="true"
            android:layout_weight="1"
            style="@style/btnType1.medium"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_file_logs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_actions"
        android:layout_below="@+id/zds_action_bar"/>
</RelativeLayout>
