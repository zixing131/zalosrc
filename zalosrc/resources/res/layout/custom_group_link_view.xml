<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:idTrailingButton="done_button"
        app:leadingType="back"
        app:middleTitleText="@string/str_custom_group_link_title"
        app:middleType="title"
        app:trailingTextButton="@string/str_menu_item_finished"
        app:trailingType="text"
        style="@style/BlueZdsActionBar.AppType"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="@color/cMTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_custom_group_link_prompt"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@drawable/bg_bottom_line_stroke_2dp_color_cm2"
                android:paddingBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f2"
                    android:textColor="@color/cMtxt2"
                    android:id="@+id/tv_custom_group_link_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.zing.zalo.uicontrol.CustomEditText
                    android:textSize="@dimen/f2"
                    android:textColor="@color/cMtxt1"
                    android:textColorHint="@color/cMtxt2"
                    android:ellipsize="end"
                    android:autoLink="none"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/edt_custom_group_link_input"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/tv_custom_group_link_check_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/tv_custom_group_link_rule_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
