<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <ScrollView
        android:id="@+id/root_backgroundmain"
        android:background="?attr/PrimaryBackgroundColor"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/layout_bound_childview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/tv_hint_to_set_password"
                android:background="?attr/SecondaryBackgroundColor"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_set_pass_for_use"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_old_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/str_hint_curent_password"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_weight="1"
                        style="@style/Roboto.f5b"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor2"
                        android:id="@+id/tv_show_hide_old_password"
                        android:paddingLeft="6dp"
                        android:paddingRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/startup_show_password"
                        style="@style/Roboto.f5b"/>
                </LinearLayout>
                <com.zing.zalo.uicontrol.CustomEditText
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor2"
                    android:autoLink="none"
                    android:id="@+id/et_oldpass"
                    android:background="@drawable/edt_normal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="@string/login_old_password"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="14dp"
                    android:textColor="?attr/SeparatorColor3"
                    android:id="@+id/tvError1"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/str_hintAlreadyActivated"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/login_new_password"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_weight="1"
                        style="@style/Roboto.f5b"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor2"
                        android:id="@+id/tv_show_hide_new_password"
                        android:paddingLeft="6dp"
                        android:paddingRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/startup_show_password"
                        style="@style/Roboto.f5b"/>
                </LinearLayout>
                <com.zing.zalo.uicontrol.CustomEditText
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor2"
                    android:autoLink="none"
                    android:id="@+id/et_newpass"
                    android:background="@drawable/edt_normal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="@string/str_hint_input_new_password"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="14dp"
                    android:textColor="?attr/SeparatorColor3"
                    android:id="@+id/tvError2"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/str_hintAlreadyActivated"/>
                <com.zing.zalo.uicontrol.CustomEditText
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor2"
                    android:autoLink="none"
                    android:id="@+id/et_newpass_confirm"
                    android:background="@drawable/edt_normal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="16dp"
                    android:hint="@string/login_new_password_confirm"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="14dp"
                    android:textColor="?attr/SeparatorColor3"
                    android:id="@+id/tvError3"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/login_password_confirm_failed"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/layout_dochangepass"
                android:clickable="true"
                android:layout_width="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:minWidth="160dp"
                android:text="@string/str_btn_update_reset_pass"
                android:textAllCaps="true"
                style="@style/btnType1.medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f7"
                android:textColor="?attr/TextColor1"
                android:id="@+id/layoutdismissrenewpass"
                android:background="@drawable/mat_selected_text_view_background"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="@string/hint_dismiss_renew_password"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
