<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_swipeable"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_friend_request"
            android:background="?attr/SecondaryBackgroundColor"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="0dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:fastScrollEnabled="false"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_suggest_friends"
            android:background="?attr/PrimaryBackgroundColor"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="42dp"
                android:layout_marginRight="80dp"
                android:text="@string/str_suggest_full_empty_desc"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/ll_find_friend_via_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        app:srcCompatEx="@drawable/chat_friend_button_location"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f1s"
                        android:textColor="?attr/TextColor1"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/usernearby_title"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/ll_suggest_find_friend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        app:srcCompatEx="@drawable/chat_friend_button_addfriend"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f1s"
                        android:textColor="?attr/TextColor1"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/des_func_find_more_friend_zalo_tab"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/ll_phonebook_suggestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        app:srcCompatEx="@drawable/chat_friend_button_phonebook"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f1s"
                        android:textColor="?attr/TextColor1"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/str_native_list_entry_view_title"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:background="?attr/SecondaryBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/rl_edit_function"
            android:background="@drawable/stencils_bg_footer_function_maintab"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abs__action_bar_default_height">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/bg_btn_type2_text"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/tv_select_unselect"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:minWidth="@dimen/mat_btn_style_2_w"
                android:minHeight="@dimen/mat_btn_style_1_h"
                android:text="@string/str_func_edit_mode_select_all"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                style="@style/btnType2.medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/bg_btn_type1_text"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/tv_clean"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="16dp"
                android:minWidth="@dimen/mat_btn_style_2_w"
                android:minHeight="@dimen/mat_btn_style_1_h"
                android:text="@string/str_func_edit_mode_delete"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/btnType1.small"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
