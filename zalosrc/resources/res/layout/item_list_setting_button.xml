<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_list_setting_button"
        android:background="@drawable/stencils_list_bg"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/icon_left_list_setting_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/icon_left_list_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zds_ic_pin_line_24"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/heading_list_setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/icon_right_list_setting_container"
            android:layout_toRightOf="@+id/icon_left_list_setting_container"
            android:layout_centerInParent="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:ellipsize="end"
                android:id="@+id/title_list_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                style="@style/t_large"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_02"
                android:id="@+id/subtitle_list_setting"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_list_setting"
                style="@style/t_small"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/icon_right_list_setting_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.zing.zalo.zdesign.component.Button
                android:id="@+id/button_list_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="button"
                style="@style/ButtonSmall.Secondary"/>
            <ImageView
                android:id="@+id/icon_right_list_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zds_ic_chevron_right_line_24"
                android:layout_toRightOf="@+id/button_list_setting"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.zing.zalo.zdesign.component.Divider
        android:id="@+id/divider_list_setting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_list_setting_button"/>
</RelativeLayout>
