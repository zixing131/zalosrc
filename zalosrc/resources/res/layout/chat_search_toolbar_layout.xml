<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.chat.widget.search.ChatSearchToolbarView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="?attr/PopupBackgroundColor"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.zing.zalo.uicomponents.reddot.RedDotImageView
            android:id="@+id/icn_search_by_sender"
            android:visibility="visible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_person_search_line_24"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/NotificationColor5"
            android:id="@+id/search_result_position_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/chat_search_up_btn"
            android:layout_toRightOf="@+id/icn_search_by_sender"
            android:layout_centerVertical="true"
            android:textAlignment="textEnd"
            app:disableScaleTextSize="true"/>
        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/chat_search_up_btn"
            android:background="@color/transparent"
            android:paddingLeft="24dp"
            android:paddingRight="4dp"
            android:focusable="true"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_search_up"
            android:layout_toLeftOf="@+id/chat_search_down_btn"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/chat_search_down_btn"
            android:background="@color/transparent"
            android:paddingLeft="4dp"
            android:paddingRight="12dp"
            android:focusable="true"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_search_down"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.zing.zalo.p077ui.chat.widget.search.ChatSearchToolbarView>
