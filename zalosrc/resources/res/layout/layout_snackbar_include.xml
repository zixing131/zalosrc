<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp">
        <RelativeLayout
            android:id="@+id/rl_des_snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <RelativeLayout
                android:id="@+id/rl_leading_snackbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <com.androidquery.util.RecyclingImageView
                    android:id="@+id/snackbar_icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"/>
                <com.zing.zalo.zdesign.component.ProgressBar
                    android:theme="@style/ZdesignThemeDefault.Dark"
                    android:id="@+id/snackbar_progress_leading"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"/>
            </RelativeLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_04"
                android:ellipsize="end"
                android:gravity="start"
                android:id="@+id/snackbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl_leading_snackbar"
                android:layout_centerVertical="true"
                style="@style/t_normal"/>
        </RelativeLayout>
        <com.zing.zalo.zdesign.component.ProgressBar
            android:theme="@style/ZdesignThemeDefault.Dark"
            android:id="@+id/snackbar_progress_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:indeterminate="true"
            android:layout_below="@+id/rl_des_snackbar"
            style="@style/ProgressBar.Horizontal"/>
    </RelativeLayout>
    <com.zing.zalo.zdesign.component.ButtonWithProgress
        android:theme="@style/ZdesignThemeDefault.Dark"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/snackbar_action"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        style="@style/ButtonMedium.Tertiary"/>
</merge>
