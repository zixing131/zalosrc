<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_connection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/bg_connection"
        android:background="@color/bg_connect_notif_success"
        android:layout_width="match_parent"
        android:layout_height="@dimen/connection_status_bar_h">
        <ImageView
            android:id="@+id/icon_connection"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="@color/cMtxt1"
            android:id="@+id/text_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:text="@string/str_connectting"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/icon_connection"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:background="@color/bg_connection_status_separate_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
