<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layout_delete_for_admin_mode"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/btn_exit_delete_for_admin_mode"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icn_navigation_button_back_grey"
        android:scaleType="fitCenter"
        android:layout_weight="0"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/btn_delete_for_me"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_khomedia_delete"
                    android:scaleType="centerInside"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="12dp"
                    android:textColor="?attr/TextColor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_btn_delete_for_me"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/btn_delete_for_all_members"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_khomedia_delete_admin"
                    android:scaleType="centerInside"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="12dp"
                    android:textColor="?attr/TextColor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_btn_delete_for_everyone"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
