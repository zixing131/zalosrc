<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_update_online_status"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:minHeight="@dimen/avt_image_size_default">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/desUpdateStatus"
            android:paddingRight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="16dp"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/ic_start_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="3dp"
            android:src="0x7f08092f"
            android:layout_alignTop="@+id/desUpdateStatus"/>
        <ImageView
            android:id="@+id/ic_start_status_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080930"
            android:layout_alignRight="@+id/desUpdateStatus"
            android:layout_alignBottom="@+id/desUpdateStatus"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/desEmptyList"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:lines="2"/>
    </RelativeLayout>
</LinearLayout>
