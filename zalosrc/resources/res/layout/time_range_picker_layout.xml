<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/popup_content_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_01"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        style="@style/t_large_m"/>
    <View
        android:id="@+id/top_divider"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/str_time_range_picker_from"
            style="@style/t_normal"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_02"
            android:id="@+id/tv_start_time"
            android:background="@drawable/frame_469_inactive"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:textAlignment="center"
            style="@style/t_normal"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="8dp"
            android:text="@string/str_time_range_picker_to"
            style="@style/t_normal"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_02"
            android:id="@+id/tv_end_time"
            android:background="@drawable/frame_469_inactive"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:textAlignment="center"
            style="@style/t_normal"/>
    </LinearLayout>
    <TimePicker
        android:theme="?attr/CustomPicker"
        android:id="@+id/time_picker"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.zdesign.component.ButtonWithProgress
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/str_edit_group_reminder_btn_done"
        style="@style/ButtonMedium.Secondary"/>
</LinearLayout>
