<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/sync_text_large"
        android:textColor="?attr/TextColor1"
        android:id="@+id/tv_warning_forgot_pass_sync_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mg_left"
        android:layout_marginTop="@dimen/mg_top"
        android:layout_marginRight="@dimen/mg_right"/>
    <com.zing.zalo.p077ui.backuprestore.widget.SyncBackupInfoV2View
        android:id="@+id/sync_backup_info_view"
        android:background="?attr/ChatBgBannerFileTransfer"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:paddingRight="16dp"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"/>
    <FrameLayout
        android:paddingBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/mg_left"
        android:layout_marginRight="@dimen/mg_right">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="15dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/btn_remove_backup_pass"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:minWidth="160dp"
            android:text="@string/sync_pass_forgot_pass_bt_delete"
            android:textAllCaps="true"
            android:layout_alignParentEnd="true"
            style="@style/btnTypeWarning.medium"/>
    </FrameLayout>
</LinearLayout>
