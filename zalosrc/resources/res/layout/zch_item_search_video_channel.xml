<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/zch_padding_16"
    android:paddingTop="@dimen/zch_padding_12"
    android:paddingRight="@dimen/zch_padding_16"
    android:paddingBottom="@dimen/zch_padding_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="@dimen/zch_item_comment_video_cover_width"
        android:layout_height="@dimen/zch_item_comment_video_cover_height">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.RoundedImageView
            android:id="@+id/ivCover"
            android:layout_width="@dimen/zch_item_comment_video_cover_width"
            android:layout_height="@dimen/zch_item_comment_video_cover_height"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnPlay"
            android:background="@drawable/zch_bg_button_video_play"
            android:visibility="gone"
            android:layout_width="@dimen/zch_item_comment_play_button_size"
            android:layout_height="@dimen/zch_item_comment_play_button_size"
            android:src="@drawable/zch_ic_play_solid_16"
            android:scaleType="centerInside"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icoStatus"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </FrameLayout>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="15dp"
        android:textColor="@color/zch_text_secondary"
        android:ellipsize="end"
        android:id="@+id/tvDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/zch_padding_12"
        android:layout_marginRight="@dimen/zch_padding_12"
        android:maxLines="4"
        android:includeFontPadding="false"
        android:layout_weight="1"
        android:lineSpacingExtra="2sp"
        package:zchFontStyle="regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/tvSelect"
        android:background="@drawable/zch_bg_button_select_video_channel"
        android:paddingLeft="@dimen/zch_padding_12"
        android:paddingTop="@dimen/zch_padding_8"
        android:paddingRight="@dimen/zch_padding_12"
        android:paddingBottom="@dimen/zch_padding_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_search_video_channel_select"
        android:includeFontPadding="false"
        package:zchFontStyle="bold"/>
</LinearLayout>
