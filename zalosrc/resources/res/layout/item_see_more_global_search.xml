<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/stencils_bg_white_with_press_state"
    android:layout_width="match_parent"
    android:layout_height="@dimen/avt_image_size_default">
    <View
        android:id="@+id/separate_line_padding"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <View
        android:id="@+id/separate_line1"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvTitleSeeMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:text="@string/label_see_full_search_result"
            android:singleLine="true"
            android:layout_weight="1"
            style="@style/Roboto.seemore"/>
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/img_avatar_1"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/img_avatar_2"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="1dp"/>
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/img_avatar_3"
            android:visibility="gone"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="1dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tvCount"
            android:background="@drawable/bg_count_see_more"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="1dp"
            android:minWidth="22dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icon_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="0x7f081044"/>
    </LinearLayout>
    <View
        android:id="@+id/separate_line2"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
