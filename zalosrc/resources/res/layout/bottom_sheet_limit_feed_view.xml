<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15dp"
        android:textColor="?attr/TextColor2"
        android:id="@+id/select_day_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentTop="true"/>
    <DatePicker
        android:theme="?attr/CustomPicker"
        android:id="@+id/date_picker"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/select_day_description"
        android:spinnersShown="true"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="@color/bg_btn_type2_text"
        android:id="@+id/tv_select_day"
        android:background="@drawable/bg_btn_type2_big"
        android:padding="12dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/str_select"
        android:layout_below="@+id/date_picker"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:fstyle="medium"/>
</RelativeLayout>
