<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_swipeable_view"
    android:background="?attr/SecondaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/str_call_setting"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.zing.zalo.settingreminder.ScrollViewVisibleChildViewDetector
            android:id="@+id/scroll_main_layout"
            android:background="?attr/PrimaryBackgroundColor"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ViewStub
                    android:id="@+id/viewstub_setting_zinstant_banner"
                    android:layout="@layout/setting_reminder_zinstant_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_setting_call_sync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/SectionTitleColor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_header_list_margin_l"
                        android:layout_marginTop="@dimen/hearder_func_margin_content_t_b"
                        android:layout_marginBottom="@dimen/label_header_margin_t_b"
                        android:text="@string/str_call_sync_section_title"
                        android:includeFontPadding="false"
                        style="@style/Roboto.titleSectionSetting"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/ll_use_popup_miss_call"
                        android:background="@drawable/stencils_contact_bg"
                        android:paddingLeft="@dimen/msg_item_padding_l_r"
                        android:paddingRight="@dimen/msg_item_padding_l_r"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/min_height_row_setting">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f2"
                            android:textColor="?attr/TextColor1"
                            android:id="@+id/tv_use_popup_miss_call"
                            android:duplicateParentState="true"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/str_call_sync_native_missed_noti_title"
                            android:layout_weight="1"/>
                        <include layout="@layout/imgv_setting_reminder"/>
                        <com.zing.zalo.p077ui.widget.StencilSwitch
                            android:layout_gravity="center"
                            android:id="@+id/sw_use_popup_miss_call"
                            android:visibility="visible"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/separate_setting_native_call_bubble"
                        android:background="?attr/ItemSeparatorColor"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/msg_item_padding_l_r"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/ll_setting_native_call_bubble"
                        android:background="@drawable/stencils_contact_bg"
                        android:paddingLeft="@dimen/msg_item_padding_l_r"
                        android:paddingTop="8dp"
                        android:paddingRight="@dimen/msg_item_padding_l_r"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/min_height_row_setting">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="@dimen/f2"
                                android:textColor="?attr/TextColor1"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/tv_setting_native_call_bubble"
                                android:duplicateParentState="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str_call_sync_native_call_bubble_title"/>
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="@dimen/f13"
                                android:textColor="?attr/TextColor2"
                                android:ellipsize="end"
                                android:id="@+id/tv_setting_native_call_bubble_des"
                                android:duplicateParentState="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_call_sync_native_call_bubble_subtitle"/>
                        </LinearLayout>
                        <include layout="@layout/imgv_setting_reminder"/>
                        <com.zing.zalo.p077ui.widget.StencilSwitch
                            android:layout_gravity="center"
                            android:id="@+id/sw_setting_native_call_bubble"
                            android:visibility="visible"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"/>
                    </LinearLayout>
                    <View
                        android:background="?attr/SecondaryBackgroundColor"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_setting_call_mini_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/SectionTitleColor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_header_list_margin_l"
                        android:layout_marginTop="@dimen/hearder_func_margin_content_t_b"
                        android:layout_marginBottom="@dimen/label_header_margin_t_b"
                        android:text="@string/str_call_video_section_title"
                        android:includeFontPadding="false"
                        style="@style/Roboto.titleSectionSetting"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/ll_setting_call_mini_mode"
                        android:background="@drawable/stencils_contact_bg"
                        android:paddingLeft="@dimen/msg_item_padding_l_r"
                        android:paddingTop="8dp"
                        android:paddingRight="@dimen/msg_item_padding_l_r"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/min_height_row_setting">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="@dimen/f2"
                                android:textColor="?attr/TextColor1"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/tv_setting_call_mini_mode"
                                android:duplicateParentState="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str_call_minimode_video_call_title"/>
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="@dimen/f13"
                                android:textColor="?attr/TextColor2"
                                android:ellipsize="end"
                                android:id="@+id/tv_setting_call_mini_mode_des"
                                android:duplicateParentState="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_call_minimode_video_call_subtitle"/>
                        </LinearLayout>
                        <include layout="@layout/imgv_setting_reminder"/>
                        <com.zing.zalo.p077ui.widget.StencilSwitch
                            android:layout_gravity="center"
                            android:id="@+id/sw_setting_call_mini_mode"
                            android:visibility="visible"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"/>
                    </LinearLayout>
                    <View
                        android:background="?attr/SecondaryBackgroundColor"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                </LinearLayout>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/SectionTitleColor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_header_list_margin_l"
                    android:layout_marginTop="@dimen/hearder_func_margin_content_t_b"
                    android:layout_marginBottom="@dimen/label_header_margin_t_b"
                    android:text="@string/str_call_allow_section_title"
                    android:includeFontPadding="false"
                    style="@style/Roboto.titleSectionSetting"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_allow_incomming_calls"
                    android:background="@drawable/stencils_contact_bg"
                    android:paddingLeft="@dimen/msg_item_padding_l_r"
                    android:paddingRight="@dimen/msg_item_padding_l_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/min_height_row_setting">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f2"
                            android:textColor="?attr/TextColor1"
                            android:id="@+id/tv_allow_incomming_calls"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_call_allow_stranger_call_title"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f13"
                            android:textColor="?attr/TextColor2"
                            android:ellipsize="end"
                            android:id="@+id/tv_allow_incomming_call_des"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bạn bè"/>
                    </LinearLayout>
                    <include layout="@layout/imgv_setting_reminder"/>
                    <com.zing.zalo.p077ui.widget.StencilSwitch
                        android:layout_gravity="center"
                        android:id="@+id/sw_allow_incomming_calls"
                        android:visibility="visible"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_setting_call_ringtone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="?attr/ItemSeparatorColor"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/msg_item_padding_l_r"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/ll_setting_call_ringtone"
                        android:background="@drawable/stencils_contact_bg"
                        android:paddingLeft="@dimen/msg_item_padding_l_r"
                        android:paddingTop="8dp"
                        android:paddingRight="@dimen/msg_item_padding_l_r"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/min_height_row_setting"
                        android:layout_weight="1">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f2"
                            android:textColor="?attr/TextColor1"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_setting_call_ringtone"
                            android:duplicateParentState="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/str_call_ring_tone"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f13"
                            android:textColor="?attr/TextColor2"
                            android:ellipsize="end"
                            android:id="@+id/tv_des_setting_call_ringtone"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_ring_back_tone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="?attr/ItemSeparatorColor"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/msg_item_padding_l_r"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/ll_ring_back_tone"
                        android:background="@drawable/stencils_contact_bg"
                        android:paddingLeft="@dimen/msg_item_padding_l_r"
                        android:paddingTop="8dp"
                        android:paddingRight="@dimen/msg_item_padding_l_r"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/min_height_row_setting"
                        android:layout_weight="1">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f2"
                            android:textColor="?attr/TextColor1"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_ring_back_tone"
                            android:duplicateParentState="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/str_call_ring_back_tone"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f13"
                            android:textColor="?attr/TextColor2"
                            android:ellipsize="end"
                            android:id="@+id/tv_des_ring_back_tone"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="?attr/SecondaryBackgroundColor"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_record_nw_data"
                    android:background="@drawable/stencils_contact_bg"
                    android:paddingLeft="@dimen/msg_item_padding_l_r"
                    android:paddingRight="@dimen/msg_item_padding_l_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/min_height_row_setting">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f2"
                        android:textColor="?attr/TextColor1"
                        android:id="@+id/tv_record_nw_data"
                        android:duplicateParentState="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Danh sách log"/>
                </LinearLayout>
            </LinearLayout>
        </com.zing.zalo.settingreminder.ScrollViewVisibleChildViewDetector>
        <com.zing.zalo.p077ui.widget.HightLightSettingView
            android:id="@+id/hightLightView"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
