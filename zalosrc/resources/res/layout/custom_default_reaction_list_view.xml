<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:background="?attr/SecondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leadingType="close"
            app:middleTitleText="@string/str_title_custom_default_reaction_list_view"
            app:middleType="title"
            style="@style/WhiteZdsActionBar.AppType"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/default_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/text_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/str_desc_custom_default_reaction_list"
            android:textAlignment="center"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"/>
        <com.zing.zalo.zdesign.component.Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_restore_default_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/str_btn_default_reaction_list"
            style="@style/ButtonSmall.SecondaryNeutral"/>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_bottom_sheet_shadow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <include
                android:id="@+id/picker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/content_expand_reaction_picker_view"/>
        </LinearLayout>
    </com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout>
    <include
        android:layout_gravity="bottom"
        android:id="@+id/indicator_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/emoji_reaction_indicator_view"/>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
