<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/fDes_startup"
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:id="@+id/tv_hint_forgot_pass"
            android:background="?attr/SecondaryBackgroundColor"
            android:paddingLeft="@dimen/padding_title_login"
            android:paddingTop="12dp"
            android:paddingRight="@dimen/padding_title_login"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="39dp"
            android:text="@string/str_hint_forgot_pass"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutAccount"
            android:background="@drawable/edt_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="@color/cM1"
                android:gravity="center_vertical"
                android:id="@+id/tvCountryName"
                android:visibility="gone"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="16dp"
                android:text="VN"
                android:maxLines="1"
                android:drawableRight="0x7f080932"
                android:inputType="phone"
                style="@style/MaterialEditText"/>
            <com.zing.zalo.uicontrol.CustomEditText
                android:textSize="@dimen/f2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/edtAccount"
                android:paddingRight="16dp"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:hint="@string/str_edt_input_id_hint"
                android:maxLines="1"
                android:layout_weight="1"
                android:inputType="phone"
                android:textCursorDrawable="@drawable/chat_bar_text_cursor"
                style="@style/MaterialEditText"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/btnInput"
                android:background="@color/transparent"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/login_123"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f8"
        android:textColor="@color/cErrorHint"
        android:id="@+id/tvError"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/btnNext"
            android:padding="10dp"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:scaleType="centerCrop"
            app:srcCompatEx="?attr/floating_action_btn_next"/>
    </FrameLayout>
</LinearLayout>
