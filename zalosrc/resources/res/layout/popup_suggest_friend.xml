<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layoutPopupRoot"
    android:background="@color/black_alpha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="#00000000">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/layoutPopupMessage"
        android:background="@drawable/quick_reply_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/msgpop_top"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f1b"
                android:textStyle="normal"
                android:textColor="?attr/TextColor1"
                android:layout_gravity="center_vertical"
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/title_popup_suggest_friend"
                android:singleLine="true"
                android:layout_weight="0.9"
                style="@style/Roboto.f1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="13dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:id="@+id/countMessage"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_close_dialog"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_ipt_clear"
                android:layout_weight="0"/>
        </LinearLayout>
        <View
            android:id="@+id/separate_line1"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/msgpop_top"/>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layoutPopupBody"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@+id/separate_line1">
            <com.zing.zalo.p077ui.widget.ViewPagerFakeDragFixed
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/sliding_tabs"/>
            <com.zing.zalo.p077ui.widget.SlidingTabLayout
                android:layout_gravity="center"
                android:id="@+id/sliding_tabs"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_margin="@dimen/emoticon_circleflow_margin"
                android:layout_above="@+id/separate_line"
                app:typeOfTab="2"/>
            <View
                android:id="@+id/separate_line"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="8dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutQuickStickerContainer"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutPopupBody">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/tvQuickStickerCover"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/layoutQuickSticker"
                android:background="@color/transparent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutPopupTextMode"
            android:background="@drawable/quick_reply_msg"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_below="@+id/layoutQuickStickerContainer">
            <com.zing.zalo.uicontrol.ActionEditText
                android:textSize="@dimen/f4"
                android:textColor="?attr/TextColor1"
                android:textColorHint="?attr/TextColor3"
                android:gravity="center_vertical"
                android:autoLink="none"
                android:layout_gravity="center_vertical"
                android:id="@+id/chatinput_text"
                android:background="@color/clear"
                android:paddingLeft="0dp"
                android:scrollbars="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:minHeight="40dp"
                android:hint="@string/chat_popup_default_text"
                android:maxLines="2"
                android:maxEms="10"
                android:maxLength="300"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:imeOptions="actionSend"
                android:textCursorDrawable="@null"/>
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/chatinput_send"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_chat_input_send"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
