<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/view_container"
    android:background="@color/black_60"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/suggest_list_container"
        android:background="?attr/HeaderFormColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="4dp"/>
    <LinearLayout
        android:layout_gravity="left"
        android:orientation="vertical"
        android:id="@+id/input_option_time_container"
        android:background="?attr/HeaderFormColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="4dp">
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_lable_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_from"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColorHint="?attr/NotificationColor5"
                android:id="@+id/tv_from"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:paddingRight="16dp"
                android:paddingBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/str_select_time"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/tv_lable_from"
                style="@style/btnType3.big"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_lable_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_to"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/tv_from"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColorHint="?attr/NotificationColor5"
                android:id="@+id/tv_to"
                android:paddingLeft="16dp"
                android:paddingTop="6dp"
                android:paddingRight="16dp"
                android:paddingBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/str_select_time"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/tv_lable_to"
                style="@style/btnType3.big"/>
        </RelativeLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:enabled="false"
            android:id="@+id/btn_search"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/str_ms_search_time_button_text"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/btnType2.big"/>
    </LinearLayout>
</LinearLayout>
