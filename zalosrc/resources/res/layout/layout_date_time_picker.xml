<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/feed_audio_popup_bg"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="320dp">
    <com.zing.zalo.p077ui.widget.CustomTextSwitch
        android:id="@+id/tabSwitch"
        android:background="@drawable/bg_custom_textswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:ctw_padding_top_bottom="10dp"
        app:ctw_slider_color="?attr/AppPrimaryColor"
        app:ctw_text1="@string/str_title_gregorian_cap"
        app:ctw_text2="@string/str_title_lunisolar_cap"
        app:ctw_text_color="?attr/AppPrimaryColor"
        app:ctw_text_size="14dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textStyle="bold"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:id="@+id/confirm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/str_titleDefault"
        android:lines="2"
        android:includeFontPadding="false"
        app:fstyle="medium"
        style="@style/Roboto.f1b"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/intro_layout"
        android:paddingLeft="16dp"
        android:paddingRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp">
        <NumberPicker
            android:theme="?attr/CustomPicker"
            android:id="@+id/numberPicker"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
        <TimePicker
            android:theme="?attr/CustomPicker"
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layoutBtnDialog"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-14dp">
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/confirm_btn_no"
            android:background="@drawable/material_button_dialog_bg"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="64dp"
            android:text="@string/close"
            android:singleLine="true"
            android:textAllCaps="true"
            style="@style/Roboto.f0"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textColor="?attr/AppPrimaryColor"
            android:gravity="center"
            android:id="@+id/confirm_btn_yes"
            android:background="@drawable/material_button_dialog_bg"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:minWidth="64dp"
            android:text="@string/str_select"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:textAllCaps="true"
            style="@style/Roboto.f0"/>
    </LinearLayout>
</LinearLayout>
