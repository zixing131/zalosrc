<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f0"
        android:textColor="?attr/TextColor1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:text="@string/str_friend_request_empty_desc"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_find_friend"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mat_btn_style_medium_h"
        android:layout_marginTop="16dp"
        android:minWidth="170dp"
        android:text="@string/str_find_more_friend_default_text"
        android:maxLines="1"
        app:fstyle="medium"
        style="@style/btnType1.medium_standard"/>
</LinearLayout>
