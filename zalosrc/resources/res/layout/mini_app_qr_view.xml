<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.rounedlayout.RelativeRoundedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:topLeft="16dp"
    app:topRight="16dp">
    <com.zing.zalo.p077ui.rounedlayout.FrameRoundedLayout
        android:background="?attr/ui_background_pressed"
        android:layout_width="48dp"
        android:layout_height="5dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        app:connerRadius="5dp"/>
    <RelativeLayout
        android:id="@+id/infoLayout"
        android:paddingLeft="@dimen/ma_padding_horizontal"
        android:paddingTop="13dp"
        android:paddingRight="@dimen/ma_padding_horizontal"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_mini_app_qr_code"
            android:layout_centerInParent="true"
            app:fstyle="medium"/>
        <com.zing.zalo.zdesign.component.TrackingImageView
            android:id="@+id/ma_qr_view_close"
            android:background="@color/transparent"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:tint="?attr/icon_01"
            app:srcCompatEx="@drawable/zds_ic_close_line_24"/>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:background="?attr/divider_01"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/infoLayout"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/ma_padding_vertical"
        android:paddingBottom="@dimen/ma_padding_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line">
        <com.zing.zalo.p077ui.widget.imageview.RoundedImageView
            android:id="@+id/ma_qr_view_logo"
            android:background="@color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:sriv_border_color="?attr/border_01"
            app:sriv_border_width="0.5dp"
            app:sriv_left_bottom_corner_radius="8dp"
            app:sriv_left_top_corner_radius="8dp"
            app:sriv_right_bottom_corner_radius="8dp"
            app:sriv_right_top_corner_radius="8dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/text_01"
            android:id="@+id/ma_qr_view_ma_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.rounedlayout.RelativeRoundedLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/ma_qr_view_qr_image"
            android:padding="5dp"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:connerRadius="4dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:textColor="?attr/text_02"
            android:id="@+id/textDescription"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_mini_app_qr_description"
            android:textAlignment="center"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/buttonActionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</com.zing.zalo.p077ui.rounedlayout.RelativeRoundedLayout>
