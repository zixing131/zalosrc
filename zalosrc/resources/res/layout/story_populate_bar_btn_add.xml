<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/story_populate_btn_add_root"
    android:paddingTop="@dimen/story_populate_bar_vertical_padding"
    android:paddingRight="@dimen/story_populate_bar_horizontal_padding_small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.imageview.RoundCornerImageView
        android:layout_gravity="center"
        android:id="@+id/ic_story_add_bg"
        android:duplicateParentState="true"
        android:layout_width="@dimen/story_bar_thumb_width"
        android:layout_height="@dimen/story_bar_thumb_height"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icon_story_newstory_bg"/>
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center"
        android:id="@+id/ic_story_add_icon"
        android:clickable="false"
        android:duplicateParentState="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="0x7f080f24"/>
</FrameLayout>
