<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.imageview.RoundCornerImageView
        android:id="@+id/product_photo_imv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:round_radius="8dp"
        app:srcCompatEx="@drawable/chat_icloud_default"/>
    <FrameLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/product_photo_cover_label"
        android:background="@drawable/bottom_rounded_8dp_blk_a40"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="22dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_04"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/product_catalog_add_view_photo_cover_title"
            style="@style/t_xxxxsmall_m"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/product_photo_overlay"
        android:background="@drawable/rounded_8dp_background_dark"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.ProgressBar
            android:layout_gravity="center"
            android:id="@+id/product_photo_progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="100"
            android:indeterminate="false"
            style="@style/ProgressBar.Size24.Blue"/>
        <androidx.appcompat.widget.ZAppCompatImageView
            android:id="@+id/product_photo_upload_error_icn"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:srcCompatEx="@drawable/icn_csc_bubble_error"/>
    </FrameLayout>
    <androidx.appcompat.widget.ZAppCompatImageView
        android:layout_gravity="end|top"
        android:id="@+id/product_photo_remove_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:srcCompatEx="@drawable/ic_closecircle_solid_24"/>
</FrameLayout>
