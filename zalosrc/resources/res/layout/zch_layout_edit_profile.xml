<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.widget.EditProfileLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/zch_bg_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/ivAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:zchCornerRadius="8dp"/>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/overlay"
        android:background="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:alpha="0.5"/>
    <ImageView
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/ivCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15dp"
        android:textColor="@color/zch_icon_primary"
        android:id="@+id/tvChannelNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_page_edit_profile_channel_name"
        style="@style/Roboto.Regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="15dp"
        android:textColor="@color/zch_icon_secondary"
        android:ellipsize="end"
        android:id="@+id/tvChannelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <ImageView
        android:id="@+id/ivEditName"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/dividerName"
        android:background="@color/zch_divider_subtle"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15dp"
        android:textColor="@color/zch_icon_primary"
        android:id="@+id/tvIdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_weight="1"
        style="@style/Roboto.Regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="15dp"
        android:textColor="@color/zch_icon_secondary"
        android:ellipsize="end"
        android:id="@+id/tvID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="14dp"
        android:textColor="@color/zch_icon_tertiary"
        android:ellipsize="end"
        android:id="@+id/tvIDFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/ivCopy"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_copy_solid_12"
        android:layout_marginStart="4dp"/>
    <ImageView
        android:id="@+id/ivEditID"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/dividerID"
        android:background="@color/zch_divider_subtle"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15dp"
        android:textColor="@color/zch_icon_primary"
        android:id="@+id/tvBioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_page_edit_profile_channel_bio"
        style="@style/Roboto.Regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="15dp"
        android:textColor="@color/zch_icon_tertiary"
        android:ellipsize="end"
        android:id="@+id/tvBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <ImageView
        android:id="@+id/ivEdtBio"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.zing.zalo.shortvideo.p072ui.widget.EditProfileLayout>
