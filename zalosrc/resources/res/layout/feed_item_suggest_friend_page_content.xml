<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tf="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_delete"
        android:background="@drawable/trans"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zds_ic_close_line_16"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <com.zing.zalo.p077ui.widget.GroupAvatarView
        android:id="@+id/buddy_dp"
        android:layout_width="@dimen/avt_M"
        android:layout_height="@dimen/avt_M"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/name"
        android:paddingLeft="@dimen/feed_content_padding"
        android:paddingRight="@dimen/feed_content_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/buddy_dp"
        android:layout_centerHorizontal="true"
        style="@style/Roboto.f0"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f0"
        android:textColor="@drawable/bg_btn_type1_text"
        android:gravity="center"
        android:id="@+id/btn_func"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:duplicateParentState="false"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
        android:text="@string/str_suggest_func_add_friend_new"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        tf:fstyle="medium"
        style="@style/btnType1.medium_standard"/>
</merge>
