<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15dp"
        android:textColor="@color/zch_text_secondary"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zch_bts_header_height"
        android:text="@string/zch_bts_share_title"
        android:includeFontPadding="false"
        package:zchFontStyle="medium"/>
    <View
        android:background="@color/zch_divider_subtle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zch_divider_thick"/>
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/btnShareChat"
                android:text="@string/zch_bts_share_chat"
                style="@style/ZchBts.ItemShare"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/btnShareDiary"
                android:text="@string/zch_bts_share_diary"
                style="@style/ZchBts.ItemShare"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/btnShareLink"
                android:text="@string/zch_bts_share_link"
                style="@style/ZchBts.ItemShare"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/btnShareOther"
                android:text="@string/zch_bts_share_other"
                style="@style/ZchBts.ItemShare"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
