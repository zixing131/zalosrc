<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_parent_header_view"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/text_header_list_margin_l"
        android:layout_marginTop="@dimen/text_header_list_margin_t_b"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f13"
        android:textColor="?attr/SectionTitleColor2"
        android:id="@+id/title_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_header_list_margin_l"
        android:layout_marginTop="@dimen/text_header_list_to_line_margin_t"
        android:layout_marginBottom="@dimen/label_header_margin_t_b"
        android:includeFontPadding="false"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f13"
        android:textColor="?attr/TextColor2"
        android:id="@+id/title_contact_row"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_header_list_margin_l"
        android:layout_marginTop="@dimen/text_header_list_to_line_margin_t"
        android:layout_marginBottom="@dimen/label_header_margin_t_b"
        android:includeFontPadding="false"/>
</LinearLayout>
