<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/bg_group"
        android:background="@drawable/bg_feed_group_noborder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <include layout="@layout/feed_item_suggest_title_layout"/>
    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/imvAvatar"
            android:layout_marginLeft="@dimen/feed_group_avatar_margin_top"
            android:layout_marginTop="@dimen/feed_group_avatar_margin_top"
            android:layout_marginRight="@dimen/feed_group_avatar_margin_top"
            android:layout_marginBottom="@dimen/feed_group_avatar_margin_bottom"
            android:scaleType="fitXY"
            android:layout_below="@+id/divider_suggest_tag"
            style="@style/avtSa"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/feed_content_padding"
            android:layout_toLeftOf="@+id/btn_submenu_feed_header"
            android:layout_toRightOf="@+id/imvAvatar"
            android:layout_alignTop="@+id/imvAvatar"
            style="@style/Feed.Header.Name"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/feed_time_margin_top"
            android:layout_marginRight="@dimen/feed_icon_privacy_margin_left"
            android:layout_marginBottom="@dimen/feed_group_time_margin_bottom"
            android:layout_toRightOf="@+id/imvAvatar"
            android:layout_below="@+id/tvUserName"
            style="@style/Feed.Header.Time"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/tvPrivacyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/feed_time_margin_top"
            android:layout_marginRight="@dimen/feed_content_padding"
            android:layout_toRightOf="@+id/tvTime"
            android:layout_below="@+id/tvUserName"
            style="@style/Feed.Header.Time"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:id="@+id/tvEditedInfo"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/feed_padding_right"
            android:text="@string/str_feed_edited"
            android:maxLines="1"
            android:drawableLeft="@drawable/ic_edit_solid_24"
            android:drawablePadding="2dp"
            android:layout_toRightOf="@+id/tvPrivacyInfo"
            android:layout_below="@+id/tvUserName"
            android:layout_alignTop="@+id/tvTime"
            style="@style/Feed.Header.Time"/>
        <RelativeLayout
            android:id="@+id/ll_icon_msg_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignTop="@+id/tvUserName"
            android:layout_alignParentRight="true">
            <include layout="@layout/icon_msg_feed_template"/>
        </RelativeLayout>
        <ImageButton
            android:id="@+id/btn_submenu_feed_header"
            android:background="@drawable/bg_btn_postfeed"
            android:paddingLeft="6dp"
            android:paddingTop="12dp"
            android:paddingRight="6dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_more_feed"
            android:layout_above="@+id/tvEditedInfo"
            android:layout_alignTop="@+id/tvUserName"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.zing.zalo.feed.components.FeedBackgroundView
        android:id="@+id/bg_feed_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_container"
        android:layout_alignParentLeft="true"/>
</merge>
