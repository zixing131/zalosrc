<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/layoutNeedToUpdateProfile"
    android:background="?attr/BannerBackgroundColor1"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.AvatarImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/buddy_dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:src="@drawable/default_avatar2"
        style="@style/myImageView"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/stencils_button_text_size"
        android:textColor="?attr/TextColor1"
        android:layout_gravity="center_vertical"
        android:id="@+id/btnGoToUpdateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="@string/str_hint_need_to_update_profile"/>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/sep_layoutNeedToUpdateProfile"
        android:background="?attr/SeparatorColor1"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</FrameLayout>
