<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_info_setting_item_row"
    android:background="@drawable/stencils_contact_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">
    <View
        android:id="@+id/chat_menu_popup_item_divider"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:id="@+id/setting_text_primary"
        android:paddingTop="@dimen/standard_spacing"
        android:paddingBottom="@dimen/standard_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:singleLine="false"
        android:layout_toLeftOf="@+id/setting_switch"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"
        style="@style/ChatMessage.SettingTextPrimary"/>
    <com.zing.zalo.p077ui.widget.StencilSwitch
        android:id="@+id/setting_switch"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_spacing"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/setting_ic_next"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_head_next"/>
</RelativeLayout>
