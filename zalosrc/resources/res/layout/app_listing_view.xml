<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black_alpha"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/bg_chatpopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@color/cMtxt1"
                android:gravity="center"
                android:id="@+id/tv_pr_title"
                android:visibility="visible"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/share"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="@style/Roboto.f2b"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@color/cM4"
                android:gravity="center"
                android:id="@+id/tv_close"
                android:visibility="visible"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/feed_padding_right"
                android:minHeight="48dp"
                android:text="@string/str_finished"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_alignParentRight="true"
                android:textAllCaps="true"
                app:fstyle="medium"
                style="@style/Roboto.f0"/>
            <View
                android:background="@color/cLine3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/app_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
