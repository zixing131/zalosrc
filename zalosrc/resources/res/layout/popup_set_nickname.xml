<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keyboard_frame_layout"
    android:background="@color/black_alpha"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layoutPopupRoot"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutPopupMessage"
            android:background="@drawable/quick_reply_body"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f9s"
                android:textStyle="normal"
                android:textColor="?attr/TextColor1"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:id="@+id/display_name"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:fstyle="medium"/>
            <View
                android:id="@+id/separate_line1"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/msgpop_top"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:id="@+id/message"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_nickname_in_group_hint_dlg"
                style="@style/DialogMessageText"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layoutPopupTextMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:minHeight="48dp"
                android:layout_below="@+id/layoutPopupBody">
                <com.zing.zalo.uicontrol.ActionEditText
                    android:textSize="@dimen/dialog_message_text_size"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor2"
                    android:autoLink="none"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/chatinput_text"
                    android:background="@color/clear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:layout_weight="1"
                    android:inputType="textAutoCorrect"
                    android:imeOptions="actionSend"
                    android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
                <com.zing.zalo.uicomponents.reddot.RedDotImageButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/imgEmoSticker"
                    android:background="@drawable/bg_btn_postfeed"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitCenter"
                    android:minHeight="26dp"
                    app:srcCompat="@drawable/icn_emoji"/>
            </LinearLayout>
            <include layout="@layout/layout_dialog_footer_confirm"/>
        </LinearLayout>
    </com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/sticker_panel_main_layout"
        android:background="?attr/PopupBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/sep_sticker_panel"
            android:background="?attr/SeparatorColor1"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <FrameLayout
            android:id="@+id/sticker_panel_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
