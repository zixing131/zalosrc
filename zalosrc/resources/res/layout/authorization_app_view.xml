<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <FrameLayout
        android:paddingLeft="@dimen/default_contactlist_marging_left"
        android:paddingRight="@dimen/default_contactlist_marging_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/authorization_app_activity_data_layout"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.androidquery.util.RecyclingImageView
                            android:id="@+id/authorization_app_logo_app"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            app:srcCompat="?attr/default_avatar"
                            style="@style/myImageView"/>
                        <com.zing.zalo.p077ui.widget.AvatarImageView
                            android:id="@+id/authorization_app_avatar_user"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="10dp"
                            app:srcCompat="?attr/default_avatar"
                            style="@style/myImageView"/>
                    </LinearLayout>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="16dp"
                        android:textColor="@color/itemlist_text"
                        android:gravity="center"
                        android:id="@+id/authorization_app_request_permission_message_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/authorization_app_request_permission_message"/>
                    <com.zing.zalo.uicontrol.FullHeightListView
                        android:id="@+id/authorization_app_permission_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="@android:color/transparent"
                        android:cacheColorHint="#00000000"
                        android:divider="#00000000"
                        android:dividerHeight="0dp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="13sp"
                            android:gravity="center"
                            android:id="@+id/authorization_app_action_accept_btn"
                            android:layout_width="140dp"
                            android:text="@string/authorization_app_action_accept"
                            android:textAllCaps="true"
                            style="@style/btnType1.medium"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="15sp"
                            android:textColor="?attr/TextColor1"
                            android:id="@+id/authorization_app_action_cancel_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="@string/authorization_app_action_cancel"
                            style="@style/MaterialClickableTextview"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </ScrollView>
        <include
            android:layout_gravity="center"
            android:id="@+id/empty_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/empty_layout"/>
    </FrameLayout>
</LinearLayout>
