<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_remove_friend"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shadow_delete_friend"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/shadow_botom_quick_action"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_remove_friend_content"
        android:background="?attr/PopupBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.GroupAvatarView
                android:layout_gravity="top"
                android:id="@+id/img_avatar_delete_friend"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:src="0x7f080958"
                android:scaleType="fitCenter"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="10dp"
                android:textColor="?attr/btn_type_3_text_n"
                android:gravity="center"
                android:id="@+id/tv_num_delete_friend"
                android:background="@drawable/stencils_bg_number_notif_disable"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="26dp"
                android:minHeight="15dp"
                android:includeFontPadding="false"
                android:layout_below="@+id/img_avatar_delete_friend"
                android:layout_centerHorizontal="true"
                app:fstyle="medium"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="top"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_suggest_delete_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/AppPrimaryColor"
                android:gravity="center"
                android:id="@+id/btn_view_detail_delete_friend"
                android:background="@drawable/material_button_dialog_bg"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="@string/str_see_detail"
                android:layout_below="@+id/tv_suggest_delete_friend"
                android:layout_alignParentRight="true"
                android:textAllCaps="true"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/btn_type_3_text_n"
                android:gravity="center"
                android:id="@+id/btn_ignore_delete_friend"
                android:background="@drawable/material_button_dialog_bg"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:minWidth="40dp"
                android:minHeight="30dp"
                android:text="@string/str_skip"
                android:layout_toLeftOf="@+id/btn_view_detail_delete_friend"
                android:layout_below="@+id/tv_suggest_delete_friend"
                android:textAllCaps="true"
                app:fstyle="medium"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
