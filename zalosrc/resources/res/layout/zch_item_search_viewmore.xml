<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:background="@color/zch_layer_background_subtle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tvMore"
        android:paddingLeft="@dimen/zch_item_comment_padding_horizontal"
        android:paddingTop="@dimen/zch_item_comment_padding_vertical"
        android:paddingRight="@dimen/zch_item_comment_padding_horizontal"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:drawablePadding="4dp"
        package:zchFontStyle="medium"/>
</FrameLayout>
