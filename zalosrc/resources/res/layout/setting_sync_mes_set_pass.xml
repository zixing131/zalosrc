<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:paddingLeft="@dimen/pd_left"
    android:paddingTop="@dimen/pd_top"
    android:paddingRight="@dimen/pd_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/sync_text_large"
        android:textColor="?attr/TextColor1"
        android:id="@+id/tv_intro_password"
        android:clickable="true"
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_introduce_password"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_enter_pass"
        android:background="@drawable/edt_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp">
        <com.zing.zalo.uicontrol.CustomEditText
            android:textSize="@dimen/sync_text_large"
            android:textColor="?attr/TextColor1"
            android:textColorHint="?attr/TextColor2"
            android:autoLink="none"
            android:id="@+id/et_enter_pass"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:hint="@string/sync_set_pass_screen_enter_pass"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"
            android:inputType="textPassword"
            style="@style/MaterialEditText"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TabUnSelectedColor"
            android:gravity="center"
            android:id="@+id/btn_show_password"
            android:paddingLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="42dp"
            android:text="@string/startup_show_password"
            style="@style/Roboto.f5b"/>
    </LinearLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/sync_text_normal"
        android:textColor="?attr/SeparatorColor3"
        android:id="@+id/tv_pass_error"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/sync_pass_verify_warning_lenght"/>
    <com.zing.zalo.uicontrol.CustomEditText
        android:textSize="@dimen/sync_text_large"
        android:textColor="?attr/TextColor1"
        android:textColorHint="?attr/TextColor2"
        android:autoLink="none"
        android:id="@+id/et_reenter_pass"
        android:background="@drawable/edt_normal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:hint="@string/sync_set_pass_screen_reenter_pass"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="textPassword"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/sync_text_normal"
        android:textColor="?attr/SeparatorColor3"
        android:id="@+id/tv_repass_error"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/sync_pass_verify_warning_not_match"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:enabled="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_save_pass"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:text="@string/sync_set_pass_screen_save_pass"
        android:textAllCaps="true"
        style="@style/btnType1.medium"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_sync_error"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/NotificationColor1"
            android:id="@+id/tv_notice_set_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/sync_set_pass_screen_notice"
            android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>
