<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.KeyboardFrameLayout
        android:id="@+id/select_owner_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:gravity="center"
                android:id="@+id/leave_group_select_owner_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:minHeight="40dp"
                android:text="@string/str_leave_group_select_owner_title"
                android:maxLines="2"
                android:textAlignment="center"
                style="@style/t_xlarge_m"/>
            <com.zing.zalo.zdesign.component.Divider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.zdesign.component.SearchField
                android:id="@+id/search_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                app:fieldHint="@string/str_leave_group_select_owner_search"/>
            <com.zing.zalo.zdesign.component.ProgressBar
                android:layout_gravity="center_horizontal"
                android:id="@+id/ic_loading"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:indeterminate="true"
                style="@style/ProgressBar.Size32.Blue"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_02"
                android:gravity="center"
                android:id="@+id/text_error"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="16dp"
                android:textAlignment="center"
                style="@style/t_small"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/group_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/confirm_leave_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/leave_group_silently_bottom_sheet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:minHeight="40dp"
                android:text="@string/str_leave_group_silently_bottom_sheet_title"
                android:maxLines="2"
                android:textAlignment="center"
                style="@style/t_xlarge_m"/>
            <com.zing.zalo.zdesign.component.Button
                android:layout_gravity="start|center_vertical"
                android:id="@+id/ic_back_to_select_owner"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:btnSupportiveIcon="@drawable/zds_ic_arrow_left_line_24"
                style="@style/ButtonMedium.TertiaryNeutral"/>
        </FrameLayout>
        <com.zing.zalo.zdesign.component.Divider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.zdesign.component.ListItem
            android:id="@+id/opt_silent_leave"
            android:background="?attr/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <com.zing.zalo.zdesign.component.ListItem
            android:id="@+id/opt_prevent_add_again"
            android:background="?attr/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
</FrameLayout>
