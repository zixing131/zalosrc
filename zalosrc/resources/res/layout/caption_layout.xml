<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.imgdecor.caption.CaptionView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/caption_layout"
    android:background="@color/transparent"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.imgdecor.caption.customview.AutoSizeEditText
        android:textSize="@dimen/caption_input_text_size"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/caption_auto_size_text"
        android:background="@color/transparent"
        android:paddingLeft="@dimen/caption_input_text_padding_left"
        android:paddingTop="7dp"
        android:paddingRight="@dimen/caption_input_text_padding_right"
        android:paddingBottom="7dp"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text=""
        android:cursorVisible="true"
        android:singleLine="false"
        android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
    <FrameLayout
        android:layout_gravity="top"
        android:id="@+id/caption_top_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/caption_top_panel_height">
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textSize="14dp"
            android:textColor="@color/Light_btn_type_3_text_n"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/caption_done"
            android:background="@drawable/light_bg_btn_type3_small"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/caption_done_margin_right"
            android:minWidth="@dimen/caption_done_min_width"
            android:text="@string/str_save_image_decor_view"
            android:textAllCaps="true"
            style="@style/btnType3.small"/>
    </FrameLayout>
    <com.zing.zalo.camera.sizepicker.SizePicker
        android:layout_gravity="bottom|left"
        android:id="@+id/caption_size_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.p077ui.imgdecor.caption.customview.CaptionRoundedTextView
        android:textSize="@dimen/caption_font_selector_text_size"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/caption_font_selector"
        android:paddingLeft="@dimen/caption_font_selector_padding_horizontal"
        android:paddingRight="@dimen/caption_font_selector_padding_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/caption_font_selector_height"
        android:minWidth="@dimen/caption_font_selector_min_width"
        android:includeFontPadding="false"/>
    <com.zing.zalo.camera.colorpalette.ColorPalette
        android:layout_gravity="bottom"
        android:id="@+id/caption_color_palette"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/caption_color_palette_margin_left"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_gravity="bottom|left"
        android:id="@+id/caption_color"
        android:background="@drawable/bg_caption_active_type_white"
        android:layout_width="@dimen/caption_color_button_size"
        android:layout_height="@dimen/caption_color_button_size"
        android:layout_marginLeft="@dimen/caption_color_margin_left"
        android:layout_marginBottom="@dimen/caption_color_margin_bottom"
        android:scaleType="fitCenter"
        app:srcCompat="0x7f080e0a"/>
    <com.zing.zalo.p077ui.imgdecor.caption.customview.CaptionRoundedTextView
        android:textSize="@dimen/caption_mode_selector_text_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="bottom|right"
        android:id="@+id/caption_mode_selector"
        android:padding="@dimen/caption_mode_selector_padding"
        android:layout_width="@dimen/caption_mode_selector_button_size"
        android:layout_height="@dimen/caption_mode_selector_button_size"
        android:layout_marginRight="@dimen/caption_mode_selector_margin_right"
        android:layout_marginBottom="@dimen/caption_mode_selector_margin_bottom"
        android:text="Aa"
        android:includeFontPadding="false"
        app:fstyle="medium"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_gravity="bottom|right"
        android:id="@+id/caption_align"
        android:background="@color/transparent"
        android:visibility="invisible"
        android:layout_width="@dimen/caption_align_button_size"
        android:layout_height="@dimen/caption_align_button_size"
        android:layout_marginRight="@dimen/caption_align_margin_right"
        android:layout_marginBottom="@dimen/caption_align_margin_bottom"
        android:scaleType="fitCenter"
        app:srcCompat="0x7f080dbe"/>
</com.zing.zalo.p077ui.imgdecor.caption.CaptionView>
