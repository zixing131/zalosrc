<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/stencils_contact_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/buddy_dp"
            android:layout_width="@dimen/group_avatar_view_container_small_size"
            android:layout_height="@dimen/group_avatar_view_container_small_size"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="@dimen/msg_item_padding_t_b"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:layout_marginBottom="@dimen/msg_item_padding_t_b"
            android:src="0x7f0804ed"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="@drawable/itemlist_text"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/groupDisplayName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"/>
        <com.zing.zalo.zdesign.component.Switch
            android:layout_gravity="center"
            android:id="@+id/stencil_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            style="@style/Switch.Medium"/>
    </LinearLayout>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"/>
</LinearLayout>
