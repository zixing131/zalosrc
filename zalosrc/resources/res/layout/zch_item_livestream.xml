<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.LivestreamItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/rivBackground"
        android:background="@drawable/zch_bg_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/rivThumbnail"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/vieOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:theme="@style/CircularProgressWhite"
        android:id="@+id/barLoading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
    <com.zing.zalo.shortvideo.p072ui.component.p073rv.item.LivestreamRotateButton
        android:id="@+id/btnRotate"
        android:background="@drawable/zch_bg_button_livestream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icoRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zch_ic_minimize_line_24"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="13dp"
            android:textColor="@color/zch_text_primary"
            android:id="@+id/txtRotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zch_item_livestream_rotate"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
    </com.zing.zalo.shortvideo.p072ui.component.p073rv.item.LivestreamRotateButton>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/lytInform"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_secondary"
            android:gravity="center_horizontal"
            android:id="@+id/txtInform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            package:zchFontStyle="medium"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/lytError"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_secondary"
            android:gravity="center_horizontal"
            android:id="@+id/txtErrorMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zch_error_unknown_simple"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_secondary"
            android:gravity="center_horizontal"
            android:id="@+id/txtErrorRetry"
            android:paddingLeft="16dp"
            android:paddingTop="7dp"
            android:paddingRight="16dp"
            android:paddingBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/zch_error_retry"
            android:drawablePadding="4dp"
            package:zchFontStyle="medium"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/btnHeaderBack"
        android:background="@drawable/zch_bg_ripple_circle"
        android:padding="@dimen/zch_item_livestream_header_button_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_chevron_left_shadow_line_24"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="@color/zch_text_primary"
        android:gravity="center_vertical"
        android:id="@+id/txtHeaderLive"
        android:background="@drawable/zch_bg_live_indicator"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_livestream_live"
        package:zchFontStyle="medium"/>
    <View
        android:id="@+id/vieHeaderCard"
        android:background="@drawable/zch_bg_live_card_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/aivHeaderAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        package:zchCornerRadius="@dimen/zch_radius_4dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitUsernameTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:id="@+id/txtHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="12dp"
        android:gravity="center_vertical"
        android:id="@+id/tvHeaderViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtHeaderTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:gravity="center"
        android:id="@+id/btnHeaderFollow"
        android:background="@drawable/zch_bg_button_active_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_livestream_follow"
        package:zchFontStyle="medium"/>
    <ImageView
        android:id="@+id/btnHeaderMinimize"
        android:padding="@dimen/zch_item_livestream_header_button_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_minimize_line_24"
        android:scaleType="centerInside"/>
    <ImageView
        android:id="@+id/btnHeaderComment"
        android:background="@drawable/zch_bg_button_livestream"
        android:padding="@dimen/zch_item_livestream_header_button_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"/>
    <ImageView
        android:id="@+id/btnHeaderClose"
        android:background="@drawable/zch_bg_ripple_circle"
        android:padding="@dimen/zch_item_livestream_header_button_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_close_shadow_line_24"
        android:scaleType="centerInside"/>
    <View
        android:id="@+id/bgdComment"
        android:background="@color/zch_layer_background_subtle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.LivestreamCommentLayout
        android:id="@+id/lytComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.p075rv.ListClickableRecyclerView
            android:id="@+id/lstComment"
            android:fadingEdgeLength="@dimen/zch_item_livestream_comment_fading_edge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:requiresFadingEdge="vertical"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="13dp"
            android:textColor="@color/zch_blue_b55"
            android:layout_gravity="bottom"
            android:id="@+id/tvNewCmtNum"
            android:background="@drawable/zch_bg_having_new_cmt"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            package:zchFontStyle="bold"/>
    </com.zing.zalo.shortvideo.p072ui.widget.LivestreamCommentLayout>
    <com.zing.zalo.shortvideo.p072ui.widget.reaction.ReactionLayout
        android:id="@+id/lytReaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary_a60"
        android:textColorHint="@color/zch_text_primary_a60"
        android:gravity="center_vertical"
        android:id="@+id/txtFooterComment"
        android:background="@drawable/zch_bg_button_livestream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_livestream_comment_hint"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        package:zchFontStyle="regular"/>
    <ImageView
        android:id="@+id/btnFooterMore"
        android:background="@drawable/zch_bg_button_livestream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_more_shadow_line_24"
        android:scaleType="centerInside"/>
    <ImageView
        android:id="@+id/btnFooterShare"
        android:background="@drawable/zch_bg_button_livestream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_share_shadow_line_24"
        android:scaleType="centerInside"/>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/rivBgEnd"
        android:background="@drawable/zch_bg_video"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/ivCloseEnd"
        android:background="@drawable/zch_bg_ripple_circle"
        android:padding="@dimen/zch_item_livestream_header_button_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_close_shadow_line_24"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/aivAvatarEnd"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        package:zchCornerRadius="@dimen/zch_radius_8dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="16dp"
        android:textColor="#f7f7f8"
        android:ellipsize="end"
        android:id="@+id/tvEndLive"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_livestream_ended"
        android:maxLines="1"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="15dp"
        android:textColor="#99ffffff"
        android:ellipsize="end"
        android:id="@+id/tvLiveDuration"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"/>
    <View
        android:id="@+id/endDivider"
        android:background="#33ffffff"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="15dp"
        android:textColor="#f7f7f8"
        android:ellipsize="end"
        android:id="@+id/tvMoreLive"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_livestream_more_live"
        android:maxLines="1"/>
    <com.zing.zalo.shortvideo.p072ui.widget.GridLayout
        android:id="@+id/glMoreLive"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.LivestreamItem>
