<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <ScrollView
        android:id="@+id/root_layout"
        android:background="?attr/SecondaryBackgroundColor"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="?attr/PrimaryBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/authorised_app_detail_layout"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.androidquery.util.RecyclingImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/authorised_app_detail_logo"
                        android:layout_width="@dimen/ava3"
                        android:layout_height="@dimen/ava3"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:srcCompat="0x7f080958"
                        style="@style/myImageView"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/avt_image_size_default"
                        android:minHeight="@dimen/avt_image_size_default"
                        android:layout_toRightOf="@+id/authorised_app_detail_logo">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="?attr/TextColor1"
                            android:id="@+id/authorised_app_detail_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            app:fstyle="medium"
                            style="@style/Roboto.f2"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="@color/cTime1"
                            android:id="@+id/authorised_app_detail_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            style="@style/Roboto.f71"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/authorised_app_receive_notification_separate_line"
                    android:background="?attr/ItemSeparatorColor"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"/>
                <RelativeLayout
                    android:orientation="vertical"
                    android:id="@+id/authorization_app_receive_notification_layout"
                    android:background="@drawable/stencils_contact_bg"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <com.zing.zalo.p077ui.widget.StencilSwitch
                        android:id="@+id/authorization_app_receive_notification_checkbox"
                        android:visibility="visible"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/authorization_app_receive_notification_checkbox"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="?attr/TextColor1"
                            android:id="@+id/authorised_app_receive_notification_title"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_manage_detail_block_status_title"
                            style="@style/Roboto.f2"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/SmallerTextSize"
                            android:textColor="@drawable/itemlist_tip_text"
                            android:id="@+id/authorised_app_receive_notification_desc"
                            android:visibility="gone"
                            android:duplicateParentState="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/authorised_app_permission_session_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor2"
                        android:gravity="center"
                        android:id="@+id/authorised_app_permission_title"
                        android:background="?attr/SecondaryBackgroundColor"
                        android:paddingLeft="16dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/authorised_app_detail_permission_list"
                        app:fstyle="medium"
                        style="@style/Roboto.f71"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/authorization_app_permission_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:background="?attr/SecondaryBackgroundColor"
                    android:paddingTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoButton
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/authorised_app_detail_action_unauthen_btn"
                        android:layout_width="@dimen/mat_startup_button_width"
                        android:text="@string/str_cap_unauthen"
                        style="@style/btnType1.medium"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/loading_layout"
                android:background="?attr/PrimaryBackgroundColor"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/holo_circular_progress_bar_mini"/>
            </FrameLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>
