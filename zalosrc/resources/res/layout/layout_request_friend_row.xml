<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/info_contact_row"
    android:background="@drawable/stencils_bg_white_with_press_state"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.GroupAvatarView
        android:id="@+id/buddy_dp"
        android:layout_width="@dimen/avt_L"
        android:layout_height="@dimen/avt_L"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:ellipsize="end"
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        style="@style/Roboto.f2b"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/information_text"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvBALabel"
                        android:background="@drawable/bg_label_business_account"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/str_label_business_account"
                        android:maxLines="1"
                        style="@style/t_xxxxsmall"/>
                </LinearLayout>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f5"
                    android:textColor="?attr/TextColor2"
                    android:ellipsize="end"
                    android:id="@+id/tvInvitation"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/layout_action"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <com.androidquery.util.RecyclingImageView
                    android:id="@+id/btn_reject_done"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    app:srcCompat="@drawable/ic_btn_remove_friend_done"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="@drawable/bg_btn_type1_text"
                    android:gravity="center"
                    android:id="@+id/btn_combine_func_1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:duplicateParentState="false"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mat_btn_style_2_medium_h"
                    android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
                    android:text="@string/str_suggest_func_add_friend_new"
                    android:maxLines="1"
                    style="@style/btnType1.medium_standard"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="@drawable/bg_btn_type2_text"
                    android:gravity="center"
                    android:id="@+id/btn_combine_func_4"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="gone"
                    android:duplicateParentState="false"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mat_btn_style_2_medium_h"
                    android:minWidth="@dimen/mat_btn_style_1_w"
                    android:text="@string/str_suggest_friend_send_msg"
                    android:maxLines="1"
                    style="@style/btnType2.medium"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/view_container"
            android:background="@drawable/bg_invitation"
            android:paddingLeft="@dimen/msg_item_padding_l_r"
            android:paddingRight="@dimen/msg_item_padding_l_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tvInvitationDetail"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor2"
                android:layout_gravity="bottom|right"
                android:id="@+id/view_see_more"
                android:paddingLeft="@dimen/msg_item_padding_l_r"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_see_more"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/view_container">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btn_reject"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mat_btn_style_2_medium_h"
                android:layout_marginRight="8dp"
                android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
                android:text="@string/btn_reject_Invitation"
                android:maxLines="1"
                android:layout_weight="1"
                android:textAllCaps="true"
                style="@style/btnType3.medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btn_accept"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mat_btn_style_2_medium_h"
                android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
                android:text="@string/str_suggest_func_accept_friend"
                android:maxLines="1"
                android:layout_weight="1"
                android:textAllCaps="true"
                style="@style/btnType2.medium"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
