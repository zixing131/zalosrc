<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/grid_chat_theme"
        android:background="?attr/PopupActionBarMenuBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:minHeight="210dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gridBackgrounds"
            android:fadingEdgeLength="0dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_hint"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_below="@+id/gridBackgrounds">
            <com.zing.zalo.p077ui.custom.PhotoToggleButton
                android:gravity="center"
                android:id="@+id/cb_selected_sync"
                android:background="@null"
                android:visibility="visible"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:button="@null"
                app:checkedImage="@drawable/hd_radio_checked"
                app:uncheckedImage="@drawable/hd_radio_un_checked"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:gravity="center_vertical"
                android:id="@+id/tvHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/str_sync_chat_theme_anounce"
                style="@style/Roboto.f0"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/layout_error"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/gridBackgrounds">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:gravity="center_vertical"
                android:id="@+id/tError"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/str_error_get_theme"
                android:layout_weight="1"
                style="@style/Roboto.f0"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="72dp"
                android:text="@string/bt_try_again"
                style="@style/btnType1.medium"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_promote_labankey"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_hint">
            <View
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_promote_labankey"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_change_keyboard_theme"/>
        </LinearLayout>
    </RelativeLayout>
</merge>
