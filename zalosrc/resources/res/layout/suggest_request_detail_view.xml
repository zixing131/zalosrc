<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_swipeable"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_accept_friend_success"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zalo_action_bar">
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/layoutAvatar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ava4"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true">
            <com.zing.zalo.uicontrol.CircleImage
                android:id="@+id/imv_my_avatar"
                android:layout_marginLeft="-10dp"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/imv_avatar"
                app:srcCompat="?attr/default_avatar"
                style="@style/ava4"/>
            <com.zing.zalo.uicontrol.CircleImage
                android:id="@+id/imv_avatar"
                android:scaleType="fitXY"
                app:srcCompat="?attr/default_avatar"
                style="@style/ava4"/>
        </RelativeLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_accept_desc"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:includeFontPadding="false"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_function"
            android:layout_width="103dp"
            android:layout_marginBottom="12dp"
            android:text="@string/str_suggest_friend_send_msg"
            style="@style/btnType1.medium"/>
        <View
            android:id="@+id/separate_line"
            android:background="?attr/SecondaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f61"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tv_section_suggest_friend"
            android:paddingLeft="16dp"
            android:paddingTop="@dimen/text_header_list_to_line_margin_t"
            android:paddingRight="16dp"
            android:paddingBottom="@dimen/label_header_margin_t_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suggestfriend_title"
            android:maxLines="2"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_accept_friend_success">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_friend_request"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="0dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:listSelector="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:layout_weight="1"
            android:fastScrollEnabled="false"/>
        <View
            android:id="@+id/separateLineSelect"
            android:background="?attr/ItemSeparatorColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/layout_select_all"
            android:background="?attr/PopupBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:elevation="6dp">
            <CheckBox
                android:layout_gravity="center_vertical"
                android:id="@+id/checkboxAll"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:button="@drawable/mat_btn_radio_circle_blue"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f4"
                android:textColor="?attr/TextColor1"
                android:gravity="center_vertical"
                android:id="@+id/tv_select_all"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/select_all"
                app:disableScaleTextSize="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f4"
                android:textColor="@drawable/bg_btn_type1_text"
                android:gravity="center"
                android:id="@+id/btnRemoveSelection"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:minWidth="94dp"
                android:text="@string/str_suggest_option_remove"
                app:disableScaleTextSize="true"
                style="@style/btnType1.medium"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_suggest_friends"
        android:background="?attr/PrimaryBackgroundColor"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/HeaderFormTitleColor"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="42dp"
            android:layout_marginRight="80dp"
            android:text="@string/str_suggest_full_empty_desc"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/ll_find_friend_via_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:srcCompatEx="@drawable/chat_friend_button_location"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f1s"
                    android:textColor="?attr/HeaderFormTitleColor"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/usernearby_title"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/ll_suggest_find_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:srcCompatEx="@drawable/chat_friend_button_addfriend"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f1s"
                    android:textColor="?attr/HeaderFormTitleColor"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/des_func_find_more_friend_zalo_tab"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/ll_phonebook_suggestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:srcCompatEx="@drawable/chat_friend_button_phonebook"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f1s"
                    android:textColor="?attr/HeaderFormTitleColor"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/str_native_list_entry_view_title"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
        android:id="@+id/multi_state"
        android:background="?attr/PrimaryBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar"
        app:msvEmptyLayout="@layout/layout_empty_state"
        app:msvErrorLayout="@layout/layout_error_state"/>
</RelativeLayout>
