<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:id="@+id/rowScroll"
        android:paddingLeft="52dp"
        android:text="@string/zch_bts_video_action_auto_next"
        style="@style/ZchBts.ItemAction"/>
    <com.zing.zalo.shortvideo.p072ui.widget.SwitchView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/swvScroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/zch_page_padding"/>
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/ivIconStart"
        android:layout_width="@dimen/zch_bts_size_icon"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_auto_scroll_line_24"
        android:layout_marginStart="@dimen/zch_bts_action_icon_padding"/>
</FrameLayout>
