<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/oa_video_playlist_item_top_panel"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/oa_video_playlist_item_imv_avatar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="0x7f0804dd"
            android:scaleType="fitCenter"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/oa_video_playlist_item_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/oa_video_playlist_item_tv_action"
            android:background="@drawable/bg_footer_v2_action_button"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAllCaps="true"/>
    </LinearLayout>
    <com.zing.zalo.zmedia.view.ZVideoView
        android:id="@+id/oa_zvideo_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/oa_video_playlist_item_top_panel"
        android:layout_centerHorizontal="true"
        app:controller_layout="@layout/oa_inline_video_controller"
        app:controller_style="inline"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/oa_video_playlist_item_bottom_panel"
        android:paddingTop="6dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oa_zvideo_view">
        <TextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/oa_video_playlist_item_btn_share"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="12dp"
            android:text="@string/share"
            android:drawableLeft="@drawable/bg_feed_share"
            android:drawablePadding="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/oa_video_playlist_item_btn_share"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/oa_video_playlist_item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="12dp"
                android:textColor="@color/cMtxt5"
                android:layout_gravity="center_vertical"
                android:id="@+id/oa_video_playlist_item_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</merge>
