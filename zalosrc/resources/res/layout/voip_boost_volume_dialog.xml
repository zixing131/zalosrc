<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_boost_volume_dialog"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:text="@string/str_call_boost_success_text"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_call_cam_selected"/>
    <View
        android:background="#c5c5c5"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="#ff222222"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_left"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="42dp"
            android:text="@string/str_call_boost_left_button"
            android:layout_weight="1"/>
        <ImageView
            android:background="#c5c5c5"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#ff1194ff"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_right"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="36dp"
            android:text="@string/str_call_boost_right_button"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
