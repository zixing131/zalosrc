<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layoutSeeMoreDiscovery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="44dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutSeeMore"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/extra_view_separate_top"
            android:background="?attr/PrimaryBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
        <View
            android:id="@+id/separate_line1"
            android:background="?attr/ItemSeparatorColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textStyle="normal"
                android:textColor="?attr/TextColor1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvTitleSeeMore"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/msg_item_padding_l_r"
                android:text="@string/label_see_full_search_result"
                android:singleLine="true"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textStyle="normal"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tvTitleSeeMoreCenter"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/discover_search_padding_item_t_b"
                android:layout_marginBottom="@dimen/discover_search_padding_item_t_b"
                android:text="@string/label_see_full_search_result"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/icon_next"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/msg_item_padding_l_r"
                android:layout_marginRight="@dimen/msg_item_padding_l_r"
                android:src="0x7f081044"/>
        </LinearLayout>
        <View
            android:id="@+id/separate_line2"
            android:background="?attr/TextColor1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
    <ProgressBar
        android:theme="@style/CircularProgress"
        android:layout_gravity="center"
        android:id="@+id/loading_more"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminate="true"
        android:indeterminateDuration="1500"
        android:indeterminateBehavior="repeat"
        style="@style/ProgressBarCircleNormal"/>
</FrameLayout>
