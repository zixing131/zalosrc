<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <View
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:id="@+id/tv_security_question"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/about_version"
        style="@style/Roboto.f5"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="13dp"
        android:textColor="@color/primary_text_color_hint"
        android:id="@+id/tv_security_question_answer_hint"
        android:paddingLeft="0x7f07054d"
        android:paddingRight="0x7f07054d"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_bound_childview"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="@color/gray_333333"
            android:id="@+id/tv_security_hint"
            android:paddingLeft="0x7f07054d"
            android:paddingRight="0x7f07054d"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/nothing"/>
        <ListView
            android:id="@+id/list_view_answers"
            android:fadingEdge="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:listSelector="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:layout_weight="1"/>
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/PopupBackgroundColor"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <HorizontalScrollView
                android:id="@+id/bubble_scroll_view"
                android:scrollbars="none"
                android:fadingEdge="none"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/layout_bubble_selected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </HorizontalScrollView>
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:id="@+id/btn_answer"
                android:layout_width="90dp"
                android:text="@string/str_cap_answer"
                style="@style/btnType1.medium"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
