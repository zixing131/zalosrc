<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thongpp"
    android:background="?attr/PrimaryBackgroundColor"
    android:paddingTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        app:btnSupportiveIcon="@drawable/zds_ic_close_line_24"
        style="@style/ButtonLarge.TertiaryNeutral"/>
    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:src="@drawable/ic_broken_msg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_01"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/str_remind_backup_title_no_backup"
        android:layout_below="@+id/imv_icon"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/h_normal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_01"
        android:id="@+id/tv_desc"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/str_remind_backup_desc_no_backup"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/t_normal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_01"
        android:id="@+id/tv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/str_remind_backup_action_no_backup"
        android:layout_below="@+id/tv_desc"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/t_normal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_02"
        android:id="@+id/tv_lasted_backup"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/str_remind_backup_latest_backup"
        android:drawablePadding="8dp"
        android:layout_below="@+id/tv_action"
        android:drawableEnd="@drawable/zds_ic_chevron_down_line_16"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:drawableTint="?attr/icon_02"
        style="@style/t_small_m"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_02"
        android:id="@+id/tv_lasted_backup_time"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/str_remind_backup_latest_backup_time"
        android:layout_below="@+id/tv_lasted_backup"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/t_normal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_02"
        android:id="@+id/tv_lasted_backup_device"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/str_remind_backup_latest_backup_device"
        android:layout_below="@+id/tv_lasted_backup_time"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/t_normal"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btn_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/str_remind_backup_action"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:btnSupportiveIcon="@drawable/zds_ic_open_out_app_line_24"
        style="@style/ButtonMedium.Primary"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btn_negative_action"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/str_remind_backup_negative_action"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        style="@style/ButtonMedium.Tertiary"/>
</RelativeLayout>
