<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/swipeable_view"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/HeaderFormTitleColor"
                android:gravity="center"
                android:id="@+id/tv_hint_to_set_password"
                android:background="?attr/SecondaryBackgroundColor"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_header_delete_account"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/str_delete_account_title_confirm_password"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"
                    style="@style/Roboto.f5b"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor2"
                    android:id="@+id/tv_show_hide_password"
                    android:paddingLeft="6dp"
                    android:paddingRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/startup_show_password"
                    style="@style/Roboto.f5b"/>
            </LinearLayout>
            <com.zing.zalo.uicontrol.CustomEditText
                android:textSize="@dimen/f2"
                android:textColor="?attr/HeaderFormTitleColor"
                android:textColorHint="?attr/TextColor2"
                android:autoLink="none"
                android:id="@+id/editText_Password"
                android:background="@drawable/edt_normal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/str_delete_account_password_hint"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="50"
                android:drawablePadding="6dp"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="@color/primary_error_color"
                android:id="@+id/tvError"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor2"
                android:id="@+id/tv_consent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="16dp"
                android:text="@string/policy_delete_account"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:enabled="false"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_deactivate_account"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="22dp"
                android:text="@string/deactivate_account_activity_delete_button"
                app:fstyle="medium"
                style="@style/btnTypeWarning.medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
