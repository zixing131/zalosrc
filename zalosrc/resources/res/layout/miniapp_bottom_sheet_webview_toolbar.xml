<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/back_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:maxWidth="64dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"
        app:btnSupportiveIcon="@drawable/zds_ic_arrow_left_line_24"
        style="@style/ButtonMedium.TertiaryNeutral"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/header_white_title"
        android:ellipsize="end"
        android:id="@+id/toolbar_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_centerInParent="true"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        style="@style/t_xlarge_m"/>
    <com.zing.zalo.zdesign.component.Button
        android:ellipsize="end"
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="64dp"
        android:text="@string/str_close"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        style="@style/ButtonMedium.TertiaryNeutral"/>
    <com.zing.zalo.zdesign.component.Divider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progressDrawable="@drawable/web_progress_bar_blue"
        android:layout_alignParentBottom="true"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
</RelativeLayout>
