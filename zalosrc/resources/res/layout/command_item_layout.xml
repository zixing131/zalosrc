<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.AvatarImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/ava1"
        android:layout_height="@dimen/ava1"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
        android:layout_marginTop="@dimen/msg_item_padding_t_b"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:layout_marginBottom="@dimen/msg_item_padding_t_b"
        android:src="0x7f080958"
        android:layout_centerVertical="true"
        style="@style/myImageView"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f2"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:lines="1"
        android:singleLine="true"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f13"
        android:textColor="?attr/TextColor2"
        android:ellipsize="end"
        android:id="@+id/tv_content_username"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:lines="1"
        android:singleLine="true"
        android:layout_toRightOf="@+id/tv_content"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"/>
</merge>
