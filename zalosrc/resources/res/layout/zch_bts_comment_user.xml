<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/zch_page_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
            android:id="@+id/aivAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            package:zchCornerRadius="35dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
            android:textSize="18dp"
            android:textColor="@color/zch_text_primary"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="medium"/>
    </LinearLayout>
</LinearLayout>
