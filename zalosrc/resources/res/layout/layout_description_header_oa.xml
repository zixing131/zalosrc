<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="@color/cMtxt1"
        android:id="@+id/title_desc"
        android:paddingLeft="@dimen/oa_padding"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:text="@string/str_desc"
        style="@style/Roboto.f6"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="10dp"
        android:textColor="@color/cMtxt2"
        android:id="@+id/tv_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="@dimen/feed_padding_top"
        android:text="@string/str_verified"
        android:drawableLeft="@drawable/ic_oa_verify"
        android:drawablePadding="8dp"
        android:layout_toRightOf="@+id/title_desc"
        style="@style/Roboto"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_desc"
        android:background="@drawable/stencils_contact_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/oa_padding"
        android:layout_marginBottom="@dimen/feed_padding_bottom"
        android:layout_toRightOf="@+id/title_desc"
        android:layout_below="@+id/tv_certificate"
        android:layout_alignLeft="@+id/tv_certificate">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="@color/cMtxt2"
            android:ellipsize="end"
            android:id="@+id/tv_desc"
            android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_weight="1"
            style="@style/Roboto.f6"/>
        <ImageView
            android:id="@+id/icon_desc_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_head_next"/>
    </LinearLayout>
</merge>
