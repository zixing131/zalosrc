<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/search_container"
        android:background="?attr/HeaderFormColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="8dp"
        android:elevation="@dimen/width_shadow_action_bar">
        <ImageView
            android:textAppearance="?attr/actionMenuTextAppearance"
            android:textColor="?attr/actionMenuTextColor"
            android:gravity="center"
            android:id="@+id/btn_search_back"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:focusable="true"
            android:layout_width="54dp"
            android:layout_height="@dimen/action_bar_default_height"
            android:src="@drawable/zds_ic_arrow_left_line_24"
            android:scaleType="center"
            android:minWidth="48dp"
            android:minHeight="@dimen/action_bar_default_height"
            style="?attr/actionButtonStyle"/>
        <com.zing.zalo.uicontrol.CustomEditText
            android:textSize="14sp"
            android:textColor="?attr/NormalIconWhiteHeaderColor"
            android:textColorHint="?attr/text_03"
            android:ellipsize="end"
            android:autoLink="none"
            android:layout_gravity="center_vertical"
            android:id="@+id/chat_search_input"
            android:background="@drawable/bg_input_collection_name"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:minWidth="@dimen/abc_search_view_text_min_width"
            android:hint="@string/str_hint_search_collection_detail"
            android:singleLine="true"
            android:layout_weight="1"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
    </LinearLayout>
</FrameLayout>
