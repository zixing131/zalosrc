<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/tab_container"
    android:background="?attr/ui_background"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:minHeight="44dp">
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/tab_container_left"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="6">
        <com.zing.zalo.zdesign.component.tab.ZdsTabBar
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ZdsTabBar.NormalTab"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/title_all_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="15dp"
                android:textColor="?attr/text_01"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_title_all"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/str_title_all"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginStart="16dp"
                app:disableScaleTextSize="true"
                app:fstyle="medium"/>
            <com.zing.zalo.zdesign.component.Divider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tab_container_right"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_weight="4">
        <LinearLayout
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/tag_filter_container"
                android:background="@drawable/bg_input_chip_tag_filter"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layoutDirection="rtl">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_reset_tag_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:tint="?attr/icon_tertiary"
                    android:paddingStart="12dp"
                    android:paddingEnd="6dp"
                    app:srcCompat="@drawable/zds_ic_close_line_16"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:layout_marginStart="12dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_tag_filter"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="7dp"
                        app:srcCompat="@drawable/icon_tag_in_tab_msg"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_01"
                        android:ellipsize="end"
                        android:id="@+id/tv_tag_filter"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:translationY="-1.21dp"
                        app:disableScaleTextSize="true"
                        style="@style/t_normal"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_filter"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/zds_ic_filter_line_24"
                    app:tint="?attr/icon_tertiary"/>
                <com.zing.zalo.zdesign.component.Badge
                    android:layout_gravity="end|top"
                    android:id="@+id/iv_filter_badge"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="2dp"
                    app:badgeBorderColor="?attr/badge_border"
                    app:badgeType="featureDot"
                    app:isShownBadgeBorder="true"/>
            </FrameLayout>
        </LinearLayout>
        <com.zing.zalo.zdesign.component.Divider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
