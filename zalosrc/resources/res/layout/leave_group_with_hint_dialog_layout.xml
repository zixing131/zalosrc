<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dontAddGroupAgainContainer"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:minHeight="30dp">
        <CheckBox
            android:gravity="center_vertical"
            android:id="@+id/cbDontAddAgain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/checkbox_share_hd_photo"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor2"
            android:gravity="center_vertical"
            android:id="@+id/tvDontAddAgain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:text="@string/str_checkbox_dont_add_group_again_v3"
            style="@style/Roboto.f0"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/layout_confirm"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/AppPrimaryColor"
                android:gravity="center"
                android:id="@+id/custom_btn"
                android:padding="8dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="36dp"
                android:text="@string/str_btn_mute_hint"
                app:disableScaleTextSize="true"
                style="@style/DialogButtonText"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/layout_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/confirm_btn_no"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="36dp"
                android:text="@string/str_cancel"
                android:maxLines="1"
                app:disableScaleTextSize="true"
                style="@style/DialogButtonText"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/confirm_btn_yes"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="36dp"
                android:text="@string/str_group_leave"
                android:maxLines="1"
                app:disableScaleTextSize="true"
                style="@style/DialogButtonText"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
