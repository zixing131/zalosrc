<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:id="@+id/parenLayout_alert_dlg"
    android:background="?attr/PopupBackgroundColor"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="0x7f0701d8">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/parentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="0x7f0701d8">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="18dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/title_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:id="@+id/alertTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_titleDefault"
                    app:fstyle="medium"
                    style="@style/DialogTitleText"/>
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/material_zalo_dialog_title_divider"/>
        <View
            android:id="@+id/top_padding_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="22dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DialogMessageText"/>
            </ScrollView>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/customPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/button2"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minWidth="64dp"
                android:minHeight="48dp"
                app:fstyle="medium"
                style="@style/DialogButtonText"/>
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/button3"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minWidth="64dp"
                android:minHeight="48dp"
                app:fstyle="medium"
                style="@style/DialogButtonText"/>
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:textColor="?attr/AppPrimaryColor"
                android:gravity="center"
                android:id="@+id/button1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:minWidth="64dp"
                android:minHeight="48dp"
                app:fstyle="medium"
                style="@style/DialogButtonText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
