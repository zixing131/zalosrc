<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_01"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Button Large"
            style="@style/t_normal"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/test_snapshot_button_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            style="@style/ButtonLarge.Primary"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_01"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Button Medium"
            style="@style/t_normal"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/test_snapshot_button_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            style="@style/ButtonMedium.Primary"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_01"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Button Small"
            style="@style/t_normal"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/test_snapshot_button_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            style="@style/ButtonSmall.Primary"/>
    </LinearLayout>
</LinearLayout>
