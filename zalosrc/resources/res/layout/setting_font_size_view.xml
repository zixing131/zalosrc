<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/surface_background_alt"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@+id/flBottomSlider"
        android:layout_below="@+id/zds_action_bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_review_font_scale_chat"
                android:background="@drawable/bg_csc_fontsetting"
                android:padding="@dimen/u4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentTop="true"
                android:elevation="6dp">
                <com.androidquery.util.RecyclingImageView
                    android:id="@+id/img_avatar_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="@dimen/u2"
                    android:src="@drawable/avatar_default_color"
                    android:scaleType="fitCenter"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_01"
                    android:id="@+id/tv_chat_content_receive"
                    android:background="@drawable/bubble_left_background_fontsetting"
                    android:padding="@dimen/u3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/u3"
                    android:text="@string/str_setting_font_size_chat_bubble_1"
                    android:layout_toRightOf="@+id/img_avatar_1"
                    style="@style/t_normal"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/bubble_right_background_fontsetting"
                    android:padding="@dimen/u3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_chat_content_receive"
                    android:layout_alignParentRight="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_01"
                        android:id="@+id/tv_chat_content_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/u"
                        android:text="@string/str_setting_font_size_chat_bubble_2"
                        style="@style/t_normal"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_02"
                        android:id="@+id/tv_time_chat_content_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_setting_font_size_timestamp"
                        style="@style/t_xsmall"/>
                </LinearLayout>
            </RelativeLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_02"
                android:id="@+id/tv_font_size_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:text="@string/str_setting_font_section_title_chat"
                android:layout_below="@+id/rl_review_font_scale_chat"
                style="@style/t_small"/>
            <RelativeLayout
                android:id="@+id/rl_review_font_scale_tab_msg"
                android:background="@drawable/bg_msg_fontsetting"
                android:paddingTop="@dimen/u2"
                android:paddingBottom="@dimen/u2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_below="@+id/tv_font_size_chat"
                android:paddingStart="@dimen/_5u"
                android:paddingEnd="@dimen/_5u"
                android:elevation="6dp">
                <com.zing.zalo.zdesign.component.list.ListMessageSingle
                    android:id="@+id/message_item_scale"
                    android:background="@drawable/transparent"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:avatar="@drawable/avatar_default_color"
                    app:content="@string/str_setting_font_size_chat_bubble_1"
                    app:heading="@string/str_setting_font_conversation_name"
                    app:time="@string/str_setting_font_size_timestamp"/>
            </RelativeLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_02"
                android:id="@+id/tv_font_size_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:text="@string/str_setting_font_section_title_message"
                android:layout_below="@+id/rl_review_font_scale_tab_msg"
                style="@style/t_small"/>
        </RelativeLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/flBottomSlider"
        android:padding="8px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <com.zing.zalo.zdesign.component.slider.ZdsSlider
            android:id="@+id/slider_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:labelText="@string/str_setting_font_size_view_drag_change_size"
            app:prefixText="A"
            app:prefixType="text"
            app:sliderLabelColor="?attr/TextColor1"
            app:sliderPaddingType="padding"
            app:sliderPrefixSuffixColor="?attr/support_informative"
            app:sliderSubType="tick_mark"
            app:sliderTickActiveColor="?attr/slider_tickmark_inactive_neutral"
            app:sliderTrackActiveColor="?attr/slider_track_inactive_neutral"
            app:sliderValueColor="?attr/TextColor2"
            app:stepSize="1"
            app:suffixText="A"
            app:suffixType="text"
            app:valueFrom="0"
            app:valueTo="6"
            style="@style/Slider_NeutralTheme"/>
    </FrameLayout>
</RelativeLayout>
