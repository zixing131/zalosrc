<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/label_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:id="@+id/txtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/txtValue"
            android:layout_alignParentStart="true"
            style="@style/slider_label"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:id="@+id/txtValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@style/slider_value"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/prefix_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <com.zing.zalo.zdesign.component.TrackingImageView
                android:id="@+id/prefix_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/zds_ic_off_speaker_solid_24"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/prefix_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/slider_prefix_suffix_text"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/suffix_container"
            android:layout_toRightOf="@+id/prefix_container"
            android:layout_centerVertical="true">
            <com.zing.zalo.zdesign.component.slider.CustomRangeSlider
                android:id="@+id/range_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:haloColor="?attr/slider_neutral_halo_color"
                app:haloRadius="20dp"
                app:labelBehavior="gone"
                app:thumbRadius="8dp"
                app:trackHeight="4dp"
                style="@style/SliderStyle"/>
            <com.zing.zalo.zdesign.component.slider.CustomSlider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:haloColor="?attr/slider_neutral_halo_color"
                app:haloRadius="20dp"
                app:labelBehavior="gone"
                app:thumbRadius="8dp"
                app:trackHeight="4dp"
                style="@style/SliderStyle"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/suffix_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">
            <com.zing.zalo.zdesign.component.TrackingImageView
                android:id="@+id/suffix_icon"
                android:visibility="visible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/zds_ic_speaker_solid_24"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/suffix_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/slider_prefix_suffix_text"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
