<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/item_row"
        android:background="@drawable/stencils_contact_bg"
        android:paddingLeft="@dimen/msg_item_padding_l_r"
        android:paddingTop="@dimen/msg_item_padding_t_b"
        android:paddingRight="@dimen/msg_item_padding_l_r"
        android:paddingBottom="@dimen/msg_item_padding_t_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/layoutAvatar"
            android:layout_width="@dimen/ava3a"
            android:layout_height="@dimen/ava3a"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.GroupAvatarView
                android:id="@+id/buddy_dp"
                android:layout_width="@dimen/ava3a"
                android:layout_height="@dimen/ava3a"
                android:src="0x7f080fd5"
                style="@style/myImageView"/>
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/ic_VipStatus"
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:srcCompat="@drawable/ic_oa_verify"/>
        </FrameLayout>
        <ImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/ic_isFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-3dp"
            android:layout_alignRight="@+id/layoutAvatar"
            android:layout_alignBottom="@+id/layoutAvatar"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textColor="@drawable/bg_btn_type2_text"
            android:gravity="center"
            android:id="@+id/btnAct"
            android:paddingLeft="@dimen/stencils_button_padding"
            android:paddingRight="@dimen/stencils_button_padding"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/btn_func_Unblock_page"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/btnType2.medium"/>
        <ViewStub
            android:id="@+id/stub_story_populate"
            android:visibility="gone"
            android:layout="@layout/story_populate_layout"
            android:inflatedId="@+id/stub_story_populate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/btnAct"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/stub_story_populate"
            android:layout_toRightOf="@+id/layoutAvatar"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="80dp"/>
</LinearLayout>
