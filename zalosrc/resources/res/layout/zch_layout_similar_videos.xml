<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.view.SimilarVideosLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytSimilarVideos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <View
        android:id="@+id/vieSimilarBackground"
        android:background="@color/zch_layer_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vieSimilarThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_bg_bts_thumb"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p075rv.OverScrollableRecyclerView
        android:id="@+id/lstSimilarVideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lytSimilarDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/zch_page_padding"
        android:paddingEnd="@dimen/zch_page_padding">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
                android:id="@+id/aivSimilarAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                package:zchCornerRadius="4dp"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
                android:textSize="14dp"
                android:textColor="@color/zch_text_primary"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/txtSimilarName"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                package:zchFontStyle="medium"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="13dp"
                android:textColor="@color/zch_text_primary"
                android:gravity="center"
                android:id="@+id/btnSimilarFollow"
                android:background="@drawable/zch_bg_button_active_blue"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:text="@string/zch_item_video_follow"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp"
                package:zchFontStyle="medium"/>
        </LinearLayout>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
            android:textSize="14dp"
            android:textColor="@color/zch_text_primary"
            android:id="@+id/txtSimilarDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="regular"/>
        <View
            android:background="@color/zch_divider_inverse"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="14dp"
            android:textColor="@color/zch_text_primary"
            android:id="@+id/txtSimilarSmallTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:text="@string/zch_page_video_similar_videos"
            package:zchFontStyle="medium"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/lytSimilarHeader"
        android:background="@color/zch_layer_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnSimilarBack"
            android:background="@drawable/zch_bg_ripple_circle"
            android:layout_width="@dimen/zch_page_header_button_size"
            android:layout_height="@dimen/zch_page_header_button_size"
            android:layout_marginLeft="@dimen/zch_page_header_button_margin"
            android:src="@drawable/zch_ic_chevron_left_shadow_line_24"
            android:scaleType="centerInside"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="16dp"
            android:textColor="@color/zch_text_primary"
            android:layout_gravity="center"
            android:id="@+id/txtSimilarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zch_page_video_similar_videos"
            android:includeFontPadding="false"
            android:alpha="0"
            package:zchFontStyle="medium"/>
    </FrameLayout>
</com.zing.zalo.shortvideo.p072ui.view.SimilarVideosLayout>
