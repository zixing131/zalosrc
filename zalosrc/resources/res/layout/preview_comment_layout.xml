<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/layout_container_comment_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutReplyComment">
        <com.zing.zalo.feed.uicontrols.commentpreview.CommentPreviewView
            android:id="@+id/comment_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/anchor_point"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/ic_edit_photo_preview"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_edit"
            android:layout_toRightOf="@+id/anchor_point"
            android:layout_below="@+id/anchor_point"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layoutReplyComment"
        android:background="@drawable/white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/commentinputbar">
        <View
            android:id="@+id/horizontal_divider"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:id="@+id/feed_reply_cmt_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/str_tv_reply"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/tvUserNameToReply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                style="@style/Feed.Comment.CommentorName"/>
            <ImageView
                android:id="@+id/imvRemoveLayoutReplyComment"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ipt_clear"/>
        </LinearLayout>
        <View
            android:id="@+id/reply_cmt_divider_bottom"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>
</merge>
