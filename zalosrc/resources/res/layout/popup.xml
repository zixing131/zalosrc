<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/layoutPopupRoot"
    android:background="@color/black_alpha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="#00000000">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/layoutPopupMessage"
        android:background="@drawable/quick_reply_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/layoutPopupContent"
            android:layout_width="match_parent"
            android:layout_height="0x7f0704df">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/msgpop_top"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f1b"
                    android:textStyle="normal"
                    android:textColor="?attr/TextColor1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/str_messages_from_zalo"
                    android:singleLine="true"
                    android:layout_weight="0.9"
                    app:fstyle="medium"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/countMessage"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btn_close_dialog"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_ipt_clear"/>
            </LinearLayout>
            <View
                android:id="@+id/separate_line1"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/msgpop_top"/>
            <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/layoutPopupBody"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/layoutPopupTextMode"
                android:layout_below="@+id/separate_line1">
                <com.zing.zalo.p077ui.widget.ViewPagerFakeDragFixed
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/sliding_tabs"/>
                <com.zing.zalo.p077ui.widget.SlidingTabLayout
                    android:layout_gravity="center"
                    android:id="@+id/sliding_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_margin="@dimen/emoticon_circleflow_margin"
                    android:layout_above="@+id/separate_line"
                    app:typeOfTab="2"/>
                <View
                    android:id="@+id/separate_line"
                    android:background="?attr/ItemSeparatorColor"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layoutPopupTextMode"
                android:background="?attr/PopupBackgroundColor"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_alignParentBottom="true">
                <com.zing.zalo.uicontrol.ActionEditText
                    android:textSize="@dimen/f4"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor3"
                    android:autoLink="none"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/chatinput_text"
                    android:background="@color/clear"
                    android:paddingLeft="0dp"
                    android:scrollbars="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:minHeight="40dp"
                    android:hint="@string/chat_popup_default_text"
                    android:maxLines="2"
                    android:maxEms="10"
                    android:maxLength="300"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionSend"
                    android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
                <ImageButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/chatinput_send"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/ChatMessage.Button.ComposeSend"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/hint_record_font_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/hint_push_to_talk"
                android:background="@color/red"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/slidetocancel"
                android:maxLines="1"
                android:layout_below="@+id/msgpop_top"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/hint_record_font_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/hint_zero_amplitude_recorder"
                android:background="@color/bg_record_layout_cancel"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero_amplitude_recorder"
                android:maxLines="1"
                android:layout_below="@+id/msgpop_top"/>
            <View
                android:id="@+id/separate_line_01"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/layoutPopupTextMode"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/layoutQuickStickerContainer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/layoutPopupContent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/layoutQuickSticker"
                android:background="@color/transparent"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="?attr/TextColor2"
                android:gravity="center"
                android:id="@+id/tvQuickStickerCover"
                android:background="?attr/PopupBackgroundColor_alpha90"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/str_btn_touch_to_use_quick_sticker"/>
        </FrameLayout>
        <View
            android:id="@+id/layoutLockPushToTalk"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layoutPopupContent"
            android:layout_alignBottom="@+id/layout_anim_voice_container"/>
        <com.zing.zalo.uicontrol.PushToTalkControl
            android:id="@+id/layout_anim_voice_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0x7f0704e5"
            android:layout_below="@+id/layoutQuickStickerContainer"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/push_to_talk_stopwatch_time_text"
            android:background="@drawable/push_to_talk_recordwatch_time_bg"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_anim_voice_container"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
