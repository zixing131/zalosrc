<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/feed_audio_popup_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="0x7f0701d8">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:id="@+id/confirm_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="@string/str_titleDefault"
        style="@style/Roboto.f1b"/> /&gt; 
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/confirm_content"
        android:paddingLeft="@dimen/popup_content_marginLeft"
        android:paddingTop="16dp"
        android:paddingRight="@dimen/popup_content_marginLeft"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ic_receive_activecode_by"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="28dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center_horizontal"
            android:id="@+id/phoneNumber"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor2"
            android:gravity="center"
            android:id="@+id/messageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/input_phone05"
            style="@style/Roboto.f0"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp">
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textColor="@color/cM1"
            android:gravity="center"
            android:id="@+id/confirm_btn_no"
            android:background="@drawable/material_button_dialog_bg"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/startup_padding_default"
            android:layout_marginRight="4dp"
            android:text="@string/change"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            style="@style/Roboto.f0"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textStyle="bold"
            android:textColor="@color/cM1"
            android:gravity="center"
            android:id="@+id/confirm_btn_yes"
            android:background="@drawable/material_button_dialog_bg"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="@dimen/startup_padding_default"
            android:text="@string/confirm"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            style="@style/Roboto.f0"/>
    </LinearLayout>
</LinearLayout>
