<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bubbles"
        android:paddingLeft="@dimen/msg_item_padding_l_r"
        android:paddingTop="5dp"
        android:paddingRight="@dimen/msg_item_padding_l_r"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/separate_top"
        android:background="?attr/ItemSeparatorColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"/>
    <com.zing.zalo.uicontrol.CustomEditText
        android:textSize="16dp"
        android:textColor="?attr/TextColor1"
        android:textColorHint="?attr/TextColor2"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/search_input_text"
        android:background="@drawable/bg_search_share_view"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/hint_search_in_contact_picker"
        android:maxLines="1"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_searchbox_n"
        android:drawablePadding="10dp"
        android:inputType="textMultiLine"
        android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:id="@+id/str_info_quota"
        android:background="@drawable/bg_90alpha"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_hint_num_of_msg_free"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/phoneList"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
    </LinearLayout>
</LinearLayout>
