<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.camera.location.LocationFilterPager xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/location_filter_pager"
    android:focusable="true"
    android:visibility="invisible"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="top"
        android:id="@+id/location_filter_top_panel"
        android:background="@drawable/photo_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.uicomponents.imagebutton.ActiveImageButton
            android:layout_gravity="center"
            android:id="@+id/btn_location_filter_back"
            android:background="@color/transparent"
            android:visibility="visible"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="2dp"
            android:src="0x7f080e0b"
            android:scaleType="fitCenter"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="right"
            android:id="@+id/btn_location_filter_select"
            android:paddingLeft="18dp"
            android:paddingTop="6dp"
            android:paddingRight="18dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="9dp"
            android:src="0x7f080d77"
            android:minWidth="58dp"
            style="@style/btnType2.medium.camera"/>
    </FrameLayout>
    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp">
        <com.showingphotolib.view.HackyViewPager
            android:id="@+id/location_filter_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="96dp"
            android:layout_marginBottom="26dp"
            android:overScrollMode="never"/>
        <com.zing.zalo.camera.location.LocationFilterSlidingTabLayout
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/location_filter_sliding_tabs"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="6dp"
            app:typeOfTab="2"/>
    </FrameLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="@drawable/bg_btn_type1_text"
        android:gravity="center"
        android:layout_gravity="bottom|left"
        android:id="@+id/btn_location_filter_cancel"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/str_camera_cancel_check_in"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:drawableLeft="0x7f080dc7"
        android:textAllCaps="false"/>
</com.zing.zalo.camera.location.LocationFilterPager>
