<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_backgroundmain"
    android:background="@drawable/rectangle_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_height"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/top_profile_cover_gradient"
        android:background="@drawable/profile_cover_gradient"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignTop="@+id/cover_image"/>
    <View
        android:id="@+id/profile_cover_gradient"
        android:background="@drawable/bottom_profile_cover_gradient"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <com.zing.zalo.uicontrol.SwipeRefreshListView
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:modeContent="recycleview"/>
    <include layout="@layout/layout_action_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_height"
        android:elevation="4dp">
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/layoutAvatar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/avt_M"
            android:layout_centerHorizontal="true">
            <com.zing.zalo.uicontrol.CircleImage
                android:id="@+id/imvMyAvatar"
                android:layout_marginLeft="-10dp"
                android:src="0x7f080958"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/imvAvatar"
                style="@style/avtM"/>
            <com.zing.zalo.uicontrol.CircleImage
                android:id="@+id/imvAvatar"
                android:src="0x7f080958"
                android:scaleType="fitXY"
                style="@style/avtM"/>
        </RelativeLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tvMutualFeedHint"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_default_text"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/user_details_bottom_bar"/>
    <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
        android:id="@+id/multi_state"
        android:background="?attr/PrimaryBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar"
        app:msvEmptyLayout="@layout/layout_empty_state"
        app:msvErrorLayout="@layout/layout_error_state"
        app:msvMutualEmptyLayout="@layout/layout_mutual_feed_empty_state"/>
    <com.zing.zalo.feed.components.EmptyContentView
        android:id="@+id/error_empty_state"
        android:background="?attr/PrimaryBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar"/>
</RelativeLayout>
