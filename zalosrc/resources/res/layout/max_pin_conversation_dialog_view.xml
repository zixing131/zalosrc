<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parenLayout_alert_dlg"
    android:background="@drawable/bg_dialog_max_pin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp"
    android:layout_marginBottom="48dp"
    android:minWidth="0x7f0701d8">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f1"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:id="@+id/title_max_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:maxLines="1"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f0"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:id="@+id/subtitle_max_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="4dp"
        android:maxLines="4"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_pin_conversations"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:minHeight="30dp"
            android:text="@string/cancel"
            android:textAllCaps="true"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/btn_type_2_text_n"
            android:gravity="center"
            android:id="@+id/btn_pin_conversation"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:minWidth="40dp"
            android:minHeight="30dp"
            android:text="@string/str_pin_conversation"
            android:textAllCaps="true"
            app:fstyle="medium"/>
    </LinearLayout>
</LinearLayout>
