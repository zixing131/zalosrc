<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_75"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/container"
        android:background="@drawable/bottom_view_bg_popup_rounded_top_12"
        android:paddingTop="24dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icn_pin_board"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_pin_circle_solid_36"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="20dp"
            android:textColor="?attr/TextColor1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/str_edit_pin_board_title"
            android:layout_below="@+id/icn_pin_board"
            android:layout_centerHorizontal="true"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor2"
            android:layout_gravity="center_horizontal"
            android:id="@+id/subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/str_edit_pin_board_subtitle"
            android:layout_below="@+id/title_tv"
            android:layout_centerHorizontal="true"/>
        <View
            android:id="@+id/separator_line"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/subtitle_tv"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_topic"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_separator"
            android:layout_below="@+id/separator_line"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor2"
            android:gravity="center_vertical"
            android:id="@+id/empty_edit_pin_board"
            android:paddingLeft="44dp"
            android:paddingTop="16dp"
            android:paddingRight="44dp"
            android:paddingBottom="16dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_pinboard_empty"
            android:layout_above="@+id/bottom_separator"
            android:layout_below="@+id/separator_line"
            android:textAlignment="center"/>
        <View
            android:id="@+id/bottom_separator"
            android:background="@drawable/separator_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_above="@+id/btn_container"/>
        <RelativeLayout
            android:id="@+id/btn_container"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingRight="16dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btn_done"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:minWidth="120dp"
                android:text="@string/str_btn_done_reorder_pin_board_new"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                style="@style/btnType1.medium"/>
            <ProgressBar
                android:theme="@style/CircularProgressWhite"
                android:id="@+id/progress_bar"
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:indeterminate="true"
                android:indeterminateDuration="1500"
                android:indeterminateBehavior="repeat"
                android:layout_centerInParent="true"
                style="@style/ProgressBarCircleNormalWhite"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
