<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/manage_group_link_function_btn_img"
        android:background="@drawable/ic_qr_business_btn_bg_selector"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:tint="@color/bg_btn_qr_tint"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15sp"
        android:textColor="?attr/TextColor1"
        android:gravity="center_horizontal"
        android:id="@+id/manage_group_link_function_btn_text"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>
</LinearLayout>
