<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.zing.zalo.feed.components.FeedItemFooterActionBar
        android:id="@+id/feedItemFooterActionBar"
        android:background="@color/white"
        android:paddingTop="@dimen/feed_content_padding"
        android:paddingBottom="@dimen/feed_content_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/layoutFeedItemFooter"/>
    <View
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layoutFeedItemFooter"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:id="@+id/ibtnLike"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:scaleType="center"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/like_touch_delegate"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginLeft="3dp"
        android:layout_alignBottom="@+id/ibtnLike"
        android:layout_alignParentBottom="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textColor="?attr/TextColor1"
        android:gravity="center_vertical"
        android:id="@+id/tvLikeInfo"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/ibtnLike"
        android:layout_alignParentBottom="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="@color/cLike1"
        android:gravity="center_vertical"
        android:id="@+id/tvLikeText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/str_tv_like"
        android:layout_toRightOf="@+id/tvLikeInfo"
        android:layout_alignParentBottom="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textColor="?attr/TextColor1"
        android:gravity="center_vertical"
        android:id="@+id/tvCommentInfo"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="4dp"
        android:drawableLeft="@drawable/ico_comment"
        android:drawablePadding="6dp"
        android:layout_toRightOf="@+id/tvLikeInfo"
        android:layout_alignParentBottom="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="@color/cLike1"
        android:gravity="center_vertical"
        android:id="@+id/tvCommentText"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/str_tv_comment_title"
        android:layout_toLeftOf="@+id/btn_submenu_feed"
        android:layout_toRightOf="@+id/tvCommentInfo"
        android:layout_alignParentBottom="true"/>
    <ImageButton
        android:id="@+id/btn_submenu_feed"
        android:background="@drawable/bg_btn_postfeed"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:src="@drawable/bg_btn_deletefeed"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <com.zing.zalo.uidrawing.ModulesView
        android:gravity="center_vertical"
        android:id="@+id/view_recently_like"
        android:background="@drawable/item_background_ripple"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/feed_padding_left"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/feed_footer_overlay"
        android:background="?attr/feed_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/bottomAnchor"
        android:layout_alignParentBottom="true"/>
</merge>
