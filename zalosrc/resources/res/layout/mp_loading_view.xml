<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.zdesign.component.TrackingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/control_button_container"
        android:background="?attr/BackgroundControlButton"
        android:padding="0.5dp"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dp"
        android:layout_alignParentEnd="true">
        <com.zing.zalo.zdesign.component.TrackingImageView
            android:id="@+id/btn_menu_loading_view"
            android:clickable="false"
            android:layout_width="43dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            android:cropToPadding="true"
            app:srcCompat="@drawable/ic_ma_menu_disabled"/>
        <View
            android:layout_gravity="center_vertical"
            android:background="?attr/LineViewMiniProgramColor"
            android:layout_width="0.5dp"
            android:layout_height="19dp"/>
        <com.zing.zalo.zdesign.component.TrackingImageView
            android:id="@+id/btn_exit_loading_view"
            android:layout_width="43dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            android:cropToPadding="true"
            app:srcCompat="@drawable/ic_mp_webview_exit_disabled"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_ma_avt"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true">
        <com.zing.zalo.p077ui.widget.imageview.RoundedImageView
            android:id="@+id/brand_avt"
            android:background="?attr/container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:sriv_border_color="?attr/border_01"
            app:sriv_border_width="0.5dp"
            app:sriv_left_bottom_corner_radius="8dp"
            app:sriv_left_top_corner_radius="8dp"
            app:sriv_right_bottom_corner_radius="8dp"
            app:sriv_right_top_corner_radius="8dp"/>
    </RelativeLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_primary"
        android:id="@+id/txt_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/layout_ma_avt"
        android:layout_centerHorizontal="true"
        style="@style/t_large"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/mini_app_logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mini_app_logo"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_mini_program"
            android:layout_marginStart="4dp"
            style="@style/t_xsmall"/>
    </LinearLayout>
</com.zing.zalo.zdesign.component.TrackingRelativeLayout>
