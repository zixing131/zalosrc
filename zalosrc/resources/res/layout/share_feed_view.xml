<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/share_vip_root_view"
    android:background="?attr/SecondaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.zing.zalo.social.widget.CustomScrollView
        android:id="@+id/status_scroll_view"
        android:fadingEdgeLength="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zalo_action_bar">
        <RelativeLayout
            android:gravity="top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.social.widget.StatusComposeInputView
                android:orientation="vertical"
                android:id="@+id/status_text_container"
                android:background="@drawable/rectangle_white"
                android:paddingTop="@dimen/feed_post_ui_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_alignParentTop="true">
                <ImageView
                    android:id="@+id/feed_btn_open_emoji_tab"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_emoticon_feed_comment"/>
                <com.zing.zalo.social.widget.StatusComposeEditText
                    android:textSize="16dp"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor2"
                    android:textColorLink="?attr/TextColor1"
                    android:gravity="top"
                    android:id="@+id/etDesc"
                    android:background="@android:color/transparent"
                    android:paddingBottom="5dp"
                    android:saveEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="41dp"
                    android:layout_marginRight="@dimen/feed_post_ui_margin"
                    android:hint="@string/status_default_text"
                    android:minLines="3"
                    android:completionThreshold="1"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    style="@style/Feeditem_main_content"/>
                <View
                    android:id="@+id/status_input_range"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/etDesc"/>
            </com.zing.zalo.social.widget.StatusComposeInputView>
            <FrameLayout
                android:id="@+id/attachment_containter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_text_container">
                <ViewStub
                    android:id="@+id/stub_share_profile"
                    android:layout="@layout/feed_item_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </RelativeLayout>
    </com.zing.zalo.social.widget.CustomScrollView>
    <ImageView
        android:id="@+id/feed_btn_open_emoji_tab2"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_emoticon_feed_comment"
        android:layout_below="@+id/zalo_action_bar"/>
</com.zing.zalo.p077ui.widget.CustomRelativeLayout>
