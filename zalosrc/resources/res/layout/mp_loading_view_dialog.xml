<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.zdesign.component.TrackingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
        android:orientation="vertical"
        android:id="@+id/layout_popup"
        android:background="?attr/container"
        android:layout_width="216dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        app:connerRadius="12dp">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:weightSum="2">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp">
                <com.zing.zalo.p077ui.widget.imageview.RoundedImageView
                    android:id="@+id/brand_avt"
                    android:background="?attr/container"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:sriv_border_color="?attr/border_01"
                    app:sriv_border_width="0.5dp"
                    app:sriv_left_bottom_corner_radius="8dp"
                    app:sriv_left_top_corner_radius="8dp"
                    app:sriv_right_bottom_corner_radius="8dp"
                    app:sriv_right_top_corner_radius="8dp"/>
            </RelativeLayout>
            <TextView
                android:textSize="13sp"
                android:textColor="?attr/text_01"
                android:ellipsize="end"
                android:id="@+id/txt_brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:textAlignment="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <FrameLayout
            android:background="@drawable/bg_divider_01_bottom_radius_12"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:textSize="10sp"
                android:textColor="?attr/text_02"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_mini_program"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_mini_program_new"/>
        </FrameLayout>
    </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
    <com.zing.zalo.zdesign.component.TrackingImageView
        android:id="@+id/btn_exit_loading_view"
        android:layout_width="20.2dp"
        android:layout_height="20.2dp"
        android:layout_marginTop="17.9dp"
        android:tint="?attr/icon_03"
        android:layout_below="@+id/layout_popup"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/zds_ic_close_circle_line_24"/>
</com.zing.zalo.zdesign.component.TrackingRelativeLayout>
