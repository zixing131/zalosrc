<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="?attr/PopupBackgroundColor"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/bottom_shadow">
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/btn_close_banner"
            android:background="@drawable/stencils_contact_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080dda"/>
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/icon_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="0x7f080feb"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/btn_link_now"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_bottom_banner_contact_link"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            app:disableScaleTextSize="true"
            app:fstyle="medium"
            style="@style/btnType2.medium"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btn_link_now"
            android:layout_toRightOf="@+id/icon_banner"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_bottom_banner_contact_title"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/str_bottom_banner_contact_description"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@drawable/shadow_botom_quick_action"/>
</FrameLayout>
