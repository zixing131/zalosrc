<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/promote_sticker_header"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/layout_btn_download_promote_sticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:gravity="center"
            android:id="@+id/btn_download_promote_sticker"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="72dp"
            android:text="@string/str_msg_file_start_download"
            android:textAllCaps="true"
            style="@style/btnType2.medium"/>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/holoCircularProgressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:theme="@style/CircularProgressGrey"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat"
                style="@style/ProgressBarCircleNormal"/>
        </FrameLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/layout_btn_download_promote_sticker">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/promote_sticker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="4dp"
            android:text="@string/str_msg_file_start_download"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/promote_sticker_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/str_sticker_promote_description_default"
            android:singleLine="true"
            android:layout_below="@+id/promote_sticker_name"
            app:maxScaledTextSize="18dp"/>
    </RelativeLayout>
</RelativeLayout>
