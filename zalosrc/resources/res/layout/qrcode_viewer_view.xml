<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/qrcode_viewer_activity_data"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/layoutFooterFunction">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="?attr/TextColor1"
                        android:gravity="center_horizontal"
                        android:id="@+id/qrcode_viewer_description_text"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:singleLine="true"
                        android:drawablePadding="5dp"
                        android:layout_centerHorizontal="true"/>
                    <com.androidquery.util.RecyclingImageView
                        android:id="@+id/qrcode_viewer_activity_image"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_below="@+id/qrcode_viewer_description_text"
                        android:layout_centerHorizontal="true"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/BasicTextSize"
                        android:textColor="?attr/TextColor1"
                        android:gravity="center_horizontal"
                        android:id="@+id/qrcode_viewer_activity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:maxWidth="260dp"
                        android:layout_below="@+id/qrcode_viewer_activity_image"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutFooterFunction"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:gravity="center"
                        android:id="@+id/qrcode_viewer_activity_btn_change"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:minWidth="140dp"
                        android:text="@string/qrcode_change"
                        style="@style/btnType2.medium"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:gravity="center"
                        android:id="@+id/qrcode_viewer_activity_btn_download"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="140dp"
                        android:text="@string/qrcode_save_to_gallery"
                        style="@style/btnType2.medium"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/layout_disable_qrcode"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.androidquery.util.RecyclingImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                app:srcCompat="@drawable/decor_qrcode"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TabSelectedColor"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="30dp"
                android:text="@string/str_hint_qrcode_disable_new"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:gravity="center"
                android:id="@+id/btn_enable"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:text="@string/str_btn_enable_qrcode"
                style="@style/btnType1.medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="@color/cM4"
                android:gravity="center"
                android:id="@+id/tv_scan_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="@string/str_btn_scan_qrcode_friend"/>
        </LinearLayout>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:background="?attr/PrimaryBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
    </RelativeLayout>
</LinearLayout>
