<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/ui_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        app:btnSupportiveIcon="@drawable/zds_ic_close_line_24"
        style="@style/ButtonMedium.TertiaryNeutral"/>
    <androidx.appcompat.widget.ZAppCompatImageView
        android:id="@+id/ivIllus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btnClose"
        android:layout_centerHorizontal="true"
        app:srcCompatEx="@drawable/illus_clean_up_contact"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f800"
        android:textColor="?attr/TextColor1"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="36.8dp"
        android:layout_marginRight="24dp"
        android:text="@string/str_easily_tidy_up"
        android:layout_below="@+id/ivIllus"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        style="@style/t_xlarge_m"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:text="@string/str_easily_see_suggestions_for_who_you_interact_with_the_least"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        style="@style/t_normal"/>
    <com.zing.zalo.zdesign.component.HorizontalAvatar
        android:id="@+id/haListAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tvDescription"
        android:layout_centerHorizontal="true"/>
    <com.zing.zalo.zdesign.component.Divider
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btnSeeSuggestions"
        app:dividerType="horizontal"/>
    <com.zing.zalo.zdesign.component.Button
        android:textColor="@color/white"
        android:id="@+id/btnSeeSuggestions"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/str_see_suggestions"
        android:layout_above="@+id/btnSkip"
        style="@style/ButtonLarge.Primary"/>
    <com.zing.zalo.zdesign.component.Button
        android:textColor="?attr/TextColor1"
        android:id="@+id/btnSkip"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:text="@string/str_skip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/ButtonLarge.SecondaryNeutral"/>
</RelativeLayout>
