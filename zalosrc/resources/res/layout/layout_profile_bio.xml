<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_bio"
    android:background="?attr/ProfilePrimaryBackgroundColor"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.textview.AutoMeasureTextView
        android:id="@+id/user_display_name"
        android:paddingLeft="@dimen/feed_padding_left"
        android:paddingTop="20dp"
        android:paddingRight="@dimen/feed_padding_right"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_username_size"
        app:atAlignment="center"
        app:atDrawable="@drawable/zds_ic_edit_text_line_24"
        app:atDrawableVisible="false"
        app:atFontStyle="medium"
        app:atTextColor="?attr/TextColor1"
        app:atTextSize="@dimen/f9s"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/business_info"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textColor="@color/b70"
            android:id="@+id/business_label"
            android:background="@drawable/bg_label_business_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_label_business_account"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
        <View
            android:id="@+id/business_info_dot_divider"
            android:background="@drawable/dot_text3"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginStart="4dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/text_01"
            android:id="@+id/business_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.TrackingTextView
        android:textSize="@dimen/f4"
        android:textColor="?attr/text_02"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/user_display_bio"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4dp"
        android:paddingStart="@dimen/feed_padding_left"
        android:paddingEnd="@dimen/feed_padding_right"/>
    <com.zing.zalo.zdesign.component.TrackingLinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/btn_edit_bio"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/status_bio_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zds_ic_edit_text_line_16"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/link_01"
            android:id="@+id/status_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            style="@style/t_small"/>
    </com.zing.zalo.zdesign.component.TrackingLinearLayout>
    <ViewStub
        android:id="@+id/viewstubFriendRequest"
        android:visibility="gone"
        android:layout="@layout/layout_friend_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>
    <ViewStub
        android:id="@+id/viewstubFriendRequestVer3"
        android:visibility="gone"
        android:layout="@layout/layout_friend_request_ver_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>
</LinearLayout>
