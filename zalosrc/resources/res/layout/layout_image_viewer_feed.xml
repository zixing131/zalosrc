<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.layout.FixUsableHeightRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_image_viewer_pager"/>
    <FrameLayout
        android:background="@drawable/qr_bottom_background_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutImageFunction">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/scan_qr_button_style_text_size"
            android:textColor="#1194fe"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/qrCodeTextView"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scan_qr_button_style_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/str_scan_qr_button"
            android:drawablePadding="@dimen/scan_qr_button_style_drawable_padding"
            android:drawableStart="@drawable/ic_scan_qr_footer"
            style="@style/btnType3.medium"/>
    </FrameLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/feed_media_function_bar"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:gravity="center"
        android:id="@+id/btn_action"
        android:paddingLeft="@dimen/feed_padding_left"
        android:paddingRight="@dimen/feed_padding_right"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_action_update_height"
        android:layout_centerInParent="true"
        app:fstyle="medium"
        style="@style/btnType3.medium"/>
    <include layout="@layout/base_image_viewer_action_bar"/>
    <com.zing.zalo.p077ui.widget.ScanQrButton
        android:id="@+id/qrCode"
        android:visibility="gone"
        android:layout_width="@dimen/scan_qr_button_width"
        android:layout_height="@dimen/scan_qr_button_height"
        android:src="@drawable/ic_scan_qr"
        android:scaleType="center"/>
</com.zing.zalo.p077ui.widget.layout.FixUsableHeightRelativeLayout>
