<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/suggest_layout_find_more_friends"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_find_more_page"
        android:background="@drawable/stencils_contact_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/buddy_dp"
            android:layout_width="@dimen/avt_image_size_default"
            android:layout_height="@dimen/avt_image_size_default"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="@dimen/hearder_func_margin_content_t_b"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:layout_marginBottom="@dimen/hearder_func_margin_content_t_b"
            android:src="0x7f080a03"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/groupDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mypages_header_create_title"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:id="@+id/separate_line"
        android:background="?attr/SecondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f13"
        android:textColor="?attr/TextColor5"
        android:id="@+id/title_page_list"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_header_list_margin_l"
        android:layout_marginTop="@dimen/text_header_list_to_line_margin_t"
        android:layout_marginBottom="@dimen/label_header_margin_t_b"
        android:text="@string/title_section_my_pages_list"
        android:includeFontPadding="false"
        app:fstyle="medium"/>
</LinearLayout>
