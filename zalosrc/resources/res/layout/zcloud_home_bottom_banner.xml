<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/banner_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/banner_title"
        android:id="@+id/banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/banner_ic"
        style="@style/t_large_m"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_primary"
        android:id="@+id/tv_downloading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_zhome_grace_period_banner_downloading"
        android:layout_below="@+id/banner_title"
        style="@style/t_small"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_primary"
        android:id="@+id/tv_progress"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_title"
        android:layout_alignParentEnd="true"
        style="@style/t_small_m"/>
    <com.zing.zalo.zdesign.component.ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_downloading"
        style="@style/ProgressBar.Horizontal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/banner_description"
        android:id="@+id/banner_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/progress_bar"
        android:layout_toEndOf="@+id/banner_ic"
        style="@style/t_small"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/cta_link"
        android:id="@+id/tv_cta"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/banner_desc"
        android:layout_toEndOf="@+id/banner_ic"
        style="@style/t_small_m"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/action_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/str_zcloud_grace_period_banner_cta"
        android:layout_below="@+id/banner_desc"
        style="@style/ButtonSmall.Primary"/>
</RelativeLayout>
