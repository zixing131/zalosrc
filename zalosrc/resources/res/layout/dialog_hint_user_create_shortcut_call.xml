<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:zalo="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/PopupBackgroundColor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f0"
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:id="@+id/txt_description"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/btn_create_now"
        android:layout_width="match_parent"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="56dp"
        android:layout_marginBottom="8dp"
        android:text="@string/str_shortcut_call_create"
        android:maxLines="1"
        android:textAllCaps="true"
        zalo:fstyle="medium"
        style="@style/btnType1.medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f13"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_remind_later"
        android:background="@drawable/stencils_contact_bg"
        android:paddingLeft="@dimen/msg_item_padding_l_r"
        android:paddingRight="@dimen/msg_item_padding_l_r"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mat_btn_style_medium_h"
        android:layout_marginBottom="8dp"
        android:text="@string/str_shortcut_call_remind_later"
        android:maxLines="1"
        android:textAllCaps="true"
        zalo:fstyle="medium"/>
</LinearLayout>
