<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.camera.photocrop.CropView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/crop_view"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.camera.photocrop.CropOverlayView
        android:id="@+id/crop_overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_gravity="top"
        android:id="@+id/crop_top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.uicomponents.imagebutton.ActiveImageButton
            android:layout_gravity="top|left"
            android:id="@+id/btn_back_crop"
            android:background="@color/transparent"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="12dp"
            android:layout_width="@dimen/camera_button_size"
            android:layout_height="wrap_content"
            android:src="@drawable/stencils_ic_head_back_white"
            android:scaleType="fitCenter"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="top|right"
            android:id="@+id/btn_finish_crop_photo"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_menu_item_finished"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/crop_bottom_bar"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.zing.zalo.uicomponents.imagebutton.ActiveImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_rotate_left_crop"
            android:background="@color/transparent"
            android:layout_width="@dimen/camera_button_size"
            android:layout_height="@dimen/camera_button_size"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_foto_rotate_selector"/>
        <com.zing.zalo.uicomponents.imagebutton.ActiveImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_square_crop"
            android:background="@color/transparent"
            android:layout_width="@dimen/camera_button_size"
            android:layout_height="@dimen/camera_button_size"
            android:layout_marginLeft="6dp"
            android:src="0x7f080d8f"/>
    </LinearLayout>
</com.zing.zalo.camera.photocrop.CropView>
