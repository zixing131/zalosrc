<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/zcloud_locked_verification_view_0"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.widget.ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/sync_icon_size"
                android:layout_height="@dimen/sync_icon_size"
                android:layout_marginTop="@dimen/backup_restore_margin_top_big"
                android:tint="?attr/information_icon"
                app:srcCompatEx="@drawable/zds_ic_backup_warning_solid_24"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="22dp"
                android:textColor="?attr/text_primary"
                android:gravity="center_horizontal"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:text=""
                app:lineHeight="26dp"
                style="@style/h_xlarge"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/text_secondary"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:text="@string/str_description_zcloud_temporarily_locked"
                style="@style/t_small"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/text_secondary"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/str_retry_restoration_later"
                style="@style/t_small"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_layer_selected_alt_r8"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:tint="?attr/icon_tertiary"
                    android:layout_marginEnd="12dp"
                    app:srcCompatEx="@drawable/zds_ic_clock_1_line_16"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="15dp"
                    android:textColor="?attr/text_secondary"
                    android:gravity="center"
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    style="@style/t_normal_m"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="?attr/PrimaryBackgroundColor"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btnPositiveAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/str_btn_forgot_data_protection_code"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:btnSupportiveIcon="@drawable/zds_ic_open_out_app_line_24"
            app:btnSupportiveIconPosition="trailing"
            style="@style/ButtonMedium.Primary"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btnNegativeAction"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_title_zcloud_got_it"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="@style/ButtonLarge.TertiaryNeutral"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerDividerColor="?attr/PrimaryBackgroundColor"
        app:leadingType="back"
        app:trailingType="custom"
        style="@style/WhiteZdsActionBar.AppType"/>
</FrameLayout>
