<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="18sp"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/str_register_enter_extra_profile_select_birthday_title"
        android:maxLines="1"
        style="@style/t_large_m"/>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/birthdayPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">
                <NumberPicker
                    android:theme="?attr/SelectBirthdayNumberPicker"
                    android:id="@+id/dayPickerColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <NumberPicker
                    android:theme="?attr/SelectBirthdayNumberPicker"
                    android:id="@+id/monthPickerColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <NumberPicker
                    android:theme="?attr/SelectBirthdayNumberPicker"
                    android:id="@+id/yearPickerColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvRuleBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/str_register_enter_extra_profile_select_birthday_rule"
                android:drawablePadding="4dp"
                style="@style/t_small"/>
            <com.zing.zalo.zdesign.component.Button
                android:id="@+id/btnPositiveAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:text="@string/str_register_enter_extra_profile_select"
                style="@style/ButtonMedium.Primary"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
