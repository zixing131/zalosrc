<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.location.widget.LiveLocationBar xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/live_location_bar"
    android:background="@drawable/bg_white_with_bottom_line_stroke_half_dp_color_cline4"
    android:paddingLeft="@dimen/msg_item_padding_l_r"
    android:paddingRight="@dimen/msg_item_padding_l_r"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/live_location_bar_imv_icon"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/icn_livelocation_anim"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/ChatTextColor1"
            android:ellipsize="end"
            android:id="@+id/live_location_bar_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:textColor="?attr/ChatTextColor1"
            android:ellipsize="end"
            android:id="@+id/live_location_bar_tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/live_location_bar_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:gravity="center"
            android:id="@+id/live_location_bar_btn_start_live"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:text="@string/str_live_location_share"
            android:layout_centerInParent="true"
            style="@style/btnType1.medium"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:gravity="center"
            android:id="@+id/live_location_bar_btn_view_detail"
            android:paddingLeft="6dp"
            android:paddingTop="4dp"
            android:paddingRight="6dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:minWidth="64dp"
            android:text="@string/str_view"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            style="@style/btnType3.medium"/>
        <FrameLayout
            android:id="@+id/live_location_bar_progress_bar"
            android:background="@drawable/live_location_background_btn_share_loading"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:minWidth="94dp"
            android:layout_alignLeft="@+id/live_location_bar_btn_start_live"
            android:layout_alignRight="@+id/live_location_bar_btn_start_live"
            android:layout_centerInParent="true">
            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:indeterminateDrawable="@drawable/progress"
                android:indeterminateDuration="300"
                android:indeterminateBehavior="repeat"/>
        </FrameLayout>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textColor="@color/cNotify1"
            android:gravity="center"
            android:id="@+id/live_location_bar_btn_end_live"
            android:background="@drawable/bg_btn_type_red_medium"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:text="@string/str_live_location_stop_sharing"
            android:layout_centerInParent="true"
            style="@style/btnType5.medium"/>
    </RelativeLayout>
</com.zing.zalo.location.widget.LiveLocationBar>
