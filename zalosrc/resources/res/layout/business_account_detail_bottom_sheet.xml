<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/popup_content_container"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/u6"
        android:text="@string/business_account_info_view_title"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginEnd="@dimen/u4"
        style="@style/t_large_m"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/u4"
        android:text="@string/business_account_info_view_desc"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginEnd="@dimen/u4"
        style="@style/t_small"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ba_detail_ll_package_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginEnd="@dimen/u4">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/u2"
            android:paddingBottom="@dimen/u2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/business_account_info_view_plan"
            style="@style/t_small_m"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ba_detail_ll_label_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/u2"/>
        <com.zing.zalo.zdesign.component.Button
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_change_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_ba_change_plan"
            android:layout_marginStart="@dimen/u"
            app:btnSupportiveIcon="@drawable/zds_ic_chevron_right_line_16"
            app:btnSupportiveIconPosition="trailing"
            style="@style/ButtonSmall.Tertiary"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ba_detail_ll_start_date"
        android:paddingTop="@dimen/u2"
        android:paddingBottom="@dimen/u2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginEnd="@dimen/u4">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="start|center_vertical"
            android:layout_gravity="top"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/business_account_info_view_start_date"
            style="@style/t_small_m"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="start|center_vertical"
            android:layout_gravity="top"
            android:id="@+id/ba_detail_tv_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/u2"
            style="@style/t_normal"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ba_detail_ll_end_date"
        android:paddingTop="@dimen/u2"
        android:paddingBottom="@dimen/u2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginEnd="@dimen/u4">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="start|center_vertical"
            android:layout_gravity="top"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/business_account_info_view_end_date"
            style="@style/t_small_m"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="start|center_vertical"
            android:layout_gravity="top"
            android:id="@+id/ba_detail_tv_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/u2"
            style="@style/t_normal"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.Divider
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/u6"
        android:layout_marginEnd="@dimen/u6"
        app:dividerType="horizontal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor2"
        android:gravity="center"
        android:id="@+id/ba_detail_tv_learn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/u4"
        android:layout_marginBottom="@dimen/u8"
        android:layout_marginStart="@dimen/u4"
        android:layout_marginEnd="@dimen/u4"
        style="@style/t_small"/>
</LinearLayout>
