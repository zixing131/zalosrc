<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    android:background="@color/zch_surface_background"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/reportRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoRadioButton
                android:textSize="15dp"
                android:textColor="@color/zch_text_primary"
                android:layout_gravity="start"
                android:id="@+id/rb_1"
                android:background="@color/transparent"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/zch_report_content_1"
                android:drawableRight="@drawable/zch_selector_radio_button"/>
            <View
                android:background="@color/zch_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <com.zing.zalo.p077ui.widget.RobotoRadioButton
                android:textSize="15dp"
                android:textColor="@color/zch_text_primary"
                android:layout_gravity="start"
                android:id="@+id/rb_2"
                android:background="@color/transparent"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/zch_report_content_2"
                android:drawableRight="@drawable/zch_selector_radio_button"/>
            <View
                android:background="@color/zch_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <com.zing.zalo.p077ui.widget.RobotoRadioButton
                android:textSize="15dp"
                android:textColor="@color/zch_text_primary"
                android:layout_gravity="start"
                android:id="@+id/rb_3"
                android:background="@color/transparent"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/zch_report_content_3"
                android:drawableRight="@drawable/zch_selector_radio_button"/>
            <View
                android:background="@color/zch_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <com.zing.zalo.p077ui.widget.RobotoRadioButton
                android:textSize="15dp"
                android:textColor="@color/zch_text_primary"
                android:layout_gravity="start"
                android:id="@+id/rb_4"
                android:background="@color/transparent"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/zch_report_content_4"
                android:drawableRight="@drawable/zch_selector_radio_button"/>
            <View
                android:background="@color/zch_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <com.zing.zalo.p077ui.widget.RobotoRadioButton
                android:textSize="15dp"
                android:textColor="@color/zch_text_primary"
                android:layout_gravity="start"
                android:id="@+id/rb_5"
                android:background="@color/transparent"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/zch_report_content_5"
                android:drawableRight="@drawable/zch_selector_radio_button"/>
            <View
                android:background="@color/zch_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <com.zing.zalo.p077ui.widget.RobotoRadioButton
                android:textSize="15dp"
                android:textColor="@color/zch_text_primary"
                android:layout_gravity="start"
                android:id="@+id/rb_6"
                android:background="@color/transparent"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/zch_report_content_6"
                android:drawableRight="@drawable/zch_selector_radio_button"/>
        </RadioGroup>
        <com.zing.zalo.shortvideo.p072ui.widget.et.NestedEditText
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/zch_icon_tertiary"
            android:gravity="top"
            android:id="@+id/reportEdt"
            android:background="#2e2e2e"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zch_radius_16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="@dimen/zch_radius_16dp"
            android:maxHeight="80dp"
            android:hint="@string/zch_page_feedback_limit_min_length"
            android:minLines="5"
            android:includeFontPadding="false"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:textIsSelectable="true"
            android:textAlignment="gravity"
            style="@style/Roboto.Regular"/>
        <View
            android:id="@+id/bottomView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>
</ScrollView>
