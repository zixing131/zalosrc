<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/separate_line1"
        android:background="@color/cPageBg1"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_view_locations"
        android:background="@drawable/stencils_contact_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separate_line1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="@color/cMtxt1"
            android:gravity="center_vertical"
            android:id="@+id/tv_view_location"
            android:paddingLeft="@dimen/oa_padding"
            android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/str_view_locations"
            android:layout_weight="1"
            style="@style/Roboto.f6"/>
        <ImageView
            android:id="@+id/imv_caret"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginRight="@dimen/oa_padding"
            android:src="@drawable/ic_head_next"/>
    </LinearLayout>
    <View
        android:id="@+id/separate_line2"
        android:background="@color/cPageBg1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/layout_view_locations"/>
    <RelativeLayout
        android:paddingTop="@dimen/feed_padding_top"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separate_line2">
        <include layout="@layout/layout_description_header_oa"/>
    </RelativeLayout>
</RelativeLayout>
