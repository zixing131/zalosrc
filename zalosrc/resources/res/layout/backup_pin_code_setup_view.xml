<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/backup_pin_code_setup_view_0"
    android:background="?attr/surface_background_alt"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zview.actionbar.ActionBar
        android:id="@+id/zalo_action_bar"
        android:background="?attr/surface_background_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical_style_1"
        android:scrollbarTrackVertical="@drawable/scrollbar_track_vertical_style_1"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnContinue"
        android:layout_below="@+id/zalo_action_bar"
        android:fadeScrollbars="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:gravity="center_horizontal"
                android:id="@+id/tvTitle"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_zcloud_setup_pin_create_pin_title"
                style="@style/h_xlarge"/>
            <com.zing.zalo.zdesign.component.OtpField
                android:gravity="center_horizontal"
                android:id="@+id/optFiled"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:layout_below="@+id/tvTitle"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/infoContainer"
                android:background="@drawable/bg_container_informative"
                android:padding="16dp"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/optFiled">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivIconInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/zds_ic_info_circle_solid_24"
                    app:tint="?attr/information_icon"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/banner_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_zcloud_setup_pin_create_pin_info_description"
                    android:layout_toRightOf="@+id/ivIconInfo"
                    android:layout_marginStart="12dp"
                    style="@style/t_small"/>
            </RelativeLayout>
        </RelativeLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/infoContainerBottom"
        android:background="@drawable/bg_container_informative"
        android:padding="16dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btnContinue">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIconInfoBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/zds_ic_info_circle_solid_24"
            app:tint="?attr/information_icon"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/banner_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_zcloud_setup_pin_create_pin_info_description"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivIconInfoBottom"
            style="@style/t_small"/>
    </RelativeLayout>
    <com.zing.zalo.zdesign.component.Button
        android:enabled="false"
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/str_zcloud_setup_next"
        android:layout_alignParentBottom="true"
        style="@style/ButtonLarge.Primary"/>
</RelativeLayout>
