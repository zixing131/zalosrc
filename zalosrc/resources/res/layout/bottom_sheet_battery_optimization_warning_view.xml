<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="12dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="256dp">
    <androidx.appcompat.widget.ZAppCompatImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="35dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_battery_optimized_bottom_sheet_title"
        android:layout_marginStart="16dp"
        style="@style/t_xlarge_m"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_01"
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        style="@style/t_normal"/>
    <com.zing.zalo.zdesign.component.TrackingTextView
        android:textColor="@color/b60"
        android:id="@+id/btn_learn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/str_view_detailed_guide"
        android:layout_marginStart="16dp"
        style="@style/t_normal_m"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btn_allow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/str_go_to_device_settings"
        style="@style/ButtonMedium.Primary"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btn_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/str_remind_me_later"
        style="@style/ButtonMedium.SecondaryNeutral"/>
</LinearLayout>
