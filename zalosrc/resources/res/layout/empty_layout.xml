<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="48dp">
    <LinearLayout
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/list_empty"
        android:background="@color/main_root_default_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/list_empty_image"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f08126f"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center"
            android:id="@+id/list_empty_text"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            style="@style/Empty.Screen.Desc"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btn_refresh"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginTop="21dp"
            android:minWidth="80dp"
            android:text="@string/bt_try_again"
            style="@style/btnType1.medium"/>
    </LinearLayout>
    <LinearLayout
        android:textColor="@color/primary_text_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/list_empty_progress"
        android:background="@color/main_root_default_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/pb_loading"
            layout="@layout/holo_circular_progress_bar_mini"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="@color/primary_text_color"
            android:id="@+id/list_empty_progress_text"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"/>
    </LinearLayout>
</FrameLayout>
