<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.shortvideo.p072ui.widget.reaction.ReactionCount
        android:gravity="center_horizontal"
        android:id="@+id/txtReaction"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.zlottie.widget.LottieImageView
        android:id="@+id/livReaction"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="12dp"
        android:textColor="@color/zch_text_inverse_subtle"
        android:id="@+id/txtLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.reaction.ReactionButton
        android:id="@+id/btnReaction"
        android:padding="@dimen/zch_layout_reaction_button_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</merge>
