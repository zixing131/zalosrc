<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fstyle="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/backgroundmain"
            android:background="?attr/PrimaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/authorised_app_detail_layout"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.androidquery.util.RecyclingImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/authorised_app_detail_logo"
                    android:layout_width="@dimen/ava3"
                    android:layout_height="@dimen/ava3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    fstyle:srcCompat="?attr/default_avatar"
                    style="@style/myImageView"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/avt_image_size_default"
                    android:minHeight="@dimen/avt_image_size_default"
                    android:layout_toRightOf="@+id/authorised_app_detail_logo">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:id="@+id/authorised_app_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        fstyle:fstyle="medium"
                        style="@style/Roboto.f2"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor2"
                        android:id="@+id/authorised_app_detail_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        style="@style/Roboto.f71"/>
                </LinearLayout>
            </RelativeLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:gravity="center"
                android:id="@+id/authorised_app_permission_title"
                android:background="?attr/SecondaryBackgroundColor"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/authorised_app_detail_permission_list"
                fstyle:fstyle="medium"
                style="@style/Roboto.f7"/>
            <RelativeLayout
                android:id="@+id/authorization_app_permission_name_access_profile_layout"
                android:background="@drawable/stencils_contact_bg"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <com.zing.zalo.p077ui.widget.StencilSwitch
                    android:id="@+id/authorization_app_permission_name_access_profile_checkbox"
                    android:visibility="visible"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_spacing"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/authorization_app_permission_name_access_profile_checkbox"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="@drawable/itemlist_text"
                        android:id="@+id/authorised_app_name_access_title"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authorization_app_permission_name_access_profile"
                        style="@style/Roboto.f2"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/SmallerTextSize"
                        android:textColor="@drawable/itemlist_tip_text"
                        android:id="@+id/authorised_app_name_access_desc"
                        android:visibility="gone"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/authorised_app_name_access_separate_line"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"/>
            <RelativeLayout
                android:id="@+id/authorization_app_permission_name_send_message_layout"
                android:background="@drawable/stencils_contact_bg"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <com.zing.zalo.p077ui.widget.StencilSwitch
                    android:id="@+id/authorization_app_permission_name_send_message_checkbox"
                    android:visibility="visible"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_spacing"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/authorization_app_permission_name_send_message_checkbox"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="@drawable/itemlist_text"
                        android:id="@+id/authorised_app_name_send_message_title"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authorization_app_permission_name_send_message"
                        style="@style/Roboto.f2"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/SmallerTextSize"
                        android:textColor="@drawable/itemlist_tip_text"
                        android:id="@+id/authorised_app_name_send_message_desc"
                        android:visibility="gone"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/authorised_app_name_send_message_separate_line"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"/>
            <RelativeLayout
                android:id="@+id/authorization_app_permission_name_access_friend_list_layout"
                android:background="@drawable/stencils_contact_bg"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <com.zing.zalo.p077ui.widget.StencilSwitch
                    android:id="@+id/authorization_app_permission_name_access_friend_list_checkbox"
                    android:visibility="visible"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_spacing"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/authorization_app_permission_name_access_friend_list_checkbox"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="@drawable/itemlist_text"
                        android:id="@+id/authorised_app_name_access_friend_list_title"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authorization_app_permission_name_access_friend_list"
                        style="@style/Roboto.f2"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/SmallerTextSize"
                        android:textColor="@drawable/itemlist_tip_text"
                        android:id="@+id/authorised_app_name_access_friend_list_desc"
                        android:visibility="gone"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/authorised_app_name_access_friend_list_separate_line"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16dp"/>
            <RelativeLayout
                android:id="@+id/authorization_app_permission_name_push_feed_layout"
                android:background="@drawable/stencils_contact_bg"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <com.zing.zalo.p077ui.widget.StencilSwitch
                    android:id="@+id/authorization_app_permission_name_push_feed_checkbox"
                    android:visibility="visible"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/standard_spacing"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/authorization_app_permission_name_push_feed_checkbox"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="@drawable/itemlist_text"
                        android:id="@+id/authorised_app_name_push_feed_title"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authorization_app_permission_name_push_feed"
                        style="@style/Roboto.f2"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/SmallerTextSize"
                        android:textColor="@drawable/itemlist_tip_text"
                        android:id="@+id/authorised_app_name_push_feed_desc"
                        android:visibility="gone"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="?attr/SecondaryBackgroundColor"
                android:paddingTop="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:gravity="center"
                    android:id="@+id/authorised_app_detail_action_save_btn"
                    android:layout_width="150dp"
                    android:text="@string/str_cap_update"
                    style="@style/btnType1.medium"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor1"
                    android:gravity="center"
                    android:id="@+id/authorised_app_detail_action_unauthen_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="@string/authorised_app_detail_action_unauthen"
                    style="@style/MaterialClickableTextview"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
