<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/viewRetry"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor1"
            android:id="@+id/tvStatusRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_avatar_margin_left"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_toLeftOf="@+id/btnRetry"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/LinkColor"
            android:gravity="center"
            android:id="@+id/btnRetry"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="@string/bt_try_again"
            android:layout_toLeftOf="@+id/imvRemove"
            android:layout_centerVertical="true"
            app:fstyle="medium"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvRemove"
            android:background="@drawable/stencils_contact_bg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/stencils_ic_head_close_black"/>
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/viewProgressPost"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="42dp"
        android:layout_below="@+id/viewRetry">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f13"
            android:textColor="?attr/TextColor1"
            android:id="@+id/tvProgressDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:text="@string/str_post_feed_posting_state"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"/>
        <ProgressBar
            android:id="@+id/progressPost"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="26dp"
            android:progressDrawable="@drawable/progress_drawable_post_feed"
            android:layout_toRightOf="@+id/tvProgressDes"
            android:layout_centerVertical="true"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/viewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewProgressPost">
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/imvAvatar"
            android:layout_marginLeft="@dimen/feed_avatar_margin_left"
            android:layout_marginTop="@dimen/feed_avatar_margin_top"
            android:layout_marginRight="@dimen/feed_avatar_margin_right"
            android:scaleType="fitXY"
            style="@style/avtSa"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/tvUserName"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/btnShareFeed"
            android:layout_toRightOf="@+id/imvAvatar"
            android:layout_alignTop="@+id/imvAvatar"
            style="@style/Feed.Header.Name"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f13"
            android:textColor="#f26363"
            android:id="@+id/tvStatusPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/feed_icon_privacy_margin_left"
            android:layout_toRightOf="@+id/imvAvatar"
            android:layout_below="@+id/tvUserName"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/tvPrivacyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/feed_padding_right"
            android:layout_toRightOf="@+id/tvStatusPost"
            android:layout_below="@+id/tvUserName"
            style="@style/Feed.Header.Time"/>
        <com.zing.zalo.feed.components.FeedBackgroundView
            android:id="@+id/viewFeedBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/imvAvatar"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/tvTagAndLocation"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/feed_padding_right"
            android:includeFontPadding="false"
            android:layout_below="@+id/viewFeedBackground"
            android:lineSpacingExtra="@dimen/feed_linespacing_extra"
            style="@style/Feed.Header.Caption"/>
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/imvThumbLocation"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:src="0x7f08074e"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_below="@+id/tvTagAndLocation"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/tvTranslation"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/feed_padding_right"
            android:layout_marginBottom="16dp"
            android:includeFontPadding="true"
            android:layout_below="@+id/imvThumbLocation"
            android:lineSpacingExtra="@dimen/feed_linespacing_extra"
            style="@style/Feed.Header.Caption"/>
        <View
            android:id="@+id/bottomAnchor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/feed_padding_top"
            android:layout_below="@+id/tvTranslation"/>
    </RelativeLayout>
</merge>
