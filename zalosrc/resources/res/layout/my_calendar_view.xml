<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <FrameLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/width_shadow_action_bar">
        <FrameLayout
            android:id="@+id/calendar_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.p058v4.view.ViewPager
                android:id="@+id/calendar_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout
            android:id="@+id/drag_view"
            android:background="?attr/PrimaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_gravity="top"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:elevation="3dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/event_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/btn_jump_today"
            android:background="?attr/bg_bottom_fab"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/func_bar_profile_h"
            android:layout_marginBottom="14dp"
            android:text="@string/str_today"
            android:textAllCaps="true"
            app:fstyle="medium"/>
        <include
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/empty_layout_msg_tab"/>
    </FrameLayout>
</LinearLayout>
