<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/authorization_app_permission_layout"
        android:background="@drawable/stencils_contact_bg"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.zing.zalo.p077ui.widget.StencilSwitch
            android:id="@+id/authorization_app_permission_checkbox"
            android:visibility="visible"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_spacing"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/authorization_app_permission_checkbox"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/itemlist_text"
                android:id="@+id/authorization_app_permission_title"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/authorization_app_permission_name_access_profile"
                style="@style/Roboto.f2"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/SmallerTextSize"
                android:textColor="@drawable/itemlist_tip_text"
                android:id="@+id/authorization_app_permission_desc"
                android:visibility="gone"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/authorization_app_permission_separate_line"
        android:background="@color/cLine1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"/>
</LinearLayout>
