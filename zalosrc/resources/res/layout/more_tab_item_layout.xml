<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.zviews.FeatureHtmlItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/feature_html_item_container"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/moretab_item_separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:layout_marginLeft="72dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/moretab_item_container"
        android:background="@drawable/stencils_contact_bg"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/moretab_item_icon"
            android:layout_width="@dimen/feed_avatar_size"
            android:layout_height="@dimen/feed_avatar_size"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:src="0x7f080958"
            android:scaleType="fitXY"
            android:contentDescription="@string/nothing"
            style="@style/myImageView"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="@color/cmtxt1_itemtext_colorstate"
            android:layout_gravity="center_vertical"
            android:id="@+id/moretab_item_tv_title"
            android:background="@drawable/stencils_contact_bg"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor2"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:id="@+id/moretab_item_tv_description"
            android:background="@drawable/stencils_contact_bg"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_weight="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:layout_gravity="center"
            android:id="@+id/moretab_item_view_new_notify"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:text="@string/str_noti_N_character"
            style="@style/stencils_notification_text_view"/>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/moretab_item_layout_notify_container"
            android:visibility="gone"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginRight="@dimen/msg_item_padding_l_r">
            <com.androidquery.util.RecyclingImageView
                android:layout_gravity="center"
                android:id="@+id/moretab_item_img_notify"
                android:visibility="visible"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_default_app"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_gravity="top|right"
                android:id="@+id/moretab_item_reddot_img"
                android:visibility="visible"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/stencils_bg_number_notif"/>
        </FrameLayout>
    </LinearLayout>
</com.zing.zalo.p077ui.zviews.FeatureHtmlItemView>
