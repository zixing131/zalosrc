<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/layoutFeedGroupBackground"
        android:background="@drawable/bg_with_top_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/feedBottomAnchor"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:gravity="center"
        android:id="@+id/tvGameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginTop="@dimen/feed_padding_top"
        android:layout_toLeftOf="@+id/btn_submenu_feed"
        android:layout_alignParentLeft="true"
        style="@style/Feed.Header.GroupCaption"/>
    <ImageButton
        android:id="@+id/btn_submenu_feed"
        android:background="@android:color/transparent"
        android:paddingLeft="15dp"
        android:paddingBottom="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/feed_content_padding"
        android:layout_marginRight="@dimen/feed_padding_right"
        android:src="@drawable/stencils_ic_expand"
        android:layout_alignParentRight="true"/>
    <com.zing.zalo.feed.uicontrols.FeedGroupViewPager
        android:gravity="center"
        android:id="@+id/vpager"
        android:background="@color/transparent"
        android:paddingLeft="1px"
        android:paddingRight="1px"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvGameTitle"/>
    <View
        android:id="@+id/feedBottomAnchor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/feed_bottom_divider_height"
        android:layout_below="@+id/vpager"/>
</merge>
