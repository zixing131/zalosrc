<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.widget.ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/backup_restore_margin_top_big"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="35dp">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/icon"
                    android:layout_width="@dimen/sync_icon_size"
                    android:layout_height="@dimen/sync_icon_size"
                    app:srcCompatEx="@drawable/ic_backup_restore_intro"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f9s"
                    android:textColor="?attr/TextColor1"
                    android:gravity="center"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/str_title_which_data_backup"
                    app:fstyle="medium"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_intro_msg"
                    android:paddingRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/ic_all_msg"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            app:srcCompatEx="@drawable/ic_backup_restore_intro_message"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textColor="?attr/TextColor1"
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str_storage_usage_text_message"
                                style="@style/h_small"/>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp">
                                <androidx.appcompat.widget.ZAppCompatImageView
                                    android:id="@+id/icDotSectionBackupStorage"
                                    android:paddingTop="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="12dp"
                                    app:srcCompatEx="@drawable/background_dot_desc_empty_backup_info"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textColor="?attr/TextColor2"
                                    android:gravity="center_vertical"
                                    android:id="@+id/desc_type_0_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_content_backup_on_server"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="12dp"
                                    style="@style/t_small"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <LinearLayout
                                android:id="@+id/llDescriptionBackupE2EE"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.ZAppCompatImageView
                                    android:id="@+id/icDotSectionE2EE"
                                    android:paddingTop="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="12dp"
                                    app:srcCompatEx="@drawable/background_dot_desc_empty_backup_info"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textColor="?attr/TextColor2"
                                    android:gravity="center_vertical"
                                    android:id="@+id/desc_type_0_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_content_include_e2ee_msg"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="12dp"
                                    style="@style/t_small"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layout_intro_media"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/iv_media"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            app:srcCompatEx="@drawable/ic_backup_restore_intro_photo"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="?attr/TextColor1"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_media_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/text_header_backup_img_into_n_day_newest"
                            style="@style/h_small"/>
                    </LinearLayout>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor2"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_backup_media_google_drive"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_content_backup_media_to_ggdrive"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/background_dot_desc_empty_backup_info"
                        android:layout_marginStart="64dp"
                        style="@style/t_small"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor2"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_explain_reason_grant_phone_permission"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/str_intro_setup_backup_media_permission_contact_deny_desc_v2"
                        android:layout_marginStart="52dp"
                        style="@style/t_small"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor2"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_media_description"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/str_intro_setup_backup_media_permission_contact"
                        style="@style/t_small"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/section_label"
                        android:gravity="center_vertical"
                        android:id="@+id/btn_grant_permission"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/str_intro_setup_backup_media_permission_contact_deny_action_accept_v2"
                        style="@style/Roboto.f5b"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/LinkColor"
                        android:gravity="center_vertical"
                        android:id="@+id/btn_more_detail_data_zalo_backup"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/str_more_detail_data_zalo_backup"
                        style="@style/Roboto.f5b"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_exclude_backup_description"
                    android:background="@drawable/bg_rectangle_cor_8_col_support_warning_page"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_title_exception"
                        style="@style/t_normal_m"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f6"
                        android:textColor="?attr/TextColor1"
                        android:gravity="center_vertical"
                        android:id="@+id/tv_description_what_app_not_backup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/text_content_description_what_app_backup"
                        style="@style/t_normal"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="?attr/PrimaryBackgroundColor"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/dividerBottom"
            android:background="?attr/divider_01"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="16dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:enabled="true"
            android:textSize="@dimen/f0"
            android:gravity="center"
            android:id="@+id/btn_continue"
            android:focusable="true"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="match_parent"
            android:minWidth="160dp"
            android:text="@string/str_intro_setup_backup_btn_continue"
            style="@style/ButtonLarge.Primary"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_ignore"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/str_btn_negative_sync_media_no_permission_deny"
            android:textAllCaps="true"
            style="@style/MaterialClickableTextview"/>
    </LinearLayout>
    <androidx.appcompat.widget.ZAppCompatImageView
        android:layout_gravity="right"
        android:id="@+id/close"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/icn_header_close"/>
</FrameLayout>
