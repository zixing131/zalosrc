<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layoutIntro"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.ZAppCompatImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgIntro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:layout_weight="3"
        app:srcCompat="@drawable/zds_il_e2ee_onboarding_1_hero_16_9"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvTitleIntro"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_e2ee_quick_intro_title"
                style="@style/h_normal"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="32dp"
                android:paddingTop="16dp"
                android:paddingRight="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zds_ic_lock_solid_24"
                    app:tint="?attr/icon_on_disabled_color"/>
                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_e2ee_first_time_intro_slide_title_1"
                        style="@style/t_normal_m"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_e2ee_quick_intro_des_1"
                        style="@style/t_small"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="32dp"
                android:paddingTop="16dp"
                android:paddingRight="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zds_ic_hide_solid_24"
                    app:tint="?attr/icon_on_disabled_color"/>
                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_e2ee_first_time_intro_slide_title_2"
                        style="@style/t_normal_m"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_e2ee_quick_intro_des_2"
                        style="@style/t_small"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/group_entry"
                android:paddingLeft="32dp"
                android:paddingTop="16dp"
                android:paddingRight="32dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.ZAppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zds_ic_members_solid_24"
                    app:tint="?attr/icon_on_disabled_color"/>
                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_e2ee_first_time_intro_slide_title_3"
                        style="@style/t_normal_m"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_02"
                        android:id="@+id/group_entry_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_e2ee_first_time_intro_slide_des_3"
                        style="@style/t_small"/>
                </LinearLayout>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@color/b60"
                android:gravity="center"
                android:id="@+id/learn_more"
                android:background="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/str_learn_more"
                android:layout_marginStart="72dp"
                style="@style/t_small_m"/>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <FrameLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <com.zing.zalo.zdesign.component.Button
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btn_upgrade"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/str_upgrade_e2ee"
            style="@style/ButtonLarge.Primary"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_not_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_error_circle_24"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="12dp"
                android:textColor="?attr/TextColor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_contact_admin_to_enable_e2ee"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
