<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/imvEmpty"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:src="0x7f080fda"
        android:scaleType="fitXY"
        android:contentDescription="Image"/>
    <TextView
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="#3e444b"
        android:gravity="center"
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="40dp"
        android:text="@string/str_empty"/>
    <View
        android:id="@+id/more_info_view"
        android:visibility="gone"
        android:layout_width="1px"
        android:layout_height="1px"/>
    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/btnEmpty"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="21dp"
        android:minWidth="80dp"/>
    <View
        android:id="@+id/last_suggest_item"
        android:visibility="gone"
        android:layout_width="1px"
        android:layout_height="1px"/>
    <View
        android:id="@+id/more_action_view"
        android:visibility="gone"
        android:layout_width="1px"
        android:layout_height="1px"/>
</LinearLayout>
