<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/popup_content_container"
    android:background="@drawable/chat_reply_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:layout_gravity="center_horizontal"
        android:id="@+id/layout_header"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:text="@string/str_decline_group_invitation_confirm_dialog_title"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:textAlignment="center"
        app:fstyle="medium"
        style="@style/Roboto.f1b"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="?attr/TextColor1"
        android:id="@+id/layout_desc"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/str_decline_group_invitation_confirm_dialog_desc"/>
    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.zing.zalo.p077ui.widget.RobotoCheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/checkbox_block_invitation"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:button="@drawable/btn_radio_circle_blue_normal"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:textColor="?attr/TextColor2"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_block_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/str_block_invitation_from_group_checkbox_title"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <com.zing.zalo.p077ui.widget.RobotoCheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/checkbox_block_invitor"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:button="@drawable/btn_radio_circle_blue_normal"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:textColor="?attr/TextColor2"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_block_invitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="16dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:id="@+id/btn_back"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            style="@style/btnType3.medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:id="@+id/btn_decline"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:textAlignment="center"
            style="@style/btnType5.medium"/>
    </LinearLayout>
</LinearLayout>
