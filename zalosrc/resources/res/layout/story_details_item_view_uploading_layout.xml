<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:layout_gravity="bottom|left"
    android:orientation="vertical"
    android:id="@+id/uploading_layout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="32dp">
    <include
        android:id="@+id/loading_uploading"
        layout="@layout/holo_circular_progress_bar_micro"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f1s"
        android:textColor="@color/cM0_alpha80"
        android:id="@+id/tv_uploading_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/str_story_uploading"
        android:includeFontPadding="false"/>
</LinearLayout>
