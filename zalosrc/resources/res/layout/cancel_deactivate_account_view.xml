<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:gravity="top|center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/deactivate_account_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="41dp"
                android:layout_marginRight="24dp"/>
            <com.zing.zalo.p077ui.widget.CircleCountDownView
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/circle_countdown_view"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_marginTop="50dp"
                app:arcColor="?attr/ItemSeparatorColor"
                app:arcWidth="2dp"
                app:iconCircleRadius="8dp"
                app:progressColor="?attr/NotificationColor1"
                app:progressWidth="6dp"
                app:textColorBody="?attr/TextColor1"
                app:textColorTitle="?attr/TextColor1"
                app:textSizeBody="28dp"
                app:textSizeTitle="@dimen/f0"
                app:textTitle="@string/remaining"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/cancel_deactivate_account"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="40dp"
                android:minWidth="312dp"
                android:minHeight="38dp"
                android:text="@string/cancel_delete_account"
                android:textAllCaps="true"
                style="@style/btnType1.big"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
