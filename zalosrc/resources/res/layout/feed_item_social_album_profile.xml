<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/feedItemBodyTimeBar"
        android:background="?attr/ProfileLineColor"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_profile_timebar_marginleft"
        android:layout_alignBottom="@+id/bottomAnchor"
        android:layout_alignParentTop="true"/>
    <FrameLayout
        android:background="@drawable/bg_feed_profile_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/feed_padding_left_profile"
        android:layout_marginRight="@dimen/feed_padding_right_profile"
        android:layout_alignBottom="@+id/bottomAnchor"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/layoutLinkContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:id="@+id/imvAvatarBody"
            android:visibility="gone"
            android:layout_width="@dimen/feed_mutual_avatar_size"
            android:layout_height="@dimen/feed_mutual_avatar_size"
            android:layout_marginLeft="@dimen/feed_mutual_avatar_marginleft"
            android:scaleType="fitXY"/>
        <com.zing.zalo.feed.components.FeedItemSocialAlbumHeader
            android:id="@+id/feed_item_social_album_header"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/feed_padding_left_profile_item"
            android:layout_marginRight="@dimen/feed_padding_right"/>
        <com.zing.zalo.feed.components.FeedItemSocialAlbumPhoto
            android:id="@+id/feed_item_social_album_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left_profile_item"
            android:layout_marginRight="@dimen/feed_padding_right"/>
        <com.zing.zalo.feed.components.FeedItemSocialAlbumVideo
            android:id="@+id/feed_item_social_album_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left_profile_item"
            android:layout_marginRight="@dimen/feed_padding_right"/>
    </RelativeLayout>
    <View
        android:id="@+id/bottomAnchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="1dp"
        android:layout_below="@+id/layoutLinkContainer"
        android:layout_alignParentBottom="true"/>
</merge>
