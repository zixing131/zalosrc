<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.widget.LivestreamChannelInfoLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/zch_page_search_channel_avatar_size"
        android:layout_height="@dimen/zch_page_search_channel_avatar_size"
        package:zchCornerRadius="@dimen/zch_radius_8dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
        android:textSize="18dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:lineSpacingExtra="2dp"
        package:zchFontStyle="medium"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lytStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lytStatsVideo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="16dp"
                android:textColor="@color/zch_text_primary"
                android:id="@+id/numStatsVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                package:zchFontStyle="medium"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="12dp"
                android:textColor="@color/zch_text_tertiary"
                android:ellipsize="marquee"
                android:id="@+id/txtStatsVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                package:zchFontStyle="regular"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lytStatsFollower"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="16dp"
                android:textColor="@color/zch_text_primary"
                android:id="@+id/numStatsFollower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                package:zchFontStyle="medium"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="12dp"
                android:textColor="@color/zch_text_tertiary"
                android:ellipsize="marquee"
                android:id="@+id/txtStatsFollower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                package:zchFontStyle="regular"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/lytStatsLike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="16dp"
                android:textColor="@color/zch_text_primary"
                android:id="@+id/numStatsLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                package:zchFontStyle="medium"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="12dp"
                android:textColor="@color/zch_text_tertiary"
                android:ellipsize="marquee"
                android:id="@+id/txtStatsLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                package:zchFontStyle="regular"/>
        </LinearLayout>
    </LinearLayout>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="15dp"
        android:textColor="@color/zch_text_primary"
        android:gravity="center"
        android:id="@+id/btnFollowSuggest"
        android:background="@drawable/zch_bg_button_active_blue"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/zch_page_channel_follow"
        android:includeFontPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        package:zchFontStyle="medium"/>
</com.zing.zalo.shortvideo.p072ui.widget.LivestreamChannelInfoLayout>
