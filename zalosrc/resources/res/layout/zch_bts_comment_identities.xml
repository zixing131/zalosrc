<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="15dp"
        android:textColor="@color/zch_text_tertiary"
        android:padding="@dimen/zch_page_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zch_bts_comment_identities_hint"
        android:includeFontPadding="false"
        package:zchFontStyle="regular"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rowUser"
        android:background="@drawable/zch_bg_ripple_rectangle"
        android:padding="@dimen/zch_page_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
            android:id="@+id/aivAvatarUser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            package:zchCornerRadius="35dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
            android:textSize="18dp"
            android:textColor="@color/zch_text_primary"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtNameUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="medium"/>
        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/icoCheckUser"
            android:background="@drawable/zch_ic_check_circle_solid_24"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rowChannel"
        android:background="@drawable/zch_bg_ripple_rectangle"
        android:padding="@dimen/zch_page_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
            android:id="@+id/aivAvatarChannel"
            android:layout_width="70dp"
            android:layout_height="70dp"
            package:zchCornerRadius="@dimen/zch_radius_8dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
            android:textSize="18dp"
            android:textColor="@color/zch_text_primary"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtNameChannel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="medium"/>
        <View
            android:layout_gravity="center_vertical"
            android:id="@+id/icoCheckChannel"
            android:background="@drawable/zch_ic_check_circle_solid_24"
            android:visibility="invisible"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
</LinearLayout>
