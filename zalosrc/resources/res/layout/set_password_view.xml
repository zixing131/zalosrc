<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="50dp"
        android:src="0x7f081036"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f5"
        android:textColor="?attr/TextColor1"
        android:gravity="center_horizontal"
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_title_login"
        android:layout_marginTop="26dp"
        android:layout_marginRight="@dimen/padding_title_login"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btnNext"
        android:clickable="true"
        android:layout_width="210dp"
        android:layout_height="@dimen/height_btn_login"
        android:layout_marginTop="26dp"
        android:text="@string/str_cap_next"
        style="@style/MaterialStartupButton"/>
</LinearLayout>
