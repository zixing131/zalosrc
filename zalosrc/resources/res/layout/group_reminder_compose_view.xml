<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:idTrailingButton="button_done"
            app:leadingType="close"
            app:middleTitleText="@string/str_create_reminder_title"
            app:middleType="title"
            app:trailingTextButton="@string/str_create_group_reminder_btn_done"
            app:trailingType="text"
            style="@style/WhiteZdsActionBar.AppType"/>
        <com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout
            android:id="@+id/keyboard_aware_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/content_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp">
                        <RelativeLayout
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/icon_layout"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:id="@+id/icon_topic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="8dp"
                                    android:text="⏰"
                                    android:layout_centerHorizontal="true"/>
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/emoji_select_icon"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:scaleType="centerInside"
                                    android:layout_toRightOf="@+id/icon_topic"
                                    android:layout_centerVertical="true"
                                    app:srcCompat="@drawable/ic_droparrow2"/>
                            </RelativeLayout>
                            <com.zing.zalo.uicontrol.CustomEditText
                                android:textSize="22dp"
                                android:textColor="?attr/TextColor1"
                                android:textColorHint="?attr/TextColor2"
                                android:gravity="top"
                                android:id="@+id/et_group_topic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="76dp"
                                android:layout_marginRight="16dp"
                                android:hint="@string/str_group_time_remind_input_hint"
                                android:maxLines="6"
                                android:includeFontPadding="false"
                                android:inputType="textMultiLine"
                                android:imeOptions="actionDone"
                                android:textCursorDrawable="@drawable/chat_bar_text_cursor"
                                style="@style/MaterialEditText"/>
                        </RelativeLayout>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/reminder_time_wrapper"
                        android:background="@drawable/list_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/reminder_time_icon"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/icn_groupboard_reminder_decor_time_n"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor2"
                                    android:id="@+id/reminder_time_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_create_group_reminder_select_time_hint"
                                    android:includeFontPadding="false"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/HeaderFormTitleColor"
                                    android:id="@+id/reminder__lunar_time_text"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:includeFontPadding="false"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/reminder_repeat_wrapper"
                        android:background="@drawable/list_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/reminder_repeat_icon"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/icn_groupboard_reminder_decor_repeat_disable"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor2"
                                    android:id="@+id/reminder_repeat_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_create_group_reminder_select_repeat_hint"
                                    android:includeFontPadding="false"/>
                                <com.zing.zalo.uidrawing.ModulesView
                                    android:id="@+id/reminder_repeat_monthly_note_wrapper"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/reminder_location_wrapper"
                        android:background="@drawable/list_selector"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/reminder_location_icon"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/icn_groupboard_reminder_decor_location_o"/>
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="16dp"
                                android:textColor="?attr/TextColor2"
                                android:id="@+id/reminder_location_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:text="@string/str_create_group_reminder_select_location_hint"
                                android:includeFontPadding="false"/>
                        </LinearLayout>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/reminder_notify_wrapper"
                        android:background="@drawable/list_selector"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/reminder_notify_icon"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:scaleType="centerInside"
                                app:srcCompat="0x7f080df4"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_reminder_notify_label"
                                    android:includeFontPadding="false"/>
                                <RelativeLayout
                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/cb_noti_for_only_me"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="0x7f080dd7"/>
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="16dp"
                                        android:textColor="?attr/TextColor1"
                                        android:id="@+id/tv_noti_for_only_me"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="8dp"
                                        android:text="@string/str_reminder_notify_for_only_me"
                                        android:layout_toLeftOf="@+id/anchor_middle"
                                        android:layout_toRightOf="@+id/cb_noti_for_only_me"
                                        android:layout_centerVertical="true"/>
                                    <View
                                        android:id="@+id/anchor_middle"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:layout_centerHorizontal="true"/>
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/cb_noti_for_group"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/anchor_middle"
                                        android:layout_centerVertical="true"
                                        app:srcCompat="0x7f080dd7"/>
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="16dp"
                                        android:textColor="?attr/TextColor1"
                                        android:id="@+id/tv_noti_for_group"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_toRightOf="@+id/cb_noti_for_group"
                                        android:layout_centerVertical="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="14dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.zing.zalo.p077ui.widget.ScrollView>
        </com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout>
    </LinearLayout>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
