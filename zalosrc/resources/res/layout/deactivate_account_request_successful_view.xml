<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/swipeable_view"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_warning"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="90dp"
            android:src="0x7f080db6"
            android:layout_centerHorizontal="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f1"
            android:textColor="?attr/TextColor1"
            android:gravity="center_horizontal"
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="24dp"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:layout_marginBottom="16dp"
            android:text="@string/str_delete_account_confirm_request_v1"
            android:includeFontPadding="false"
            android:layout_below="@+id/img_warning"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f5"
            android:textColor="?attr/TextColor1"
            android:gravity="center_horizontal"
            android:id="@+id/txt_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:text="@string/str_deactivate_account_request_successful_v1"
            android:includeFontPadding="false"
            android:layout_below="@+id/txt_title"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f3"
            android:textColor="@drawable/stencils_button_style3_text"
            android:gravity="center"
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_marginTop="72dp"
            android:minWidth="250dp"
            android:text="@string/str_delete_account_back_to_msg"
            android:layout_below="@+id/txt_sub_title"
            android:layout_centerHorizontal="true"
            app:fstyle="medium"
            style="@style/btnType1.medium"/>
    </RelativeLayout>
</ScrollView>
