<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_contact_row"
    android:background="@drawable/stencils_bg_white_with_press_state"
    android:paddingLeft="@dimen/msg_item_padding_l_r"
    android:paddingRight="@dimen/msg_item_padding_l_r"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/btn_check"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:button="@drawable/mat_btn_radio_circle_blue"/>
    <RelativeLayout
        android:id="@+id/avatarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/btn_check">
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/buddy_dp"
            android:layout_width="@dimen/group_avatar_view_container_small_size"
            android:layout_height="@dimen/group_avatar_view_container_small_size"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/layout_action"
            android:layout_toRightOf="@+id/buddy_dp"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="?attr/TextColor1"
                android:ellipsize="end"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/TextColor2"
                android:ellipsize="end"
                android:id="@+id/tvZaloName"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/TextColor2"
                android:ellipsize="end"
                android:id="@+id/tvInvitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/layout_action"
            android:duplicateParentState="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/bg_btn_type1_text"
                android:gravity="center"
                android:id="@+id/btn_combine_func_1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mat_btn_style_2_medium_h"
                android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
                android:text="@string/str_suggest_func_add_friend_new"
                android:maxLines="1"
                style="@style/btnType1.medium_standard"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/bg_btn_type1_text"
                android:gravity="center"
                android:id="@+id/btn_combine_func_2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mat_btn_style_2_medium_h"
                android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
                android:text="@string/str_suggest_func_accept_friend"
                android:maxLines="1"
                style="@style/btnType1.medium_standard"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/bg_btn_type2_text"
                android:gravity="center"
                android:id="@+id/btn_combine_func_4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/mat_btn_style_2_medium_h"
                android:minWidth="@dimen/mat_btn_style_1_w"
                android:text="@string/str_suggest_friend_send_msg"
                android:maxLines="1"
                style="@style/btnType2.medium"/>
            <ImageButton
                android:id="@+id/btn_combine_func_3"
                android:background="@drawable/trans"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="0x7f080b9e"/>
        </LinearLayout>
        <View
            android:id="@+id/separate_line"
            android:background="@color/stencils_line_vertical_divider"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/separate_line_padding_left_ui4_type2"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view_container"
        android:paddingLeft="@dimen/msg_item_padding_l_r"
        android:paddingRight="@dimen/msg_item_padding_l_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/btn_check"
        android:layout_below="@+id/avatarContainer">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor1"
            android:id="@+id/view_see_more"
            android:paddingLeft="@dimen/msg_item_padding_l_r"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_see_more"
            android:layout_alignParentRight="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/tvInvitationDetail"
            android:paddingTop="16dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/view_see_more"/>
    </RelativeLayout>
</RelativeLayout>
