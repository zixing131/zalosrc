<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.QuickActionViewType5 xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/divider_top"
        android:background="?attr/ItemSeparatorColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_action"
        android:background="@drawable/bg_quick_action_view_with_state_press"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_top">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor1"
                android:ellipsize="end"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="12dp"
                android:textColor="?attr/TextColor2"
                android:ellipsize="end"
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="2"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="72dp"/>
    </LinearLayout>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/layout_action"/>
    <ImageView
        android:id="@+id/iv_close"
        android:visibility="gone"
        android:layout_width="64dp"
        android:layout_height="15dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_quick_action_close"
        android:scaleType="fitXY"
        android:layout_below="@+id/layout_action"
        android:layout_alignParentRight="true"/>
</com.zing.zalo.p077ui.widget.QuickActionViewType5>
