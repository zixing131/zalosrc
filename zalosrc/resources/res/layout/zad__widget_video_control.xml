<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <com.adtima.control.CustomVideoView
            android:id="@+id/zad__video_render_view"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/zad__video_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zad__video_top_bar"
        android:background="@drawable/zad__bg_video_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:id="@+id/zad__video_view_more"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/zad__video_info"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/zad__ic_video_info"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="Xem thÃªm"
                android:layout_toLeftOf="@+id/zad__video_info"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentLeft="true">
            <ProgressBar
                android:id="@+id/zad__video_progress"
                android:background="@drawable/zad__bg_cprogress_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="0"
                android:indeterminate="false"
                android:progressDrawable="@drawable/zad__bg_cprogress_2"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleHorizontal"/>
            <TextView
                android:textSize="9sp"
                android:textColor="#ffffff"
                android:id="@+id/zad__video_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zad__video_central_bar"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/zad__video_bottom_bar"
        android:layout_below="@+id/zad__video_top_bar"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <ProgressBar
            android:id="@+id/zad__video_loading"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/zad__video_play_replay"
            android:padding="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/zad__ic_video_play"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zad__video_bottom_bar"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/zad__video_sound"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/zad__ic_video_sound_on"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/zad__video_bar_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progress="0"
        android:indeterminate="false"
        android:progressDrawable="@drawable/zad__bg_progress"
        android:layout_alignParentBottom="true"
        style="?android:attr/progressBarStyleHorizontal"/>
</RelativeLayout>
