<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/popup_bg_radius_12"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llProfile"
            android:background="@drawable/stencils_contact_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.GroupAvatarView
                android:id="@+id/img_avt"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor1"
                    android:ellipsize="end"
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    style="@style/Roboto.f1"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f5"
                    android:textColor="?attr/TextColor2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/str_des_popup_view_profile"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/llChangeAlias"
            android:background="@drawable/stencils_contact_bg"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_popup_option_change_alias"
            android:maxLines="1"/>
        <View
            android:id="@+id/line_change_alias"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llAddFavorite"
            android:background="@drawable/stencils_contact_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/f2"
                android:textColor="?attr/TextColor1"
                android:ellipsize="end"
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_popup_option_close_friend"
                android:maxLines="1"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.StencilSwitch
                android:layout_gravity="center_vertical"
                android:id="@+id/swAddFavorite"
                android:visibility="visible"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <View
            android:id="@+id/line_add_favorite"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/llBlockMsg"
            android:background="@drawable/stencils_contact_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/f2"
                android:textColor="?attr/TextColor1"
                android:ellipsize="end"
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_popup_option_block_user"
                android:maxLines="1"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.StencilSwitch
                android:layout_gravity="center_vertical"
                android:id="@+id/swBlockMsg"
                android:visibility="visible"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <View
            android:id="@+id/line_block_msg"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <TextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/NotificationColor1"
            android:ellipsize="end"
            android:id="@+id/llDelete"
            android:background="@drawable/stencils_contact_bg"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_popup_option_delete_friend"
            android:maxLines="1"/>
    </LinearLayout>
</FrameLayout>
