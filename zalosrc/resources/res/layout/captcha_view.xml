<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutCaptcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:paddingTop="22dp"
                android:paddingRight="24dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="39dp"
                android:text="@string/str_hint_captcha"
                style="@style/Roboto.f2b"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imgCaptcha"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"/>
                <View
                    android:background="#0b000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@color/cLink1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btnGetCaptcha"
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_refresh_captcha"
                style="@style/Roboto.f5b"/>
            <com.zing.zalo.uicontrol.CustomEditText
                android:textSize="@dimen/f2"
                android:textColor="?attr/TextColor1"
                android:textColorHint="?attr/TextColor2"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/edtCaptcha"
                android:background="@drawable/edt_active"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:hint="@string/str_hint_edt_captcha"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:inputType="textAutoCorrect"
                android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="@color/cErrorHint"
                android:gravity="center"
                android:id="@+id/tvError"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/btnNext"
            android:padding="10dp"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:scaleType="centerCrop"
            app:srcCompatEx="?attr/floating_action_btn_next"/>
    </FrameLayout>
</LinearLayout>
