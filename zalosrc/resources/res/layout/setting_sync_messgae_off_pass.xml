<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:paddingLeft="@dimen/pd_left"
    android:paddingTop="20dp"
    android:paddingRight="@dimen/pd_right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_old_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync_pass_manage_title"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="1"
                app:fstyle="medium"
                style="@style/Roboto.f13"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:id="@+id/tv_show_hide_old_password"
                android:paddingLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startup_show_password"
                style="@style/Roboto.f5b"/>
        </LinearLayout>
        <com.zing.zalo.uicontrol.CustomEditText
            android:textSize="@dimen/sync_text_large"
            android:textColor="?attr/TextColor1"
            android:textColorHint="?attr/TextColor2"
            android:autoLink="none"
            android:id="@+id/et_oldpass"
            android:background="@drawable/edt_normal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="@string/login_old_password"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/sync_text_normal"
            android:textColor="?attr/SeparatorColor3"
            android:id="@+id/tvError1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/sync_pass_verify_warning_wrong_pass"/>
    </LinearLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:enabled="false"
        android:textSize="13dp"
        android:gravity="center"
        android:id="@+id/btn_off_pass"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:minWidth="160dp"
        android:text="@string/sync_button_turn_off_pass"
        android:textAllCaps="true"
        style="@style/btnType1.medium"/>
</LinearLayout>
