<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.view.VideoChannelPagerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytPagerVideoChannel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <com.zing.zalo.shortvideo.p072ui.widget.NonSwipeableViewPager
        android:id="@+id/viePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/lytSwipeIAB"
        android:background="@color/zch_surface_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/icoSwipeIAB"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="20dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="13dp"
            android:textColor="@color/zch_text_primary"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtSwipeIAB"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/zch_page_video_guide_swipe_left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:layout_marginStart="50dp"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lytHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnBack"
            android:background="@drawable/zch_bg_ripple_circle"
            android:layout_width="@dimen/zch_page_header_button_size"
            android:layout_height="@dimen/zch_page_header_button_size"
            android:layout_marginLeft="@dimen/zch_page_header_button_margin"
            android:src="@drawable/zch_ic_chevron_left_shadow_line_24"
            android:scaleType="centerInside"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnFloat"
            android:background="@drawable/zch_bg_ripple_circle"
            android:visibility="invisible"
            android:layout_width="@dimen/zch_page_header_button_size"
            android:layout_height="@dimen/zch_page_header_button_size"
            android:layout_marginRight="@dimen/zch_page_header_button_margin"
            android:src="@drawable/zch_ic_minimize_line_24"
            android:scaleType="centerInside"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/lytGuide"
        android:background="@color/zch_curtain_subtle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zlottie.widget.LottieImageView
            android:id="@+id/livGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="16dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center_horizontal"
            android:id="@+id/txtGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/zch_page_padding"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/zch_page_padding"
            android:layout_marginBottom="64dp"
            android:text="@string/zch_page_video_guide_swipe_left"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="medium"/>
    </LinearLayout>
</com.zing.zalo.shortvideo.p072ui.view.VideoChannelPagerLayout>
