<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/SecondaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f5"
        android:textColor="?attr/TextColor1"
        android:gravity="center_horizontal"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_title_login"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/padding_title_login"
        android:text="@string/str_title_create_username_desc"/>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"/>
    <com.zing.zalo.uicontrol.CustomEditText
        android:textSize="@dimen/f2"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/edt_username"
        android:background="@drawable/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="@string/str_hint_username_empty"
        android:maxLines="1"
        android:maxEms="20"
        android:inputType="textEmailAddress"
        style="@style/MaterialEditText"/>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f8"
        android:textColor="?attr/TextColor5"
        android:id="@+id/txtHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_title_login"
        android:layout_marginTop="14dp"
        android:layout_marginRight="@dimen/padding_title_login"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btnCreateUsername"
        android:clickable="true"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="33dp"
        android:text="@string/str_cap_next"
        style="@style/MaterialStartupButton"/>
</LinearLayout>
