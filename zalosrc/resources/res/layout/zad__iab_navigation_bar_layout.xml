<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zad__iab_default_navigation_bar_height">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/zad__landing_navigation_main"
        android:background="@drawable/zad__panel_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/zad__landing_go_back"
            style="@style/AdtimaIabIconStyle"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/zad__landing_site_info_layout"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/zad__landing_site_info"
                style="@style/AdtimaSiteInfoIconStyle"/>
            <com.adtima.control.CircleImageView
                android:id="@+id/zad__landing_circle_logo"
                android:visibility="gone"
                style="@style/AdtimaIabLogoStyle"/>
            <TextView
                android:textSize="15sp"
                android:id="@+id/zad__landing_url"
                style="@style/AdtimaIabUrlTextStyle"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/zad__landing_menu"
            style="@style/AdtimaIabIconStyle"/>
    </LinearLayout>
    <View
        android:id="@+id/zad__landing_form_line"
        android:background="@color/zad__iab_form_line_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>
</FrameLayout>
