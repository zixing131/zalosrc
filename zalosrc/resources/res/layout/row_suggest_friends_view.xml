<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/stencils_contact_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.ZAppCompatImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/ic_contact_native_tab_contact"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_native_list_entry_view_title"
            android:maxLines="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8"
            android:textColor="?attr/TextColor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_des_contact_native_tab_contact"
            android:maxLines="1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/layout_mini_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="18dp">
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:id="@+id/img_avt_1"
            android:padding="1dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="?attr/default_avatar"
            style="@style/myImageView"/>
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:id="@+id/img_avt_2"
            android:padding="1dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="?attr/default_avatar"
            style="@style/myImageView"/>
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:id="@+id/img_avt_3"
            android:padding="1dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="?attr/default_avatar"
            style="@style/myImageView"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="9dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_count_see_more"
            android:background="@drawable/bg_count_request_friend"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="60dp"
            android:minWidth="28dp"
            android:text="+24"
            android:maxLines="1"/>
    </FrameLayout>
</LinearLayout>
