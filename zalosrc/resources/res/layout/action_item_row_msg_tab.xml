<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.QuickActionViewType1 xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_contact_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/divider_top"
        android:background="?attr/ItemSeparatorColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_action"
        android:background="@drawable/bg_quick_action_view_with_state_press"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/msg_item_padding_l_r"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_top">
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:id="@+id/imv_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="24dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor1"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor2"
                android:ellipsize="end"
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:duplicateParentState="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/bg_btn_type1_text"
                android:gravity="center"
                android:id="@+id/btn_action"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
                android:text="@string/str_suggest_func_add_friend_new"
                style="@style/btnType1.medium_standard"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout_action"/>
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/iv_close"
        android:visibility="gone"
        android:layout_width="64dp"
        android:layout_height="16dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_quick_action_close"
        android:scaleType="fitXY"
        android:layout_below="@+id/layout_action"
        android:layout_alignParentRight="true"/>
</com.zing.zalo.p077ui.widget.QuickActionViewType1>
