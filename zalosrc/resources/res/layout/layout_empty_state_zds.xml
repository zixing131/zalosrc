<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/empty_state_illus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/empty_state_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_primary"
            android:gravity="center_horizontal"
            android:id="@+id/empty_state_title"
            android:paddingBottom="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/t_xlarge_m"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_tertiary"
            android:gravity="center_horizontal"
            android:id="@+id/empty_state_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/t_small"/>
        <FrameLayout
            android:id="@+id/empty_state_slot"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/empty_state_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        style="@style/ButtonMedium.Primary"/>
    <com.zing.zalo.zdesign.component.Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/empty_state_button_2nd"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonMedium.TertiaryNeutral"/>
</LinearLayout>
