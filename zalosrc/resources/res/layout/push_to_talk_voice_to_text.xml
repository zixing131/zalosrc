<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/background_view"
        android:background="@color/blk_a40"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/background_container"
        android:background="?attr/ui_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/preview_voice_only_layout"
        android:background="@drawable/background_preview_voice_to_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/record_play_panel"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            layout="@layout/record_play_layout"/>
    </FrameLayout>
    <com.zing.zalo.uicontrol.voice.BoardButtonLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/button_layout_parent"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:animateLayoutChanges="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_02"
        android:layout_gravity="center_horizontal"
        android:id="@+id/text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_hold_to_record"
        app:maxScaledTextRatioIndex="5"
        style="@style/t_xsmall"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/switch_voice_to_text_layout"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.layout.InterceptTouchFrameLayout
            android:id="@+id/switch_voice_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zing.zalo.zdesign.component.Switch
                android:id="@+id/switch_voice_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:toggleWhenClick="false"
                style="@style/Switch.Medium"/>
        </com.zing.zalo.p077ui.widget.layout.InterceptTouchFrameLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_01"
            android:layout_gravity="center"
            android:id="@+id/switch_voice_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_convert_voice_to_text_switch_title"
            android:layout_marginStart="16dp"
            app:maxScaledTextRatioIndex="5"
            style="@style/t_small"/>
    </LinearLayout>
</merge>
