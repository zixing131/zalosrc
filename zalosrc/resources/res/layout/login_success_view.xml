<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="54dp"
        android:src="0x7f080ebc"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f2"
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_title_login"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/padding_title_login"
        android:text="@string/title_login_success"
        style="@style/Roboto.f5b"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f5"
        android:textColor="?attr/TextColor2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_title_login"
        android:layout_marginTop="26dp"
        android:layout_marginRight="@dimen/padding_title_login"
        android:text="@string/hint_login_success"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btnNext"
        android:clickable="true"
        android:layout_width="210dp"
        android:layout_height="@dimen/height_btn_login"
        android:layout_marginTop="36dp"
        android:text="@string/btn_create_password"
        style="@style/MaterialStartupButton"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f2"
        android:textColor="@color/cM1"
        android:gravity="center"
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="16dp"
        android:text="@string/btn_skip_login_success"/>
</LinearLayout>
