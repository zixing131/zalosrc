<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/black_alpha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:cacheColorHint="#00000000"
    android:minWidth="310dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_white_3dp_rounded_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:minWidth="0x7f0701d8">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/new_userpop_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/alertTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_inform_dialog_title_general"
                app:fstyle="medium"
                style="@style/DialogTitleText"/>
            <ImageButton
                android:id="@+id/btn_close_dlg_welcome"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icn_close"/>
        </LinearLayout>
        <include layout="@layout/material_zalo_dialog_title_divider"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:id="@+id/tv_sendMsgFailContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DialogMessageText"/>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp">
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/btn_cancelRetryMsg"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="64dp"
                android:text="@string/str_close"
                app:fstyle="medium"
                style="@style/DialogButtonText"/>
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:textColor="?attr/AppPrimaryColor"
                android:gravity="center"
                android:id="@+id/btn_chatAct_open"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:minWidth="64dp"
                android:text="@string/str_btn_retry"
                app:fstyle="medium"
                style="@style/DialogButtonText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
