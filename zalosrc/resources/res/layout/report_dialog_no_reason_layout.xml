<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/parenLayout_alert_dlg"
    android:background="@drawable/feed_audio_popup_bg"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="0x7f0701d8">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/parentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="0x7f0701d8">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="24dp">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="ifContentScrolls">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor2"
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Roboto.f0"/>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:minHeight="48dp">
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:gravity="center"
                android:id="@+id/report_no_reason_btn_no"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="64dp"
                android:minHeight="36dp"
                style="@style/DialogButtonText"/>
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:textColor="@drawable/bg_btn_type2_text"
                android:gravity="center"
                android:id="@+id/report_no_reason_btn_yes"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:minWidth="64dp"
                android:minHeight="36dp"
                style="@style/DialogButtonText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
