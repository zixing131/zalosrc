<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.view.MainPageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytPageMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <com.zing.zalo.shortvideo.p072ui.widget.NonSwipeableViewPager
        android:id="@+id/viePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/vieOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/lytHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnBack"
            android:background="@drawable/zch_bg_ripple_circle"
            android:layout_width="@dimen/zch_page_header_button_size"
            android:layout_height="@dimen/zch_page_header_button_size"
            android:layout_marginLeft="@dimen/zch_page_header_button_margin"
            android:src="@drawable/zch_ic_chevron_left_shadow_line_24"
            android:scaleType="centerInside"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnFloat"
            android:background="@drawable/zch_bg_ripple_circle"
            android:visibility="invisible"
            android:layout_width="@dimen/zch_page_header_button_size"
            android:layout_height="@dimen/zch_page_header_button_size"
            android:layout_marginRight="@dimen/zch_page_header_button_margin"
            android:src="@drawable/zch_ic_minimize_line_24"
            android:scaleType="centerInside"/>
        <com.zing.zalo.shortvideo.p072ui.widget.menu.MenuBar
            android:id="@+id/barMenu"
            android:fadingEdgeLength="50dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:requiresFadingEdge="horizontal"/>
        <ImageView
            android:id="@+id/btnSearch"
            android:background="@drawable/zch_bg_ripple_circle"
            android:layout_width="@dimen/zch_page_header_button_size"
            android:layout_height="@dimen/zch_page_header_button_size"
            android:layout_marginLeft="@dimen/zch_page_header_button_margin"
            android:scaleType="centerInside"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnProfile"
            android:background="@drawable/zch_bg_ripple_circle"
            android:layout_width="@dimen/zch_page_header_button_size"
            android:layout_height="@dimen/zch_page_header_button_size"
            android:layout_marginRight="@dimen/zch_page_header_button_margin"
            android:scaleType="centerInside"/>
    </LinearLayout>
</com.zing.zalo.shortvideo.p072ui.view.MainPageLayout>
