<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:tag="layout/layout_story_archive_onboarding_0"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/story_archive_spot"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="32dp"
        app:srcCompatEx="@drawable/zds_il_story_archive_light_spot_1_1"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f9s"
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/str_story_archive_onboarding_title"
        app:fstyle="medium"/>
    <LinearLayout
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/iv_archive_story"
            android:background="@drawable/gray_circle"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#f4f5f6"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f3"
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_story_archive_onboarding_intro"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/iv_lock_solid"
            android:background="@drawable/gray_circle"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="#f4f5f6"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f3"
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_story_archive_onboarding_privacy"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.Button
        android:gravity="center"
        android:id="@+id/btn_story_archive_onboarding_gotit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:minWidth="200dp"
        android:minHeight="48dp"
        android:text="@string/str_story_archive_onboarding_gotit"
        style="@style/ButtonLarge.Primary"/>
</LinearLayout>
