<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/build_info_layout"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/str_about_us_title"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/build_info_view_root"
            android:background="?attr/PrimaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/build_info_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"
                    android:src="0x7f0804cf"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_abi_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_buildId_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_version_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_buildTime_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_builder_tv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_pipeline_id_tv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_git_branch_tv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_git_commit_tv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/build_info_installed_module_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/build_info_margin"/>
                <TextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/tv_chat_db_info"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
</LinearLayout>
