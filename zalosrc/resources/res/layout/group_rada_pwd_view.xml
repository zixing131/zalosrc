<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/passcode_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/str_group_nearby_title"
        app:middleType="title"
        style="@style/WhiteZdsActionBar.AppType"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor5"
            android:gravity="center_horizontal"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="16dp"
            android:text="@string/str_group_nearby_password_description"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center_horizontal"
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="32dp"
            android:text="@string/str_group_nearby_password_prompt"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/img_code_1"
                    android:layout_width="40dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="41dp"
                    android:src="?attr/LinkColor"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="50dp"
                    android:textColor="?attr/LinkColor"
                    android:gravity="bottom"
                    android:id="@+id/tv_code_1"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/img_code_2"
                    android:background="?attr/LinkColor"
                    android:layout_width="40dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="41dp"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="50dp"
                    android:textColor="?attr/LinkColor"
                    android:gravity="bottom"
                    android:id="@+id/tv_code_2"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp">
                <ImageView
                    android:id="@+id/img_code_3"
                    android:background="@color/cPassCodeFill"
                    android:layout_width="40dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="41dp"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="50dp"
                    android:textColor="@color/cPassCodeFill"
                    android:gravity="bottom"
                    android:id="@+id/tv_code_3"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="44dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_code_4"
                    android:background="@color/cPassCodeFill"
                    android:layout_width="40dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="41dp"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="50dp"
                    android:textColor="@color/cPassCodeFill"
                    android:gravity="bottom"
                    android:id="@+id/tv_code_4"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/NotificationColor1"
            android:gravity="center_horizontal"
            android:id="@+id/tv_error"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="32dp"
            android:lines="2"/>
    </LinearLayout>
    <View
        android:id="@+id/num_pad_separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TableLayout
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_1"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_2"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_3"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_4"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_5"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_6"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_7"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_8"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_9"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:enabled="false"
                android:textColor="@color/itemlist_text"
                android:id="@+id/keypad_unknow"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_0"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <ImageButton
                android:textColor="@color/itemlist_text"
                android:id="@+id/keypad_back"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/num_back_n"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
