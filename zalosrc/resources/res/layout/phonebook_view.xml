<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_phonebook_main"
    android:background="?attr/SecondaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_phonebook"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/tv_phone_book_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="21dp"
            android:text="@string/funcPhonebookHint"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_last_update"
            android:background="?attr/PrimaryBackgroundColor"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_last_update_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lastupdatePhoneBook"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="18dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000 00:00"/>
        </LinearLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f5"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_update_phone_book"
            android:layout_width="150dp"
            android:layout_marginTop="21dp"
            android:text="@string/btnUpdatePhoneBook"
            style="@style/btnType1.medium"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_hint_delete_contact"
        android:background="@color/action_bar_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.androidquery.util.RecyclingImageView
                android:layout_gravity="center_vertical"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:src="0x7f080d85"
                android:scaleType="centerCrop"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="@color/black_3e444b"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_hint_delete_phone_book"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TabSelectedColor"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_cancel"
                android:background="@drawable/emoji_background"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:text="@string/str_button_confirm_no"
                android:textAllCaps="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/AppPrimaryColor"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_see"
                android:background="@drawable/emoji_background"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_btn_show_list_delete_phone_book"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
