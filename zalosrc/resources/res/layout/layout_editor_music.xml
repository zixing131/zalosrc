<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="32dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="6dp"
        android:paddingEnd="12dp">
        <com.zing.zalo.zlottie.widget.LottieImageView
            android:id="@+id/lottie_music"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">
            <com.androidquery.util.RecyclingImageView
                android:layout_gravity="center"
                android:id="@+id/image_music"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                app:srcCompatEx="@drawable/ic_post_story_music"/>
            <ProgressBar
                android:theme="@style/CircularProgress"
                android:layout_gravity="center"
                android:id="@+id/loading_music"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bar_white_transparent"
                android:indeterminateDuration="1500"
                android:indeterminateBehavior="repeat"
                style="@style/ProgressBarCircleNormal"/>
        </FrameLayout>
        <com.zing.zalo.uidrawing.ModulesView
            android:textSize="@dimen/f0"
            android:textColor="@color/white"
            android:id="@+id/tv_select_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_compose_feed_bar_add_song"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
    <com.zing.zalo.feed.components.GlowingReddot
        android:layout_gravity="end|top"
        android:id="@+id/glowing_reddot_music"
        android:visibility="gone"
        android:layout_width="12dp"
        android:layout_height="12dp"/>
</FrameLayout>
