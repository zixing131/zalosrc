<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/popup_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bottom_view_bg_popup_rounded_top_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/icn_slide_hint"
                android:layout_width="48dp"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/bottom_view_jump_setting"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="@string/str_jump_link_setting_title"
                style="@style/t_large_m"/>
            <com.zing.zalo.zdesign.component.Divider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.zdesign.component.ListItem
                android:id="@+id/item_setting_zalo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.zdesign.component.ListItem
                android:id="@+id/item_setting_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.zdesign.component.Button
                android:layout_gravity="center"
                android:id="@+id/open_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/str_open_link"
                style="@style/ButtonLarge.Primary"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_02"
                android:layout_gravity="center"
                android:id="@+id/footer_jump_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/str_jump_link_foot_note"
                style="@style/t_small"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
