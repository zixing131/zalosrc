<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_container"
    android:background="@drawable/bg_only_top_corner"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/header_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_close_normal"
        android:layout_alignParentEnd="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/NormalIconWhiteHeaderColor"
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_icon"
        android:textAlignment="center"
        style="@style/Roboto.f2b"/>
</RelativeLayout>
