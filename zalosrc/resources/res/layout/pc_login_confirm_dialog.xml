<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/pc_login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor1"
            android:gravity="top|center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pc_login_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="36dp"
            android:includeFontPadding="false"
            android:layout_weight="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pc_login_positive_button"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:minWidth="240dp"
            android:minHeight="42dp"
            android:text="@string/str_loginpc_dialog_positive_button"
            android:textAllCaps="true"
            style="@style/btnType1.big"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pc_login_negative_button"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:text="@string/str_loginpc_dialog_negative_button"
            style="@style/btnType3"/>
    </LinearLayout>
</ScrollView>
