<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/str_syncmes_sync_title"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <ViewSwitcher
        android:id="@+id/vs_container_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@anim/fadein"
        android:outAnimation="@anim/fadeout"
        android:animateFirstView="false">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.settingreminder.ScrollViewVisibleChildViewDetector
                android:id="@+id/scrollview_main"
                android:background="?attr/PrimaryBackgroundColor"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:gravity="top"
                    android:orientation="vertical"
                    android:id="@+id/ll_direct_child_sv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ViewStub
                        android:id="@+id/viewstub_setting_zinstant_banner"
                        android:layout="@layout/setting_reminder_zinstant_banner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ViewStub
                        android:id="@+id/viewstub_banner_remind_restore"
                        android:layout="@layout/sync_banner_common_view_embed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ViewStub
                        android:id="@+id/viewstub_banner_remind_backup_password"
                        android:layout="@layout/banner_remind_backup_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ViewStub
                        android:id="@+id/viewstub_banner_reauthen_gdrive"
                        android:layout="@layout/sync_banner_common_view_embed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ll_sync_main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textColor="?attr/SectionTitleColor1"
                                android:id="@+id/tv_title_recent_backup_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="12dp"
                                android:text="@string/str_setting_last_backup_date"
                                android:includeFontPadding="false"
                                style="@style/Roboto.titleSectionSetting"/>
                            <androidx.appcompat.widget.ZAppCompatImageView
                                android:id="@+id/btn_setting_delete_backup"
                                android:background="@drawable/stencils_contact_bg"
                                android:padding="4dp"
                                android:clickable="true"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="12dp"
                                android:src="@drawable/ic_sync_delete_backup"
                                android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                        <ViewSwitcher
                            android:id="@+id/vs_backup_info"
                            android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                            android:paddingRight="@dimen/msg_item_padding_l_r"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:inAnimation="@anim/fadein"
                            android:outAnimation="@anim/fadeout"
                            android:animateFirstView="false">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:id="@+id/ll_backup_info_loading"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true">
                                <ProgressBar
                                    android:theme="@style/CircularProgress"
                                    android:layout_gravity="center_vertical"
                                    android:visibility="visible"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginLeft="5dp"
                                    android:indeterminate="true"
                                    android:indeterminateDuration="1500"
                                    android:indeterminateBehavior="repeat"
                                    style="@style/ProgressBarCircleNormal"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/ll_backup_info_result"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.backuprestore.widget.SyncBackupInfoV2View
                                    android:id="@+id/backup_info_exist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:id="@+id/backup_info_not_exist"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="@dimen/f5"
                                        android:textColor="?attr/TextColor2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/get_backupinfo_no_have_backup"/>
                                </LinearLayout>
                            </LinearLayout>
                        </ViewSwitcher>
                        <FrameLayout
                            android:id="@+id/fl_bk_restore_processor"
                            android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                            android:paddingRight="@dimen/msg_item_padding_l_r"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp">
                            <ViewStub
                                android:id="@+id/viewstub_sync_processor"
                                android:layout="@layout/sync_processor_view_embed_v2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </FrameLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/ll_action_bk_restore"
                            android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                            android:paddingRight="@dimen/msg_item_padding_l_r"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="@dimen/f0"
                                android:gravity="center"
                                android:id="@+id/btn_backup"
                                android:background="@drawable/bg_btn_type1_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:minWidth="96dp"
                                android:text="@string/str_action_create_backup"
                                android:textAllCaps="true"
                                style="@style/btnType1.small"/>
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="@dimen/f0"
                                android:textColor="?attr/LinkColor"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/btn_restore"
                                android:padding="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="@string/str_action_restore"
                                android:textAllCaps="true"
                                app:fstyle="medium"/>
                        </LinearLayout>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f0"
                            android:textColor="?attr/TextColor2"
                            android:id="@+id/tv_introduce_backup_rules"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_left_setting_bk_restore_item"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="@dimen/msg_item_padding_l_r"
                            android:layout_marginBottom="16dp"/>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/ll_setting_main_layout"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textColor="?attr/SectionTitleColor1"
                                android:id="@+id/tv_title_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_left_setting_bk_restore_item"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="12dp"
                                android:text="@string/setting_title"
                                android:includeFontPadding="false"
                                style="@style/Roboto.titleSectionSetting"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/ll_setting_auto_backup"
                                android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                                android:paddingTop="16dp"
                                android:paddingRight="@dimen/msg_item_padding_l_r"
                                android:paddingBottom="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/min_height_setting_bk_restore_item">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="@dimen/f2"
                                    android:textColor="?attr/TextColor1"
                                    android:id="@+id/tv_auto_backup"
                                    android:duplicateParentState="true"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sync_auto_interval_description"
                                    android:layout_weight="1"/>
                                <include layout="@layout/imgv_setting_reminder"/>
                                <com.zing.zalo.p077ui.widget.StencilSwitch
                                    android:id="@+id/ss_auto_backup"
                                    android:duplicateParentState="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"
                                    android:checked="true"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/ll_setting_network_condition"
                                android:background="@drawable/stencils_contact_bg"
                                android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                                android:paddingTop="16dp"
                                android:paddingRight="@dimen/msg_item_padding_l_r"
                                android:paddingBottom="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/min_height_setting_bk_restore_item">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="@dimen/f2"
                                        android:textColor="?attr/TextColor1"
                                        android:duplicateParentState="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/str_syncmes_sync_mes_setting_title"/>
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="@dimen/f5"
                                        android:textColor="?attr/TextColor2"
                                        android:id="@+id/tv_setting_network_condition_desc"
                                        android:duplicateParentState="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/str_setting_backup_wifi_only"/>
                                </LinearLayout>
                                <include layout="@layout/imgv_setting_reminder"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/ll_setting_account_ggdrive"
                                android:background="@drawable/stencils_contact_bg"
                                android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                                android:paddingTop="16dp"
                                android:paddingRight="@dimen/msg_item_padding_l_r"
                                android:paddingBottom="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/min_height_setting_bk_restore_item">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="@dimen/f2"
                                        android:textColor="?attr/TextColor1"
                                        android:duplicateParentState="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/str_setting_backup_media_title"/>
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="@dimen/f5"
                                        android:textColor="?attr/TextColor2"
                                        android:id="@+id/tv_setting_account_ggdrive"
                                        android:duplicateParentState="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/str_not_add_account_ggdrive"
                                        android:drawablePadding="4dp"/>
                                </LinearLayout>
                                <include layout="@layout/imgv_setting_reminder"/>
                            </LinearLayout>
                            <View
                                android:background="?attr/ItemSeparatorColor"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/ll_setting_backup_e2ee"
                                android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                                android:paddingTop="16dp"
                                android:paddingRight="@dimen/msg_item_padding_l_r"
                                android:paddingBottom="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/min_height_setting_bk_restore_item">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="@dimen/f2"
                                    android:textColor="?attr/TextColor1"
                                    android:id="@+id/tv_backup_e2ee"
                                    android:duplicateParentState="true"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_setting_backup_e2ee"
                                    android:layout_weight="1"/>
                                <include layout="@layout/imgv_setting_reminder"/>
                                <com.zing.zalo.p077ui.widget.StencilSwitch
                                    android:id="@+id/ss_backup_e2ee"
                                    android:duplicateParentState="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"
                                    android:checked="true"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:id="@+id/ll_setting_backup_pwd"
                                android:background="@drawable/stencils_contact_bg"
                                android:paddingLeft="@dimen/padding_left_setting_bk_restore_item"
                                android:paddingTop="16dp"
                                android:paddingRight="@dimen/msg_item_padding_l_r"
                                android:paddingBottom="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="@dimen/min_height_setting_bk_restore_item">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="@dimen/f2"
                                        android:textColor="?attr/TextColor1"
                                        android:duplicateParentState="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sync_pass_setting_title"/>
                                    <com.zing.zalo.p077ui.widget.RobotoTextView
                                        android:textSize="@dimen/f5"
                                        android:textColor="?attr/TextColor2"
                                        android:id="@+id/tv_setting_backup_pwd_status"
                                        android:duplicateParentState="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/sync_pass_setting_des"/>
                                </LinearLayout>
                                <include layout="@layout/imgv_setting_reminder"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.zing.zalo.settingreminder.ScrollViewVisibleChildViewDetector>
            <com.zing.zalo.p077ui.widget.HightLightSettingView
                android:id="@+id/hightLightView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ViewStub
                android:id="@+id/viewstub_sync_empty_backup_view"
                android:layout="@layout/sync_empty_backup_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </ViewSwitcher>
</LinearLayout>
