<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_rect_location_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layout_selected_location"
        android:background="?attr/PopupBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/zalo_action_bar">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/ChatTextColor1"
            android:id="@+id/tv_static_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left"
            android:text="@string/str_static_at"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/tv_selected_location"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/btn_remove_selected_location"
            android:layout_toRightOf="@+id/tv_static_at"
            android:layout_centerVertical="true"
            style="@style/Roboto.f0"/>
        <ImageButton
            android:id="@+id/btn_remove_selected_location"
            android:background="@drawable/rectangle_transparent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_ipt_clear"
            android:minWidth="44dp"
            android:layout_alignParentRight="true"/>
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"/>
        <View
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/location_list"
        android:background="?attr/PopupBackgroundColor"
        android:scrollbars="vertical"
        android:fadingEdge="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/transparent"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/view_offset"
        android:layout_below="@+id/layout_selected_location"
        android:fastScrollEnabled="false"/>
    <View
        android:id="@+id/view_offset"
        android:background="?attr/PopupBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
