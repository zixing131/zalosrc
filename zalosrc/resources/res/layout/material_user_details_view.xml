<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/ProfilePrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cover_height"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/info_background"
        android:background="?attr/ProfilePrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/cover_image"/>
    <View
        android:id="@+id/top_profile_cover_gradient"
        android:background="@drawable/profile_cover_gradient_new"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignTop="@+id/cover_image"/>
    <com.zing.zalo.uicontrol.SwipeRefreshListView
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:modeContent="recycleview"/>
    <include layout="@layout/fast_scroll_bubble_tv"/>
    <ViewStub
        android:id="@+id/headerLoading"
        android:layout="@layout/user_details_header_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swipe_refresh_layout"/>
    <LinearLayout
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:orientation="vertical"
        android:id="@+id/profile_feed_sticky_header_group"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true">
        <View
            android:id="@+id/fake_action_bar_above_sticky_functions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"/>
        <include layout="@layout/user_details_profile_music_sticky"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_profile_bio_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.feed.components.ProfileMusicView
            android:id="@+id/profile_music_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_music_layout_full_h"
            android:layout_below="@+id/zalo_action_bar"
            android:elevation="@dimen/width_shadow_action_bar"/>
        <include layout="@layout/profile_avatar_layout"/>
    </RelativeLayout>
    <include layout="@layout/layout_action_bar"/>
    <include
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        layout="@layout/user_details_bottom_functions_new"/>
    <ViewStub
        android:id="@+id/stub_user_details_bottom_bar"
        android:layout="@layout/user_details_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <FrameLayout
        android:id="@+id/container_oa_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/layout_oa_warming"
        android:background="?attr/SecondaryBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar">
        <com.androidquery.util.RecyclingImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/ic_im_warning_hili"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/str_oa_is_blocked"
            style="@style/Roboto.f2"/>
    </LinearLayout>
</com.zing.zalo.p077ui.widget.CustomRelativeLayout>
