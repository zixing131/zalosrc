<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/stencils_bg_white_with_press_state"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:layout_marginBottom="4dp"
        android:src="0x7f080958"
        android:scaleType="fitXY"
        android:contentDescription="@string/nothing"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f2"
        android:textColor="?attr/TextColor1"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:text="@string/str_open_list_request_friend"
        android:layout_weight="1"/>
    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hearder_func_margin_notify_number_ic_next_r"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:src="0x7f080f0c"/>
</LinearLayout>
