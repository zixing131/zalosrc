<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_find_more_friends"
    android:background="@drawable/stencils_oa_find_more_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/separate_bottom"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/buddy_dp_bound"
            android:layout_width="@dimen/group_avatar_view_container_size"
            android:layout_height="@dimen/group_avatar_view_container_size"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true">
            <com.androidquery.util.RecyclingImageView
                android:id="@+id/buddy_dp"
                android:layout_width="@dimen/group_avatar_view_container_size"
                android:layout_height="@dimen/group_avatar_view_container_size"
                android:src="0x7f080fda"
                android:scaleType="fitXY"/>
            <com.zing.zalo.p077ui.widget.AvatarImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/image_profile"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="0x7f080958"
                style="@style/myImageView"/>
        </FrameLayout>
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/ic_close_view"
            android:padding="6dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/btn_removeimg"/>
        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/ic_close_view"
            android:layout_toRightOf="@+id/buddy_dp_bound"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="?attr/TextColor1"
                android:id="@+id/title_find_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find people to follow"
                android:singleLine="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor2"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/desc_find_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add your phone number and import contact to find friends"
                android:maxLines="5"
                android:layout_below="@+id/name"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="@color/cM1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/action_find_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:singleLine="true"
                android:drawablePadding="6dp"
                android:layout_below="@+id/custom_message"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
