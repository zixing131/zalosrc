<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.zing.zalo.p077ui.widget.imageview.RoundedImageView
        android:id="@+id/video_imv_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/video_center_control_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/video_imv_error"
            android:background="@drawable/ic_error"
            android:visibility="invisible"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/video_btn_play"
            android:background="@drawable/bg_rounded_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080873"
            android:scaleType="center"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/video_btn_retry"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_btn_retry_selector"
            android:scaleType="center"/>
    </FrameLayout>
    <ProgressBar
        android:theme="@style/CircularProgress"
        android:layout_gravity="center"
        android:id="@+id/video_loading_progress_bar"
        android:visibility="invisible"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:indeterminate="true"
        android:indeterminateDuration="1500"
        android:indeterminateBehavior="repeat"
        android:layout_centerInParent="true"
        style="@style/ProgressBarCircleNormal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="10dp"
        android:textColor="@android:color/black"
        android:id="@+id/video_inline_tv_video_duration"
        android:background="@drawable/bg_video_duration_inline"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/video_center_control_layout"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/video_bottom_control_layout"
        android:background="@drawable/gradient_player_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="1dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/video_tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/control_btn_padding"
            android:layout_marginTop="@dimen/control_btn_margin"
            android:layout_marginBottom="@dimen/control_btn_margin"
            android:includeFontPadding="false"/>
        <com.zing.zalo.zmedia.view.TrackSeekBar
            android:layout_gravity="center"
            android:id="@+id/video_progress_bar"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seekbar"
            android:thumb="@drawable/thumb"
            android:layout_weight="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/video_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_btn_margin"
            android:layout_marginBottom="@dimen/control_btn_margin"
            android:includeFontPadding="false"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/video_btn_fullscreen"
            android:background="@drawable/bg_rounded_control"
            android:paddingLeft="@dimen/control_btn_padding"
            android:paddingTop="@dimen/control_btn_padding"
            android:paddingRight="@dimen/control_btn_padding"
            android:paddingBottom="@dimen/control_btn_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f081251"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
    </LinearLayout>
</merge>
