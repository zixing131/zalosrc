<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="420dp"
    android:layout_height="640dp">
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center"
        android:id="@+id/background"
        android:background="@drawable/res_qr_default_background"
        android:layout_width="420dp"
        android:layout_height="640dp"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_circle_avatar_custom_noti"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="54dp">
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center"
            android:id="@+id/avatar_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="0x7f080958"/>
        <androidx.appcompat.widget.ZAppCompatImageView
            android:layout_gravity="end|bottom"
            android:id="@+id/icVipStatus"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_oa_verify"/>
    </FrameLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:maxLines="1"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15dp"
        android:textColor="#848c94"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="162dp"
        android:text="@string/str_qr_download_subtitle"
        android:maxLines="1"/>
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/qr_view"
        android:layout_width="238dp"
        android:layout_height="238dp"
        android:layout_marginTop="200dp"/>
</FrameLayout>
