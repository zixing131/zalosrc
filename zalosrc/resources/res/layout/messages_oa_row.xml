<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/info_contact_row"
    android:background="@drawable/stencils_contact_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layoutmessage"
        android:paddingLeft="@dimen/msg_item_padding_l_r"
        android:paddingTop="@dimen/msg_item_padding_tb_ui4"
        android:paddingRight="@dimen/msg_item_padding_l_r"
        android:paddingBottom="@dimen/msg_item_padding_tb_ui4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/buddy_dp"
            android:layout_width="@dimen/avt_La"
            android:layout_height="@dimen/avt_La"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/numnotification"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buddy_dp"
            android:layout_alignRight="@+id/buddy_dp"
            style="@style/stencils_notification_text_view"/>
        <ImageView
            android:id="@+id/ic_VipStatus"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/buddy_dp"
            android:layout_alignBottom="@+id/buddy_dp"/>
        <LinearLayout
            android:gravity="right"
            android:orientation="vertical"
            android:id="@+id/layout_datetime_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f7"
                android:textColor="?attr/TextColor2"
                android:id="@+id/date_time_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f4s"
                android:textColor="?attr/TextColor2"
                android:id="@+id/txt_adsmsg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_hint_float_sticky_msg"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <ImageView
                    android:id="@+id/ic_unread_msg_feed"
                    android:background="@drawable/stencils_bg_notif_feed_msg"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/ic_mute_message"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icn_msg_mute"/>
            </LinearLayout>
            <com.zing.zalo.zdesign.component.Button
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/btnAct"
                android:paddingLeft="@dimen/default_msg_item_padding_left"
                android:paddingRight="@dimen/default_msg_item_padding_left"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:maxWidth="90dp"
                android:minWidth="84dp"
                style="@style/ButtonSmall.Secondary"/>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/layout_datetime_message"
            android:layout_toRightOf="@+id/buddy_dp"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:gravity="left"
                android:id="@+id/groupName"
                android:paddingRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/sideTagline"
                    android:layout_centerVertical="true"/>
                <com.zing.zalo.zdesign.component.Badge
                    android:id="@+id/sideTagline"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    app:badgeBackgroundColor="?attr/layer_background_selected_alt"
                    app:badgeSize="size16"
                    app:badgeText="@string/str_profile_side_tagline_ads"
                    app:badgeTextColor="?attr/text_tertiary"
                    app:badgeType="custom"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/layout_custom_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/groupName">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/SmallTextSize"
                    android:textColor="?attr/TextColor2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_chat_txt_sms_indicator"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="@string/str_left_txt_sms_indicator_prefix"
                    android:lines="1"/>
                <com.zing.zalo.p077ui.widget.textview.RobotoTextModulesView
                    android:textSize="@dimen/f0"
                    android:textColor="?attr/TextColor2"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/custom_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    app:isWrapWordOnEllipsized="true"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/file_preview_icon"
                    android:visibility="gone"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="0x7f080be0"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f0"
                    android:textColor="?attr/TextColor2"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/custom_message_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ViewStub
        android:layout_gravity="center"
        android:id="@+id/stub_story_populate"
        android:visibility="gone"
        android:layout="@layout/story_populate_layout"
        android:inflatedId="@+id/stub_story_populate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"/>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/separate_line_padding_left_ui4_type1"/>
</FrameLayout>
