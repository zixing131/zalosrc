<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/sticky_popup"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/title_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/str_title_setup_hiddenchat_success"
            style="@style/DialogText"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center_horizontal"
            android:id="@+id/content_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/str_content_setup_hiddenchat_success"
            style="@style/DialogText"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center"
            android:id="@+id/imgSticky"
            android:visibility="visible"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/item_header_list_text_marginTop"
            android:src="0x7f0804de"
            android:scaleType="centerCrop"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/stencils_button_text_size"
            android:textColor="@drawable/bg_btn_type1_text"
            android:gravity="center"
            android:id="@+id/btn_positive_popup"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/item_header_list_text_marginTop"
            android:text="@string/str_btn_setpin"
            android:singleLine="true"
            style="@style/btnType1.medium"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="0x7f080afd"/>
</FrameLayout>
