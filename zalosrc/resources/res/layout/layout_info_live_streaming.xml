<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/ln_state"
    android:background="@drawable/bg_black_with_corners"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:visibility="invisible"
    android:layout_width="wrap_content"
    android:layout_height="27dp"
    android:minWidth="150dp">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ls_live"
        android:drawableLeft="0x7f080fa3"
        android:drawablePadding="4dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="00:00"
        android:drawableLeft="0x7f080fa4"
        android:drawablePadding="4dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="0"
        android:drawableLeft="0x7f080fa5"
        android:drawablePadding="4dp"/>
</LinearLayout>
