<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="360dp">
    <androidx.appcompat.widget.ZAppCompatImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgIcon"
        android:paddingTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="0x7f08124c"
        android:scaleType="centerInside"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutContent"
        android:paddingTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f9s"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/str_e2ee_bottom_sheet_status_title"
            style="@style/Roboto.f2b"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8b"
            android:textColor="?attr/TextColor2"
            android:gravity="center"
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            android:text="@string/str_e2ee_bottom_sheet_status_des"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8b"
            android:textStyle="bold"
            android:textColor="?attr/LinkColor"
            android:gravity="center"
            android:id="@+id/tvMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/str_learn_more"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.Button
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/str_tip_banner_got_it"
        style="@style/ButtonMedium.Primary"/>
</LinearLayout>
