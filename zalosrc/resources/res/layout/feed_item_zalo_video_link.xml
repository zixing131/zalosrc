<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/zalo_video_header"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/feed_item_header_template"/>
    </RelativeLayout>
    <com.zing.zalo.zmedia.view.ZVideoView
        android:id="@+id/zalo_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zalo_video_header"
        android:layout_marginStart="@dimen/feed_video_content_margin_left"
        android:layout_marginEnd="@dimen/feed_video_content_margin_right"
        app:controller_style="inline"/>
    <com.zing.zalo.feed.components.video.FeedVideoSpeakerView
        android:orientation="horizontal"
        android:id="@+id/btn_speaker"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@+id/zalo_video_view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_alignEnd="@+id/zalo_video_view"/>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/thumb_zalo_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/zalo_video_view"
        android:layout_alignBottom="@+id/zalo_video_view"
        android:layout_alignStart="@+id/zalo_video_view"
        android:layout_alignEnd="@+id/zalo_video_view"/>
    <FrameLayout
        android:id="@+id/zalo_video_thumb_group"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/zalo_video_view"
        android:layout_alignBottom="@+id/zalo_video_view"
        android:layout_alignStart="@+id/zalo_video_view"
        android:layout_alignEnd="@+id/zalo_video_view">
        <View
            android:background="@color/black_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.zing.zalo.zdesign.component.Button
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/view_detail_zalo_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_suggest_zalo_video_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:btnSupportiveIcon="@drawable/zch_ic_logo_channel_solid_16"
            app:btnSupportiveIconSize="20dp"
            app:btnSupportiveIconTint="@null"
            style="@style/ButtonSmall.SecondaryAlphaNeutral"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/channel_header"
        android:background="@drawable/timeline_top_gradient_zalo_video"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/zalo_video_view"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_alignStart="@+id/zalo_video_view"
        android:layout_alignEnd="@+id/zalo_video_view">
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="start|center_vertical"
            android:id="@+id/chanel_avatar_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/zch_placeholder_avatar_channel"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="@color/white"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/channel_name_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_weight="10"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="24dp"
            style="@style/Roboto.f5b"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/zalo_video_logo_view"
            android:layout_width="78dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_zalo_video_watermark"
            android:scaleType="fitCenter"
            android:alpha="0.8"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/zalo_video_placeholder"
        android:background="?attr/layer_background_pressed"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/zalo_video_view"
        android:layout_alignBottom="@+id/zalo_video_view"
        android:layout_alignStart="@+id/zalo_video_view"
        android:layout_alignEnd="@+id/zalo_video_view"/>
    <FrameLayout
        android:id="@+id/zalo_video_error_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/zalo_video_view"
        android:layout_alignBottom="@+id/zalo_video_view"
        android:layout_alignStart="@+id/zalo_video_view"
        android:layout_alignEnd="@+id/zalo_video_view">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.androidquery.util.RecyclingImageView
                android:id="@+id/icn_empty"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                app:srcCompatEx="@drawable/zds_ic_video_failed_solid_24"
                app:tint="?attr/icon_disabled"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/text_tertiary"
                android:id="@+id/tv_empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/str_error_zalo_video_desc"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/zalo_video_view"
        android:layout_alignBottom="@+id/zalo_video_view"
        android:layout_alignStart="@+id/zalo_video_view"
        android:layout_alignEnd="@+id/zalo_video_view">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/pbVideoProcessing"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/feed_video_loading"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center"
            android:id="@+id/button_retry_load_feed"
            android:visibility="gone"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            app:srcCompatEx="@drawable/ic_video_retry_button"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center"
            android:id="@+id/button_play_video"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            app:srcCompatEx="@drawable/icn_csc_play_big_selector"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom|left"
            android:id="@+id/player_debug_view"
            android:background="@color/black_30"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
</merge>
