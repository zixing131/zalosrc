<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_swipeable_view"
    android:background="?attr/SecondaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/str_call_who_can_call_you"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <ScrollView
        android:id="@+id/scroll_main_layout"
        android:background="?attr/PrimaryBackgroundColor"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_call_from_friends"
                android:background="@drawable/stencils_contact_bg"
                android:paddingLeft="@dimen/msg_item_padding_l_r"
                android:paddingTop="4dp"
                android:paddingRight="@dimen/msg_item_padding_l_r"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_height_row_setting">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/ic_call_from_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:src="0x7f08087c"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="16sp"
                    android:textColor="?attr/TextColor1"
                    android:duplicateParentState="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_call_receive_calls_from_friends"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/msg_item_padding_l_r"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_call_from_friends_more"
                android:background="@drawable/stencils_contact_bg"
                android:paddingLeft="@dimen/msg_item_padding_l_r"
                android:paddingTop="12dp"
                android:paddingRight="@dimen/msg_item_padding_l_r"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_height_row_setting">
                <ImageView
                    android:layout_gravity="top"
                    android:id="@+id/ic_call_from_friends_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:src="0x7f08087c"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="16sp"
                        android:textColor="?attr/TextColor1"
                        android:duplicateParentState="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_call_receive_calls_from_friends_strangers_contacted"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="14sp"
                        android:textColor="?attr/TextColor3"
                        android:duplicateParentState="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="@string/str_call_receive_calls_friends_strangers_contacted_des"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/msg_item_padding_l_r"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_call_from_all"
                android:background="@drawable/stencils_contact_bg"
                android:paddingLeft="@dimen/msg_item_padding_l_r"
                android:paddingRight="@dimen/msg_item_padding_l_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_height_row_setting">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/ic_call_from_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:src="0x7f08087c"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:duplicateParentState="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_call_receive_calls_from_everyone"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
