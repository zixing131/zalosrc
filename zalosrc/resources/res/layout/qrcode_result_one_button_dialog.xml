<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="0x7f0701d8">
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/dialog_header_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_header_height">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/dialog_header_title_size"
            android:textColor="@color/color_header_dialog"
            android:layout_gravity="center_vertical"
            android:id="@+id/str_titledlg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_header_title_margin_left"
            android:text="@string/app_name"
            android:singleLine="true"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/btn_close"
            android:background="@drawable/ic_pop_close2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dialog_header_icon_margin_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/BasicTextSize"
        android:textColor="@color/black"
        android:id="@+id/content_text"
        android:background="@drawable/dialog_center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/layout_btnLeft"
        android:background="@drawable/bgbuttonpop"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/txtbtndialog"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/str_btnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_btn_sendMsg"
            android:drawablePadding="2dp"/>
    </LinearLayout>
</LinearLayout>
