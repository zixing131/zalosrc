<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="?attr/selectableItemBackground">
    <include layout="@layout/story_bar_btn_add"/>
    <FrameLayout
        android:id="@+id/story_empty_section_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/story_bar_btn_add_layout"
        android:layout_centerVertical="true">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="16dp"
                android:textColor="@color/cM1"
                android:id="@+id/story_bar_empty_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="12dp"
                android:textColor="?attr/TextColor2"
                android:id="@+id/story_bar_empty_section_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
    <ViewStub
        android:id="@+id/stub_story_suggestion_empty_section"
        android:layout="@layout/story_bar_suggestion_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/story_bar_btn_add_layout"/>
</merge>
