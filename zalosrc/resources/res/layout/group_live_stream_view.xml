<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:zalo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_backgroundmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.p077ui.widget.layout.MaxHeightLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.uicontrol.draggableview.DraggableView
                android:id="@+id/draggable_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                zalo:drag_view_background="0x7f080769"
                zalo:top_view_id="@+id/layout_main_render">
                <FrameLayout
                    android:layout_gravity="center"
                    android:id="@+id/layout_main_render"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <org.webrtc.SurfaceViewRenderer
                        android:id="@+id/live_render_widown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:id="@+id/layout_debug"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/text_view_bandwidth"
                            android:background="@color/black_30"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="NA"/>
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/text_view_packet_rate"
                            android:background="@color/black_30"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="NA"/>
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/text_view_bwe"
                            android:background="@color/black_30"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="NA"/>
                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/text_view_coding"
                            android:background="@color/black_30"
                            android:paddingLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="NA"/>
                    </LinearLayout>
                </FrameLayout>
            </com.zing.zalo.uicontrol.draggableview.DraggableView>
        </com.zing.zalo.p077ui.widget.layout.MaxHeightLayout>
        <RelativeLayout
            android:id="@+id/rl_ui_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/overlay"
                android:background="@color/black_50"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/rl_chat_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">
                <com.zing.zalo.p077ui.widget.recyclerview.TouchListView
                    android:id="@+id/lv_chat"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    android:fadingEdgeLength="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_above="@+id/ll_input_live_chat"
                    android:layout_alignWithParentIfMissing="true"
                    android:requiresFadingEdge="vertical"/>
                <include
                    android:layout_width="210dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentBottom="true"
                    layout="@layout/layout_input_live_streaming"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_function"
                android:paddingTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:src="0x7f080fb6"
                    android:scaleType="center"/>
                <ImageView
                    android:id="@+id/img_minimize"
                    android:visibility="gone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="12dp"
                    android:src="0x7f080fb9"/>
                <include
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    layout="@layout/layout_info_live_streaming"/>
                <ImageView
                    android:id="@+id/img_switch_camera"
                    android:visibility="gone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="12dp"
                    android:src="0x7f080fba"
                    android:layout_alignParentRight="true"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/ln_state"
                    android:layout_alignLeft="@+id/ln_state"
                    android:layout_alignRight="@+id/ln_state">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_user_seen"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="150dp"
                android:textColor="@color/white"
                android:id="@+id/tv_count_down"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:id="@+id/rl_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ProgressBar
                    android:theme="@style/CircularProgressWhite"
                    android:id="@+id/progress_bar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:indeterminate="true"
                    android:indeterminateDuration="1500"
                    android:indeterminateBehavior="repeat"
                    android:layout_centerHorizontal="true"
                    style="@style/ProgressBarCircleNormalWhite"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f1"
                    android:textColor="@color/white"
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:layout_below="@+id/progress_bar"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoButton
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/btn_cancel"
                    android:background="@drawable/bg_btn_black_big"
                    android:paddingLeft="21dp"
                    android:paddingTop="8dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="8dp"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="@string/ls_finish"
                    android:layout_below="@+id/tv_status"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_golive"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/img_golive"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="0x7f080f87"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f1"
                    android:textColor="@color/white"
                    android:id="@+id/tv_golive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="@string/ls_ready_to_go_live"
                    android:layout_below="@+id/img_golive"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoButton
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/btn_golive"
                    android:background="@drawable/bg_btn_type1_big"
                    android:paddingLeft="21dp"
                    android:paddingTop="8dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="@string/ls_go_live"
                    android:layout_below="@+id/tv_golive"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_ended_ls"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/img_ended_ls"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="0x7f080f88"
                    android:layout_centerHorizontal="true"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f1"
                    android:textColor="@color/white"
                    android:id="@+id/tv_ended_ls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:text="@string/ls_ended_video"
                    android:layout_below="@+id/img_ended_ls"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <com.zing.zalo.p077ui.widget.RobotoButton
                android:textSize="12dp"
                android:textColor="@color/white"
                android:id="@+id/btn_finish"
                android:background="@drawable/bg_btn_black_big"
                android:paddingLeft="21dp"
                android:paddingTop="8dp"
                android:paddingRight="21dp"
                android:paddingBottom="8dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:text="@string/ls_finish"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                zalo:fstyle="medium"/>
            <ImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/btnLike"
                android:background="@drawable/bg_btn_black_big"
                android:visibility="invisible"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                android:src="0x7f080f95"
                android:scaleType="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/live_stream_send_message_layout"
                android:background="@drawable/bg_chat_edittext"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/ic_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="0x7f080fb7"/>
                <com.zing.zalo.uicontrol.ActionEditText
                    android:textSize="@dimen/f4"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_60"
                    android:autoLink="none"
                    android:id="@+id/edit_input"
                    android:background="@color/transparent"
                    android:scrollbars="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="56dp"
                    android:minHeight="48dp"
                    android:hint="@string/live_stream_send_msg_hint"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:layout_weight="1"
                    android:inputType="textAutoCorrect"
                    android:imeOptions="actionSend"
                    android:textCursorDrawable="@null"/>
                <ImageButton
                    android:layout_gravity="center"
                    android:id="@+id/btn_live_msg_send"
                    android:background="@null"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/action_menu_blue_send_icon_selector"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/sticker_panel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
