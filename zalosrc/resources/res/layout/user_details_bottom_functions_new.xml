<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/profile_bottom_functions_layout"
    android:background="@drawable/profile_footer_function_gradient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:id="@+id/layoutUserFunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layoutSendMessage"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/bg_anim_send"
                android:background="@drawable/send_sms_layer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/func_bottom_bar_profile"
                android:layout_alignLeft="@+id/tvSendMes_ob"
                android:layout_alignTop="@+id/tvSendMes_ob"
                android:layout_alignRight="@+id/tvSendMes_ob"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/tvSendMes_ob"
                android:background="@drawable/bg_profile_float"
                android:paddingLeft="25dp"
                android:paddingRight="23dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/func_bottom_bar_profile"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="@string/str_chat_feed_detail"
                android:drawableLeft="@drawable/icn_timeline_chat"
                android:drawablePadding="@dimen/padding_ic_text_update_status_function_profile"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/tvUnreadMes_ob"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_alignRight="@+id/tvSendMes_ob"
                style="@style/stencils_notification_text_view"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutUnBlock"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/TextColor1"
                android:gravity="center_vertical"
                android:id="@+id/tvUnBlock"
                android:background="@drawable/bg_profile_float"
                android:paddingLeft="25dp"
                android:paddingRight="23dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/func_bottom_bar_profile"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="@string/str_tv_unblock"
                android:drawableLeft="@drawable/btn_profile_unblock"
                android:drawablePadding="@dimen/padding_ic_text_update_status_function_profile"
                android:textAllCaps="true"
                app:fstyle="medium"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutTwoButton"
            android:background="@drawable/bg_profile_float"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/func_bottom_bar_profile"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/tvSendMes_tb"
                android:paddingLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_chat_feed_detail"
                android:drawableLeft="@drawable/icn_timeline_chat"
                android:drawablePadding="@dimen/padding_ic_text_update_status_function_profile"
                android:layout_centerVertical="true"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/tvUnreadMes_tb"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvSendMes_tb"
                style="@style/stencils_notification_text_view"/>
            <View
                android:id="@+id/seperate_line"
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/tvSendMes_tb"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f13"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:id="@+id/tvAddFriend"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bump_add_friend"
                android:drawableLeft="@drawable/icn_timeline_addfriend"
                android:drawablePadding="@dimen/padding_ic_text_update_status_function_profile"
                android:layout_toRightOf="@+id/seperate_line"
                android:layout_centerVertical="true"
                app:fstyle="medium"/>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
