<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_header_edit_status_online"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/separate_line"
        android:background="?attr/SecondaryBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/text_header_list_margin_t_b"/>
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/header_page_all"
                android:background="@drawable/chip_tab_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp">
                <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                    android:textSize="@dimen/f5"
                    android:textColor="@color/chip_tab_text"
                    android:id="@+id/title_all_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_lable_all"
                    android:includeFontPadding="false"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f5"
                    android:textColor="@color/chip_tab_text"
                    android:id="@+id/title_count_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/header_page_new_friend"
                android:background="@drawable/chip_tab_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="8dp">
                <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                    android:textSize="@dimen/f5"
                    android:textColor="@color/chip_tab_text"
                    android:id="@+id/title_new_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_lable_new_friend"
                    android:includeFontPadding="false"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f5"
                    android:textColor="@color/chip_tab_text"
                    android:id="@+id/title_count_new_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:includeFontPadding="false"/>
                <View
                    android:id="@+id/reddot_new_friend"
                    android:background="@drawable/reddot_chip_tab_contact"
                    android:visibility="gone"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/header_page_online"
                android:background="@drawable/chip_tab_bg"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="8dp">
                <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                    android:textSize="@dimen/f5"
                    android:textColor="@color/chip_tab_text"
                    android:id="@+id/title_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_lable_online_status"
                    android:includeFontPadding="false"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f5"
                    android:textColor="@color/chip_tab_text"
                    android:id="@+id/title_count_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
