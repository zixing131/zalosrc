<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/overlay_description"
        android:background="#b3000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/view_bottom_gradient"
        android:background="@drawable/store_desc_bottom_gradient"
        android:layout_width="match_parent"
        android:layout_height="85dp"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/background_qr_gradient"
            android:background="@drawable/qr_bottom_background_gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_bottom">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/scan_qr_button_style_text_size"
                android:textColor="#1194fe"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/qrCodeTextView"
                android:background="@drawable/bg_qr_btn_type"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/scan_qr_button_style_height"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/str_scan_qr_button"
                android:drawablePadding="@dimen/scan_qr_button_style_drawable_padding"
                android:drawableStart="@drawable/ic_scan_qr_footer"
                style="@style/btnType2.medium"/>
        </FrameLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/layout_bottom"
            android:background="@color/black_40"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/photo_view_hq_control_layout">
                <com.zing.zalo.p077ui.widget.textview.PhotoDescriptionTextView
                    android:scrollbarThumbVertical="@drawable/scrollbar_thumb_white"
                    android:textColor="@color/white"
                    android:id="@+id/tv_caption"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="2dp"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="10"
                    android:fadeScrollbars="false"
                    style="@style/Roboto.f4"/>
                <com.zing.zalo.uidrawing.ModulesView
                    android:id="@+id/reaction_info_bar"
                    android:paddingTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:id="@+id/separate_line"
                    android:background="#33ffffff"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/layout_bottom_action"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/layout_hq_control"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f0"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/view_hd_image"
                        android:background="@drawable/hd_white_translucent_bg"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:visibility="visible"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:text="@string/str_hd"
                        app:disableScaleTextSize="true"/>
                    <FrameLayout
                        android:layout_gravity="center"
                        android:id="@+id/rl_hd_loading"
                        android:visibility="visible"
                        android:layout_width="36dp"
                        android:layout_height="36dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="0x7f080b5e"/>
                        <ProgressBar
                            android:theme="@style/CircularProgress"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="true"
                            android:indeterminateDuration="1500"
                            android:indeterminateBehavior="repeat"
                            style="@style/ProgressBarCircleNormal"/>
                    </FrameLayout>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="13dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/btn_load_hq_image"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="32dp"
                        android:text="@string/view_high_quality_image"
                        style="@style/btnType3.big"/>
                </FrameLayout>
                <com.zing.zalo.uidrawing.ModulesView
                    android:layout_gravity="center"
                    android:id="@+id/react_action_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/btn_share"
                    android:background="@drawable/bg_btn_viewimage"
                    android:padding="6dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="0x7f080c11"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/layout_indicator_slider"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.zing.zalo.p077ui.imageviewer.indicator.ChatPhotoIndicatorRecyclerView
            android:layout_gravity="center"
            android:id="@+id/rc_chat_photo_indicator"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:fadingEdgeLength="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:alpha="0"
            android:requiresFadingEdge="horizontal"/>
    </RelativeLayout>
</merge>
