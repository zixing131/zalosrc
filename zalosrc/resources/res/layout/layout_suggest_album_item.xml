<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/container"
        android:background="?attr/ProfileBackgroundSuggestAlbumItem"
        android:paddingLeft="14dp"
        android:paddingTop="13dp"
        android:paddingRight="14dp"
        android:paddingBottom="13dp"
        android:layout_width="@dimen/profile_album_row_item_width_normal"
        android:layout_height="@dimen/profile_album_row_item_height_normal">
        <RelativeLayout
            android:id="@+id/layout_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/empty_album_containter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.androidquery.util.RecyclingImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_album_row_item_cover_height_normal"
                    android:scaleType="centerCrop"/>
                <com.zing.zalo.p077ui.widget.AspectRatioImageView
                    android:id="@+id/thumb_empty"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:id="@+id/privacyIcon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignLeft="@+id/empty_album_containter"
                android:layout_alignBottom="@+id/empty_album_containter"/>
            <FrameLayout
                android:background="@drawable/profile_ripple_effect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/icon"
            android:background="@drawable/profile_suggest_album_icon_background"
            android:padding="4dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_album_row_item_title_margin_top_normal"
            android:maxLines="1"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/desc_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="12dp"
                android:textColor="?attr/TextColor2"
                android:ellipsize="end"
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </RelativeLayout>
    </RelativeLayout>
</merge>
