<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/feed_audio_popup_bg"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="0x7f0701d8">
    <include layout="@layout/layout_dialog_header_confirm"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/confirm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="@color/cMtxt2"
            android:id="@+id/confirm_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            style="@style/Roboto.f0"/>
    </LinearLayout>
    <include layout="@layout/layout_dialog_footer_confirm"/>
</LinearLayout>
