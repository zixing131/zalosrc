<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/sv_backgroundmain"
        android:background="@color/cM0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="@color/cM1"
            android:id="@+id/web_login_close"
            android:background="@drawable/bg_text_btn_press"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/str_web_login_close"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/web_login_logo_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <com.androidquery.util.RecyclingImageView
                android:id="@+id/web_login_icon"
                android:background="0x7f080d4a"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"/>
            <com.androidquery.util.RecyclingImageView
                android:id="@+id/web_login_avatar"
                android:background="0x7f080d4f"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f10"
                android:textColor="@color/cMtxt1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/web_login_title"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/str_web_login_title"
                android:includeFontPadding="false"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="@color/cMtxt1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/web_login_message"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/str_web_login_subtitle"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/web_login_approve"
            android:layout_width="@dimen/mat_startup_button_width"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="21dp"
            android:text="@string/str_web_login_approve"
            style="@style/btnType1.big"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="@color/cM1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/web_login_deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_web_login_deny"
            style="@style/MaterialClickableTextview"/>
    </LinearLayout>
</ScrollView>
