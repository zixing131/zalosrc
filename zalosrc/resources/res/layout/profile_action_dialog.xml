<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/feed_audio_popup_bg"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dialog_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textStyle="bold"
        android:textColor="?attr/TextColor1"
        android:id="@+id/dialog_title"
        android:paddingLeft="24dp"
        android:paddingTop="20dp"
        android:paddingRight="24dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fstyle="medium"
        style="@style/Roboto.f9b"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_list_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
