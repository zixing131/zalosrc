<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.layout.MovableView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/phone_call_root"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/top_profile_cover_gradient"
        android:background="@drawable/profile_cover_gradient"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/cover_image"/>
    <View
        android:id="@+id/profile_cover_gradient"
        android:background="@drawable/bottom_profile_cover_gradient"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/cover_image"/>
    <com.zing.zalo.uicontrol.CircleImage
        android:id="@+id/imvAvatar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-70dp"
        android:layout_marginRight="12dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/cover_image"
        app:srcCompat="?attr/default_avatar"
        style="@style/ava4"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imvAvatar"
        android:layout_below="@+id/cover_image"
        android:layout_alignTop="@+id/imvAvatar"
        android:layout_alignBottom="@+id/imvAvatar">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f1"
            android:textColor="@color/cM0"
            android:ellipsize="end"
            android:id="@+id/user_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f6"
            android:textColor="@color/cM0_alpha80"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/user_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ic_setting"
        android:padding="10dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:src="0x7f080cf4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/ic_close"
        android:padding="10dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:src="0x7f080cf2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</com.zing.zalo.p077ui.widget.layout.MovableView>
