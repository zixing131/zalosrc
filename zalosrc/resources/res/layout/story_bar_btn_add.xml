<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/story_bar_btn_add_layout"
    android:layout_width="@dimen/story_bar_avatar_width"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/story_bar_item_avatar_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <com.zing.zalo.p077ui.widget.imageview.RoundCornerImageView
            android:layout_gravity="center"
            android:id="@+id/ic_story_avatar"
            android:duplicateParentState="true"
            android:layout_width="@dimen/story_bar_thumb_width"
            android:layout_height="@dimen/story_bar_thumb_height"
            android:src="@drawable/story_newstory_bg"
            android:scaleType="centerCrop"/>
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/ic_story_add"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080fab"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/img_story_promote_red_dot"
        android:visibility="gone"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="-6dp"
        android:src="@drawable/icon_green_dot"
        android:layout_alignTop="@+id/story_bar_item_avatar_group"
        android:layout_alignRight="@+id/story_bar_item_avatar_group"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="@color/itemlist_text"
        android:ellipsize="end"
        android:id="@+id/tv_story_name"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/str_story_add"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_below="@+id/story_bar_item_avatar_group"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
