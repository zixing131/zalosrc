<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_container"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/inviteGroup_title"
        app:middleType="title"
        style="@style/WhiteZdsActionBar.AppType"/>
    <FrameLayout
        android:id="@+id/search_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <com.zing.zalo.uicontrol.CustomEditText
            android:textSize="16dp"
            android:textColor="?attr/TextColor1"
            android:textColorHint="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/search_input_text"
            android:background="@drawable/bg_search_share_view"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="@string/hint_search_member"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_searchbox_n"
            android:drawablePadding="10dp"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
        <ImageButton
            android:layout_gravity="end|center_vertical"
            android:id="@+id/btn_input_type"
            android:background="@color/transparent"
            android:visibility="gone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/login_123"
            android:scaleType="centerInside"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:id="@+id/phoneList"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/section_footer"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="0x7f081174"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/content_section_footer"
                android:background="?attr/PopupBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/rv_bubbles"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/btn_done_invite_to_group"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        app:srcCompatEx="?attr/floating_action_btn_next"/>
                </LinearLayout>
                <View
                    android:background="?attr/SeparatorColor1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/section_enable_history_msg"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="14dp"
                        android:textColor="?attr/TextColor1"
                        android:id="@+id/toggle_enable_history_msg_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/str_setting_chat_history_v2"
                        android:maxLines="2"
                        android:layout_weight="1"/>
                    <com.zing.zalo.p077ui.widget.StencilSwitch
                        android:id="@+id/toggle_enable_history_msg"
                        android:duplicateParentState="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/toggle_enable_history_msg_title"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout>
