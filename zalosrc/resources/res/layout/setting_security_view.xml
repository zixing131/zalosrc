<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/SecondaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <LinearLayout
        android:background="@drawable/bg_tab_normal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/tv_tab_not_processed"
            android:background="@drawable/bg_tab_selected_security_checkup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/str_tab_unresolved"
            android:layout_weight="1"
            style="@style/Roboto.f5b"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TabUnSelectedColor"
            android:gravity="center"
            android:id="@+id/tv_tab_processed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/str_tab_resolved"
            android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/layout_tab_not_processed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/content_tab_not_processed"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.SecurityCheckupItemView
                        android:id="@+id/header_zinstant_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.zing.zalo.zinstant.ZaloZinstantRootLayout
                            android:gravity="center_vertical"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/zinstant_layout"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:layout_width="300dp"
                            android:layout_height="100dp"/>
                    </com.zing.zalo.p077ui.widget.SecurityCheckupItemView>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ll_list_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f5"
                        android:textColor="?attr/TextColor2"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_learn_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:text="@string/str_learn_more_security_checkup"/>
                </LinearLayout>
            </ScrollView>
            <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
                android:id="@+id/state_not_processed"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msvEmptyLayout="@layout/layout_empty_state"
                app:msvErrorLayout="@layout/layout_error_state"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/layout_tab_processed"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
                android:id="@+id/state_processed"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msvEmptyLayout="@layout/layout_empty_resolved_security_hub"
                app:msvErrorLayout="@layout/layout_error_state"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
