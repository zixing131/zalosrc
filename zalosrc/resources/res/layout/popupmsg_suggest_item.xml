<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top"
    android:orientation="horizontal"
    android:id="@+id/layoutPopupMsg"
    android:paddingBottom="@dimen/standard_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.AvatarImageView
        android:layout_gravity="top|left"
        android:id="@+id/buddy_dp"
        android:layout_width="@dimen/ava4"
        android:layout_height="@dimen/ava4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        android:src="0x7f080958"
        android:contentDescription="@string/str_desImg"/>
    <LinearLayout
        android:gravity="left"
        android:orientation="vertical"
        android:id="@+id/layoutMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@+id/buddy_dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/name"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="2"
            style="@style/Roboto.f2b"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/phone_number"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/find_friend_by_phone_number"
            android:maxLines="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/contentMessage"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/chat_empty_layout_text_friend"
            android:maxLines="3"/>
    </LinearLayout>
</RelativeLayout>
