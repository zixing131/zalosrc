<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fstyle="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_comment_view"
    android:background="?attr/TimelineSecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.uicontrol.SwipeRefreshListView
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fstyle:modeContent="recycleview"/>
    <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
        android:id="@+id/multi_state"
        android:background="?attr/TimelineSecondaryBackgroundColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fstyle:msvEmptyLayout="@layout/layout_time_line_empty_state"
        fstyle:msvErrorLayout="@layout/layout_error_state"
        fstyle:msvFullEmptyLayout="@layout/layout_fullscreen_empty_state"/>
    <com.zing.zalo.feed.mvp.feed.view.component.TabsControlLayout
        android:id="@+id/tab_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.zdesign.component.tab.ZdsTabBar
            android:id="@+id/tab_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ZdsTabBar.NormalTab"/>
        <FrameLayout
            android:id="@+id/layoutNewFeedNotify"
            android:background="@drawable/bg_timeline_notify"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/tab_control"
            android:layout_centerHorizontal="true">
            <View
                android:layout_gravity="center"
                android:background="@drawable/stencils_bg_new_post_in_feed_notif"
                android:layout_width="7dp"
                android:layout_height="7dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="13dp"
                android:textColor="@color/cM0"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_new_feed_notify"
                android:paddingLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_timeline_newfeed"
                fstyle:fstyle="medium"/>
        </FrameLayout>
    </com.zing.zalo.feed.mvp.feed.view.component.TabsControlLayout>
</FrameLayout>
