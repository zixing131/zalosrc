<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tf="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/feedItemBodyTimeBar"
        android:background="?attr/ProfileLineColor"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_profile_timebar_marginleft"
        android:layout_alignBottom="@+id/bottomAnchor"
        android:layout_alignParentTop="true"/>
    <FrameLayout
        android:background="@drawable/bg_feed_profile_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/feed_padding_left_profile"
        android:layout_marginRight="@dimen/feed_padding_right_profile"
        android:layout_alignBottom="@+id/bottomAnchor"
        android:layout_alignParentTop="true"/>
    <RelativeLayout
        android:id="@+id/layoutLinkContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:id="@+id/imvAvatarBody"
            android:visibility="gone"
            android:layout_width="@dimen/feed_mutual_avatar_size"
            android:layout_height="@dimen/feed_mutual_avatar_size"
            android:layout_marginLeft="@dimen/feed_mutual_avatar_marginleft"
            android:scaleType="fitXY"/>
        <FrameLayout
            android:layout_gravity="left"
            android:id="@+id/profile_feed_video_thumb_group"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="@dimen/feed_padding_left_profile_item"
            android:layout_marginRight="@dimen/feed_padding_right">
            <com.zing.zalo.videoplayer.VideoThumbnailView
                android:layout_gravity="left"
                android:id="@+id/imvMediaThumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tf:video_play_icon="@drawable/icn_csc_play_small"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/feed_item_video_processing_view"/>
        </FrameLayout>
    </RelativeLayout>
    <View
        android:id="@+id/bottomAnchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="1dp"
        android:layout_below="@+id/layoutLinkContainer"
        android:layout_alignParentBottom="true"/>
</merge>
