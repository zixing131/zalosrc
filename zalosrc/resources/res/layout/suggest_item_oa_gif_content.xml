<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/view_background"
        android:background="@drawable/bg_feed_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.uicontrol.ZSimpleGIFView
        android:id="@+id/zsimple_gif_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_below="@+id/imvPhoto_multi"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layoutSuggestDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginTop="@dimen/feed_content_padding"
        android:layout_marginRight="@dimen/feed_padding_right"
        android:layout_toLeftOf="@+id/btSuggestAction"
        android:layout_below="@+id/zsimple_gif_view"
        android:layout_alignParentLeft="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tvMediaTitle"
            android:background="@drawable/bg_btn_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="@style/Feed.Body.LinkTitle"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tvMediaSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/Feed.Body.LinkSubTitle"/>
    </LinearLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="13dp"
        android:textColor="@drawable/bg_btn_type2_text"
        android:gravity="center"
        android:id="@+id/btSuggestAction"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="@dimen/feed_padding_right"
        android:layout_marginBottom="3dp"
        android:minWidth="69dp"
        android:layout_alignTop="@+id/layoutSuggestDetail"
        android:layout_alignParentRight="true"
        android:textAllCaps="true"
        style="@style/btnType2.small"/>
    <View
        android:id="@+id/bottomAnchor"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/feed_content_padding"
        android:layout_below="@+id/layoutSuggestDetail"/>
</merge>
