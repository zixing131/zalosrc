<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="@color/white"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutStickerDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/layoutDownload"
            android:background="@color/transparent"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.androidquery.util.RecyclingImageView
                    android:id="@+id/imvAvatar"
                    android:layout_width="@dimen/ava4"
                    android:layout_height="@dimen/ava4"
                    android:src="0x7f0804ee"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f2"
                        android:textColor="@color/cMtxt1"
                        android:gravity="center"
                        android:id="@+id/tvCateName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f7"
                        android:textColor="@color/cTime1"
                        android:gravity="center"
                        android:id="@+id/tvCateQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f7"
                        android:textColor="@color/cTime1"
                        android:gravity="center"
                        android:id="@+id/tvCateDesc"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f7"
                        android:textColor="@color/cTime1"
                        android:gravity="center"
                        android:id="@+id/tvCateSource"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_StickerDetails_source"/>
                </LinearLayout>
                <com.zing.zalo.p077ui.widget.RobotoButton
                    android:textColor="@drawable/bg_btn_type2_text"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btn_Download"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_width="wrap_content"
                    android:minWidth="72dp"
                    android:text="@string/str_stickercategory_free"
                    style="@style/btnType2.medium"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f7"
                android:textColor="@color/cTime1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_sticker_hidden"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/str_sticker_hidden_msg"/>
        </LinearLayout>
        <View
            android:id="@+id/seperate_line"
            android:background="@color/cLine1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/layoutPreview"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.webview.ZWebView
                android:id="@+id/webview"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"/>
            <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
                android:id="@+id/multi_state"
                android:background="@color/transparent"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msvEmptyLayout="@layout/layout_empty_state"
                app:msvErrorLayout="@layout/layout_error_state"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
