<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:orientation="horizontal"
    android:id="@+id/layout_error"
    android:background="@color/bg_connect_notif_error"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textAppearance="@style/TextAppearance.Snackbar.Message"
        android:textColor="@color/cMtxt1"
        android:ellipsize="end"
        android:layout_gravity="start|center_vertical"
        android:id="@+id/error_text"
        android:paddingLeft="@dimen/design_snackbar_padding_horizontal"
        android:paddingRight="@dimen/design_snackbar_padding_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_story_load_fail"
        android:maxLines="@integer/design_snackbar_text_max_lines"
        android:layout_weight="1"/>
    <com.zing.zalo.zdesign.component.ButtonWithProgress
        android:layout_gravity="center_vertical"
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:minWidth="70dp"
        android:text="@string/str_story_retry"
        style="@style/ButtonSmall.Primary"/>
    <com.zing.zalo.zdesign.component.Button
        android:layout_gravity="center_vertical"
        android:id="@+id/btn_delete_failed_story"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:minWidth="70dp"
        android:text="@string/delete"
        style="@style/ButtonSmall.PrimaryDanger"/>
    <androidx.appcompat.widget.ZAppCompatImageView
        android:layout_gravity="center"
        android:id="@+id/btn_error_story_settings"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingRight="8dp"
        android:paddingBottom="10dp"
        android:clickable="true"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="0x7f080fb1"/>
</LinearLayout>
