<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/zalo_cloud_restore_view_0"
    android:background="?attr/surface_background_alt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.widget.ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/ivSyncData"
                android:layout_width="@dimen/sync_icon_size"
                android:layout_height="@dimen/sync_icon_size"
                android:layout_marginTop="@dimen/backup_restore_margin_top_big"
                app:srcCompatEx="@drawable/ic_backup_restore_intro"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="22dp"
                android:textColor="?attr/text_primary"
                android:gravity="center_horizontal"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/str_zcloud_connect_to_zcloud"
                android:textAlignment="center"
                app:lineHeight="26dp"
                style="@style/t_xlarge"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_02"
                android:id="@+id/tv_description"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:text="@string/str_zcloud_enter_protection_code_to_connect_zcloud"
                android:textAlignment="center"
                style="@style/t_small"/>
            <com.zing.zalo.zdesign.component.ListItem
                android:id="@+id/listItemMessages"
                android:background="?attr/surface_background_alt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"/>
            <com.zing.zalo.zdesign.component.ListItem
                android:id="@+id/listItemMedia"
                android:background="?attr/surface_background_alt"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"/>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="?attr/surface_background_alt"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:enabled="true"
            android:textSize="@dimen/f0"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/btnInputKey"
            android:focusable="true"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="match_parent"
            android:minWidth="160dp"
            android:text="@string/str_title_input_protect_code_data"
            style="@style/ButtonLarge.Primary"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:enabled="true"
            android:textSize="@dimen/f0"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/btnCanNotConnect"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:minWidth="160dp"
            android:text="@string/str_zcloud_can_not_connect"
            style="@style/ButtonLarge.TertiaryNeutral"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:background="?attr/surface_background_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:leadingType="custom"
        app:trailingType="custom"
        style="@style/WhiteZdsActionBar.AppType"/>
</FrameLayout>
