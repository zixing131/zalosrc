<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.StickerView
        android:layout_gravity="center"
        android:id="@+id/sticker_item_element"
        android:layout_width="@dimen/item_sticker_height"
        android:layout_height="@dimen/item_sticker_height"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progress_id"
        android:visibility="gone"
        android:layout_width="@dimen/progressbar_sticker_weight"
        android:layout_height="@dimen/progressbar_sticker_height"
        style="@style/Widget.AppCompat.ProgressBar"/>
    <ImageView
        android:layout_gravity="bottom|right"
        android:id="@+id/sticker_icon_voice"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:src="0x7f0804cb"
        android:scaleType="fitCenter"/>
</FrameLayout>
