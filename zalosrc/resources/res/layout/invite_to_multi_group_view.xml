<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeable_view"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout
        android:orientation="vertical"
        android:id="@+id/main_container"
        android:background="?attr/PrimaryBackgroundColor"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leadingType="back"
            app:middleTitleText="@string/inviteGroup_title"
            app:middleType="title"
            style="@style/WhiteZdsActionBar.AppType"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_search"
            android:background="?attr/PrimaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp">
            <com.zing.zalo.uicontrol.CustomEditText
                android:textSize="@dimen/f2"
                android:textColor="?attr/TextColor1"
                android:textColorHint="?attr/TextColor2"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/edit_search"
                android:background="@drawable/bg_search_share_view"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/str_groupname"
                android:maxLines="1"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_searchbox_n"
                android:drawablePadding="12dp"
                app:disableScaleTextSize="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/btn_create_group"
            android:background="@drawable/stencils_contact_bg"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_creategroup_32_line"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="16dp"
                android:textColor="?attr/TextColor1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/btn_create_group_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/section_divider"
            android:background="?attr/SecondaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_group_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
                android:id="@+id/multi_state"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msvEmptyLayout="@layout/layout_empty_state"
                app:msvErrorLayout="@layout/layout_error_state"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/section_footer"
                android:background="@color/transparent"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="?attr/shadow"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/content_section_footer"
                    android:background="?attr/PopupBackgroundColor"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/selected_recycler_view"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"/>
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/btn_done_invite_to_group"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        app:srcCompatEx="?attr/floating_action_btn_next"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
