<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/vieBackground"
        android:background="@drawable/zch_bg_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/rivThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/vieOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/lytPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:theme="@style/CircularProgressWhite"
            android:layout_gravity="center"
            android:id="@+id/barLoading"
            android:visibility="gone"
            android:layout_width="@dimen/zch_item_video_loading_bar_size"
            android:layout_height="@dimen/zch_item_video_loading_bar_size"
            android:indeterminate="true"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnPlay"
            android:background="@drawable/zch_bg_button_video_play"
            android:visibility="gone"
            android:layout_width="@dimen/zch_item_video_play_btn_size"
            android:layout_height="@dimen/zch_item_video_play_btn_size"
            android:src="@drawable/zch_ic_play_solid_36"
            android:scaleType="centerInside"/>
    </FrameLayout>
    <View
        android:id="@+id/dimBackgroundInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnLike"
        android:paddingTop="@dimen/zch_item_video_right_btn_padding_top"
        android:paddingBottom="@dimen/zch_item_video_right_btn_padding_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_heart_shadow_solid_36"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="@dimen/zch_item_video_right_btn_text_size_number"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtLike"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="1dp"
        package:zchShadowDyDip="1dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnComment"
        android:paddingTop="@dimen/zch_item_video_right_btn_padding_top"
        android:paddingBottom="@dimen/zch_item_video_right_btn_padding_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_comment_shadow_solid_36"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="@dimen/zch_item_video_right_btn_text_size_number"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtComment"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="1dp"
        package:zchShadowDyDip="1dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnBookmark"
        android:paddingTop="@dimen/zch_item_video_right_btn_padding_top"
        android:paddingBottom="@dimen/zch_item_video_right_btn_padding_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_bookmark_feed_solid_36"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="@dimen/zch_item_video_right_btn_text_size_string"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtBookmark"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_video_bookmark"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="1dp"
        package:zchShadowDyDip="1dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnDislike"
        android:paddingTop="@dimen/zch_item_video_right_btn_padding_top"
        android:paddingBottom="@dimen/zch_item_video_right_btn_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_dislike_shadow_solid_36"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnShare"
        android:paddingTop="@dimen/zch_item_video_right_btn_padding_top"
        android:paddingBottom="@dimen/zch_item_video_right_btn_padding_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_share_shadow_solid_36"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="@dimen/zch_item_video_right_btn_text_size_string"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtShare"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_video_share"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="1dp"
        package:zchShadowDyDip="1dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnMore"
        android:paddingTop="@dimen/zch_item_video_right_btn_padding_top"
        android:paddingBottom="@dimen/zch_item_video_right_btn_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_more_horizontal_shadow_solid_36"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnDelete"
        android:paddingTop="@dimen/zch_item_video_right_btn_padding_top"
        android:paddingBottom="@dimen/zch_item_video_right_btn_padding_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_delete_shadow_solid_36"
        android:scaleType="centerInside"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="@dimen/zch_item_video_right_btn_text_size_string"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtDelete"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_video_delete"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="1dp"
        package:zchShadowDyDip="1dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/aivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        package:zchCornerRadius="@dimen/zch_radius_4dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitUsernameTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/btnFollow"
        android:background="@drawable/zch_bg_button_video_follow"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_video_follow"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="regular"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <com.zing.zalo.shortvideo.p072ui.component.p073rv.item.DescriptionLayout
        android:id="@+id/lytDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ScrollView
            android:id="@+id/scrDescription"
            android:scrollbars="none"
            android:fadingEdgeLength="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:requiresFadingEdge="vertical">
            <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
                android:textSize="14dp"
                android:textColor="@color/zch_text_primary"
                android:ellipsize="end"
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#40000000"
                android:lineSpacingExtra="3dp"
                package:zchFontStyle="regular"
                package:zchShadowDxDip="0.5dp"
                package:zchShadowDyDip="0.5dp"/>
        </ScrollView>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.BlinkTextView
            android:textSize="14dp"
            android:textColor="@color/zch_text_inverse_subtle"
            android:gravity="end"
            android:id="@+id/btnCollapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zch_item_video_collapse"
            android:shadowColor="#40000000"
            package:zchFontStyle="regular"
            package:zchShadowDxDip="0.5dp"
            package:zchShadowDyDip="0.5dp"/>
    </com.zing.zalo.shortvideo.p072ui.component.p073rv.item.DescriptionLayout>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="@color/zch_text_inverse_subtle"
        android:id="@+id/txtCreatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#40000000"
        package:zchFontStyle="regular"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
</merge>
