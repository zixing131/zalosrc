<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/layoutBtnDialog"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="20dp">
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:textColor="?attr/btn_type_3_text_n"
        android:gravity="center"
        android:id="@+id/confirm_btn_no"
        android:background="@drawable/bg_btn_type3_medium"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:minWidth="64dp"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        style="@style/Roboto.f13"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:textColor="?attr/bg_btn_type1_text"
        android:gravity="center"
        android:id="@+id/confirm_btn_yes"
        android:background="@drawable/bg_btn_type1_medium"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:minWidth="64dp"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        style="@style/Roboto.f13"/>
</LinearLayout>
