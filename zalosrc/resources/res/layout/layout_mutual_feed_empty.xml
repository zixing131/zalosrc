<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/avt_mine"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"/>
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/avt_friend"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="84dp"
            android:scaleType="fitXY"/>
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/ic_secret"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="#3e444b"
        android:gravity="center"
        android:id="@+id/tv_status_mutual_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"/>
    <Button
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/btn_share_mutual_empty"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:minWidth="156dp"
        android:textAllCaps="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textStyle="normal"
        android:textColor="#3e444b"
        android:gravity="bottom|center_horizontal"
        android:layout_gravity="bottom"
        android:id="@+id/tv_notice_mutual_empty"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"/>
</LinearLayout>
