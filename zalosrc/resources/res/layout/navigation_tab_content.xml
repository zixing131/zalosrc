<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <RelativeLayout
        android:id="@+id/navbar_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/navbar_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"/>
        <com.zing.zalo.zlottie.widget.LottieImageView
            android:id="@+id/navbar_icon_active"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <com.zing.zalo.zdesign.component.Badge
        android:id="@+id/navbar_badge"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/navbar_image_layout"
        android:layout_alignTop="@+id/navbar_image_layout"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/text_02"
        android:gravity="center"
        android:id="@+id/navbar_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/navbar_image_layout"
        style="@style/bottom_nav_text"/>
</RelativeLayout>
