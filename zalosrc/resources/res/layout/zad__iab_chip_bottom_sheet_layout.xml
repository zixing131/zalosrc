<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/zad__landing_chip_bottom_sheet"
    android:background="@color/zad__dim_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/zad__landing_bottom_sheet_dismiss_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/zad__feedback_dialog_background"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/zad__iab_vertical_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Đánh dấu liên kết đáng nghi?"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/zad__landing_bottom_sheet_close"
                style="@style/AdtimaIabIconStyle"/>
        </LinearLayout>
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <TextView
            android:text="@string/zad__feedback_message"
            style="@style/AdtimaIabFeedbackTextStyle"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/zad__iab_vertical_padding"
            android:paddingRight="@dimen/zad__iab_vertical_padding"
            android:paddingBottom="@dimen/zad__iab_vertical_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/zad__landing_chip_container"
                android:paddingBottom="@dimen/zad__iab_vertical_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.adtima.control.FlowLayout
                    android:id="@+id/zad__landing_chip_group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/zad__landing_btn_confirm"
                android:text="@string/zad__btn_confirm"
                style="@style/AdtimaIabButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
