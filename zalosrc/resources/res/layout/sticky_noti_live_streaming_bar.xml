<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/BannerBackgroundColor2"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <com.zing.zalo.uicontrol.CircleImage
        android:id="@+id/imvAvatar"
        android:layout_marginLeft="@dimen/feed_content_padding"
        android:src="0x7f080958"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        style="@style/ava2"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/btn_join"
        android:layout_toRightOf="@+id/imvAvatar"
        android:layout_centerInParent="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="11dp"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/tv_live_streaming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ls_is_live_now"
            android:maxLines="1"/>
    </LinearLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="@drawable/bg_btn_type2_text"
        android:gravity="center"
        android:id="@+id/btn_join"
        android:paddingLeft="@dimen/stencils_button_padding"
        android:paddingRight="@dimen/stencils_button_padding"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginRight="12dp"
        android:minWidth="51dp"
        android:text="@string/ls_join"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="@style/btnType2.small"/>
</RelativeLayout>
