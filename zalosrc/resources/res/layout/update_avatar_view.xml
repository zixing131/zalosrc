<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/fDes_startup"
        android:textColor="?attr/TextColor1"
        android:gravity="center_vertical"
        android:background="?attr/SecondaryBackgroundColor"
        android:paddingLeft="@dimen/padding_title_login"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/padding_title_login"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="39dp"
        android:text="@string/str_hint_update_avatar"/>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/layoutUpdateNewUserAvatar"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginTop="116dp">
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:layout_gravity="center"
            android:id="@+id/imvAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/str_desImg"
            app:srcCompat="@drawable/default_avatar2"
            style="@style/myImageView"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center"
            android:id="@+id/ic_hint_update_avt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080ee0"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <include
            android:id="@+id/pbUploadAvatar"
            android:padding="10dp"
            android:visibility="gone"
            layout="@layout/holo_circular_progress_bar_mini"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnRetryUploadAvatar"
            android:background="@color/transparent"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/str_desImg"
            app:srcCompat="@drawable/ic_reload_avagroup"/>
    </RelativeLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f5"
        android:textColor="?attr/TextColor2"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/padding_title_login"
        android:paddingRight="@dimen/padding_title_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:maxWidth="300dp"
        android:minHeight="36dp"
        android:text="@string/str_hint_update_arvatar"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="@color/text_action_primary_color_statelist"
        android:gravity="center"
        android:id="@+id/tvChooseImage"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/str_choose_image"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="bottom|right"
        android:id="@+id/tv_str_skip"
        android:padding="10dp"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:scaleType="centerCrop"
        app:srcCompatEx="?attr/floating_action_btn_next"/>
</LinearLayout>
