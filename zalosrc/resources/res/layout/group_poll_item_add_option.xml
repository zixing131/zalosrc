<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="15dp"
            android:textColor="?attr/TabUnSelectedColor"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_add_more_option"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_poll_button_add_option"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            app:fstyle="medium"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:background="@drawable/ic_plus_line_16"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/tv_add_more_option"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
