<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f1"
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="32dp"
        style="@style/Roboto.f2b"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f5"
        android:textColor="?attr/TextColor2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:text="@string/str_hint_create_username_success"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btn_chat_gallery_done"
        android:clickable="true"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="60dp"
        android:text="@string/str_btn_done_create_username"
        style="@style/MaterialStartupButton"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8"
            android:textColor="?attr/TextColor2"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/tv_intro_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:layout_marginBottom="20dp"
            android:text="@string/str_intro_setting_username"/>
    </FrameLayout>
</LinearLayout>
