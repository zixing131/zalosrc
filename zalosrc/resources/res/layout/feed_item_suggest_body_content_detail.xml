<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/layoutSuggestFeed"
        android:background="@drawable/rectangle_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/bottomAnchor"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f71"
        android:textColor="?attr/TextColor2"
        android:gravity="center"
        android:id="@+id/tvSuggestHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginTop="8dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="8dp"
        android:includeFontPadding="false"/>
    <View
        android:id="@+id/dividerSuggestHeader"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tvSuggestHeader"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="13dp"
        android:id="@+id/tvSuggestFeedHeaderTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:maxLines="2"
        android:layout_below="@+id/dividerSuggestHeader"/>
    <View
        android:id="@+id/dividerSuggestTag"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tvSuggestFeedHeaderTag"/>
    <com.zing.zalo.p077ui.widget.AvatarImageView
        android:id="@+id/imvAvatarFeed"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/dividerSuggestTag"
        style="@style/avtS"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginRight="@dimen/feed_padding_right"
        android:layout_toLeftOf="@+id/btn_submenu_feed_ads"
        android:layout_toRightOf="@+id/imvAvatarFeed"
        android:layout_alignTop="@+id/imvAvatarFeed"
        android:layout_alignBottom="@+id/imvAvatarFeed">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:includeFontPadding="false"
            style="@style/Feed.Header.Name"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:id="@+id/tvAdsLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_feed_ads_location"
            android:singleLine="true"
            android:drawableLeft="0x7f080bb2"
            android:drawablePadding="4dp"
            style="@style/Feed.Body.LinkSubTitle"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_submenu_feed_ads"
        android:background="@drawable/bg_btn_postfeed"
        android:padding="6dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@drawable/stencils_ic_expand"
        android:layout_below="@+id/dividerSuggestTag"
        android:layout_alignParentRight="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/feed_status_text_size"
        android:textColor="@color/primary_text_color"
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginTop="@dimen/feed_content_padding"
        android:layout_marginRight="@dimen/feed_padding_right"
        android:layout_below="@+id/imvAvatarFeed"
        android:lineSpacingExtra="1.8dp"/>
    <com.zing.zalo.feed.uicontrols.FeedAdsImageView
        android:id="@+id/imvPhoto"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/feed_content_padding"
        android:layout_marginRight="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_below="@+id/tvMessage"/>
    <include layout="@layout/feed_item_ads_bottom_detail"/>
    <View
        android:id="@+id/bottomAnchor"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/feed_padding_top"
        android:layout_below="@+id/layoutSuggestDetail"/>
</merge>
