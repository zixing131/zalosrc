<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:k="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/main_container"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.zing.zalo.uicontrol.CustomEditText
        android:textSize="16dp"
        android:textColor="?attr/TextColor1"
        android:textColorHint="?attr/TextColor2"
        android:ellipsize="end"
        android:id="@+id/search_input_text"
        android:background="@drawable/bg_search_share_view"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:hint="@string/str_call_groupcall_search_bar_text"
        android:maxLines="1"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_searchbox_n"
        android:drawablePadding="10dp"
        android:layout_below="@+id/zalo_action_bar"
        android:inputType="textMultiLine"
        android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/section_footer"
        android:background="@drawable/res_call_bg_footer_create_group_call"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="15dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_selected_base_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="@string/str_call_groupcall_ready_list_title"
                android:lines="1"
                android:singleLine="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/num_selected_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:lines="1"
                android:singleLine="true"/>
        </LinearLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="#ef4e49"
            android:id="@+id/txt_limit_mem_warning"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minWidth="170dp"
            android:lines="1"
            android:singleLine="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center_vertical"
            android:id="@+id/rv_selected_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="16dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_create_group_call"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:text="@string/str_call_groupcall_start_button"
            android:lines="1"
            android:singleLine="true"
            style="@style/btnType1.medium"/>
    </LinearLayout>
    <FrameLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/section_footer"
        android:layout_below="@+id/search_input_text">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_members"
            android:background="?attr/PrimaryBackgroundColor"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            k:msvEmptyLayout="@layout/layout_empty_state"
            k:msvErrorLayout="@layout/layout_error_state"/>
    </FrameLayout>
</com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout>
