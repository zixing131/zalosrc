<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_friend_suggest_profile"
    android:background="?attr/ProfilePrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="?attr/text_02"
        android:id="@+id/description"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:textAlignment="center"/>
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btn_send_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/str_btn_chat"
            android:layout_toLeftOf="@+id/btn_send_friend_request"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            app:btnSupportiveIcon="@drawable/zds_ic_chat_line_24"
            app:btnSupportiveIconPosition="leading"
            style="@style/ButtonMedium.Secondary"/>
        <View
            android:id="@+id/center_baseline_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btn_send_friend_request"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            app:btnSupportiveIcon="@drawable/zds_ic_add_user_line_24"
            style="@style/ButtonMedium.SecondaryAlphaNeutral"/>
    </RelativeLayout>
    <com.zing.zalo.zdesign.component.Divider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"/>
</LinearLayout>
