<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="32dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/zad__img_thanks"
        android:background="@drawable/zad__ic_thanks_hide"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/zad__text_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Cảm ơn bạn đã gửi báo cáo"/>
    <TextView
        android:textSize="14sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chúng tôi sẽ cố gắng hiển thị quảng cáo phù hợp hơn với bạn"/>
</LinearLayout>
