<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="?attr/TextColor2"
        android:layout_gravity="center_vertical"
        android:id="@+id/tvComment"
        android:paddingTop="@dimen/feed_padding_top"
        android:paddingBottom="@dimen/feed_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginRight="@dimen/feed_padding_right"/>
    <include layout="@layout/layout_comment_loading"/>
</LinearLayout>
