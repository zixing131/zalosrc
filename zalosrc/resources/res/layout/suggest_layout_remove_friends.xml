<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_remove_friends"
    android:background="@drawable/stencils_contact_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/group_avatar_view_container_size"
            android:layout_height="@dimen/group_avatar_view_container_size"
            android:layout_marginLeft="@dimen/msg_item_padding_l_r"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="0x7f080f04"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="@color/cMtxt2"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_hint_delete_phone_book"
                android:maxLines="5"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="@color/cM1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/str_btn_show_list_delete_phone_book"
                android:maxLines="1"
                android:singleLine="true"
                android:drawablePadding="6dp"
                android:textAllCaps="true"/>
        </LinearLayout>
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/btn_cancel"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/btn_removeimg"/>
    </LinearLayout>
    <View
        android:background="@color/cLine2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
