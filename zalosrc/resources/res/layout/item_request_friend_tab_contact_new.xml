<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/stencils_bg_white_round_state"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp">
        <com.zing.zalo.p077ui.widget.AvatarImageView
            android:layout_gravity="center"
            android:id="@+id/img_avt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="?attr/default_avatar"
            style="@style/myImageView"/>
        <View
            android:layout_gravity="right"
            android:id="@+id/numnotification_layoutfriendsuggest"
            android:background="@drawable/reddot_chip_tab_contact"
            android:visibility="gone"
            android:layout_width="12dp"
            android:layout_height="12dp"/>
    </FrameLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f4"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:id="@+id/name"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:singleLine="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f8"
        android:textColor="?attr/TextColor2"
        android:ellipsize="end"
        android:id="@+id/des"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:singleLine="true"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f8"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvDecline"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/str_reject_friend_done"
            android:maxLines="1"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btn_accept_friend_request"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/str_accept_friend_request"
                android:textAllCaps="true"
                style="@style/btnType2.medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btn_remove"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:text="@string/btn_reject_Invitation"
                android:textAllCaps="true"
                style="@style/btnType3.medium"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
