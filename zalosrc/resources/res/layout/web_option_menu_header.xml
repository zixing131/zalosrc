<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageButton
        android:id="@+id/web_back"
        android:background="@drawable/stencils_bg_menu_item_popup"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/bg_btn_navigation_back"
        android:layout_weight="1"/>
    <View
        android:id="@+id/separate_back_refresh"
        android:background="@color/cMtxt5"
        android:visibility="gone"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"/>
    <ImageButton
        android:id="@+id/web_refresh"
        android:background="@drawable/stencils_bg_menu_item_popup"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/bg_btn_navigation_refresh"
        android:layout_weight="1"/>
    <View
        android:background="@color/cMtxt5"
        android:visibility="gone"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"/>
    <ImageButton
        android:id="@+id/web_forward"
        android:background="@drawable/stencils_bg_menu_item_popup"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/bg_btn_navigation_forward"
        android:layout_weight="1"/>
</LinearLayout>
