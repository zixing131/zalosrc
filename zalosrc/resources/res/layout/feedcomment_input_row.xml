<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/commentinputbar"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <View
        android:id="@+id/horizontal_divider"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/feed_comment_input_container"
        android:background="?attr/HeaderFormColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibtn_like"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="0x7f080e28"
            android:paddingStart="@dimen/feed_padding_left"
            android:paddingEnd="@dimen/feed_padding_right"/>
        <com.zing.zalo.uicomponents.reddot.RedDotImageButton
            android:layout_gravity="center"
            android:id="@+id/imgEmoSticker"
            android:background="@drawable/bg_btn_postfeed"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icn_emoji"
            android:scaleType="center"/>
        <com.zing.zalo.uicontrol.CommentSupportGifEditText
            android:textSize="@dimen/f1b"
            android:textColor="?attr/TextColor1"
            android:textColorHint="?attr/TextColor3"
            android:autoLink="none"
            android:id="@+id/cmtinput_text"
            android:background="@color/transparent"
            android:scrollbars="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="56dp"
            android:minHeight="48dp"
            android:hint="@string/str_comment_default_text"
            android:maxEms="10"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:imeOptions="actionSend"
            android:textCursorDrawable="@drawable/feed_bar_text_cursor"/>
        <com.zing.zalo.uicomponents.reddot.RedDotImageButton
            android:layout_gravity="center"
            android:id="@+id/btnGallery"
            android:background="@drawable/bg_btn_postfeed"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add_photo"
            android:scaleType="center"/>
        <ImageButton
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/cmtinput_send"
            android:background="@drawable/item_background_ripple"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/action_menu_blue_send_icon_ripple_selector"/>
    </LinearLayout>
    <View
        android:layout_gravity="top"
        android:id="@+id/feed_comment_input_divider_bottom"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
