<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/swipeable_view"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="20dp"
                android:textColor="?attr/TextColor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="16dp"
                android:text="@string/str_change_phone_input_warn_d1"
                android:includeFontPadding="false"
                style="@style/Roboto.f1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TextColor5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="@string/str_change_phone_input_warn_d2"
                android:includeFontPadding="false"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="17dp"
                    android:textColor="?attr/TextColor1"
                    android:gravity="center_vertical"
                    android:id="@+id/tvCountryName"
                    android:background="@drawable/bg_description_input_layout"
                    android:paddingRight="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="VN"
                    android:maxLines="1"
                    android:drawablePadding="12dp"
                    android:inputType="phone"
                    style="@style/Roboto.f2b"/>
                <com.zing.zalo.uicontrol.CustomEditText
                    android:textSize="17dp"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor2"
                    android:gravity="center_vertical"
                    android:id="@+id/etPhoneNumber"
                    android:background="@drawable/edt_active"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:hint="@string/str_hint_input_new_phone_number"
                    android:maxLines="1"
                    android:ems="10"
                    android:inputType="phone"
                    style="@style/Roboto.f2b"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:enabled="false"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_marginTop="32dp"
                android:minWidth="150dp"
                android:text="@string/btn_continue"
                style="@style/btnType1.medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
