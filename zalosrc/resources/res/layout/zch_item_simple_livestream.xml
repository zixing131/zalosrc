<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.SimpleLivestreamItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.shortvideo.p072ui.component.p073rv.snaper.LivestreamVideoLayout
        android:id="@+id/lytVideo"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/rivThumbnail"
        android:background="@color/zch_layer_background_disable"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/lytInform"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_secondary"
            android:gravity="center_horizontal"
            android:id="@+id/txtInform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            package:zchFontStyle="medium"/>
    </LinearLayout>
    <View
        android:id="@+id/vieOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:theme="@style/CircularProgressWhite"
        android:id="@+id/barLoading"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/tvLive"
        android:paddingLeft="@dimen/zch_padding_8"
        android:paddingRight="@dimen/zch_padding_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_livestream_feed_live_now"
        package:zchFontStyle="regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/aivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        package:zchCornerRadius="@dimen/zch_radius_4dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitUsernameTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/btnFollow"
        android:background="@drawable/zch_bg_button_video_follow"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_video_follow"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:zchFontStyle="regular"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <View
        android:id="@+id/dividerLeft"
        android:background="@color/zch_divider_border_inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="15dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtJoinLive"
        android:paddingLeft="@dimen/zch_padding_16"
        android:paddingTop="@dimen/zch_padding_10"
        android:paddingRight="@dimen/zch_padding_16"
        android:paddingBottom="@dimen/zch_padding_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_livestream_click_to_join"
        package:zchFontStyle="regular"/>
    <View
        android:id="@+id/dividerRight"
        android:background="@color/zch_divider_border_inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#40000000"
        android:lineSpacingExtra="3dp"
        package:zchFontStyle="regular"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.SimpleLivestreamItem>
