<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="73dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp">
    <com.zing.zalo.p077ui.widget.imageview.RoundedImageView
        android:layout_gravity="center"
        android:id="@+id/slider_image_view"
        android:background="@drawable/slider_bg_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:scaleType="centerCrop"
        app:sriv_left_bottom_corner_radius="2dp"
        app:sriv_left_top_corner_radius="2dp"
        app:sriv_right_bottom_corner_radius="2dp"
        app:sriv_right_top_corner_radius="2dp"/>
    <View
        android:layout_gravity="center"
        android:id="@+id/slider_selected_view"
        android:background="@drawable/bg_stroke_slider_landing_page_white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/label_text_size"
        android:textColor="@color/label_duration_text_color"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/slider_duration"
        android:background="@drawable/slider_preview_photo_bg_video_duration"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="00:04"
        android:includeFontPadding="false"
        app:disableScaleTextSize="true"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/label_text_size"
        android:textColor="@color/label_duration_text_color"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/slider_gif_label"
        android:background="@drawable/slider_preview_photo_bg_video_duration"
        android:paddingLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="GIF"
        android:includeFontPadding="false"
        app:disableScaleTextSize="true"
        app:fstyle="medium"/>
</FrameLayout>
