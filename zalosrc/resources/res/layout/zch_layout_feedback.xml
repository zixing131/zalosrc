<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/zch_surface_background"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="15dp"
        android:textColor="@color/zch_icon_tertiary"
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        package:zchFontStyle="regular"/>
    <com.zing.zalo.p077ui.widget.RobotoEditText
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/zch_icon_tertiary"
        android:gravity="top"
        android:id="@+id/edt"
        android:background="#2e2e2e"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxHeight="80dp"
        android:hint="@string/zch_page_feedback_limit_min_length"
        android:minLines="5"
        android:includeFontPadding="false"
        android:inputType="textMultiLine"
        android:imeOptions="actionDone"
        android:textIsSelectable="true"
        android:textAlignment="gravity"
        style="@style/Roboto.Regular"/>
</LinearLayout>
