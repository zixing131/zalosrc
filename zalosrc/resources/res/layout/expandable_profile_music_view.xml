<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zing.zalo.p077ui.widget.AspectRatioImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/gif_sound_container"
        android:layout_width="@dimen/profile_music_layout_full_h"
        android:layout_height="@dimen/profile_music_layout_full_h">
        <com.zing.zalo.p077ui.widget.SlideShowSound
            android:id="@+id/gif_sound"
            android:visibility="gone"
            android:layout_width="14dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/thumb_play"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="0x7f080f3f"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_mp3_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="8dp"
        android:src="0x7f08175f"
        android:layout_alignParentRight="true"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/img_mp3_icon"
        android:layout_toRightOf="@+id/img_icon"
        android:layout_centerVertical="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f7"
            android:textColor="@color/profile_music_sticky_text_title"
            android:ellipsize="marquee"
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:marqueeRepeatLimit="marquee_forever"
            app:atFontStyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f7"
            android:textColor="@color/profile_music_sticky_text_des"
            android:ellipsize="end"
            android:id="@+id/tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_below="@+id/tv_song_title"/>
    </RelativeLayout>
</merge>
