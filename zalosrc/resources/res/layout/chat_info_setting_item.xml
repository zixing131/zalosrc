<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.zdesign.component.TrackingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_info_setting_item_row"
    android:background="@drawable/stencils_contact_bg"
    android:paddingLeft="@dimen/chat_setting_padding_left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">
    <View
        android:id="@+id/setting_bottom_divider"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="@dimen/chat_setting_padding_right"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/standard_spacing"
        android:paddingBottom="@dimen/standard_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/right_container"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor1"
            android:id="@+id/setting_text_primary"
            android:paddingLeft="@dimen/chat_setting_label_left_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ChatMessage.SettingTextPrimary"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="11dp"
            android:ellipsize="end"
            android:id="@+id/setting_subtitle"
            android:paddingLeft="@dimen/chat_setting_label_left_padding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <com.zing.zalo.p077ui.widget.StencilSwitch
            android:id="@+id/setting_switch"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_spacing"
            android:layout_marginRight="@dimen/chat_setting_padding_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/setting_ic_next"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/chat_setting_padding_right"
            android:src="@drawable/ic_head_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center"
            android:id="@+id/numnotification"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/chat_setting_padding_right"
            android:text="@string/str_noti_N_character"
            android:layout_toRightOf="@+id/icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/stencils_notification_text_view"/>
        <FrameLayout
            android:id="@+id/layout_notify_container"
            android:visibility="gone"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.androidquery.util.RecyclingImageView
                android:layout_gravity="center"
                android:id="@+id/img_notify"
                android:visibility="visible"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/bg_grey_with_corners"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_gravity="top|right"
                android:id="@+id/img_red_dot"
                android:visibility="visible"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/stencils_bg_number_notif"/>
        </FrameLayout>
    </FrameLayout>
</com.zing.zalo.zdesign.component.TrackingRelativeLayout>
