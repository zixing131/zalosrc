<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.camera.CameraEditorController xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_controllers"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <com.zing.zalo.expandableview.ExpandableActionView
        android:id="@+id/editor_expandable_action_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
    <include layout="@layout/camera_editor_controller_bottom"/>
    <View
        android:id="@+id/editor_black_overlay"
        android:background="@color/black_60"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:theme="@style/CircularProgress"
        android:id="@+id/loading_progress_bar"
        android:visibility="invisible"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:indeterminate="true"
        android:indeterminateDuration="1500"
        android:indeterminateBehavior="repeat"
        android:layout_centerInParent="true"
        style="@style/ProgressBarCircleNormal"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/text_editor_mute_indicator"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxWidth="210dp"/>
    <ViewStub
        android:id="@+id/stub_camera_button_overflow_layout"
        android:layout="@layout/camera_button_overflow_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editor_controller_bottom"
        android:layout_below="@+id/editor_controller_top"/>
    <ViewStub
        android:id="@+id/stub_camera_location_filter_layout"
        android:layout="@layout/camera_location_filter_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/stub_camera_caption_layout"
        android:layout="@layout/caption_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/stub_camera_video_speed_layout"
        android:layout="@layout/camera_video_speed_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/stub_camera_video_crop"
        android:background="@color/transparent"
        android:layout="@layout/camera_video_crop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:layout_below="@+id/editor_controller_top"
        android:layout_centerHorizontal="true"/>
    <include layout="@layout/zcamera_editor_controller_top"/>
    <ViewStub
        android:id="@+id/stub_camera_doodle_layout"
        android:layout="@layout/doodle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/stub_camera_sticker_layout"
        android:layout="@layout/camera_sticker_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/stub_camera_music_layout"
        android:layout="@layout/story_music_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.zing.zalo.camera.CameraEditorController>
