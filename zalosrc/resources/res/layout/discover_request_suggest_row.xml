<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/info_contact_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/discover_search_padding_item_l_r"
        android:paddingRight="@dimen/discover_search_padding_item_l_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/discover_search_padding_item_t_b"
            android:layout_marginRight="@dimen/discover_search_padding_item_l_r"
            android:layout_marginBottom="@dimen/discover_search_padding_item_t_b"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.GroupAvatarView
                android:id="@+id/buddy_dp"
                android:layout_width="@dimen/avt_image_size_default"
                android:layout_height="@dimen/avt_image_size_default"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="bottom|right"
                android:id="@+id/imv_certificate"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/ic_oa_verify"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="?attr/TextColor1"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f71"
                android:textColor="?attr/TextColor2"
                android:id="@+id/tvInvitation"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f71"
                android:textColor="?attr/TextColor2"
                android:id="@+id/tvInvitationDetail"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:duplicateParentState="false"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="@drawable/bg_btn_type1_text"
                android:gravity="center"
                android:id="@+id/btn_combine_func_1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:duplicateParentState="false"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/mat_btn_style_2_w_xsmal"
                android:text="@string/str_suggest_func_add_friend_new"
                style="@style/btnType1.medium_standard"/>
            <ImageView
                android:id="@+id/btn_delete_suggest"
                android:padding="6dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/discover_search_padding_item_l_r"
                android:src="0x7f080b9e"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_gravity="bottom"
        android:id="@+id/separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/suggest_friend_separate_line_small_padding_l"/>
</FrameLayout>
