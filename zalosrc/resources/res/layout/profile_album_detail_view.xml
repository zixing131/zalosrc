<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleType="title"
        app:trailingType="icon"
        style="@style/BlueZdsActionBar.AppType"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zds_action_bar">
        <com.zing.zalo.uicontrol.SwipeRefreshListView
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:modeContent="recycleview"/>
        <include layout="@layout/fast_scroll_bubble_tv"/>
        <com.zing.zalo.feed.mvp.album.ProfileAlbumThemePickerControl
            android:id="@+id/theme_picker_control"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:orientation="vertical"
            android:id="@+id/sticky_header"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true">
            <RelativeLayout
                android:id="@+id/sticky_header_background"
                android:background="?attr/PrimaryBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <com.zing.zalo.zdesign.component.Divider
                    android:id="@+id/line_separator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/tv_sticky_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="ThÃ¡ng 7, 2020"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    style="@style/Roboto.f13b"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:id="@+id/button_post_photo_container"
            android:background="@drawable/profile_bg_circle_post_photo"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:elevation="3dp">
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:id="@+id/icon_photo"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icn_timeline_newpost"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
</com.zing.zalo.p077ui.widget.CustomRelativeLayout>
