<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rl_suggest_chat"
    android:background="?attr/suggest_sticker_profile_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>
    <com.zing.zalo.feed.uicontrols.FeedRecyclerView
        android:id="@+id/lv_suggest_sticker"
        android:fadingEdgeLength="0dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="@dimen/feed_suggest_sticker_margin_top"
        android:layout_marginRight="38dp"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/transparent"
        android:layout_below="@+id/tv_hint"/>
    <com.zing.zalo.p077ui.widget.MaskableFrameLayout
        android:id="@+id/mask_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imv_decor"
        android:layout_alignBottom="@+id/imv_decor"
        app:mask="?attr/suggest_sticker_profile_bg_color"
        app:porterduffxfermode="MULTIPLY">
        <ImageView
            android:id="@+id/left_gradient"
            android:visibility="visible"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="@dimen/feed_suggest_sticker_margin_top"
            android:layout_marginBottom="@dimen/feed_suggest_sticker_margin_bottom"
            android:src="@drawable/suggest_chat_gradient_left"/>
        <ImageView
            android:layout_gravity="right"
            android:id="@+id/right_gradient"
            android:visibility="visible"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/feed_suggest_sticker_margin_top"
            android:layout_marginRight="38dp"
            android:layout_marginBottom="@dimen/feed_suggest_sticker_margin_bottom"
            android:src="@drawable/suggest_chat_gradient_right"/>
    </com.zing.zalo.p077ui.widget.MaskableFrameLayout>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/imv_decor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignBottom="@+id/anchor_view"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/anchor_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/feed_suggest_sticker_margin_bottom"
        android:layout_below="@+id/lv_suggest_sticker"/>
</RelativeLayout>
