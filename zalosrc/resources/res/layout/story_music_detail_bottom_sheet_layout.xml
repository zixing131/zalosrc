<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:background="@drawable/bg_music_detail_bottom_sheet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/icn_slide_hint"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/album_bottom_sheet_handle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/layout_music_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/icn_slide_hint">
        <RelativeLayout
            android:id="@+id/song_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true">
            <com.zing.zalo.p077ui.widget.imageview.RoundCornerImageView
                android:id="@+id/song_thumb"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                app:round_radius="8dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/song_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@+id/song_thumb"
                android:layout_centerVertical="true">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="16dp"
                    android:textColor="?attr/TextColor1"
                    android:ellipsize="end"
                    android:id="@+id/song_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:fstyle="medium"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="14dp"
                    android:textColor="?attr/TextColor2"
                    android:ellipsize="end"
                    android:id="@+id/artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/zing_mp3_button"
                    android:background="@drawable/bg_music_detail_zing_mp3_button"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minWidth="150dp"
                    android:minHeight="28dp">
                    <com.androidquery.util.RecyclingImageView
                        android:id="@+id/zing_mp3_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="0x7f08175f"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="12dp"
                        android:textColor="?attr/TextColor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/str_profile_music_button_zingmp3"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/divider"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/song_info_container"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f13"
            android:textColor="?attr/AppPrimaryColor"
            android:gravity="center"
            android:id="@+id/post_story_button"
            android:background="@drawable/stencils_contact_bg"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_music_post_story_with_song"
            android:layout_below="@+id/divider"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            app:fstyle="medium"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_error_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/icn_slide_hint">
        <com.zing.zalo.feed.components.EmptyContentView
            android:id="@+id/layout_empty_content_no_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_error_can_not_stream"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/icn_slide_hint">
        <com.zing.zalo.p077ui.widget.imageview.RoundCornerImageView
            android:id="@+id/song_thumb_error_can_not_stream"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:src="0x7f080bf8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:round_radius="8dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:id="@+id/song_name_error_can_not_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:layout_below="@+id/song_thumb_error_can_not_stream"
            android:layout_centerHorizontal="true"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor2"
            android:ellipsize="end"
            android:id="@+id/artist_name_error_can_not_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:layout_below="@+id/song_name_error_can_not_stream"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/description_error_can_not_stream"
            android:background="@drawable/bg_music_detail_not_exist_zing_mp3_error_desc"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/artist_name_error_can_not_stream">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <com.zing.zalo.p077ui.widget.AspectRatioImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_warning_circle_solid_notification_color_3"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="14dp"
                    android:textColor="?attr/TextColor1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/str_story_music_error_song_not_found"
                    android:maxLines="1"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
