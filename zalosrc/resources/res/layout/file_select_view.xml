<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_view"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="?attr/PrimaryBackgroundColor"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:overScrollMode="never"
            android:splitMotionEvents="false"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:background="?attr/PrimaryBackgroundColor"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/zalo_action_bar"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
    </FrameLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_bottom"
        android:background="@drawable/bottom_file_select_bar_bg"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor2"
            android:id="@+id/txt_selected_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_file_picker_selected_title"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:id="@+id/txt_selected_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 (0 B)"
            android:layout_toRightOf="@+id/txt_selected_file"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:id="@+id/btn_send_multi_selected_files"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:text="@string/str_btn_send"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/btnType1.medium"/>
    </RelativeLayout>
</RelativeLayout>
