<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.NormalVideoItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/zch_item_video"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lytLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/lytPromoteLink"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="3dp"
        android:paddingEnd="8dp">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.RoundedImageView
            android:id="@+id/icoPromoteLink"
            android:background="#40ffffff"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
            android:textSize="13dp"
            android:textColor="@color/zch_text_primary"
            android:ellipsize="end"
            android:id="@+id/txtPromoteLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lytWarningDangerous"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icoWarningDangerous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="13dp"
            android:textColor="@color/zch_text_primary_a60"
            android:id="@+id/txtWarningDangerous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:shadowColor="#40000000"
            android:layout_weight="1"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="regular"
            package:zchShadowDxDip="0.5dp"
            package:zchShadowDyDip="0.5dp"/>
    </LinearLayout>
    <com.zing.zalo.shortvideo.p072ui.component.p073rv.item.ExtraActionLayout
        android:id="@+id/lytExtraAction"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center_horizontal"
            android:id="@+id/btnExtraAction"
            android:background="@drawable/zch_bg_button_active_blue"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zch_item_video_follow"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
    </com.zing.zalo.shortvideo.p072ui.component.p073rv.item.ExtraActionLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lytPromoteFooter"
        android:background="@color/zch_curtain_subtle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/icoPromoteFooter"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/zch_ic_playlist_solid_16"
            android:layout_marginStart="16dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="13dp"
            android:textColor="@color/zch_text_primary"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/txtPromoteFooter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_weight="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            package:zchFontStyle="regular"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/icoPromoteFooterChevron"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/lytWarningSensitive"
        android:background="@color/zch_curtain"
        android:paddingLeft="@dimen/zch_item_video_qna_btn_margin"
        android:paddingRight="@dimen/zch_item_video_qna_btn_margin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/icoWarningSensitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_secondary"
            android:gravity="center"
            android:id="@+id/txtWarningSensitiveTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="2dp"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary_a60"
            android:gravity="center"
            android:id="@+id/txtWarningSensitiveMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="2dp"
            package:zchFontStyle="regular"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center"
            android:id="@+id/btnWarningSensitiveSkip"
            android:background="@drawable/zch_bg_button_active_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zch_item_video_qna_btn_height"
            android:layout_marginTop="32dp"
            android:text="@string/zch_item_video_sensitive_skip"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary_a60"
            android:gravity="center"
            android:id="@+id/btnWarningSensitivePlay"
            android:background="@drawable/zch_bg_button_video_qna"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zch_item_video_qna_btn_height"
            android:layout_marginTop="@dimen/zch_item_video_qna_btn_spacing"
            android:text="@string/zch_item_video_sensitive_play"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
    </LinearLayout>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.NormalVideoItem>
