<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/swipeable_view"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_warning"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="0x7f080db7"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/icon_warning">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="?attr/HeaderFormTitleColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_delete_account_delete_title"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/str_deactivate_account_warning_1"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/gray_dot"
                android:drawablePadding="10dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/str_deactivate_account_warning_2"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/gray_dot"
                android:drawablePadding="10dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/str_deactivate_account_warning_3"
                android:includeFontPadding="false"
                android:drawableLeft="@drawable/gray_dot"
                android:drawablePadding="10dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btn_delete_account_action"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:minWidth="160dp"
                android:text="@string/str_delete_account_delete_action"
                app:fstyle="medium"
                style="@style/btnTypeWarning"/>
        </LinearLayout>
        <View
            android:id="@+id/view_split"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/layout_delete"/>
        <ImageView
            android:id="@+id/icon_change_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="0x7f080db5"
            android:layout_below="@+id/view_split"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_change_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/icon_change_phone"
            android:layout_below="@+id/view_split">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f2"
                android:textColor="?attr/HeaderFormTitleColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_delete_account_changephone_title"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f0"
                android:textColor="?attr/TextColor2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/str_delete_account_changephone_subtitle1"
                android:includeFontPadding="false"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btn_change_phone_action"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:minWidth="160dp"
                android:text="@string/str_delete_account_changephone_action"
                app:fstyle="medium"
                style="@style/btnType2.medium"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
