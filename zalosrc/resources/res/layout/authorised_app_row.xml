<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_app_row"
    android:background="@drawable/stencils_contact_bg"
    android:paddingTop="@dimen/msg_item_padding_t_b"
    android:paddingBottom="@dimen/msg_item_padding_t_b"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/authorised_app_row_logo"
        android:layout_width="@dimen/ava3"
        android:layout_height="@dimen/ava3"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:layout_centerVertical="true"
        app:srcCompat="?attr/default_avatar"
        style="@style/myImageView"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:layout_toRightOf="@+id/authorised_app_row_logo"
        android:layout_centerVertical="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="@drawable/itemlist_text"
            android:id="@+id/authorised_app_row_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f71"
            android:textColor="?attr/TabUnSelectedColor"
            android:id="@+id/authorised_app_row_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:id="@+id/separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_toRightOf="@+id/authorised_app_row_logo"
        android:layout_below="@+id/authorised_app_row_logo"/>
</RelativeLayout>
