<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tf="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/layout_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/banner_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="0x7f081271"
            android:scaleType="centerCrop"/>
        <com.zing.zalo.uicontrol.ZSimpleGIFView
            android:id="@+id/simple_gif_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
    </FrameLayout>
    <View
        android:id="@+id/line_top"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/feed_profile_timebar_marginleft"
        android:layout_above="@+id/time_content"
        android:layout_alignTop="@+id/layout_banner"/>
    <RelativeLayout
        android:id="@+id/time_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/line_bottom">
        <View
            android:background="@drawable/circle_stroke_banner"
            android:layout_width="@dimen/feed_profile_group_dot_size"
            android:layout_height="@dimen/feed_profile_group_dot_size"
            android:layout_marginLeft="@dimen/feed_profile_group_dot_marginleft"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="24dp"
            android:textColor="?attr/PrimaryBackgroundColor"
            android:id="@+id/tvYearDivider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left_profile"
            android:layout_centerVertical="true"
            tf:fstyle="medium"/>
    </RelativeLayout>
    <View
        android:id="@+id/line_bottom"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:layout_marginLeft="@dimen/feed_profile_timebar_marginleft"
        android:layout_alignBottom="@+id/layout_banner"/>
</merge>
