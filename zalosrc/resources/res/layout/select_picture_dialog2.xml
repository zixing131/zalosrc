<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/feed_audio_popup_bg"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="280dp">
    <include layout="@layout/layout_dialog_header_confirm"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/btn_view_cover"
        android:background="@drawable/material_button_dialog_bg"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:paddingLeft="@dimen/popup_content_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_view_full_profile_cover"
            style="@style/Roboto.f2"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btn_view_avatar"
        android:background="@drawable/material_button_dialog_bg"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_canhan_camera"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:paddingLeft="@dimen/popup_content_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_avataralbum"
            style="@style/Roboto.f2"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/confirm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btn_takeapic"
            android:background="@drawable/material_button_dialog_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_canhan_camera"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:paddingLeft="@dimen/popup_content_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_takePhoto"
                style="@style/Roboto.f2"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/btn_gallery"
            android:background="@drawable/material_button_dialog_bg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_canhan_gallery"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:paddingLeft="@dimen/popup_content_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_chooseGalary"
                style="@style/Roboto.f2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
