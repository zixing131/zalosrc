<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.CommentItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/aivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        package:zchCornerRadius="@dimen/zch_radius_4dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="12dp"
        android:textColor="@color/zch_text_secondary"
        android:id="@+id/tvPinComment"
        android:background="@drawable/zch_bg_pin_comment"
        android:paddingLeft="@dimen/zch_padding_4"
        android:paddingTop="@dimen/zch_radius_2dp"
        android:paddingRight="@dimen/zch_padding_4"
        android:paddingBottom="@dimen/zch_radius_2dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_comment_pin"
        android:includeFontPadding="false"
        android:drawableLeft="@drawable/zds_ic_pin_solid_16"
        android:drawablePadding="@dimen/zch_padding_4"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitUsernameTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_tertiary"
        android:ellipsize="end"
        android:id="@+id/txtName"
        android:paddingBottom="@dimen/zch_item_comment_name_to_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="11dp"
        android:textColor="@color/zch_text_tertiary"
        android:id="@+id/tagAuthor"
        android:background="@drawable/zch_bg_tag_comment_author"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="4dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_comment_author"
        android:includeFontPadding="false"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitContentTextView
        android:textSize="15dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:id="@+id/txtContent"
        android:paddingBottom="@dimen/zch_item_comment_content_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        package:zchFontStyle="regular"/>
    <FrameLayout
        android:id="@+id/flVideoCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.RoundedImageView
            android:id="@+id/videoCover"
            android:layout_width="@dimen/zch_item_comment_video_cover_width"
            android:layout_height="@dimen/zch_item_comment_video_cover_height"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icoStatus"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/btnPlay"
        android:background="@drawable/zch_bg_button_video_play"
        android:visibility="gone"
        android:layout_width="@dimen/zch_item_comment_play_button_size"
        android:layout_height="@dimen/zch_item_comment_play_button_size"
        android:src="@drawable/zch_ic_play_solid_16"
        android:scaleType="centerInside"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="11dp"
        android:textColor="@color/zch_text_tertiary"
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        package:zchFontStyle="regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.BlinkTextView
        android:textSize="11dp"
        android:textColor="@color/zch_text_secondary"
        android:id="@+id/txtReply"
        android:paddingBottom="@dimen/zch_item_comment_action_to_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_comment_reply"
        package:zchFontStyle="regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.BubbleTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/bubbleView"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_comment_liked_by_author"
        package:arrow_alignment="center"
        package:arrow_anchor="bottom"
        package:border_radius="@dimen/zch_radius_8dp"
        package:fill_color="@color/zch_text_disable"/>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/ivAuthorLiked"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/ivAuthorHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_heart_red_border_line_12"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnLike"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_heart_line_16"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="@color/zch_text_tertiary"
        android:id="@+id/txtLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        package:disableScaleTextSize="true"
        package:zchFontStyle="regular"/>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.CommentItem>
