<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_setting_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/section_label"
            android:background="@drawable/bg_list_item_normal"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_privacy_birthday"
            style="@style/t_small_m"/>
        <com.zing.zalo.p077ui.settings.widget.ListItemSetting
            android:id="@+id/itemDoNotShow"
            android:background="@drawable/bg_list_item_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.p077ui.settings.widget.ListItemSetting
            android:id="@+id/itemShowFull"
            android:background="@drawable/bg_list_item_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.p077ui.settings.widget.ListItemSetting
            android:id="@+id/itemShowOnlyDayMonth"
            android:background="@drawable/bg_list_item_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="?attr/SecondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/section_label"
        android:id="@+id/section_label_notification"
        android:background="@drawable/bg_list_item_normal"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_setting_notification_title"
        style="@style/t_small_m"/>
    <com.zing.zalo.p077ui.settings.widget.ListItemSetting
        android:id="@+id/itemNotifyFriendAboutMyBirthday"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_setting_notify_friend_about_my_birthday"/>
</merge>
