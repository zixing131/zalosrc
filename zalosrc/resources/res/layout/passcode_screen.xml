<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/passcode_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/SecondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center_horizontal"
            android:id="@+id/hint_todo_passcodeAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/code_1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/passcode_empty_img"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/code_2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/passcode_empty_img"/>
            <ImageView
                android:id="@+id/code_3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/passcode_empty_img"/>
            <ImageView
                android:id="@+id/code_4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/passcode_empty_img"/>
        </LinearLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/NotificationColor1"
            android:gravity="center"
            android:id="@+id/tv_warning_off_chat_head"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="24dp"
            android:text="@string/str_passcode_hint_off_chat_bubbles"/>
    </LinearLayout>
    <View
        android:id="@+id/num_pad_separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TableLayout
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_1"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_2"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_3"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_4"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="4"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_5"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="5"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_6"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="6"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_7"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="7"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_8"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_9"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="9"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:enabled="false"
                android:textColor="@color/itemlist_text"
                android:id="@+id/keypad_unknow"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="0x7f0704c8"
                android:textColor="@color/itemlist_text"
                android:gravity="center"
                android:id="@+id/keypad_0"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0"
                android:includeFontPadding="false"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/keypad_back"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:layout_weight="1"
                app:srcCompat="@drawable/num_back_n"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
