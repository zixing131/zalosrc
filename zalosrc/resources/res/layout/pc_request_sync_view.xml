<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/fake_popup"
        android:background="?attr/PrimaryBackgroundColor"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="20dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="16dp"
            android:text="@string/str_pc_request_sycn_des"
            android:layout_centerInParent="true"
            android:lineSpacingExtra="4sp"
            app:fstyle="medium"/>
        <androidx.appcompat.widget.ZAppCompatImageView
            android:layout_width="174dp"
            android:layout_height="160dp"
            android:layout_above="@+id/des"
            android:layout_centerHorizontal="true"
            app:srcCompatEx="?attr/img_pc_transfer_message"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="15dp"
            android:textColor="?attr/TextColor3"
            android:gravity="center"
            android:id="@+id/des_detail"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:text="@string/str_pc_request_sycn_des_detail"
            android:layout_below="@+id/des"
            android:lineSpacingExtra="4sp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor3"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/btnSkip"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:fstyle="medium"
            style="@style/MaterialClickableTextview"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/btnSync"
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/sync_pc_positive_button"
            android:layout_above="@+id/btnSkip"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            app:fstyle="medium"
            style="@style/btnType1.medium"/>
    </RelativeLayout>
</ScrollView>
