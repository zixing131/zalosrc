<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="?attr/PrimaryBackgroundColor"
        android:clickable="true"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/imvEmpty"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="?attr/zds_il_post_empty"
            android:scaleType="fitXY"
            android:contentDescription="Image"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp"
            android:text="@string/str_share_moment_with_family_friends"
            style="@style/Roboto.f2"/>
        <com.zing.zalo.p077ui.widget.RobotoButton
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btnEmpty"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:minWidth="156dp"
            android:text="@string/str_share_now"
            android:textAllCaps="true"
            style="@style/btnType1.medium"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <com.zing.zalo.feed.components.FeedItemLastSuggestModulesView
                android:id="@+id/last_suggest_item"
                android:background="?attr/BannerBackgroundColor1"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                android:duplicateParentState="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
