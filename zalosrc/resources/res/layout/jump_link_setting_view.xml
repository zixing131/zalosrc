<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_open_from_zalo_setting"
        android:background="?attr/ui_background"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="51dp">
        <androidx.appcompat.widget.ZAppCompatImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/ic_open_from_zalo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f08087c"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="16dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_open_from_zalo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_jump_link_open_with_zalo"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/TextColor2"
                android:id="@+id/tv_open_from_zalo_des"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_jump_link_open_with_zalo_des"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_open_from_web_setting"
        android:background="?attr/ui_background"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="51dp">
        <androidx.appcompat.widget.ZAppCompatImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/ic_open_from_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f08087c"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="16dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_open_from_web_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_jump_link_open_with_web"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:id="@+id/tv_open_from_web_des"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_jump_link_open_with_web_des"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
