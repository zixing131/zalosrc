<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/song_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/img_media_thumb"
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/song_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/btn_remove_song"
            android:layout_toRightOf="@+id/img_media_thumb"
            android:layout_alignTop="@+id/img_media_thumb"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:ellipsize="end"
                android:id="@+id/tv_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                style="@style/t_large_m"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_tertiary"
                android:ellipsize="end"
                android:id="@+id/tv_singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_below="@+id/tv_song_name"/>
            <LinearLayout
                android:id="@+id/btn_zing_mp3"
                android:background="@drawable/bg_profile_music_zingmp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_singer_name">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_mp3_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:src="0x7f08175f"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_primary"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/str_listen_on_zing_mp3"
                    style="@style/t_xxsmall"/>
            </LinearLayout>
        </RelativeLayout>
        <com.zing.zalo.p077ui.widget.imageview.CircleImageView
            android:id="@+id/btn_remove_song"
            android:background="@drawable/bg_btn_remove_profile_music"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/song_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/song_info">
        <com.zing.zalo.zdesign.component.slider.ZdsSlider
            android:id="@+id/song_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/music_player_button_container"
            app:prefixText="00:00"
            app:prefixType="text"
            app:sliderType="single_thumb_slider"
            app:suffixText="--:--"
            app:suffixType="text"
            style="@style/Slider_NeutralTheme"/>
        <FrameLayout
            android:id="@+id/music_player_button_container"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/music_player_play_button"
                android:background="@color/transparent"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_btn_profile_music_pause"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/music_player_loading"
                android:visibility="gone"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/profile_music_loading"
                android:indeterminateDuration="1500"
                android:indeterminateBehavior="repeat"/>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/profile_music_function_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:weightSum="2"
        android:layout_below="@+id/song_control">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/btn_select_song"
            android:background="@drawable/bg_btn_footer_profile_music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">
            <ImageView
                android:id="@+id/imv_melody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/zds_ic_add_melody_solid_24"
                app:tint="?attr/icon_tertiary"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:id="@+id/tv_select_song"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="@string/str_bts_select_song_profile_music"
                style="@style/t_small"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btn_post_on_timeline"
            android:background="@drawable/bg_btn_footer_profile_music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/imv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/zds_ic_post_solid_24"
                app:tint="?attr/icon_tertiary"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_btn_right"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="@string/str_bts_post_on_timeline_profile_music"
                style="@style/t_small"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/footer_action_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_control">
        <View
            android:id="@+id/divider"
            android:background="?attr/divider_01"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/imv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/divider"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_secondary"
            android:id="@+id/tv_footer_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/imv_footer"
            android:layout_centerVertical="true"
            style="@style/t_xsmall"/>
        <com.zing.zalo.zdesign.component.Button
            android:textColor="?attr/button_secondary_text"
            android:id="@+id/btn_footer_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/feed_padding_left"
            android:layout_marginRight="@dimen/feed_padding_right"
            android:layout_toRightOf="@+id/tv_footer_action"
            android:layout_centerVertical="true"
            style="@style/ButtonSmall.Secondary"/>
    </RelativeLayout>
</merge>
