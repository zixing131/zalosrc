<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/phoneList"
            android:visibility="gone"
            android:fadingEdge="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:layout_above="@+id/banner_serial_container"/>
        <FrameLayout
            android:layout_gravity="top|right"
            android:id="@+id/llBubbleScroll"
            android:background="@drawable/bg_blue_scroll_tab_contact"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="27dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:alpha="0">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="22dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/tvBubbleScroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                style="@style/Roboto.f1"/>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/banner_serial_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ViewStub
            android:id="@+id/viewstub_suggest_delete_friend"
            android:layout="@layout/banner_suggest_remove_friend_after_remove_phonebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <include
        android:id="@+id/bottom_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/bottom_banner_zalo_contact_list"/>
    <include
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/empty_layout_msg_tab"/>
</RelativeLayout>
