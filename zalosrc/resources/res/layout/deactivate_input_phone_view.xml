<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/swipeable_view"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="?attr/HeaderFormTitleColor"
                android:gravity="center"
                android:id="@+id/tv_hint_to_set_password"
                android:background="?attr/SecondaryBackgroundColor"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_header_delete_account"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/str_delete_account_title_input_phone"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="1"
                style="@style/Roboto.f5b"/>
            <com.zing.zalo.uicontrol.CustomEditText
                android:textSize="@dimen/f2"
                android:textColor="?attr/HeaderFormTitleColor"
                android:textColorHint="?attr/TextColor2"
                android:autoLink="none"
                android:id="@+id/editText_PhoneNumber"
                android:background="@drawable/edt_normal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/str_delete_account_phone_hint"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="20"
                android:layout_weight="1"
                android:inputType="number"
                android:textCursorDrawable="@null"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="@color/primary_error_color"
                android:id="@+id/tvError1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:text="@string/str_hintAlreadyActivated"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/str_delete_account_title_reason"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"
                    style="@style/Roboto.f5b"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f0"
                    android:textColor="?attr/TextColor2"
                    android:id="@+id/tv_count_reason"
                    android:paddingLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/layout_edt_reason"
                android:background="@drawable/edt_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <com.zing.zalo.uicontrol.CustomEditText
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/HeaderFormTitleColor"
                    android:textColorHint="?attr/TextColor2"
                    android:gravity="top|left"
                    android:autoLink="none"
                    android:id="@+id/edt_reason"
                    android:background="@android:color/transparent"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="42dp"
                    android:hint="@string/str_delete_account_reason_hint"
                    android:maxLines="4"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btn_clear_reason"
                    android:paddingLeft="6dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="0x7f080dd5"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="@color/primary_error_color"
                android:id="@+id/tvError2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="16dp"
                android:text="@string/str_hintAlreadyActivated"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:enabled="false"
                android:textSize="@dimen/f3"
                android:textColor="@drawable/stencils_button_style3_text"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_marginTop="22dp"
                android:minWidth="180dp"
                android:text="@string/str_cap_next"
                app:fstyle="medium"
                style="@style/btnType1.medium"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
