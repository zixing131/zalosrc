<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.widget.SimilarChannelLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rootSimilar"
    android:background="@drawable/zch_bg_similar_channel"
    android:layout_width="236dp"
    android:layout_height="@dimen/zch_layout_channel_similar_channel_height">
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/aivAvatar"
        android:layout_width="68dp"
        android:layout_height="68dp"
        package:zchCornerRadius="@dimen/zch_radius_4dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitUsernameTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/txtName"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:disableScaleTextSize="true"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="#909498"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:id="@+id/tvFollowStats"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        package:disableScaleTextSize="true"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="#f7f7f8"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnFollow"
        android:background="@drawable/zch_bg_button_active_blue"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:text="@string/zch_page_channel_follow"
        android:includeFontPadding="false"
        package:disableScaleTextSize="true"
        package:zchFontStyle="medium"/>
</com.zing.zalo.shortvideo.p072ui.widget.SimilarChannelLayout>
