<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeable_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout
        android:orientation="vertical"
        android:id="@+id/main_container"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leadingType="back"
            app:middleSubTitleText="@string/str_selected_num"
            app:middleTitleText="@string/str_create_group_title_new"
            app:middleType="title"
            app:trailingType="none"
            style="@style/WhiteZdsActionBar.AppType"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/header_view"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/layout_update_avatar"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/avatar_container"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp">
                    <com.zing.zalo.p077ui.widget.AvatarImageView
                        android:layout_gravity="center"
                        android:id="@+id/imv_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icn_open_camera_photo"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/str_desImg"
                        style="@style/myImageView"/>
                    <include
                        android:id="@+id/pb_upload_avatar"
                        android:padding="10dp"
                        android:visibility="gone"
                        layout="@layout/holo_circular_progress_bar_mini"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="center"
                        android:id="@+id/btnRetryUploadAvatar"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:contentDescription="@string/str_desImg"
                        app:srcCompat="@drawable/ic_reload_avagroup"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true">
                    <FrameLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:textSize="@dimen/LargeTextSize"
                            android:textColor="?attr/TextColor1"
                            android:textColorHint="?attr/TextColor2"
                            android:id="@+id/et_group_name"
                            android:background="@color/transparent"
                            android:paddingTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/str_update_group_name_hint"
                            android:inputType="textNoSuggestions"
                            android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="end|center_vertical"
                            android:id="@+id/btn_emo"
                            android:visibility="gone"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginTop="6dp"
                            app:srcCompat="@drawable/icn_emoji"/>
                    </FrameLayout>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btn_done_input_group_name"
                    android:visibility="gone"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="6dp"
                    app:srcCompat="@drawable/icn_done_none_circle"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/dock_view"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.zing.zalo.uicontrol.CustomEditText
                        android:textSize="16dp"
                        android:textColor="?attr/TextColor1"
                        android:textColorHint="?attr/TextColor2"
                        android:ellipsize="end"
                        android:id="@+id/edt_search"
                        android:background="@drawable/bg_search_share_view"
                        android:paddingLeft="10dp"
                        android:paddingTop="6dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="@string/hint_search_member"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:drawableLeft="@drawable/ic_searchbox_n"
                        android:drawablePadding="10dp"
                        android:inputType="textAutoCorrect"
                        android:textCursorDrawable="@drawable/chat_bar_text_cursor"
                        app:disableScaleTextSize="true"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/btn_input_type"
                        android:background="@color/transparent"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/login_123"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:typeface="normal"
            android:textColor="@color/zch_text_tertiary"
            android:id="@+id/tab_desc"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/tab_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:baselineAligned="false">
            <RelativeLayout
                android:id="@+id/tab_suggest"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                    android:textSize="@dimen/f13"
                    android:textColor="@drawable/name_subtab_text"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_suggest"
                    android:paddingLeft="@dimen/sub_tab_padding_lr"
                    android:paddingRight="@dimen/sub_tab_padding_lr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_create_group_tab_suggest"
                    android:maxLines="2"
                    android:layout_centerInParent="true"
                    android:textAllCaps="true"
                    app:disableScaleTextSize="true"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <View
                        android:background="?attr/TabBottomLineColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <View
                        android:id="@+id/line_suggest"
                        android:background="?attr/TabSelectedColor"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_recently"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                    android:textSize="@dimen/f13"
                    android:textColor="@drawable/name_subtab_text"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_recently"
                    android:paddingLeft="@dimen/sub_tab_padding_lr"
                    android:paddingRight="@dimen/sub_tab_padding_lr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_create_group_tab_recent"
                    android:maxLines="2"
                    android:layout_centerInParent="true"
                    android:textAllCaps="true"
                    app:disableScaleTextSize="true"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <View
                        android:background="?attr/TabBottomLineColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <View
                        android:id="@+id/line_recently"
                        android:background="?attr/TabSelectedColor"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_phonebook"
                android:background="@drawable/stencils_contact_bg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                    android:textSize="@dimen/f13"
                    android:textColor="@drawable/name_subtab_text"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:id="@+id/tv_phonebook"
                    android:paddingLeft="@dimen/sub_tab_padding_lr"
                    android:paddingRight="@dimen/sub_tab_padding_lr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_create_group_tab_phonebook"
                    android:maxLines="2"
                    android:layout_centerInParent="true"
                    android:textAllCaps="true"
                    app:disableScaleTextSize="true"/>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <View
                        android:background="?attr/TabBottomLineColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <View
                        android:id="@+id/line_phonebook"
                        android:background="?attr/TabSelectedColor"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <FrameLayout
            android:orientation="vertical"
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.zing.p058v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycle_view"
                android:background="?attr/PrimaryBackgroundColor"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
                android:id="@+id/multi_state"
                android:background="?attr/PrimaryBackgroundColor"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:msvEmptyLayout="@layout/layout_empty_state"
                app:msvErrorLayout="@layout/layout_error_state"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/section_footer"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="?attr/shadow"/>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/content_section_footer"
                    android:background="?attr/PopupBackgroundColor"
                    android:paddingLeft="16dp"
                    android:paddingTop="2dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/selected_recycler_view"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"/>
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/btn_done_create_group"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        app:srcCompatEx="?attr/floating_action_btn_next"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </com.zing.zalo.p077ui.zviews.KeyboardAwareLinearLayout>
    <ViewStub
        android:layout_gravity="bottom"
        android:id="@+id/viewstub_sticker_panel"
        android:layout="@layout/viewstub_sticker_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
