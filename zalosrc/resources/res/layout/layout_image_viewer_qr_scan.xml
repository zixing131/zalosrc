<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <com.zing.zalo.p077ui.widget.ScanQrButton
        android:id="@+id/qrCode"
        android:visibility="gone"
        android:layout_width="@dimen/scan_qr_button_width"
        android:layout_height="@dimen/scan_qr_button_height"
        android:src="@drawable/ic_scan_qr"
        android:scaleType="center"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/scan_qr_button_style_text_size"
        android:textColor="#1194fe"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/qrCodeTextView"
        android:background="@drawable/bg_qr_btn_type"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/scan_qr_button_style_height"
        android:layout_marginBottom="@dimen/scan_qr_button_style_margin_bottom"
        android:text="@string/str_scan_qr_button"
        android:drawablePadding="@dimen/scan_qr_button_style_drawable_padding"
        android:drawableStart="@drawable/ic_scan_qr_footer"
        style="@style/btnType2.medium"/>
</merge>
