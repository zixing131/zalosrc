<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/rounded_bg_progress_dialog"
    android:padding="24dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.zing.zalo.zdesign.component.ProgressBar
        android:id="@+id/holoCircularProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        style="@style/ProgressBar.Size32.Blue"/>
    <androidx.appcompat.widget.ZAppCompatImageView
        android:id="@+id/ivStatus"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:id="@+id/progress_dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/PROCESSING"
        android:textAlignment="center"
        android:progressTint="?attr/TextColor1"
        style="@style/t_normal"/>
</LinearLayout>
