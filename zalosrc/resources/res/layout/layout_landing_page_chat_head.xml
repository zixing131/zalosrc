<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="?attr/chathead_onboarding"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/str_landing_page_chat_head_title"
        style="@style/Roboto.f2"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor2"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/str_landing_page_chat_head_description"
        style="@style/Roboto.f0"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/layout_xiaomi_chathead"
        android:background="@drawable/bg_pink_with_corners"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxWidth="220dp"
            android:text="@string/str_enable_pop_up_window"/>
        <com.androidquery.util.RecyclingImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:src="?attr/xiaomi_chathead"/>
    </LinearLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:minWidth="198dp"
        android:text="@string/str_go_setting_chat_head"
        app:fstyle="medium"
        style="@style/btnType1.medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:gravity="center_horizontal"
        android:id="@+id/btn_setting_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_setting_later"
        android:textAllCaps="true"/>
</LinearLayout>
