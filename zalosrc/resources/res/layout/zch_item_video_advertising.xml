<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.AdvertisingVideoItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/zch_item_video"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="12dp"
        android:id="@+id/tagSponsored"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.component.p073rv.item.AdvertisingBannerLayout
        android:id="@+id/lytAdvertisingBanner"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.RoundedImageView
            android:id="@+id/rivAdvertisingBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/btnCloseBanner"
            android:paddingLeft="11dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.zing.zalo.shortvideo.p072ui.component.p073rv.item.AdvertisingBannerLayout>
    <com.zing.zalo.shortvideo.p072ui.component.p073rv.item.ExtraActionLayout
        android:id="@+id/lytExtraAction"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center_horizontal"
            android:id="@+id/btnExtraAction"
            android:background="@drawable/zch_bg_button_active_blue"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zch_item_video_follow"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
    </com.zing.zalo.shortvideo.p072ui.component.p073rv.item.ExtraActionLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/lytAdvertisingEnd"
        android:background="@color/zch_black_a80"
        android:paddingLeft="44dp"
        android:paddingRight="44dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
            android:id="@+id/aivAdvertisingEndAvatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            package:zchCornerRadius="@dimen/zch_radius_4dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="16dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center"
            android:id="@+id/txtAdvertisingEndName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="14dp"
            android:textColor="@color/zch_text_primary_a60"
            android:gravity="center"
            android:id="@+id/txtAdvertisingEndMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="3dp"
            package:zchFontStyle="regular"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center"
            android:id="@+id/btnAdvertisingEndAction"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.BlinkTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center"
            android:id="@+id/btnAdvertisingEndClose"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:text="@string/zch_item_video_advertising_replay"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
    </LinearLayout>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.AdvertisingVideoItem>
