<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controller_group"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/imv_placeholder"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/stub_preview_controller"
        android:layout="@layout/camera_preview_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/stub_editor_controller"
        android:layout="@layout/camera_editor_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
