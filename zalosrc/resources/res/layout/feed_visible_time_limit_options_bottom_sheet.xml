<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:tag="layout/feed_visible_time_limit_options_bottom_sheet_0"
    android:background="@drawable/default_background_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/ic_back_arrow"
            android:tag="binding_1"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:background="@drawable/ic_chevron_left_line_24"
                android:layout_width="wrap_content"
                android:layout_height="12dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/ic_close"
            android:tag="binding_2"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:background="@drawable/ic_close_line_24"
                android:layout_width="wrap_content"
                android:layout_height="14dp"/>
        </FrameLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="15dp"
            android:textColor="?attr/TextColor1"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="16dp"
            android:text="@string/str_limit_feed_visible_title_allow"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:fstyle="medium"/>
        <View
            android:id="@+id/separator"
            android:background="?attr/ItemSeparatorColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/title"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">
        <RelativeLayout
            android:layout_gravity="bottom"
            android:id="@+id/limit_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>
            <com.zing.zalo.feed.components.LoadingTextView
                android:id="@+id/tv_save"
                android:tag="binding_3"
                android:background="@drawable/bg_btn_type1_big"
                android:padding="12dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/rv_options"
                android:layout_centerHorizontal="true"
                app:ltv_all_caps="true"
                app:ltv_loading_view_end_color="#00ffffff"
                app:ltv_loading_view_height="16dp"
                app:ltv_loading_view_start_color="#ffffff"
                app:ltv_loading_view_width="16dp"
                app:ltv_text="@string/str_saved"
                app:ltv_text_bold="true"
                app:ltv_text_color="?attr/bg_btn_type1_text"
                app:ltv_text_size="14dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_gravity="bottom"
            android:id="@+id/select_day_container"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="15dp"
                android:textColor="?attr/TextColor2"
                android:id="@+id/select_day_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentTop="true"/>
            <DatePicker
                android:theme="?attr/CustomPicker"
                android:id="@+id/date_picker"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/select_day_description"
                android:spinnersShown="true"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="14dp"
                android:textColor="@color/bg_btn_type2_text"
                android:id="@+id/tv_select_day"
                android:tag="binding_4"
                android:background="@drawable/bg_btn_type2_big"
                android:padding="12dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:text="@string/str_select"
                android:layout_below="@+id/date_picker"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:textAlignment="center"
                app:fstyle="medium"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
