<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:idTrailingButton="setting_button"
        app:leadingType="back"
        app:middleTitleText="@string/str_nickname_in_group"
        app:middleType="title"
        app:trailingIconButton="@drawable/zds_ic_setting_line_24"
        app:trailingType="icon"
        style="@style/BlueZdsActionBar.AppType"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/header_container"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TextColor1"
                android:gravity="center_vertical"
                android:id="@+id/header_hint"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/str_nickname_in_group_hint_header"
                android:includeFontPadding="false"/>
            <View
                android:background="?attr/SeparatorColor1"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nicknames_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
    </LinearLayout>
</LinearLayout>
