<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_info"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/PrimaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/ba_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/preview_business_account_layout"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:text="@string/str_title_personal_info"
                style="@style/t_small_m"/>
            <RelativeLayout
                android:id="@+id/profile_header_gender"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/header_gender_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/str_tv_info_gender"
                        style="@style/t_xsmall"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:id="@+id/tv_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="116dp"
                        android:layout_marginRight="16dp"
                        android:text="Nam"
                        style="@style/t_small"/>
                </RelativeLayout>
                <View
                    android:layout_gravity="bottom"
                    android:background="?attr/ItemSeparatorColor"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/header_gender_part"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_header_dbo"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/header_dbo_part"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/str_tv_info_dob"
                        style="@style/t_xsmall"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/TextColor1"
                        android:id="@+id/tv_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="116dp"
                        android:layout_marginRight="16dp"
                        android:text="Nam"
                        style="@style/t_small"/>
                </RelativeLayout>
                <View
                    android:layout_gravity="bottom"
                    android:background="?attr/ItemSeparatorColor"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/header_dbo_part"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/profile_header_phone_layout"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/str_tv_info_phone"
                    style="@style/t_xsmall"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/tv_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="116dp"
                    android:layout_marginRight="16dp"
                    style="@style/t_small"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor2"
                    android:id="@+id/tv_phone_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="116dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@+id/tv_phone_number"
                    style="@style/t_xxxsmall"/>
            </RelativeLayout>
            <com.zing.zalo.zdesign.component.Button
                android:gravity="center"
                android:id="@+id/btn_edit_bio"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:text="@string/str_action_edit"
                app:btnSupportiveIcon="@drawable/zds_ic_edit_text_line_16"
                app:btnSupportiveIconPosition="leading"
                style="@style/ButtonSmall.SecondaryNeutral"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
