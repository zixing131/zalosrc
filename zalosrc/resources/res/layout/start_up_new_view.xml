<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutStartupContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/fakeTopView"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/chipLanguage"
            android:background="@drawable/rounded_32dp_background_normal"
            android:paddingLeft="12dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/fakeTopView"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textStyle="normal"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tvChipLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/t_normal"/>
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_gravity="center"
                android:id="@+id/icDropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_above="@+id/actionContainer"
            android:layout_below="@+id/chipLanguage">
            <ImageView
                android:id="@+id/imvAppLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:src="?attr/city"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/fakeMarginTopView"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="4"/>
                <com.zing.p058v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="16"/>
                <com.zing.zalo.p077ui.widget.SlidingTabLayout
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/sliding_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:typeOfTab="2"/>
                <View
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/fakeMarginBottomView"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgZalo"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="0x7f081037"
                android:scaleType="fitCenter"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/actionContainer"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingRight="24dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <com.zing.zalo.zdesign.component.Button
                android:gravity="center"
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="512dp"
                android:text="@string/str_login"
                style="@style/ButtonLarge.Primary"/>
            <com.zing.zalo.zdesign.component.Button
                android:gravity="center"
                android:id="@+id/btnRegisterUsingPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxWidth="512dp"
                android:text="@string/str_create_new_account"
                style="@style/ButtonLarge.SecondaryNeutral"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
