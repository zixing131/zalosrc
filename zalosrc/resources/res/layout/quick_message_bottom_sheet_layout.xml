<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/popup_content_container"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layout_header"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp">
        <androidx.appcompat.widget.ZAppCompatImageView
            android:id="@+id/btn_back"
            android:background="@color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/zds_ic_arrow_left_line_24"
            android:scaleType="center"
            android:tint="?attr/icon_01"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="?attr/TextColor1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/str_quick_message"
            android:singleLine="true"
            android:includeFontPadding="false"
            android:layout_weight="1"
            android:textAlignment="center"
            app:fstyle="medium"
            style="@style/Roboto.f1b"/>
        <androidx.appcompat.widget.ZAppCompatImageView
            android:id="@+id/btn_createnew"
            android:background="@color/transparent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/zds_ic_plus_line_24"
            android:scaleType="center"
            android:tint="?attr/icon_01"/>
    </LinearLayout>
    <View
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quick_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
