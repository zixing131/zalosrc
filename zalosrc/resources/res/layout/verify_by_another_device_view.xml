<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/PrimaryBackgroundColor"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/btnPositiveAction">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.zdesign.component.Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                app:btnSupportiveIcon="@drawable/zds_ic_arrow_left_line_16"
                style="@style/ButtonMedium.TertiaryNeutral"/>
            <com.zing.zalo.zdesign.component.Avatar
                android:id="@+id/ivIllus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="24dp"
                android:layout_below="@+id/btnBack"
                android:layout_centerHorizontal="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:gravity="center"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/str_verify_by_another_device_title"
                android:layout_below="@+id/ivIllus"
                style="@style/h_xlarge"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:gravity="start"
                android:id="@+id/tvTitleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:layout_below="@+id/tvTitle"
                style="@style/t_normal"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnPositiveAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:maxWidth="512dp"
        android:text="@string/str_verify_by_another_device_positive_cta"
        android:layout_above="@+id/btnNegativeAction"
        style="@style/ButtonLarge.Primary"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnNegativeAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:maxWidth="512dp"
        android:text="@string/str_verify_by_another_device_negative_cta"
        android:layout_alignParentBottom="true"
        style="@style/ButtonLarge.SecondaryNeutral"/>
</RelativeLayout>
