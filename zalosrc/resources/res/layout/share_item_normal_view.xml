<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:zalo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/stencils_bg_white_with_press_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="@dimen/avt_image_size_default"
            android:layout_height="@dimen/avt_image_size_default"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="5dp">
            <com.zing.zalo.p077ui.widget.GroupAvatarView
                android:id="@+id/img_avt"
                android:layout_width="@dimen/avt_image_size_default"
                android:layout_height="@dimen/avt_image_size_default"
                android:src="0x7f080958"
                zalo:isSmallSize="true"
                style="@style/myImageView"/>
            <com.androidquery.util.RecyclingImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/status_icon"
                android:visibility="gone"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </FrameLayout>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="16dp"
                android:textColor="?attr/TextColor1"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/description"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:layout_below="@+id/name"
                style="@style/t_small"/>
        </RelativeLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="@drawable/bg_btn_type2_text"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_send"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"
            android:duplicateParentState="false"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:minWidth="@dimen/mat_btn_style_1_w"
            android:text="@string/str_btn_send"
            style="@style/btnType2.medium"/>
        <CheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/pick_friend_checkbox"
            android:focusable="false"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/msg_item_padding_l_r"
            android:button="@drawable/mat_btn_radio_circle"/>
    </LinearLayout>
</FrameLayout>
