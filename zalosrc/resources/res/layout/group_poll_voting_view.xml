<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:idTrailingButton="button_more"
            app:leadingType="back"
            app:middleTitleText="@string/str_poll_detail_title"
            app:middleType="title"
            app:trailingIconButton="@drawable/zds_ic_more_horizontal_line_24"
            app:trailingType="icon"
            style="@style/WhiteZdsActionBar.AppType"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
        <com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_poll_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/container_footer"
                android:layout_alignParentTop="true"/>
            <RelativeLayout
                android:id="@+id/container_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <RelativeLayout
                    android:id="@+id/poll_save_view"
                    android:background="@drawable/bg_poll_detail_bottom_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="14dp"
                        android:gravity="center"
                        android:id="@+id/btn_send_poll"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:minWidth="@dimen/mat_btn_style_3_w"
                        android:text="@string/str_btn_send_poll"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true"
                        app:fstyle="medium"
                        style="@style/btnType1.medium"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/poll_add_option_view"
                    android:background="@drawable/bg_poll_detail_bottom_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <com.zing.zalo.uicontrol.CustomEditText
                        android:textSize="14dp"
                        android:textColor="?attr/TextColor1"
                        android:textColorHint="?attr/TextColor2"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/et_option_input"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="@string/str_poll_button_add_option"
                        android:includeFontPadding="false"
                        android:layout_toLeftOf="@+id/tv_option_action"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:inputType="textMultiLine"
                        style="@style/MaterialEditText"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:gravity="center"
                        android:id="@+id/tv_option_action"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="12dp"
                        android:minWidth="@dimen/mat_btn_style_1_w"
                        android:text="@string/str_close"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true"
                        style="@style/btnType2.medium"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/poll_closed_view"
                    android:background="@drawable/bg_poll_detail_bottom_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="54dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="1dp"
                            app:srcCompat="@drawable/compose_icon_privacy"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="14dp"
                            android:textColor="?attr/TextColor1"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/poll_closed_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_msg_poll_closed"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout>
    </LinearLayout>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
