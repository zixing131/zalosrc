<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/zad__landing_action"
    android:background="@color/zad__dim_background_color"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/zad__bg_corner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="3">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/zad__landing_refresh"
            android:padding="@dimen/zad__iab_padding"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/zad__landing_refresh_icon"
                style="@style/AdtimaIabRefreshIconStyle"/>
        </LinearLayout>
        <View
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/zad__landing_copy_link"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zad__iab_padding">
                <ImageView
                    android:id="@+id/zad__landing_copy"
                    style="@style/AdtimaIabSubIconStyle"/>
                <TextView
                    android:text="@string/zad__mn_copy_link"
                    style="@style/AdtimaIabMenuTextStyle"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/zad__landing_open_browser"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zad__iab_padding">
                <ImageView
                    android:id="@+id/zad__landing_open"
                    style="@style/AdtimaIabSubIconStyle"/>
                <TextView
                    android:text="@string/zad__mn_open_on_browser"
                    style="@style/AdtimaIabMenuTextStyle"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/zad__landing_report"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zad__iab_padding">
                <ImageView
                    android:id="@+id/zad__landing_iv_report"
                    style="@style/AdtimaIabSubIconStyle"/>
                <TextView
                    android:text="@string/zad__mn_report_link"
                    style="@style/AdtimaIabMenuTextStyle"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
