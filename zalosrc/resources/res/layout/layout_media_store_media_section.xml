<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_store_media_section_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/media_store_media_section_height">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_section_title_area"
        android:background="@drawable/stencils_contact_bg"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:id="@+id/tv_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Roboto.f2b"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor2"
            android:gravity="center_vertical"
            android:id="@+id/tv_section_subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="@style/Roboto.f13"/>
    </LinearLayout>
    <View
        android:id="@+id/icn_section_red_dot"
        android:background="@drawable/icon_red_dot"
        android:visibility="gone"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/ll_section_title_area"
        android:layout_marginEnd="6dp"
        android:layout_alignEnd="@+id/ll_section_title_area"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/AppPrimaryColor"
        android:gravity="center_vertical"
        android:id="@+id/tv_right_side"
        android:background="@drawable/stencils_contact_bg"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:drawablePadding="2dp"
        android:layout_alignTop="@+id/ll_section_title_area"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:layout_alignParentEnd="true"
        style="@style/Roboto.f13b"/>
</RelativeLayout>
