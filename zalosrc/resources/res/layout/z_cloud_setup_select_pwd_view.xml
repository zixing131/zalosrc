<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/z_cloud_setup_select_pwd_view_0"
    android:background="?attr/surface_background_alt"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zview.actionbar.ActionBar
        android:id="@+id/zalo_action_bar"
        android:background="?attr/surface_background_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical_style_1"
        android:scrollbarTrackVertical="@drawable/scrollbar_track_vertical_style_1"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/scrollView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar"
        android:fadeScrollbars="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/titleIcon"
                android:paddingTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:gravity="center_horizontal"
                android:id="@+id/tvTitle"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_zcloud_setup_protection_code_intro_title"
                android:layout_below="@+id/titleIcon"
                android:textAlignment="center"
                style="@style/h_xlarge"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/descriptionContainer"
                android:paddingLeft="24dp"
                android:paddingTop="32dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:background="@drawable/round_background"
                        android:padding="8dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/zds_ic_auto_clockwise_solid_24"
                        android:tint="?attr/icon_primary"
                        android:backgroundTint="?attr/layer_background_selected"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_zcloud_setup_protection_code_intro_description_first"
                        android:layout_marginStart="8dp"
                        style="@style/t_normal"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:background="@drawable/round_background"
                        android:padding="8dp"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/zds_ic_lock_solid_24"
                        android:tint="?attr/icon_primary"
                        android:backgroundTint="?attr/layer_background_selected"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textColor="?attr/text_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_zcloud_setup_protection_code_intro_description_second"
                        android:layout_marginStart="8dp"
                        style="@style/t_normal"/>
                </LinearLayout>
            </LinearLayout>
            <com.zing.zalo.zdesign.component.Button
                android:id="@+id/btnUsePin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/str_zcloud_create_six_pin"
                android:layout_below="@+id/descriptionContainer"
                android:layout_centerHorizontal="true"
                style="@style/ButtonMedium.Primary"/>
            <View
                android:id="@+id/fakeView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/btnUsePin"/>
        </RelativeLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/input_field_text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/str_zcloud_advanced_data_protection"
            style="@style/t_xsmall"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btnUsePassphrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_zcloud_use_sixty_four_random_characters"
            style="@style/ButtonSmall.Tertiary"/>
    </LinearLayout>
</RelativeLayout>
