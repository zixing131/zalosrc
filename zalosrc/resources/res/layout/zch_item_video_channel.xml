<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.ChannelVideoItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/rivThumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/vieOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/icoPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="11dp"
        android:textColor="@color/zch_text_primary"
        android:gravity="center"
        android:id="@+id/txtViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:drawableLeft="@drawable/zch_ic_play_solid_16"
        android:drawablePadding="2dp"
        package:zchFontStyle="bold"/>
    <ImageView
        android:id="@+id/icoPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:gravity="center"
        android:id="@+id/vieStatus"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        package:zchFontStyle="medium"/>
    <ImageView
        android:id="@+id/icoStatus"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.ChannelVideoItem>
