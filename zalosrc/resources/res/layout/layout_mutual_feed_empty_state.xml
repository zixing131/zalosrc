<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0x7f070484">
        <com.zing.zalo.uicontrol.CircleImage
            android:id="@+id/avt_mine"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="-10dp"
            android:src="0x7f080958"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/avt_friend"/>
        <com.zing.zalo.uicontrol.CircleImage
            android:id="@+id/avt_friend"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="0x7f080958"
            android:scaleType="fitXY"/>
        <com.zing.zalo.uicontrol.CircleImage
            android:id="@+id/icon_secret"
            android:visibility="visible"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="50dp"
            android:src="0x7f080bc5"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/avt_friend"/>
    </RelativeLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:id="@+id/tv_status_mutual_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0x7f070486"
        android:layout_marginRight="30dp"
        style="@style/Roboto.f2"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/btn_share_mutual_empty"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_marginTop="14dp"
        android:minWidth="156dp"
        android:text="@string/share"
        android:textAllCaps="true"
        style="@style/btnType1.medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/TextColor2"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/tv_notice_mutual_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0x7f070485"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="16dp"
        style="@style/Roboto.f0"/>
</LinearLayout>
