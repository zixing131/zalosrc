<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/PrimaryBackgroundColor"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zview.actionbar.ActionBar
        android:id="@+id/action_bar_view"
        android:background="@drawable/stencil_bg_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/width_shadow_action_bar"/>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/imvEmpty"
        android:visibility="visible"
        android:layout_width="147dp"
        android:layout_height="120dp"
        android:layout_marginTop="178dp"
        android:layout_centerHorizontal="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textColor="?attr/NormalIconWhiteHeaderColor"
        android:gravity="center"
        android:id="@+id/tvEmpty"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/imvEmpty"
        android:layout_centerHorizontal="true"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="?attr/NotificationColor5"
        android:gravity="center"
        android:id="@+id/tv_desc"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="50dp"
        android:text="@string/str_social_memory_empty_desc"
        android:layout_below="@+id/tvEmpty"
        android:layout_centerHorizontal="true"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:gravity="center"
        android:id="@+id/btnEmpty"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_marginTop="24dp"
        android:minWidth="150dp"
        android:layout_below="@+id/tv_desc"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        style="@style/btnType1.medium"/>
</RelativeLayout>
