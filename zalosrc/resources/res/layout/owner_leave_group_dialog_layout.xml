<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PopupBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/NotificationColor1"
            android:gravity="center_vertical"
            android:id="@+id/confirm_btn_yes"
            android:background="@drawable/material_button_dialog_bg"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/str_group_leave"
            android:maxLines="1"
            android:textAllCaps="true"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:id="@+id/custom_btn"
            android:background="@drawable/material_button_dialog_bg"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/str_select_new_group_owner_v2"
            android:textAllCaps="true"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:gravity="center_vertical"
            android:id="@+id/confirm_btn_no"
            android:background="@drawable/material_button_dialog_bg"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/str_cancel"
            android:maxLines="1"
            android:textAllCaps="true"
            app:fstyle="medium"/>
    </LinearLayout>
</LinearLayout>
