<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/zdb_migrate_view_0"
    android:background="?attr/ChatBarBackgroundColor"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_migrating"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.zlottie.widget.LottieImageView
            android:layout_gravity="center"
            android:id="@+id/ivLottieLoading"
            android:padding="12dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="20dp"
            android:textColor="?attr/TextColor1"
            android:layout_gravity="center"
            android:id="@+id/text_content_title"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_checking"
            android:textAlignment="center"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="15dp"
            android:textColor="?attr/TextColor2"
            android:layout_gravity="center"
            android:paddingTop="6dp"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_zdb_loading_desc_1"
            android:textAlignment="center"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="15dp"
            android:textColor="?attr/TextColor2"
            android:layout_gravity="center"
            android:paddingTop="6dp"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_zdb_loading_desc_2"
            android:textAlignment="center"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/layout_full_storage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="60dp"
                    app:srcCompat="@drawable/ic_warning_backup_media"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="24dp"
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/text_full_storage_title"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_zdb_migrate_full_storage_title"
                    android:textAlignment="center"
                    app:fstyle="medium"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="16dp"
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/text_full_storage_desc"
                    android:paddingTop="6dp"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>
                <com.zing.zalo.zdesign.component.TrackingTextView
                    android:textColor="?attr/link_01"
                    android:id="@+id/text_instructions"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/str_see_the_instructions"
                    style="@style/t_normal_m"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor2"
                    android:id="@+id/text_warning_full_storage"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    style="@style/t_normal"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="48dp">
            <com.zing.zalo.zdesign.component.Button
                android:layout_gravity="center"
                android:id="@+id/btn_storage_manager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/str_free_up_space"
                style="@style/ButtonLarge.Primary"/>
            <com.zing.zalo.zdesign.component.Button
                android:layout_gravity="center"
                android:id="@+id/btn_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/str_check_again"
                style="@style/ButtonLarge.TertiaryNeutral"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
