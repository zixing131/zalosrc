<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottom_view_bg_popup_rounded_top_12"
    android:paddingLeft="24dp"
    android:paddingTop="16dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.imageview.CircleImageView
            android:id="@+id/imv_mp_avt"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="?attr/N200"
            android:id="@+id/mp_name"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"/>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="?attr/MPBottomSheetDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imv_mp_avt"/>
    <LinearLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zing.zalo.zdesign.component.TrackingImageView
                android:id="@+id/btn_share"
                android:background="@drawable/bg_b700_b700_50_radius_12"
                android:padding="20dp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_mp_share"/>
            <TextView
                android:textColor="?attr/N400"
                android:layout_gravity="center_horizontal"
                android:id="@+id/txt_share"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/share"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp">
            <com.zing.zalo.zdesign.component.TrackingImageView
                android:id="@+id/btn_reload"
                android:background="@drawable/bg_pu700_pu700_50_radius_12"
                android:padding="20dp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_mp_reload"/>
            <TextView
                android:textColor="?attr/N400"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/snap_reload_state"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp">
            <com.zing.zalo.zdesign.component.TrackingImageView
                android:id="@+id/btn_report"
                android:background="@drawable/bg_o700_o700_50_radius_12"
                android:padding="20dp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_mp_report"/>
            <TextView
                android:textColor="?attr/N400"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/str_report_btn"/>
        </LinearLayout>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.Button
        android:textSize="16sp"
        android:textColor="?attr/N400"
        android:id="@+id/btn_cancel"
        android:background="@drawable/bg_mp_bottom_sheet_cancel_button_radius_8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="@string/close"
        android:textAllCaps="false"
        style="@style/ButtonMedium.SecondaryNeutral"/>
</LinearLayout>
