<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/item_audio_output"
        android:background="?attr/layer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_call_ex_speaker_select"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/item_split_screen"
        android:background="?attr/layer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_call_split_view_mode"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/item_filter"
        android:background="?attr/layer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_call_filter_btn_tip"/>
</LinearLayout>
