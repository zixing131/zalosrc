<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/stencils_contact_bg_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp">
        <com.zing.zalo.p077ui.widget.GroupAvatarView
            android:id="@+id/img_avt"
            android:layout_width="@dimen/avt_Ma"
            android:layout_height="@dimen/avt_Ma"
            android:src="0x7f080958"
            style="@style/myImageView"/>
        <ImageView
            android:layout_gravity="bottom|right"
            android:id="@+id/ic_active"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="0x7f080f27"/>
    </FrameLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f2"
        android:textColor="?attr/HeaderFormTitleColor"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:singleLine="true"
        android:layout_weight="1"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f8"
        android:textColor="?attr/TextColor2"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/tvLogin"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:minWidth="107dp"
        android:text="@string/str_logged_in"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="@drawable/bg_btn_type1_text"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/btn_login"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mat_btn_style_2_medium_h"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="16dp"
        android:minWidth="94dp"
        android:text="@string/str_cap_login"
        android:textAllCaps="true"
        style="@style/btnType1.medium"/>
</LinearLayout>
