<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.SendingCommentItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
        android:id="@+id/aivAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        package:zchCornerRadius="@dimen/zch_radius_4dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitUsernameTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_tertiary"
        android:ellipsize="end"
        android:id="@+id/txtName"
        android:paddingBottom="@dimen/zch_item_comment_name_to_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:includeFontPadding="false"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.FitContentTextView
        android:textSize="15dp"
        android:textColor="@color/zch_text_primary"
        android:ellipsize="end"
        android:id="@+id/txtContent"
        android:paddingBottom="@dimen/zch_item_comment_content_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:alpha="0.3"
        package:zchFontStyle="regular"/>
    <FrameLayout
        android:id="@+id/flVideoCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.RoundedImageView
            android:id="@+id/videoCover"
            android:layout_width="@dimen/zch_item_comment_video_cover_width"
            android:layout_height="@dimen/zch_item_comment_video_cover_height"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/icoStatus"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/btnPlay"
        android:background="@drawable/zch_bg_button_video_play"
        android:visibility="gone"
        android:layout_width="@dimen/zch_item_comment_play_button_size"
        android:layout_height="@dimen/zch_item_comment_play_button_size"
        android:src="@drawable/zch_ic_play_solid_16"
        android:scaleType="centerInside"
        android:alpha="0.3"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="12dp"
        android:textColor="@color/zch_text_accent_blue"
        android:id="@+id/tvRetry"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_sending_comment_retry"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.BlinkTextView
        android:textSize="12dp"
        android:textColor="@color/zch_text_accent_red"
        android:id="@+id/tvDelete"
        android:paddingBottom="@dimen/zch_item_comment_action_to_tag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_sending_comment_delete"
        package:zchFontStyle="regular"/>
    <ProgressBar
        android:theme="@style/CircularProgress"
        android:id="@+id/barLoading"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/zch_icon_primary"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="12dp"
        android:textColor="@color/zch_text_secondary"
        android:id="@+id/tvSending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zch_item_comment_sending"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
        android:id="@+id/btnLike"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zch_ic_heart_line_16"
        android:alpha="0.3"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="@color/zch_text_tertiary"
        android:id="@+id/txtLike"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        package:zchFontStyle="regular"/>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.SendingCommentItem>
