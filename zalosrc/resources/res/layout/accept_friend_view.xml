<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_swipeable_view"
    android:background="?attr/SecondaryBackgroundColor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_action_bar"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:id="@+id/scroll_container_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar">
        <LinearLayout
            android:orientation="vertical"
            android:background="?attr/PrimaryBackgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.GroupAvatarView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/ava3a"
                    android:layout_height="@dimen/ava3a"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ava3a"
                    android:layout_toRightOf="@+id/avatar">
                    <com.zing.zalo.p077ui.widget.textview.AutoMeasureTextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:atDrawable="@drawable/ic_edit_display_name"
                        app:atDrawableVisible="true"
                        app:atFontStyle="medium"
                        app:atTextColor="?attr/TextColor1"
                        app:atTextSize="@dimen/f2"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f1s"
                        android:textColor="?attr/TextColor2"
                        android:ellipsize="end"
                        android:id="@+id/tvNameZalo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"/>
                </LinearLayout>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/tvMessage"
                    android:paddingLeft="10dp"
                    android:paddingTop="14dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_below="@+id/avatar"/>
            </RelativeLayout>
            <View
                android:id="@+id/split_source"
                android:background="@drawable/split_line_with_top_bottom_border"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <LinearLayout
                android:id="@+id/source_container"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/str_add_friend_source"
                    android:maxLines="1"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tvSrc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnSetting"
                    android:padding="10dp"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="6dp"
                    android:src="0x7f080e22"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <View
                android:background="@drawable/split_line_with_top_bottom_border"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>
            <LinearLayout
                android:id="@+id/ll_allow_view_social"
                android:background="@drawable/stencils_bg_white_with_press_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f2"
                    android:textColor="?attr/TextColor1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/str_block_view_timeline"
                    android:layout_weight="1"/>
                <com.zing.zalo.p077ui.widget.StencilSwitch
                    android:layout_gravity="center_vertical"
                    android:id="@+id/sw_allow_view_social"
                    android:duplicateParentState="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:checked="false"/>
            </LinearLayout>
            <View
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <FrameLayout
                android:background="?attr/SecondaryBackgroundColor"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoButton
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btnAccept"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/str_add_friend_accept_request"
                    android:textAllCaps="true"
                    style="@style/btnType1.big"/>
            </FrameLayout>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
        android:id="@+id/multi_state"
        android:paddingBottom="52dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zalo_action_bar"
        app:msvErrorLayout="@layout/layout_error_state"/>
</com.zing.zalo.p077ui.widget.CustomRelativeLayout>
