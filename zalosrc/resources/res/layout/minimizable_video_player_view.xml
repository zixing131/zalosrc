<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:draggable="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.uicomponents.framelayout.DragToCloseLayout
        android:id="@+id/feed_video_drag_to_close_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.videoplayer.DraggableVideoView
            android:id="@+id/draggable_view"
            android:background="@drawable/bg_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            draggable:drag_view_background="0x7f080769"
            draggable:top_view_margin_bottom="2dp"
            draggable:top_view_margin_right="2dp"/>
        <com.zing.zalo.p077ui.widget.MaskableImageView
            android:layout_gravity="center"
            android:id="@+id/imv_anim_mask"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/black"/>
        <include layout="@layout/layout_action_bar"/>
    </com.zing.zalo.uicomponents.framelayout.DragToCloseLayout>
</FrameLayout>
