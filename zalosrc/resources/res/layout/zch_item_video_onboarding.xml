<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.shortvideo.p072ui.component.p073rv.item.OnboardingVideoItem xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrOnboarding"
        android:scrollbars="none"
        android:fadingEdgeLength="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:requiresFadingEdge="vertical">
        <com.zing.zalo.shortvideo.p072ui.component.p073rv.item.OnboardingContainerLayout
            android:id="@+id/lytContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="24dp"
                android:textColor="@color/zch_text_primary"
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                package:zchFontStyle="medium"/>
            <com.zing.zalo.shortvideo.p072ui.component.p073rv.item.OnboardingOptionLayout
                android:id="@+id/lytOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                android:textSize="15dp"
                android:textColor="@color/zch_text_primary"
                android:gravity="center_vertical"
                android:id="@+id/btnExpand"
                android:background="@drawable/zch_bg_option_onboarding_expand"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zch_item_video_onboarding_more"
                android:includeFontPadding="false"
                package:zchFontStyle="regular"/>
        </com.zing.zalo.shortvideo.p072ui.component.p073rv.item.OnboardingContainerLayout>
    </ScrollView>
</com.zing.zalo.shortvideo.p072ui.component.p073rv.item.OnboardingVideoItem>
