<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.shortvideo.p072ui.widget.p075rv.OverScrollableRecyclerView
        android:id="@+id/lstVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="-1dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.LoadingLayout
        android:id="@+id/lytLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.shortvideo.p072ui.widget.ChannelInfoLayout
        android:id="@+id/lytInfo"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
            android:id="@+id/aivAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            package:zchCornerRadius="@dimen/zch_radius_8dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/lytStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
            android:textSize="18dp"
            android:textColor="@color/zch_text_primary"
            android:ellipsize="end"
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
            android:textSize="14dp"
            android:textColor="@color/zch_text_tertiary"
            android:ellipsize="end"
            android:id="@+id/txtVerify"
            android:paddingBottom="@dimen/zch_layout_channel_info_verify_to_bio"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            package:zchFontStyle="regular"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
            android:textSize="14dp"
            android:textColor="@color/zch_text_secondary"
            android:ellipsize="end"
            android:id="@+id/txtBio"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            package:zchFontStyle="regular"/>
        <com.zing.zalo.shortvideo.p072ui.widget.p075rv.OverScrollableRecyclerView
            android:id="@+id/rvChannelCta"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zch_layout_channel_cta_height"/>
        <com.zing.zalo.shortvideo.p072ui.widget.ChannelLivestreamInfoLayout
            android:id="@+id/lytLive"
            android:background="@color/zch_layer_background"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivChannelLive"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/zch_ic_calendar_line_16"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
                android:textSize="14dp"
                android:textColor="@color/zch_icon_primary"
                android:id="@+id/tvStateLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phiên Live đang diễn ra"
                android:includeFontPadding="false"
                android:lineSpacingExtra="1sp"
                package:zchFontStyle="medium"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
                android:textSize="13dp"
                android:textColor="@color/zch_text_tertiary"
                android:ellipsize="end"
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00, 10-01-2023"
                android:lines="1"
                android:lineSpacingExtra="1sp"
                package:zchFontStyle="medium"/>
            <ImageView
                android:id="@+id/ivArrowRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zch_ic_chevron_right_line_16"
                package:tint="@color/white"/>
        </com.zing.zalo.shortvideo.p072ui.widget.ChannelLivestreamInfoLayout>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:gravity="center"
            android:id="@+id/btnAction"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
        <ImageView
            android:id="@+id/btnShare"
            android:background="@drawable/zch_bg_button_inactive"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zch_ic_share_line_24"
            android:scaleType="centerInside"/>
        <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/flExpand"
            android:background="@drawable/zch_bg_button_inactive"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/btnExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zch_ic_chevrondown_solid_24"
                android:scaleType="centerInside"
                package:tint="@color/white"/>
        </FrameLayout>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="14dp"
            android:textColor="#f7f7f8"
            android:gravity="start|center_vertical"
            android:id="@+id/tvSimilarVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zch_page_channel_suggest_channel"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.p075rv.OverScrollableRecyclerView
            android:id="@+id/rvSimilarVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zch_layout_channel_similar_channel_height"/>
    </com.zing.zalo.shortvideo.p072ui.widget.ChannelInfoLayout>
    <com.zing.zalo.shortvideo.p072ui.widget.p075rv.OverScrollableRefreshBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/barRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal"
        android:id="@+id/btnJustWatched"
        android:background="@drawable/zch_bg_button_active_white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="44dp">
        <ImageView
            android:id="@+id/icoJustWatched"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <ProgressBar
            android:theme="@style/ZchCircularProgressBlack"
            android:id="@+id/barJustWatched"
            android:padding="1dp"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:indeterminate="true"/>
        <TextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary_light"
            android:id="@+id/txtJustWatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/zch_item_video_channel_just_watched"
            android:includeFontPadding="false"
            package:zchFontStyle="medium"/>
    </LinearLayout>
    <com.zing.zalo.shortvideo.p072ui.widget.SuggestFollowLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/flSuggestBanner"
        android:background="@drawable/zch_bg_popup"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginBottom="-76dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
            android:id="@+id/rivAvatarSuggest"
            android:layout_width="42dp"
            android:layout_height="42dp"
            package:zchCornerRadius="@dimen/zch_radius_8dp"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
            android:textSize="15dp"
            android:textColor="@color/zch_text_primary"
            android:gravity="center"
            android:id="@+id/btnFollowSuggest"
            android:background="@drawable/zch_bg_button_active_blue"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/zch_page_channel_follow"
            android:includeFontPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            package:zchFontStyle="medium"/>
        <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
            android:textSize="13sp"
            android:textColor="@color/zch_icon_secondary"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:id="@+id/tvTitleSuggest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Phong Bổn Bình Bình Bình Bình"
            android:lines="2"
            android:includeFontPadding="false"
            android:shadowColor="#40000000"
            package:zchFontStyle="medium"
            package:zchShadowDxDip="0.5dp"
            package:zchShadowDyDip="0.5dp"/>
    </com.zing.zalo.shortvideo.p072ui.widget.SuggestFollowLayout>
</FrameLayout>
