<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.uicontrol.ViewPagerCustomSwipeable
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/layoutTab"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sub_tab_height"
        android:baselineAligned="false">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                android:textSize="@dimen/f4"
                android:textColor="@drawable/name_subtab_text"
                android:gravity="center"
                android:id="@+id/tv_friends"
                android:background="@drawable/subztab_indicator_bg_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/subtab_title_contact"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/tab_groups"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                android:textSize="@dimen/f4"
                android:textColor="@drawable/name_subtab_text"
                android:gravity="center"
                android:id="@+id/tv_groups"
                android:background="@drawable/subztab_indicator_bg_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/subtab_title_group"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextViewStateAware
                android:textSize="@dimen/f4"
                android:textColor="@drawable/name_subtab_text"
                android:gravity="center"
                android:id="@+id/tv_pages"
                android:background="@drawable/subztab_indicator_bg_blue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/subtab_title_mypage"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
