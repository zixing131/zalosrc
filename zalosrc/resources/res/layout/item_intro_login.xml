<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgIntro"
        android:layout_width="230dp"
        android:layout_height="0dp"
        android:src="?attr/slide1"
        android:scaleType="fitCenter"
        android:layout_weight="20"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/tvTitleIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:text="@string/str_title_slide_1"
            style="@style/Roboto.f2b"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f5"
                android:textColor="?attr/TextColor2"
                android:gravity="center"
                android:id="@+id/tvDesIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/str_content_slide_1"/>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imgIconZalo"
        android:visibility="gone"
        android:layout_width="230dp"
        android:layout_height="183dp"
        android:layout_marginTop="26dp"
        android:src="0x7f08118e"
        android:scaleType="fitCenter"/>
</LinearLayout>
