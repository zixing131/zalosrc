<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/SecondaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/str_tool_storage_title_ver_zcloud"
        app:middleType="title"
        app:trailingType="none"
        style="@style/BlueZdsActionBar.AppType"/>
    <com.zing.zalo.settingreminder.ScrollViewVisibleChildViewDetector
        android:background="?attr/PrimaryBackgroundColor"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.toolstorage.overview.ToolStorageChartView
                android:id="@+id/chart"
                android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/str_storage_usage_and_cache_zalo_storage_cap"
                style="@style/t_xsmall"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/loading_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/storage_usage_margin_start_piechart">
                <com.zing.zalo.zdesign.component.ProgressBar
                    android:id="@+id/progress_bar_zalo_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    style="@style/ProgressBar.Size24.Blue"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="22dp"
                    android:textColor="?attr/text_01"
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:fstyle="medium"
                    style="@style/t_xlarge"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="28dp"
                android:textColor="?attr/text_01"
                android:id="@+id/tv_zalo_size"
                android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:fstyle="medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_02"
                android:id="@+id/tv_zalo_size_percentage"
                android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/str_tool_storage_calculating_cache_data"
                style="@style/t_xxsmall"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/warning_full_storage_container"
                android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <com.zing.zalo.zdesign.component.Badge
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:badgeSize="size12"
                    app:badgeType="systemStatusWarning"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="@color/y60"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tool_storage_tab_me_desc"
                    android:layout_marginStart="8dp"
                    style="@style/t_xxsmall"/>
            </LinearLayout>
            <View
                android:background="?attr/SecondaryBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="18dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/storage_general_title_zalo_storage_type_text_size"
                android:textStyle="normal"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/storage_usage_margin_start_piechart"
                android:layout_marginTop="14dp"
                android:layout_marginRight="@dimen/storage_usage_margin_start_piechart"
                android:text="@string/str_storage_usage_and_cache_type_cache"
                android:fontFamily="sans-serif"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/storage_general_desc_zalo_storage_type_text_size"
                android:textStyle="normal"
                android:textColor="?attr/TextColor2"
                android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/str_tool_storage_overview_cached_data_description"
                android:fontFamily="sans-serif"/>
            <com.zing.zalo.zdesign.component.Button
                android:enabled="false"
                android:id="@+id/btn_clean_cache"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="14dp"
                android:text="@string/str_tool_storage_overview_clear_cache"
                android:layout_marginStart="@dimen/storage_usage_margin_start_piechart"
                style="@style/ButtonSmall.Secondary"/>
            <View
                android:background="?attr/ItemSeparatorColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="@dimen/storage_usage_margin_start_piechart"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/container_large_file"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/storage_general_title_zalo_storage_type_text_size"
                    android:textStyle="normal"
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/tv_larger_than"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_largest_files"
                    android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                    android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
                <com.zing.zalo.zdesign.component.Button
                    android:enabled="false"
                    android:gravity="center"
                    android:id="@+id/btn_clean_big_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/str_tool_storage_overview_view_and_clean_up"
                    android:singleLine="true"
                    android:alpha="0.3"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:fstyle="medium"
                    style="@style/ButtonSmall.Secondary"/>
                <View
                    android:background="?attr/ItemSeparatorColor"
                    android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                    android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/conversation_data_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/storage_general_title_zalo_storage_type_text_size"
                    android:textStyle="normal"
                    android:textColor="?attr/TextColor1"
                    android:id="@+id/tv_conversation_data_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/str_storage_usage_and_cache_type_user_data"
                    android:fontFamily="sans-serif"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/storage_general_desc_zalo_storage_type_text_size"
                    android:textStyle="normal"
                    android:textColor="?attr/TextColor2"
                    android:paddingLeft="@dimen/storage_usage_margin_start_piechart"
                    android:paddingRight="@dimen/storage_usage_margin_start_piechart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/str_tool_storage_overview_conversation_data_description"/>
                <com.zing.zalo.zdesign.component.Button
                    android:enabled="false"
                    android:gravity="center"
                    android:id="@+id/btn_clean_conversation_data"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/storage_usage_margin_start_piechart"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="@dimen/storage_usage_margin_start_piechart"
                    android:text="@string/str_tool_storage_overview_view_and_clean_up"
                    android:singleLine="true"
                    android:alpha="0.3"
                    style="@style/ButtonSmall.SecondaryNeutral"/>
                <View
                    android:background="?attr/ItemSeparatorColor"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="@dimen/storage_usage_margin_start_piechart"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/storage_general_title_zalo_storage_type_text_size"
                android:textStyle="normal"
                android:textColor="?attr/TextColor1"
                android:id="@+id/tv_others_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:text="@string/str_tool_storage_overview_other_data"
                android:fontFamily="sans-serif"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/storage_general_desc_zalo_storage_type_text_size"
                android:textStyle="normal"
                android:textColor="?attr/TextColor2"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_tool_storage_overview_other_data_description"/>
        </LinearLayout>
    </com.zing.zalo.settingreminder.ScrollViewVisibleChildViewDetector>
</LinearLayout>
