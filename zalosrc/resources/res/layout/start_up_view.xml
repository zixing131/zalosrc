<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutStartupContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13">
            <ImageView
                android:id="@+id/imvAppLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:src="?attr/city"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/fakeView"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>
                <com.zing.p058v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"/>
                <com.zing.zalo.p077ui.widget.SlidingTabLayout
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/sliding_tabs"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    app:typeOfTab="2"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgZalo"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="0x7f081037"
                android:scaleType="fitCenter"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btnLogin"
                android:layout_width="@dimen/mat_startup_button_width"
                android:text="@string/str_cap_login"
                style="@style/btnType1.big"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:gravity="center"
                android:id="@+id/btnRegisterUsingPhoneNumber"
                android:layout_width="@dimen/mat_startup_button_width"
                android:layout_marginTop="15dp"
                android:text="@string/myanmar_startup_register_new"
                style="@style/btnType3.big"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:layout_gravity="center"
                android:id="@+id/str_language_applied_vi"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/LanguageTextStyle"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor1"
                android:layout_gravity="center"
                android:id="@+id/str_language_applied_en"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                style="@style/LanguageTextStyle"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
