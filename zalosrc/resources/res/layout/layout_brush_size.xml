<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tablebrushsize"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.chat.picker.doodle.BrushSizePreview
        android:id="@+id/brush_max_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/standard_padding"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <com.zing.zalo.zdesign.component.slider.ZdsSlider
        android:id="@+id/seekbar_brush_size"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_padding"
        android:layout_marginRight="@dimen/standard_padding"
        android:layout_toLeftOf="@+id/brush_max_size"
        android:layout_centerVertical="true"/>
</RelativeLayout>
