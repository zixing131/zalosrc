<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_msg_item_padding_top"
    android:paddingTop="@dimen/default_msg_item_padding_top"
    android:paddingRight="@dimen/default_msg_item_padding_top"
    android:paddingBottom="@dimen/default_msg_item_padding_top"
    android:focusable="false"
    android:clickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="@color/cMtxt2"
        android:gravity="center"
        android:id="@+id/num_friend"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/padding_view"
        android:visibility="gone"
        android:layout_width="1px"
        android:layout_height="@dimen/func_bar_general_h"/>
</LinearLayout>
