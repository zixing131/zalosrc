<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/ic_server_maintenance"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="20sp"
        android:textColor="?attr/TextColor1"
        android:layout_gravity="center"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/server_maintenance_text"
        android:textAlignment="center"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15sp"
        android:textColor="?attr/TextColor2"
        android:layout_gravity="center"
        android:id="@+id/text_content_subtext"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>
</LinearLayout>
