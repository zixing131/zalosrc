<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/zds_ic_warning_circle_line_24"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14sp"
        android:textColor="?attr/TextColor2"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_error_msg_carousel_listing_collection"
        android:layout_weight="1"
        android:layout_marginEnd="40dp"/>
    <com.zing.zalo.zdesign.component.Button
        android:layout_gravity="center_vertical"
        android:id="@+id/bt_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="74dp"
        android:minHeight="32dp"
        android:text="@string/str_retry"
        style="@style/ButtonSmall.Secondary"/>
</LinearLayout>
