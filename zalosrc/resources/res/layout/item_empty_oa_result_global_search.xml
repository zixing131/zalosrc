<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/layout_find_more_page"
    android:background="@drawable/stencils_bg_white_with_press_state"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.AvatarImageView
        android:id="@+id/buddy_dp"
        android:layout_width="@dimen/avt_image_size_default"
        android:layout_height="@dimen/avt_image_size_default"
        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
        android:layout_marginTop="@dimen/hearder_func_margin_content_t_b"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:layout_marginBottom="@dimen/hearder_func_margin_content_t_b"
        android:src="0x7f080a03"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="@drawable/itemlist_text"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor2"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/description_oa"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_below="@+id/name"/>
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/icon_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/msg_item_padding_l_r"
        android:src="0x7f081044"/>
</LinearLayout>
