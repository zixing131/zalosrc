<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleType="title"
        app:trailingType="text"
        style="@style/WhiteZdsActionBar.AppType"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bubbles"
        android:paddingLeft="@dimen/msg_item_padding_l_r"
        android:paddingTop="16dp"
        android:paddingRight="@dimen/msg_item_padding_l_r"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.uicontrol.CustomEditText
        android:textSize="16dp"
        android:textColor="?attr/TextColor1"
        android:textColorHint="?attr/TextColor2"
        android:ellipsize="end"
        android:autoLink="none"
        android:layout_gravity="center_vertical"
        android:id="@+id/search_input_text"
        android:background="@drawable/bg_search_share_view"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:maxHeight="140dp"
        android:hint="@string/hint_search_in_contact_picker"
        android:maxLines="1"
        android:maxEms="10"
        android:singleLine="true"
        android:maxLength="300"
        android:drawableLeft="@drawable/ic_searchbox_n"
        android:drawablePadding="10dp"
        android:inputType="textAutoCorrect"
        android:imeOptions="actionSend"
        android:textCursorDrawable="@drawable/chat_bar_text_cursor"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/phoneList"
            android:background="?attr/PrimaryBackgroundColor"
            android:scrollbars="vertical"
            android:fadingEdge="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:msvEmptyLayout="@layout/layout_empty_state"
            app:msvErrorLayout="@layout/layout_error_state"/>
    </LinearLayout>
</LinearLayout>
