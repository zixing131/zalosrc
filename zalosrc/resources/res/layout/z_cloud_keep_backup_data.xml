<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/z_cloud_keep_backup_data_0"
    android:background="?attr/surface_background_alt"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zview.actionbar.ActionBar
        android:id="@+id/zalo_action_bar"
        android:background="?attr/surface_background_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical_style_1"
        android:scrollbarTrackVertical="@drawable/scrollbar_track_vertical_style_1"
        android:scrollbarStyle="insideOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnKeepData"
        android:layout_below="@+id/zalo_action_bar"
        android:fadeScrollbars="false">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/illus_emptystate_list"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_01"
                android:gravity="center_horizontal"
                android:id="@+id/tvMainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                style="@style/h_xlarge"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_tertiary"
                android:paddingTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_zcloud_setup_keep_old_backup_unrestored_data"
                style="@style/t_small"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_card_non_select"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_secondary"
                    android:id="@+id/tvTimeBackupInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/t_normal"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_secondary"
                    android:id="@+id/tvDeviceBackupInfo"
                    android:paddingTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/t_normal"/>
            </LinearLayout>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnKeepData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/str_zcloud_setup_keep_data"
        android:layout_above="@+id/btnDeleteData"
        style="@style/ButtonLarge.Primary"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnDeleteData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/str_zcloud_setup_delete_data"
        android:layout_alignParentBottom="true"
        style="@style/ButtonLarge.Tertiary"/>
</RelativeLayout>
