<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/pd_left"
            android:paddingRight="@dimen/pd_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/icon"
                android:layout_width="@dimen/sync_icon_size"
                android:layout_height="@dimen/sync_icon_size"
                android:layout_marginTop="@dimen/backup_restore_margin_top_big"
                app:srcCompatEx="@drawable/ic_backup_restore_intro"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f9s"
                android:textColor="?attr/TextColor1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/sync_pass_input_pass_intro"
                app:fstyle="medium"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_old_pass"
                android:background="@drawable/edt_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp">
                <com.zing.zalo.uicontrol.CustomEditText
                    android:textSize="@dimen/sync_text_large"
                    android:textColor="?attr/TextColor1"
                    android:textColorHint="?attr/TextColor2"
                    android:autoLink="none"
                    android:id="@+id/et_sync_pass"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:hint="@string/str_tv_password"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    style="@style/MaterialEditText"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/TextColor2"
                    android:id="@+id/tv_show_hide_password"
                    android:paddingLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/startup_show_password"
                    style="@style/Roboto.f5b"/>
            </LinearLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/sync_text_normal"
                android:textColor="?attr/SeparatorColor3"
                android:id="@+id/tvError1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/sync_pass_verify_warning_wrong_pass"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:enabled="false"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/btn_confirm_pass"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:minWidth="160dp"
                android:text="@string/continue_text"
                android:textAllCaps="true"
                style="@style/btnType1.medium"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/sync_text_normal"
                android:textColor="@color/cM1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/sync_forgot_pass"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pd_left"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/pd_right"
                android:text="@string/sync_pass_input_pass_forgot_pass"
                android:textAllCaps="false"
                app:fstyle="medium"/>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/layout_action_bar"/>
</FrameLayout>
