<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.zdesign.component.TrackingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ma_item_share_view"
    android:layout_width="@dimen/ma_share_item_width"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <com.zing.zalo.p077ui.widget.GroupAvatarView
        android:id="@+id/ma_contact_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:sriv_oval="true"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="12dp"
        android:textColor="?attr/text_01"
        android:ellipsize="end"
        android:id="@+id/ma_contact_name"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"/>
</com.zing.zalo.zdesign.component.TrackingLinearLayout>
