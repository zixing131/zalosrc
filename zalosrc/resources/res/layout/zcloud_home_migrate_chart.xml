<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_primary"
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            style="@style/t_small"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/text_primary"
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            style="@style/t_small_m"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.ProgressBar
        android:id="@+id/progressBarMigrate"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        app:progressBackgroundColor="?attr/progress_track_background_black"
        app:progressIndicatorColor="?attr/progress_indicator_blue"
        style="@style/ProgressBar.Horizontal"/>
</LinearLayout>
