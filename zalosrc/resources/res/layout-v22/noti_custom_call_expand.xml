<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/mainContainer"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/branch_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/icon_zalo_blue"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_stat_notify_zalo"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#0068ff"
            android:layout_gravity="center_vertical"
            android:id="@+id/title_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginStart="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/titleContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
            <TextView
                android:textSize="14dp"
                android:textColor="#5e6265"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/imv_avatar"
            android:padding="2dp"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:contentDescription="@string/str_profile_picture"
            android:forceDarkAllowed="false"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_btn_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:baselineAligned="true">
        <FrameLayout
            android:id="@+id/fl_btn_left"
            android:background="@drawable/bg_btn_call_reject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="32dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">
            <TextView
                android:textSize="14dp"
                android:textColor="#db342e"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_btn_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/decline_call"
                android:maxLines="1"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_rfilled_reject_call_banner"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_btn_right"
            android:background="@drawable/bg_btn_call_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="32dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp">
            <TextView
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_btn_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/take_call"
                android:maxLines="1"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_wfilled_accept_call_banner"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
