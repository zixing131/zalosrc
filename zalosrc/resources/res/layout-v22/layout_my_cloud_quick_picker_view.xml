<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:zalo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/popup_content_container"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="18dp">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/TextColor1"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_back"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stencils_ic_head_back_black"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
        <com.zing.zalo.p077ui.widget.RobotoEditText
            android:textSize="16dp"
            android:textColor="?attr/TextColor1"
            android:textColorHint="?attr/TabUnSelectedColor"
            android:id="@+id/edt_search"
            android:background="@color/transparent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/str_my_cloud_hint_search_message"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textCursorDrawable="@drawable/chat_bar_text_cursor"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/iv_back"/>
        <ImageView
            android:id="@+id/btn_search"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_my_cloud"
            android:layout_toStartOf="@+id/btn_close"/>
        <ImageView
            android:id="@+id/btn_close"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_bottom_sheet"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17.5dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/seperator1"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/header_container"/>
    <com.zing.zalo.p077ui.mediastore.TabViewLayout
        android:orientation="horizontal"
        android:id="@+id/tab_view"
        android:background="@drawable/main_root_default_color_with_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sub_tab_height"
        android:baselineAligned="false"
        android:layout_below="@+id/seperator1"/>
    <View
        android:id="@+id/seperator2"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tab_view"/>
    <com.zing.zalo.uicontrol.ViewPagerCustomSwipeable
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperator2"/>
    <RelativeLayout
        android:id="@+id/bottom_view_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/floating_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            zalo:srcCompatEx="?attr/floating_action_btn_share"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textColor="?attr/TextColor6"
            android:gravity="center"
            android:id="@+id/tv_selected_count"
            android:background="@drawable/bg_circle_app_primary_color"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:minWidth="24dp"
            android:textAlignment="center"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:lineHeight="16dp"/>
    </RelativeLayout>
</RelativeLayout>
