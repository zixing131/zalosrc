<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zch_item_comment_default_height_inform_item">
    <ImageView
        android:id="@+id/errIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_secondary"
        android:gravity="center"
        android:id="@+id/errTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="2dp"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_tertiary"
        android:gravity="center"
        android:id="@+id/errMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="2dp"
        package:zchFontStyle="regular"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:gravity="center"
        android:id="@+id/errAction"
        android:background="@drawable/zch_bg_button_active_blue"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="16dp"
        package:zchFontStyle="medium"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="13dp"
        android:textColor="@color/zch_text_tertiary"
        android:gravity="bottom|center_horizontal"
        android:id="@+id/errMessageFooter"
        android:paddingBottom="@dimen/zch_item_comment_padding_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:includeFontPadding="false"
        android:layout_weight="1"
        android:lineSpacingExtra="2dp"
        android:paddingStart="@dimen/zch_item_comment_padding_horizontal"
        android:paddingEnd="@dimen/zch_item_comment_padding_horizontal"
        package:zchFontStyle="regular"/>
</LinearLayout>
