<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutLikeInfo"
    android:background="?attr/PrimaryBackgroundColor"
    android:paddingLeft="@dimen/feed_padding_left"
    android:paddingRight="@dimen/feed_padding_right"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.zdesign.component.Divider
        android:id="@+id/top_divider"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <com.zing.zalo.feed.components.TimelineFeedFooterReactionDescription
        android:id="@+id/like_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/like_description">
        <RelativeLayout
            android:id="@+id/btn_like"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp">
            <com.zing.zalo.feed.uicontrols.FeedLikeButtonModulesView
                android:id="@+id/btn_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:id="@+id/btn_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/str_feed_reaction_default_emoji_heart_text"
                android:includeFontPadding="false"
                android:layout_toRightOf="@+id/btn_like_icon"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <com.zing.zalo.feed.reactions.p065ui.TimelineFeedCommentButton
            android:id="@+id/btn_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/btn_like"/>
    </RelativeLayout>
    <View
        android:id="@+id/feed_overlay"
        android:background="?attr/feed_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_footer_bar_content_height"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
