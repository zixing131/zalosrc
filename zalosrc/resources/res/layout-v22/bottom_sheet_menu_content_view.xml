<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inline_banner_container"
    android:background="@drawable/bg_bottom_sheet_content_view_selector"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_sheet_menu_item_height">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/img_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/img_red_dot"
        android:layout_centerVertical="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="16dp"
            android:textColor="?attr/NormalIconWhiteHeaderColor"
            android:ellipsize="end"
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lineHeight="22dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/NotificationColor5"
            android:ellipsize="end"
            android:id="@+id/txt_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:lineHeight="18dp"/>
    </LinearLayout>
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/img_red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_i_os_badge"/>
</RelativeLayout>
