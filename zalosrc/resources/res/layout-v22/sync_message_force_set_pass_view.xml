<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/zalo_action_bar"
        layout="@layout/layout_action_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp">
        <androidx.appcompat.widget.ZAppCompatImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompatEx="@drawable/ic_backup_restore_intro"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f9s"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="40dp"
            android:text="@string/str_title_force_set_pass"
            android:lineHeight="26dp"
            app:fstyle="medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f3"
            android:textColor="?attr/TextColor2"
            android:gravity="center"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="40dp"
            android:text="@string/str_desc_force_set_pass"
            android:lineHeight="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_enter_pass"
            android:background="@drawable/edt_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp">
            <com.zing.zalo.uicontrol.CustomEditText
                android:textSize="@dimen/sync_text_large"
                android:textColor="?attr/TextColor1"
                android:textColorHint="?attr/TextColor2"
                android:autoLink="none"
                android:id="@+id/et_enter_pass"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:hint="@string/sync_set_pass_screen_enter_pass"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="1"
                android:inputType="textPassword"
                style="@style/MaterialEditText"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/TextColor3"
                android:gravity="center"
                android:id="@+id/btn_show_password"
                android:paddingLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="42dp"
                android:text="@string/startup_show_password"
                style="@style/Roboto.f5b"/>
        </LinearLayout>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/sync_text_normal"
            android:textColor="?attr/SeparatorColor3"
            android:id="@+id/tv_pass_error"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="24dp"
            android:text="@string/sync_pass_verify_warning_lenght"/>
        <com.zing.zalo.uicontrol.CustomEditText
            android:textSize="@dimen/sync_text_large"
            android:textColor="?attr/TextColor1"
            android:textColorHint="?attr/TextColor2"
            android:autoLink="none"
            android:id="@+id/et_re_enter_pass"
            android:background="@drawable/edt_normal"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:hint="@string/sync_set_pass_screen_reenter_pass"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="textPassword"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/sync_text_normal"
            android:textColor="?attr/SeparatorColor3"
            android:id="@+id/tv_re_pass_error"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="24dp"
            android:text="@string/sync_pass_verify_warning_not_match"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:enabled="false"
            android:textSize="@dimen/f5"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_save_pass"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="24dp"
            android:text="@string/str_btn_continue"
            android:textAllCaps="true"
            style="@style/btnType1.medium"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f0"
            android:textColor="?attr/TextColor1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_ignore"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/str_sync_btn_skip"
            android:textAllCaps="true"
            app:fstyle="medium"
            style="@style/MaterialClickableTextview"/>
    </LinearLayout>
</LinearLayout>
