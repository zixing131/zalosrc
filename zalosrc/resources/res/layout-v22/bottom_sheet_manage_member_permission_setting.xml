<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="18sp"
        android:textColor="?attr/text_01"
        android:id="@+id/tv_title"
        android:paddingLeft="@dimen/permission_setting_bottom_sheet_content_horizontal_padding"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/permission_setting_bottom_sheet_content_horizontal_padding"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingHorizontal="@dimen/permission_setting_bottom_sheet_content_horizontal_padding"
        android:paddingVertical="12dp"
        style="@style/t_xlarge_m"/>
    <com.zing.zalo.zdesign.component.Divider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Divider.Style01"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="?attr/text_02"
        android:id="@+id/tv_desc"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:paddingHorizontal="16dp"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/item_everyone_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/bottom_sheet_container"
        app:title="@string/str_everone_permission_v2"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/item_admin_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/bottom_sheet_container"
        app:title="@string/str_group_settings_admin_permission_v2"/>
</LinearLayout>
