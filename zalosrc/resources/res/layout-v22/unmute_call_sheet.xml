<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/TextColor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginBottom="8dp"
        android:text="@string/str_call_notif_unmute_all_sheet_title"
        android:textAlignment="center"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="?attr/TextColor2"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/str_call_notif_unmute_all_sheet_desc"
        android:textAlignment="center"
        android:layout_marginHorizontal="24dp"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnUnMute"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/str_call_notif_unmute_all_sheet_btn"
        style="@style/ButtonMedium.Primary"/>
</LinearLayout>
