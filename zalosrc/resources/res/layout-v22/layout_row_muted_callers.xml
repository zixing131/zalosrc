<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?attr/PrimaryBackgroundColor"
    android:paddingLeft="@dimen/text_header_list_margin_l"
    android:paddingTop="2dp"
    android:paddingRight="@dimen/text_header_list_margin_l"
    android:paddingBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/text_header_list_margin_l"
    android:paddingVertical="2dp">
    <com.zing.zalo.p077ui.widget.AvatarImageView
        android:id="@+id/buddy_dp"
        android:layout_width="@dimen/ava3"
        android:layout_height="@dimen/ava3"
        android:layout_marginTop="@dimen/msg_item_padding_t_b"
        android:layout_marginBottom="@dimen/msg_item_padding_t_b"
        android:src="0x7f080958"
        style="@style/myImageView"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="@dimen/f5"
        android:textColor="?attr/TextColor1"
        android:ellipsize="end"
        android:id="@+id/name"
        android:paddingLeft="@dimen/msg_item_padding_l_r"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_weight="1"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:textColor="@drawable/bg_btn_type2_text"
        android:gravity="center"
        android:layout_gravity="end|center_vertical"
        android:id="@+id/btn_Remove"
        android:paddingLeft="@dimen/stencils_button_padding"
        android:paddingRight="@dimen/stencils_button_padding"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="@string/str_call_setting_notif_except_delete_btn"
        android:singleLine="true"
        style="@style/btnType2.medium"/>
</LinearLayout>
