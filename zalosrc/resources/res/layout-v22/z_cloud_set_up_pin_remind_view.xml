<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/z_cloud_set_up_pin_remind_view_0"
    android:background="?attr/surface_background_alt"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zview.actionbar.ActionBar
        android:id="@+id/zalo_action_bar"
        android:background="?attr/surface_background_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb_vertical_style_1"
        android:scrollbarTrackVertical="@drawable/scrollbar_track_vertical_style_1"
        android:scrollbarStyle="insideOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/bottomContainerConfirm"
        android:layout_below="@+id/zalo_action_bar"
        android:fadeScrollbars="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/titleIcon"
                android:paddingTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:gravity="center_horizontal"
                android:id="@+id/tvTitle"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_zcloud_remember_data_protection_code"
                android:layout_below="@+id/titleIcon"
                android:textAlignment="center"
                android:paddingHorizontal="24dp"
                style="@style/h_xlarge"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:id="@+id/tvDescription"
                android:paddingLeft="24dp"
                android:paddingTop="24dp"
                android:paddingRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:paddingHorizontal="24dp"
                style="@style/t_normal"/>
        </RelativeLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottomContainerConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="24dp">
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btnGotIt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/str_zcloud_got_it"
            style="@style/ButtonLarge.Primary"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btnCreateNewCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_zcloud_create_a_new_code"
            style="@style/ButtonLarge.TertiaryNeutral"/>
    </LinearLayout>
</RelativeLayout>
