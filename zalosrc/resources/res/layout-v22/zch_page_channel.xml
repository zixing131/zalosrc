<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytPageChannel"
    android:background="@color/zch_layer_background_subtle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.shortvideo.p072ui.widget.LeftTitleHeaderLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/lytHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zch_page_header_height">
            <FrameLayout
                android:id="@+id/lytLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnBack"
                    android:background="@drawable/zch_bg_ripple_circle"
                    android:layout_width="@dimen/zch_page_header_button_size"
                    android:layout_height="@dimen/zch_page_header_button_size"
                    android:layout_marginLeft="@dimen/zch_page_header_button_margin"
                    android:layout_marginRight="@dimen/zch_page_header_button_margin"
                    android:src="@drawable/zch_ic_chevron_left_line_24"
                    android:scaleType="centerInside"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/lytCenter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.zing.zalo.shortvideo.p072ui.widget.tv.UsernameTextView
                    android:textSize="16dp"
                    android:textColor="@color/zch_text_primary"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:id="@+id/txtTitle"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    package:zchFontStyle="medium"/>
            </FrameLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/lytRight"
                android:paddingLeft="@dimen/zch_page_header_button_margin"
                android:paddingRight="@dimen/zch_page_header_button_margin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnUpload"
                    android:background="@drawable/zch_bg_ripple_circle"
                    android:visibility="gone"
                    android:layout_width="@dimen/zch_page_header_button_size"
                    android:layout_height="@dimen/zch_page_header_button_size"
                    android:src="@drawable/zch_ic_video_added_line_24"
                    android:scaleType="centerInside"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnMore"
                    android:background="@drawable/zch_bg_ripple_circle"
                    android:visibility="gone"
                    android:layout_width="@dimen/zch_page_header_button_size"
                    android:layout_height="@dimen/zch_page_header_button_size"
                    android:src="@drawable/zch_ic_more_horizontal_line_24"
                    android:scaleType="centerInside"/>
                <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
                    android:textSize="14dp"
                    android:textColor="@color/zch_text_primary"
                    android:layout_gravity="center"
                    android:id="@+id/btnFollow"
                    android:background="@drawable/zch_bg_button_active_blue"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zch_item_video_follow"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/zch_page_main_item_menu_spacing"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    package:zchFontStyle="medium"/>
            </LinearLayout>
        </com.zing.zalo.shortvideo.p072ui.widget.LeftTitleHeaderLayout>
        <FrameLayout
            android:id="@+id/lytContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
