<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/surface_background_alt"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.p077ui.widget.ScrollView
        android:id="@+id/scrollView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_above="@+id/btnContainer"
        android:layout_below="@+id/zds_action_bar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginHorizontal="24dp">
            <androidx.appcompat.widget.ZAppCompatImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/ivSyncData"
                android:visibility="gone"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                app:srcCompatEx="@drawable/ic_backup_restore_intro"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="22dp"
                android:textColor="?attr/text_primary"
                android:gravity="center"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/str_title_input_protect_code_data"
                style="@style/h_xlarge"/>
            <com.zing.zalo.zdesign.component.OtpField
                android:gravity="center_horizontal"
                android:id="@+id/optFiled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:maxLength="6"/>
            <include
                android:id="@+id/llWarningInputIncorrect"
                layout="@layout/warning_incorrect_code_input_layout"/>
            <include
                android:id="@+id/llWarningOvertimeRetryVerifyCode"
                layout="@layout/warning_overtime_retry_input_protect_code"/>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="24dp">
        <com.zing.zalo.zdesign.component.Button
            android:enabled="false"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/str_zcloud_setup_next"
            style="@style/ButtonLarge.Primary"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btnForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_title_forgot_protect_code"
            style="@style/ButtonLarge.TertiaryNeutral"/>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:background="?attr/surface_background_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerDividerColor="?attr/surface_background_alt"
        app:leadingType="back"
        style="@style/WhiteZdsActionBar.AppType"/>
</RelativeLayout>
