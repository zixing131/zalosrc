<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/SecondaryBackgroundColor"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/list_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leadingType="back"
            app:middleTitleText="@string/str_account_security_item_profile_title"
            app:middleType="title"
            app:trailingType="none"
            style="@style/BlueZdsActionBar.AppType"/>
        <com.zing.zalo.zdesign.component.Avatar
            android:layout_gravity="center_horizontal"
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>
        <com.zing.zalo.zdesign.component.ListItem
            android:id="@+id/itemZaloName"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <com.zing.zalo.zdesign.component.ListItem
            android:id="@+id/itemBirthday"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.zdesign.component.ListItem
            android:id="@+id/itemGender"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btnEditInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:text="@string/str_personal_information_edit_button_title"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            app:btnSupportiveIcon="@drawable/zds_ic_edit_line_16"
            style="@style/ButtonSmall.SecondaryNeutral"/>
    </LinearLayout>
</FrameLayout>
