<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/masterFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.shortvideo.p072ui.widget.SwipeAndPullDismissLayout
        android:id="@+id/inAppContainerView"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zing.zalo.shortvideo.p072ui.widget.ZchInAppNotificationView
            android:id="@+id/inAppNotiView"
            android:background="@color/zch_layer_background"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:elevation="4dp"
            android:layout_marginHorizontal="8dp">
            <com.zing.zalo.shortvideo.p072ui.widget.p074iv.AvatarImageView
                android:id="@+id/ivAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                package:zchCornerRadius="@dimen/zch_radius_4dp"/>
            <com.zing.zalo.shortvideo.p072ui.widget.p074iv.PulseImageView
                android:id="@+id/ivRing"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/zch_inapp_noti_ring"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
                android:textSize="14dp"
                android:textColor="@color/zch_text_primary"
                android:ellipsize="end"
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:includeFontPadding="false"
                package:zchFontStyle="bold"/>
            <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
                android:textSize="14dp"
                android:textColor="@color/zch_text_secondary"
                android:ellipsize="end"
                android:id="@+id/tvDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:includeFontPadding="false"
                package:zchFontStyle="regular"/>
        </com.zing.zalo.shortvideo.p072ui.widget.ZchInAppNotificationView>
    </com.zing.zalo.shortvideo.p072ui.widget.SwipeAndPullDismissLayout>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.EllipsizedTextView
        android:textSize="14dp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:id="@+id/tvToast"
        android:background="@drawable/zch_bg_toast"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingRight="24dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:minHeight="32dp"
        android:maxLines="2"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        package:disableScaleTextSize="false"/>
</FrameLayout>
