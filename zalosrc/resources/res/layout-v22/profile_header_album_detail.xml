<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="?attr/ProfileSectionPhotoPrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.feed.components.DynamicRatioFrameLayout
        android:id="@+id/decor_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/title"
        android:layout_alignBottom="@+id/line_separator"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/privacy_layout"
        android:background="?attr/ImagePlaceHolderColor"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingRight="24dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textColor="?attr/TextColor2"
            android:ellipsize="marquee"
            android:id="@+id/privacy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_privacy_profile_album_detail"
            android:singleLine="true"/>
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/privacy_icon_top"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="12dp"
            android:textColor="?attr/TextColor2"
            android:gravity="center"
            android:id="@+id/tv_privacy_info_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"/>
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/icon_drop_down"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrown_down_privacy_profile_album"/>
    </LinearLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="20dp"
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:id="@+id/title"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/privacy_layout"
        android:layout_centerHorizontal="true"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="14dp"
        android:textColor="?attr/TextColor2"
        android:gravity="center"
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/layout_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/feed_padding_right"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="13dp"
            android:textColor="?attr/TextColor2"
            android:id="@+id/number_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:lineHeight="18dp"/>
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/dot_sep"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/profile_album_privacy_dot_separator"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/privacy_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:id="@+id/privacy_icon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="13dp"
                android:textColor="?attr/TextColor2"
                android:gravity="center"
                android:id="@+id/tv_privacy_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:lineHeight="18dp"/>
        </LinearLayout>
    </LinearLayout>
    <com.zing.zalo.zdesign.component.Divider
        android:id="@+id/line_separator"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/layout_detail"/>
</RelativeLayout>
