<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto">
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:id="@+id/txtTitle"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:shadowColor="#40000000"
        android:layout_centerVertical="true"
        android:paddingHorizontal="8dp"
        package:zchFontStyle="medium"
        package:zchShadowDxDip="0.5dp"
        package:zchShadowDyDip="0.5dp"/>
    <View
        android:id="@+id/dotRed"
        android:background="@drawable/zch_bg_dot_red"
        android:visibility="gone"
        android:layout_width="5.5dp"
        android:layout_height="5.5dp"
        android:layout_alignTop="@+id/txtTitle"
        android:layout_alignRight="@+id/txtTitle"/>
</merge>
