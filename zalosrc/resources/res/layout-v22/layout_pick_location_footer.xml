<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_report"
        android:background="@drawable/bg_location_report_banner"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">
        <com.zing.zalo.zdesign.component.Button
            android:id="@+id/btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"
            app:btnSupportiveIcon="@drawable/zds_ic_close_line_16"
            app:btnSupportiveIconTint="?attr/LocationReportDismissBtnColor"
            style="@style/ButtonSmall.TertiaryAlpha"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/LocationReportDescColor"
            android:gravity="center_horizontal"
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/location_report_desc_1"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            style="@style/t_normal_m"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/LocationReportDescColor"
            android:gravity="center_horizontal"
            android:id="@+id/tv_desc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/location_report_desc_2"
            android:layout_below="@+id/tv_desc"
            android:layout_centerHorizontal="true"
            android:alpha="0.7"
            style="@style/t_small"/>
        <com.zing.zalo.zdesign.component.Button
            android:textColor="?attr/LocationReportBtnTextColor"
            android:id="@+id/btn_report"
            android:background="@drawable/bg_location_report_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:text="@string/location_report_button"
            android:layout_below="@+id/tv_desc_2"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="32dp"
            style="@style/ButtonMedium.Secondary"/>
    </RelativeLayout>
    <View
        android:id="@+id/separate_line"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/layoutLocationSource"
        android:padding="10dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f71"
            android:textColor="?attr/ItemBackgroundSelectedColor3"
            android:gravity="center_vertical"
            android:id="@+id/tv_name_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imv_location_provider"/>
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/imv_location_provider"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_album"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
