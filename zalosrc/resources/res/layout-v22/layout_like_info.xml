<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLikeInfo"
    android:background="?attr/PrimaryBackgroundColor"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/btn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginTop="12dp">
        <com.zing.zalo.feed.uicontrols.FeedLikeButtonModulesView
            android:id="@+id/btn_like_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:id="@+id/btn_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/str_feed_reaction_default_emoji_heart_text"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/btn_like_icon"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn_comment"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/btn_like"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp">
        <com.androidquery.util.RecyclingImageView
            android:id="@+id/btn_comment_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </RelativeLayout>
    <com.zing.zalo.zdesign.component.Divider
        android:id="@+id/layout_like_info_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/btn_like"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_like_description_container_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_padding_left"
        android:layout_marginRight="@dimen/feed_padding_right"
        android:layout_below="@+id/layout_like_info_divider"
        android:layout_alignParentLeft="true">
        <com.zing.zalo.uidrawing.ModulesView
            android:id="@+id/layout_like_description"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:id="@+id/feed_footer_overlay"
        android:background="?attr/feed_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feed_footer_bar_content_height"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
