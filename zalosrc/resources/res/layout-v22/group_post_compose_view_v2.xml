<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.widget.KeyboardFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/PrimaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.zdesign.component.header.ZdsActionBar
            android:id="@+id/zds_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:idTrailingButton="button_create"
            app:leadingType="close"
            app:middleTitleText="@string/str_group_post_compose_title"
            app:middleType="title"
            app:trailingTextButton="@string/str_create_group_reminder_btn_done"
            app:trailingType="text"
            style="@style/WhiteZdsActionBar.AppType"/>
        <com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout
            android:id="@+id/keyboard_aware_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zing.zalo.p077ui.widget.ScrollView
                android:id="@+id/scroll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_above="@+id/btn_add_attachment_wrapper">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/pin_checker_container"
                        android:background="?attr/SecondaryBackgroundColor"
                        android:layout_width="match_parent"
                        android:layout_height="48dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:id="@+id/pin_wrap"
                            android:background="@drawable/item_background_ripple"
                            android:paddingLeft="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ic_pin_checker"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/icn_form_radio_unchecked"/>
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="12dp"
                                android:textColor="?attr/TextColor2"
                                android:ellipsize="end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="@string/str_pin_to_top_group_chat_v2"
                                android:maxLines="1"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.zing.zalo.uicontrol.CustomEditText
                        android:textSize="22dp"
                        android:textColor="?attr/TextColor1"
                        android:textColorHint="?attr/TextColor2"
                        android:gravity="top"
                        android:id="@+id/et_group_topic"
                        android:paddingLeft="12dp"
                        android:paddingTop="6dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/str_group_post_input_hint"
                        android:includeFontPadding="false"
                        android:inputType="textMultiLine"
                        android:imeOptions="actionDone"
                        android:textCursorDrawable="@drawable/chat_bar_text_cursor"
                        style="@style/MaterialEditText"/>
                    <RelativeLayout
                        android:id="@+id/layoutLinkTab"
                        android:background="@drawable/rounded_bubble_chat_background_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp">
                        <com.zing.zalo.p077ui.widget.imageview.RoundedImageView
                            android:id="@+id/imvLinkHeader"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/attach_gallery_96"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:sriv_left_bottom_corner_radius="10dp"
                            app:sriv_left_top_corner_radius="10dp"
                            app:sriv_right_bottom_corner_radius="10dp"
                            app:sriv_right_top_corner_radius="10dp"/>
                        <ProgressBar
                            android:theme="@style/CircularProgress"
                            android:id="@+id/pb_link_progress"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="24dp"
                            android:indeterminate="true"
                            android:indeterminateDuration="1500"
                            android:indeterminateBehavior="repeat"
                            android:layout_centerInParent="true"
                            style="@style/ProgressBarCircleNormal"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_toLeftOf="@+id/link_preview_delete"
                            android:layout_toRightOf="@+id/imvLinkHeader"
                            android:layout_centerVertical="true">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="14dp"
                                android:textColor="?attr/TextColor2"
                                android:ellipsize="end"
                                android:id="@+id/tvLinkTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                app:fstyle="medium"/>
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="12dp"
                                android:textColor="?attr/TextColor5"
                                android:ellipsize="end"
                                android:id="@+id/tvLinkDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:maxLines="1"/>
                        </LinearLayout>
                        <View
                            android:layout_gravity="top|right"
                            android:id="@+id/link_preview_delete"
                            android:background="0x7f080c36"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_margin="6dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/postAnchor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </com.zing.zalo.p077ui.widget.ScrollView>
            <com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout
                android:id="@+id/btn_add_attachment_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <View
                    android:background="@drawable/bottom_sheet_top_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/btn_add_attachment"
                    android:background="@drawable/chat_reply_bg"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="16dp"
                        android:textColor="?attr/TextColor1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/str_add_attachment"
                        android:maxLines="1"
                        android:layout_weight="1"
                        app:fstyle="medium"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/icn_hint_add_attachment_link"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="4dp"
                            android:src="0x7f080def"
                            android:scaleType="centerInside"/>
                        <ImageView
                            android:id="@+id/icn_hint_add_attachment_poll"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="4dp"
                            android:src="0x7f080ee6"
                            android:scaleType="centerInside"/>
                        <ImageView
                            android:id="@+id/icn_hint_add_attachment_reminder"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="4dp"
                            android:src="0x7f080ec5"
                            android:scaleType="centerInside"/>
                    </LinearLayout>
                </LinearLayout>
            </com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout>
            <com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout
                android:id="@+id/drag_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@drawable/bottom_sheet_top_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/chat_reply_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/add_attachment_reminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/list_selector"
                            android:paddingLeft="26dp"
                            android:paddingTop="14dp"
                            android:paddingRight="14dp"
                            android:paddingBottom="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.ZAppCompatImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="centerInside"
                                app:srcCompatEx="@drawable/icn_groupboard_actionsheet_reminder"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/str_add_attachment_reminder_title"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="14dp"
                                    android:textColor="?attr/TextColor2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/str_add_attachment_hint_reminder"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginHorizontal="24dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/add_attachment_poll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/list_selector"
                            android:paddingLeft="26dp"
                            android:paddingTop="14dp"
                            android:paddingRight="14dp"
                            android:paddingBottom="14dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.ZAppCompatImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:scaleType="centerInside"
                                app:srcCompatEx="@drawable/icn_groupboard_actionsheet_poll"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="16dp"
                                    android:textColor="?attr/TextColor1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/str_add_attachment_poll_title"/>
                                <com.zing.zalo.p077ui.widget.RobotoTextView
                                    android:textSize="14dp"
                                    android:textColor="?attr/TextColor2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="@string/str_add_attachment_hint_poll"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:background="?attr/ItemSeparatorColor"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginHorizontal="24dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/add_attachment_link"
                        android:background="@drawable/list_selector"
                        android:paddingLeft="26dp"
                        android:paddingTop="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:scaleType="centerInside"
                            app:srcCompatEx="@drawable/icn_groupboard_actionsheet_link"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="16dp"
                                android:textColor="?attr/TextColor1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/str_add_attachment_link_title"/>
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textSize="14dp"
                                android:textColor="?attr/TextColor2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="@string/str_add_attachment_hint_link"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.zing.zalo.p077ui.widget.TouchInterceptionFrameLayout>
        </com.zing.zalo.p077ui.zviews.KeyboardAwareRelativeLayout>
    </LinearLayout>
</com.zing.zalo.p077ui.widget.KeyboardFrameLayout>
