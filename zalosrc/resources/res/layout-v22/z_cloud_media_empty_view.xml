<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/z_cloud_media_empty_view_0"
    android:background="?attr/surface_background_alt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:leadingType="back"
        app:middleTitleText="@string/str_cloud_media"
        app:middleType="title"
        style="@style/BlueZdsActionBar.AppType"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:paddingTop="24dp"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/divider"
        android:layout_below="@+id/zds_action_bar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/zds_il_storage"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:text="@string/str_zcloud_protect_conversation_data"
                android:textAlignment="center"
                android:layout_marginHorizontal="24dp"
                style="@style/h_large"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/itemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="24dp"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:background="@drawable/bg_container_informative"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="?attr/layer_background_subtle"
                android:layout_marginHorizontal="24dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivIconInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/zds_ic_info_circle_solid_16"
                    app:tint="?attr/information_icon"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_zcloud_media_empty_information"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/ivIconInfo"
                    style="@style/t_xxsmall"/>
            </RelativeLayout>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
    <View
        android:id="@+id/divider"
        android:background="?attr/divider_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/btnConnect"
        android:layout_marginHorizontal="24dp"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="24dp"
        style="@style/ButtonLarge.Primary"/>
</RelativeLayout>
