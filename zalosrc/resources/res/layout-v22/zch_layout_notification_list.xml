<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:package="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/zch_bg_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.shortvideo.p072ui.widget.p075rv.OverScrollableRecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.shortvideo.p072ui.widget.LoadingLayout
        android:id="@+id/lytLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.shortvideo.p072ui.widget.p075rv.OverScrollableRefreshBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/barRefresh"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.zing.zalo.shortvideo.p072ui.widget.tv.SimpleShadowTextView
        android:textSize="14dp"
        android:textColor="@color/zch_text_primary"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvNewNoti"
        android:background="@drawable/zch_bg_button_new_notification"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/zch_page_notification_new_notification"
        android:includeFontPadding="false"
        android:drawableLeft="@drawable/zch_ic_chevron_up_line_12"
        android:drawablePadding="4dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        package:zchFontStyle="regular"/>
</FrameLayout>
