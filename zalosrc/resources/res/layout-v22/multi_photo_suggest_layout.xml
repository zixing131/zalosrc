<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zing.zalo.p077ui.widget.recyclerview.CustomRecyclerView
        android:id="@+id/list_data"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/multi_photo_suggest_left_btn_size"
        android:layout_above="@+id/btns_container"
        android:layout_alignParentRight="true"
        android:overScrollMode="never"
        android:splitMotionEvents="false"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/to_collapse_view"
        android:background="@drawable/white_rounded_background"
        android:visibility="gone"
        android:layout_width="@dimen/multi_photo_suggest_left_btn_size"
        android:layout_height="@dimen/multi_photo_suggest_left_btn_size"
        android:layout_marginLeft="@dimen/multi_photo_suggest_left_btn_margin"
        android:layout_above="@+id/btns_container"
        android:layout_alignLeft="@+id/list_data"
        android:elevation="2dp"
        app:srcCompat="@drawable/ic_icon_collapse"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/btns_container"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="@color/bg_btn_type3_text"
            android:gravity="center"
            android:id="@+id/close_btn_expand"
            android:background="@drawable/bg_btn_type3_medium"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/multi_photo_suggest_send_close_btn_height"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/multi_photo_suggest_btns_top_spacing"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="@dimen/multi_photo_suggest_btns_bot_spacing"
            android:text="@string/str_suggest_multi_photos_close_expand"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_marginHorizontal="4dp"
            app:disableScaleTextSize="true"
            style="@style/Roboto.f13b"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="@color/bg_btn_type2_text"
            android:gravity="center"
            android:id="@+id/send_all_btn_expand"
            android:background="@drawable/bg_btn_type2_medium"
            android:layout_width="0dp"
            android:layout_height="@dimen/multi_photo_suggest_send_close_btn_height"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/multi_photo_suggest_btns_top_spacing"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="@dimen/multi_photo_suggest_btns_bot_spacing"
            android:text="@string/str_send"
            android:layout_weight="1"
            android:elevation="2dp"
            android:layout_marginHorizontal="4dp"
            app:disableScaleTextSize="true"
            style="@style/Roboto.f13b"/>
    </LinearLayout>
    <com.zing.zalo.p077ui.chat.widget.photosuggest.NewMultiPhotoSuggestCollapsedView
        android:id="@+id/collapse_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</merge>
