<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="210dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/action_bar_default_height"
        android:scaleType="fitCenter"
        android:layout_weight="3"
        app:srcCompat="@drawable/ic_illustration_businesstool"/>
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="4">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="22dp"
                android:textColor="?attr/text_01"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="12dp"
                android:text="@string/str_ba_activation_business_tools_title"
                android:lineHeight="26dp"
                style="@style/Roboto.f1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_product_catalog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="12dp">
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_circle_blue_activation"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompatEx="@drawable/zds_ic_catalog_line_24"
                        app:tint="@color/b70"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f3"
                        android:textColor="?attr/text_01"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_ba_activation_business_tools_product_catalog_title"
                        app:fstyle="medium"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f0"
                        android:textColor="?attr/text_02"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_ba_activation_business_tools_product_catalog_desc"
                        android:lineHeight="18dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_quick_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="12dp">
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_circle_blue_activation"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompatEx="@drawable/zds_ic_quick_reply_line_24"
                        app:tint="@color/b70"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f3"
                        android:textColor="?attr/text_01"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_ba_activation_business_tools_quick_msg_title"
                        app:fstyle="medium"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f0"
                        android:textColor="?attr/text_02"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_ba_activation_business_tools_quick_msg_desc"
                        android:lineHeight="18dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_auto_replies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="12dp">
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_circle_blue_activation"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompatEx="@drawable/zds_ic_chat_line_24"
                        app:tint="@color/b70"/>
                </FrameLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f3"
                        android:textColor="?attr/text_01"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_ba_activation_business_tools_auto_reply_title"
                        app:fstyle="medium"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f0"
                        android:textColor="?attr/text_02"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_ba_activation_business_tools_auto_reply_desc"
                        android:lineHeight="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp">
        <com.zing.zalo.zdesign.component.Button
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_open_business_tools"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:text="@string/str_ba_activation_business_tools_btn_start_use"
            style="@style/ButtonLarge.Primary"/>
    </LinearLayout>
</LinearLayout>
