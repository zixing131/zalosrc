<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textColor="?attr/information_text"
        android:id="@+id/section_clean_header"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        style="@style/t_small_m"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/section_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_cloud_media_type_photo"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/section_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_cloud_media_type_video"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/section_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_cloud_media_type_file"/>
    <com.zing.zalo.zdesign.component.ListItem
        android:id="@+id/section_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_cloud_media_type_other"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btn_clean_my_cloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:text="@string/str_my_cloud_quota_clean_section_btn"
        android:singleLine="true"
        android:layout_marginHorizontal="16dp"
        style="@style/ButtonMedium.SecondaryNeutral"/>
</LinearLayout>
