<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/zingmp3sdk_spacing_normal"
    android:paddingRight="@dimen/zingmp3sdk_spacing_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/zingmp3sdk_spacing_normal">
    <View
        android:id="@+id/divider"
        android:background="@color/zingmp3sdk_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zingmp3sdk_divider"/>
    <com.zing.mp3.sdk.view.widgets.SongBtsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zingmp3sdk_spacing_pretty_small"
        android:layout_below="@+id/divider">
        <RelativeLayout
            android:id="@+id/menuItemOne"
            android:paddingLeft="@dimen/zingmp3sdk_spacing_small"
            android:paddingTop="@dimen/zingmp3sdk_spacing_pretty_small"
            android:paddingRight="@dimen/zingmp3sdk_spacing_small"
            android:paddingBottom="@dimen/zingmp3sdk_spacing_pretty_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/zingmp3sdk_spacing_small">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zingmp3sdk_ic_ringtone"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zingmp3sdk_spacing_small"
                android:text="@string/zingmp3sdk_install_ringtone"
                android:layout_below="@+id/iv"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                style="@style/ZingMP3Sdk.Widget.TextView.MenuItem"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menuItemTwo"
            android:paddingLeft="@dimen/zingmp3sdk_spacing_small"
            android:paddingTop="@dimen/zingmp3sdk_spacing_pretty_small"
            android:paddingRight="@dimen/zingmp3sdk_spacing_small"
            android:paddingBottom="@dimen/zingmp3sdk_spacing_pretty_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/zingmp3sdk_spacing_small">
            <ImageView
                android:id="@+id/ivTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zingmp3sdk_ic_zalo_diary"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tvTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zingmp3sdk_spacing_small"
                android:text="@string/zingmp3sdk_create_diary"
                android:layout_below="@+id/ivTwo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                style="@style/ZingMP3Sdk.Widget.TextView.MenuItem"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/menuItemThree"
            android:paddingLeft="@dimen/zingmp3sdk_spacing_small"
            android:paddingTop="@dimen/zingmp3sdk_spacing_pretty_small"
            android:paddingRight="@dimen/zingmp3sdk_spacing_small"
            android:paddingBottom="@dimen/zingmp3sdk_spacing_pretty_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/zingmp3sdk_spacing_small">
            <ImageView
                android:id="@+id/ivThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zingmp3sdk_ic_share"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/tvThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zingmp3sdk_spacing_small"
                android:text="@string/zingmp3sdk_share"
                android:layout_below="@+id/ivThree"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                style="@style/ZingMP3Sdk.Widget.TextView.MenuItem"/>
        </RelativeLayout>
    </com.zing.mp3.sdk.view.widgets.SongBtsFooter>
</RelativeLayout>
