<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:clickable="true"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.androidquery.util.RecyclingImageView
        android:id="@+id/imvEmpty"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/ic_im_create_qr_link"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16sp"
        android:textColor="?attr/TextColor1"
        android:gravity="center"
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:text="@string/str_qr_share_group_empty_title_admin"
        android:layout_marginHorizontal="16dp"
        app:fstyle="medium"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15sp"
        android:textColor="?attr/TextColor2"
        android:gravity="center"
        android:id="@+id/tvEmptyDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:text="@string/str_qr_share_group_empty_desc_admin"
        android:layout_marginHorizontal="16dp"/>
    <com.zing.zalo.p077ui.widget.RobotoButton
        android:textSize="14sp"
        android:textColor="?attr/TextColor6"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/btnEmpty"
        android:paddingLeft="32dp"
        android:paddingTop="11dp"
        android:paddingRight="32dp"
        android:paddingBottom="11dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minWidth="150dp"
        android:text="Nhắn tin cho trưởng nhóm"
        android:paddingHorizontal="32dp"
        android:paddingVertical="11dp"
        app:fstyle="medium"
        style="@style/btnType1.big"/>
</LinearLayout>
