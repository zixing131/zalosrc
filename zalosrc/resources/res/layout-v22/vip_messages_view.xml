<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_backgroundmain"
    android:background="?attr/PrimaryBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zdesign.component.header.ZdsActionBar
        android:id="@+id/zds_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingType="back"
        app:middleTitleText="@string/strangermsg_title"
        app:middleType="title"
        app:trailingIconButton="@drawable/zds_ic_more_horizontal_line_24"
        app:trailingType="icon"
        style="@style/BlueZdsActionBar.AppType"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textColor="?attr/TextColor2"
            android:textColorHighlight="@color/b60"
            android:textColorLink="@color/b60"
            android:id="@+id/tvSuggestPrivacySetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:breakStrategy="simple"
            android:layout_marginHorizontal="16dp"
            style="@style/t_small_m"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvSuggestPrivacySetting"/>
        <com.zing.zalo.p077ui.zviews.multistate.MultiStateView
            android:id="@+id/multi_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvSuggestPrivacySetting"
            android:layout_centerHorizontal="true"
            app:msvEmptyLayout="@layout/item_empty_stranger_messages"
            app:msvErrorLayout="@layout/item_empty_stranger_messages"/>
    </RelativeLayout>
    <ViewStub
        android:id="@+id/vs_quick_action_view"
        android:layout="@layout/layout_quick_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
