<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="?attr/PrimaryBackgroundColor"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_thumb"
        android:background="?attr/ProfileBackgroundSuggestAlbumItem"
        android:padding="7dp"
        android:layout_width="64dp"
        android:layout_height="64dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.androidquery.util.RecyclingImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleType="centerCrop"/>
            <com.zing.zalo.p077ui.widget.AspectRatioImageView
                android:id="@+id/thumb_empty"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"/>
            <FrameLayout
                android:id="@+id/overlay"
                android:background="@color/black_50"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/selected_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_album_select_check"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="16dp"
        android:textColor="?attr/TextColor5"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/layout_thumb"
        android:lineHeight="22dp"
        app:fstyle="medium"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title">
        <com.zing.zalo.p077ui.widget.AspectRatioImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_centerVertical="true"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor2"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            android:lineHeight="18dp"/>
    </RelativeLayout>
</RelativeLayout>
