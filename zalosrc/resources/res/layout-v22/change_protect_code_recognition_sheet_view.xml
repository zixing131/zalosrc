<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center"
        android:background="@drawable/bg_accent_blue_background_subtle_r16"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp">
        <androidx.appcompat.widget.ZAppCompatImageView
            android:id="@+id/icLock"
            android:layout_width="22dp"
            android:layout_height="26dp"
            android:scaleType="fitCenter"
            app:srcCompatEx="@drawable/zds_ic_lock_solid_24"
            app:tint="?attr/accent_blue_icon"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="22dp"
        android:textColor="?attr/text_primary"
        android:gravity="center_horizontal"
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/str_title_change_protect_code_recognition"
        android:layout_marginHorizontal="24dp"
        style="@style/t_xlarge"/>
    <com.zing.zalo.p077ui.widget.RobotoTextView
        android:textSize="15dp"
        android:textColor="?attr/text_primary"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/str_description_change_protect_code_recognition"
        android:layout_marginHorizontal="24dp"
        style="@style/t_normal"/>
    <com.zing.zalo.zdesign.component.Button
        android:id="@+id/btnGotIt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="24dp"
        android:text="@string/str_tip_banner_got_it"
        android:layout_marginHorizontal="40dp"
        style="@style/ButtonMedium.Tertiary"/>
</LinearLayout>
