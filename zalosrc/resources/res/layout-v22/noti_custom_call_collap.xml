<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="64dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/mainContainer"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="64dp"
        android:forceDarkAllowed="false">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/branch_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/icon_zalo_blue"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_stat_notify_zalo"
                android:contentDescription="@string/app_name"/>
            <TextView
                android:textSize="12dp"
                android:textColor="#0068ff"
                android:layout_gravity="center_vertical"
                android:id="@+id/title_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zalo"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:baselineAligned="false">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/titleContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#5e6265"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_open"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ("/>
                    <Chronometer
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        android:id="@+id/elapse_time"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        android:id="@+id/tv_close"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="38dp"
                android:layout_height="38dp">
                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:id="@+id/imv_avatar"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/str_profile_picture"
                    android:forceDarkAllowed="false"/>
                <ImageView
                    android:layout_gravity="end|bottom"
                    android:id="@+id/imv_avatar_zalo"
                    android:visibility="gone"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_zavatar_call_banner"
                    android:forceDarkAllowed="false"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
