<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/z_cloud_gp_downloading_data_view_0"
    android:background="?attr/surface_background_alt"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zing.zalo.zview.actionbar.ActionBar
        android:id="@+id/zalo_action_bar"
        android:background="?attr/surface_background_alt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <com.zing.zalo.p077ui.widget.ScrollView
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zalo_action_bar"
        android:paddingHorizontal="24dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/titleIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/zds_il_auto_download_hero_21_9"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textColor="?attr/text_primary"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/str_download_media_msg"
                android:textAlignment="center"
                style="@style/h_xlarge"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/summaryDetailsContainer"
                android:background="@drawable/bg_container_informative"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="?attr/layer_background_selected">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_download_size"
                    android:textAlignment="center"
                    style="@style/h_small"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textColor="?attr/text_primary"
                    android:id="@+id/tvMediaSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    style="@style/h_xlarge"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/downloadingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="?attr/text_primary"
                            android:id="@+id/tvDownloadStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/downloading"
                            android:layout_alignParentStart="true"
                            style="@style/t_small"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="?attr/text_primary"
                            android:id="@+id/tvProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            style="@style/t_small_m"/>
                    </RelativeLayout>
                    <com.zing.zalo.zdesign.component.ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/ProgressBar.Horizontal"/>
                    <RelativeLayout
                        android:id="@+id/errorContainer"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:id="@+id/ivLeadingIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="?attr/input_field_text_secondary"
                            android:layout_alignParentStart="true"
                            app:srcCompat="@drawable/zds_ic_warning_solid_16"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/mainContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/ivLeadingIcon"
                            android:layout_toEndOf="@+id/ivLeadingIcon">
                            <com.zing.zalo.p077ui.widget.RobotoTextView
                                android:textColor="?attr/input_field_text_secondary"
                                android:id="@+id/tvError"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str_your_device_needs_more_free_space"
                                android:layout_marginStart="12dp"
                                style="@style/t_small"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.zing.zalo.p077ui.widget.ScrollView>
</RelativeLayout>
