<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/view_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/view_text_shadow"
        android:background="@drawable/social_memory_text_shadow"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>
    <TextView
        android:textSize="20dp"
        android:textColor="@color/white"
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/social_memory_title_mg_top"
        android:includeFontPadding="false"
        android:layout_centerHorizontal="true"
        android:lineHeight="32dp"/>
    <TextView
        android:textSize="26dp"
        android:textColor="@color/white"
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:layout_below="@+id/txt_title"
        android:layout_centerHorizontal="true"
        android:lineHeight="32dp"/>
    <com.showingphotolib.view.AspectRatioImageView
        android:id="@+id/top_decor_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.showingphotolib.view.AspectRatioImageView
        android:id="@+id/bottom_decor_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.zing.zalo.feed.components.SegmentProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_close"
        android:padding="4dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_social_memory_header_close"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/button_share_memory"
        android:background="@drawable/social_memory_button_share_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginBottom="24dp"
        android:minWidth="146dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_share_memory_social"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="14dp"
            android:textColor="?attr/TextColor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/str_menu_item_share"/>
    </LinearLayout>
</RelativeLayout>
