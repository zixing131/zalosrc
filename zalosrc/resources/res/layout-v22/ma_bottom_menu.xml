<?xml version="1.0" encoding="utf-8"?>
<com.zing.zalo.p077ui.rounedlayout.FrameRoundedLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/ma_bg_view"
        android:background="@color/black_70"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zing.zalo.uicomponents.framelayout.DragToCloseLayout
            android:id="@+id/drag_to_close_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/optionLayout"
                android:background="?attr/container"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:topLeft="16dp"
                app:topRight="16dp">
                <com.zing.zalo.p077ui.rounedlayout.FrameRoundedLayout
                    android:background="?attr/ui_background_pressed"
                    android:layout_width="48dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="16dp"
                    app:connerRadius="5dp"/>
                <com.zing.zalo.p077ui.rounedlayout.RelativeRoundedLayout
                    android:id="@+id/ma_open_info_view"
                    android:paddingLeft="@dimen/ma_padding_horizontal"
                    android:paddingTop="@dimen/ma_padding_vertical"
                    android:paddingRight="@dimen/ma_padding_horizontal"
                    android:paddingBottom="@dimen/ma_padding_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/ma_padding_horizontal"
                    android:paddingVertical="@dimen/ma_padding_vertical"
                    app:backgroundPressColor="?attr/ui_background_selected"
                    app:normalBackgroundColor="?attr/container">
                    <com.zing.zalo.p077ui.widget.imageview.RoundedImageView
                        android:id="@+id/ma_menu_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        app:sriv_border_color="?attr/border_01"
                        app:sriv_border_width="0.5dp"
                        app:sriv_left_bottom_corner_radius="8dp"
                        app:sriv_left_top_corner_radius="8dp"
                        app:sriv_right_bottom_corner_radius="8dp"
                        app:sriv_right_top_corner_radius="8dp"/>
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:id="@+id/ma_menu_icon_info"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:tint="@color/b60"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompatEx="@drawable/zds_ic_info_circle_line_24"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_toStartOf="@+id/ma_menu_icon_info"
                        android:layout_toEndOf="@+id/ma_menu_icon">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="16dp"
                            android:textColor="?attr/text_01"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:id="@+id/ma_menu_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textAlignment="gravity"
                            app:fstyle="medium"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="13dp"
                            android:textColor="?attr/text_02"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:id="@+id/ma_menu_category_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:maxLines="1"
                            android:textAlignment="gravity"/>
                    </LinearLayout>
                </com.zing.zalo.p077ui.rounedlayout.RelativeRoundedLayout>
                <View
                    android:background="?attr/divider_01"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/ma_padding_horizontal"
                    android:paddingTop="@dimen/ma_padding_vertical"
                    android:paddingRight="@dimen/ma_padding_horizontal"
                    android:paddingBottom="@dimen/ma_padding_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/ma_padding_horizontal"
                    android:paddingVertical="@dimen/ma_padding_vertical">
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="14dp"
                        android:textColor="?attr/text_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_mini_app_sent_to"
                        app:fstyle="medium"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="horizontal"
                        android:id="@+id/ma_menu_recently_contact_rcv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                <com.zing.zalo.p077ui.rounedlayout.RelativeRoundedLayout
                    android:id="@+id/ma_menu_copy_link"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ma_padding_horizontal"
                    android:layout_marginRight="@dimen/ma_padding_horizontal"
                    android:layout_marginHorizontal="@dimen/ma_padding_horizontal"
                    app:backgroundPressColor="?attr/page_background_03"
                    app:borderColor="?attr/border_01"
                    app:borderWidth="1dp"
                    app:connerRadius="8dp"
                    app:normalBackgroundColor="?attr/container">
                    <androidx.appcompat.widget.ZAppCompatImageView
                        android:id="@+id/ma_menu_copy_link_ic"
                        android:background="@color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="?attr/selected"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompatEx="@drawable/zds_ic_copy_line_24"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="15dp"
                        android:textColor="?attr/text_01"
                        android:ellipsize="end"
                        android:id="@+id/textLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="19dp"
                        android:layout_toStartOf="@+id/ma_menu_copy_link_ic"
                        android:layout_alignParentStart="true"/>
                </com.zing.zalo.p077ui.rounedlayout.RelativeRoundedLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/ma_padding_vertical"
                    android:layout_marginRight="12dp"
                    android:weightSum="3"
                    android:layout_marginHorizontal="12dp">
                    <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ma_menu_qr_code"
                        android:padding="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:minHeight="72dp"
                        android:layout_weight="1"
                        app:backgroundPressColor="?attr/ui_background_pressed"
                        app:borderColor="?attr/border_01"
                        app:borderWidth="0.5dp"
                        app:connerRadius="8dp"
                        app:normalBackgroundColor="?attr/page_background_03">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:id="@+id/icQR"
                            android:background="@color/transparent"
                            android:layout_width="@dimen/ma_icon_menu_size"
                            android:layout_height="@dimen/ma_icon_menu_size"
                            android:layout_margin="8dp"
                            android:tint="?attr/icon_01"
                            app:srcCompatEx="@drawable/zds_ic_qr_line_24"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="12dp"
                            android:textColor="?attr/text_01"
                            android:ellipsize="end"
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mini_app_qr_code"
                            android:maxLines="1"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/icQR"
                            android:lineHeight="16dp"/>
                    </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
                    <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ma_menu_short_cut"
                        android:padding="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:minHeight="72dp"
                        android:layout_weight="1"
                        app:backgroundPressColor="?attr/ui_background_pressed"
                        app:borderColor="?attr/border_01"
                        app:borderWidth="0.5dp"
                        app:connerRadius="8dp"
                        app:normalBackgroundColor="?attr/page_background_03">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:id="@+id/icShortcut"
                            android:background="@color/transparent"
                            android:layout_width="@dimen/ma_icon_menu_size"
                            android:layout_height="@dimen/ma_icon_menu_size"
                            android:layout_margin="8dp"
                            android:tint="?attr/icon_01"
                            app:srcCompatEx="@drawable/zds_ic_save_to_collection_line_24"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="12dp"
                            android:textColor="?attr/text_01"
                            android:ellipsize="end"
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mini_app_shortcut"
                            android:maxLines="1"
                            android:layout_toEndOf="@+id/icShortcut"
                            android:lineHeight="16dp"/>
                    </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
                    <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ma_menu_favorite"
                        android:padding="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:minHeight="72dp"
                        android:layout_weight="1"
                        app:backgroundPressColor="?attr/ui_background_pressed"
                        app:borderColor="?attr/border_01"
                        app:borderWidth="0.5dp"
                        app:connerRadius="8dp"
                        app:normalBackgroundColor="?attr/page_background_03">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:id="@+id/icFavourite"
                            android:background="@color/transparent"
                            android:layout_width="@dimen/ma_icon_menu_size"
                            android:layout_height="@dimen/ma_icon_menu_size"
                            android:layout_margin="8dp"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="12dp"
                            android:textColor="?attr/text_01"
                            android:ellipsize="end"
                            android:id="@+id/favoriteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mini_app_favorite"
                            android:maxLines="1"
                            android:lineHeight="16dp"/>
                    </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:weightSum="3"
                    android:layout_marginHorizontal="12dp">
                    <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ma_menu_add_floating"
                        android:padding="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:minHeight="72dp"
                        android:layout_weight="1"
                        app:backgroundPressColor="?attr/ui_background_pressed"
                        app:borderColor="?attr/border_01"
                        app:borderWidth="0.5dp"
                        app:connerRadius="8dp"
                        app:normalBackgroundColor="?attr/page_background_03">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:id="@+id/icAddFloating"
                            android:background="@color/transparent"
                            android:layout_width="@dimen/ma_icon_menu_size"
                            android:layout_height="@dimen/ma_icon_menu_size"
                            android:layout_margin="8dp"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="12dp"
                            android:textColor="?attr/text_01"
                            android:ellipsize="end"
                            android:id="@+id/floatingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mini_add_to_floating"
                            android:maxLines="1"
                            android:lineHeight="16dp"/>
                    </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
                    <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ma_menu_permission"
                        android:padding="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:minHeight="72dp"
                        android:layout_weight="1"
                        app:backgroundPressColor="?attr/ui_background_pressed"
                        app:borderColor="?attr/border_01"
                        app:borderWidth="0.5dp"
                        app:connerRadius="8dp"
                        app:normalBackgroundColor="?attr/page_background_03">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:id="@+id/icPermission"
                            android:background="@color/transparent"
                            android:layout_width="@dimen/ma_icon_menu_size"
                            android:layout_height="@dimen/ma_icon_menu_size"
                            android:layout_margin="8dp"
                            android:tint="?attr/icon_01"
                            app:srcCompatEx="@drawable/zds_ic_lock_line_24"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="12dp"
                            android:textColor="?attr/text_01"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mini_app_permission_menu"
                            android:maxLines="1"
                            android:lineHeight="16dp"/>
                    </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
                    <com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ma_menu_reload"
                        android:padding="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:minHeight="72dp"
                        android:layout_weight="1"
                        app:backgroundPressColor="?attr/ui_background_pressed"
                        app:borderColor="?attr/border_01"
                        app:borderWidth="0.5dp"
                        app:connerRadius="8dp"
                        app:normalBackgroundColor="?attr/page_background_03">
                        <androidx.appcompat.widget.ZAppCompatImageView
                            android:id="@+id/icReload"
                            android:background="@color/transparent"
                            android:layout_width="@dimen/ma_icon_menu_size"
                            android:layout_height="@dimen/ma_icon_menu_size"
                            android:layout_margin="8dp"
                            android:tint="?attr/icon_01"
                            app:srcCompatEx="@drawable/zds_ic_retry_line_24"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="12dp"
                            android:textColor="?attr/text_01"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_mini_app_reload"
                            android:maxLines="1"
                            android:lineHeight="16dp"/>
                    </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
                    <View
                        android:id="@+id/emptyView"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:minHeight="72dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <com.zing.zalo.zdesign.component.Button
                    android:textSize="15dp"
                    android:textColor="?attr/text_01"
                    android:id="@+id/ma_menu_close"
                    android:background="@drawable/mini_app_rounded_button_background"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ma_padding_horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="@dimen/ma_padding_horizontal"
                    android:layout_marginBottom="24dp"
                    android:text="@string/close"
                    android:layout_marginHorizontal="@dimen/ma_padding_horizontal"
                    app:fstyle="medium"/>
            </com.zing.zalo.p077ui.rounedlayout.LinearRoundedLayout>
        </com.zing.zalo.uicomponents.framelayout.DragToCloseLayout>
        <com.zing.zalo.uicomponents.framelayout.DragToCloseLayout
            android:id="@+id/drag_to_close_qr_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">
            <ViewStub
                android:id="@+id/ma_qr_view_stub"
                android:layout="@layout/mini_app_qr_view_stub"
                android:inflatedId="@+id/ma_qr_view_stub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
        </com.zing.zalo.uicomponents.framelayout.DragToCloseLayout>
    </RelativeLayout>
</com.zing.zalo.p077ui.rounedlayout.FrameRoundedLayout>
