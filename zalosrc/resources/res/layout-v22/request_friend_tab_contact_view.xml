<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/layout_header_request_friend"
        android:background="?attr/SecondaryBackgroundColor"
        android:paddingTop="16dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f5"
            android:textColor="?attr/TextColor5"
            android:layout_gravity="center_vertical"
            android:id="@+id/hint_title"
            android:paddingLeft="@dimen/msg_item_padding_l_r"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_section_friend_request_title"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f5"
            android:textColor="?attr/AppPrimaryColor"
            android:layout_gravity="center"
            android:id="@+id/seemore"
            android:paddingRight="24dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_hide"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/ll_friend_request_single"
        android:background="?attr/SecondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/stencils_bg_white_round_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/ll_friend_request_single_item"
                android:paddingTop="12dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zing.zalo.p077ui.widget.AvatarImageView
                        android:id="@+id/img_avt_suggest1"
                        android:layout_width="@dimen/avt_image_size_default"
                        android:layout_height="@dimen/avt_image_size_default"
                        android:layout_marginLeft="@dimen/msg_item_padding_l_r"
                        android:layout_marginTop="3dp"
                        app:srcCompat="?attr/default_avatar"
                        style="@style/myImageView"/>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textAppearance="@style/notification_text"
                        android:gravity="center"
                        android:id="@+id/numnotification_layoutfriendsuggest"
                        android:background="@drawable/bg_noti_request_friend"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:minWidth="22dp"
                        android:minHeight="16dp"
                        android:text="N"
                        android:includeFontPadding="false"/>
                </FrameLayout>
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:id="@+id/layoutFriendsuggestTitleCenter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/msg_item_padding_l_r"
                    android:layout_marginRight="@dimen/hearder_func_avt_suggest_margin_l"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/llTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true">
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textSize="@dimen/f4"
                            android:textColor="?attr/TextColor1"
                            android:gravity="center_vertical"
                            android:id="@+id/tvLayoutfriendsuggestTitleCenter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                        <com.zing.zalo.p077ui.widget.RobotoTextView
                            android:textColor="?attr/information_text"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tvBALabel"
                            android:background="@drawable/bg_label_business_account"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_label_business_account"
                            android:maxLines="1"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="4dp"
                            style="@style/t_xxxxsmall"/>
                    </LinearLayout>
                    <com.zing.zalo.p077ui.widget.RobotoTextView
                        android:textSize="@dimen/f8"
                        android:textStyle="normal"
                        android:textColor="?attr/TextColor2"
                        android:gravity="center_vertical"
                        android:id="@+id/tvLayoutfriendsuggestMsgCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_below="@+id/llTitle"/>
                </RelativeLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/invitation_container"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f0"
                    android:textColor="?attr/TextColor1"
                    android:ellipsize="end"
                    android:id="@+id/tvMessage"
                    android:paddingTop="16dp"
                    android:paddingBottom="10dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:layout_toLeftOf="@+id/view_see_more"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:textSize="@dimen/f0"
                    android:textColor="?attr/TextColor3"
                    android:layout_gravity="bottom|right"
                    android:id="@+id/view_see_more"
                    android:paddingLeft="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_see_more"/>
            </FrameLayout>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="@dimen/f8"
                android:textColor="?attr/TextColor2"
                android:id="@+id/tvDecline"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                android:text="@string/str_reject_friend_done"
                android:maxLines="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_button"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:gravity="center"
                    android:id="@+id/btn_delete_suggest"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/btn_reject_Invitation"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    style="@style/btnType3.medium"/>
                <com.zing.zalo.p077ui.widget.RobotoTextView
                    android:gravity="center"
                    android:id="@+id/btn_accept_friend_request"
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:text="@string/str_accept_friend_request"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    style="@style/btnType2.medium"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_multi"
        android:background="?attr/SecondaryBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_layout_see_all"
        android:background="@drawable/stencils_contact_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.ZAppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/ic_request_friend_tab_contact"/>
        <com.zing.zalo.p077ui.widget.RobotoTextView
            android:textSize="@dimen/f2"
            android:textColor="?attr/TextColor1"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvFriendRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_weight="1"/>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/layout_mini_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="18dp">
            <com.zing.zalo.p077ui.widget.AvatarImageView
                android:id="@+id/img_avt_1"
                android:padding="1dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:srcCompat="?attr/default_avatar"
                style="@style/myImageView"/>
            <com.zing.zalo.p077ui.widget.AvatarImageView
                android:id="@+id/img_avt_2"
                android:padding="1dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="?attr/default_avatar"
                style="@style/myImageView"/>
            <com.zing.zalo.p077ui.widget.AvatarImageView
                android:id="@+id/img_avt_3"
                android:padding="1dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="?attr/default_avatar"
                style="@style/myImageView"/>
            <com.zing.zalo.p077ui.widget.RobotoTextView
                android:textSize="9dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_count_see_more"
                android:background="@drawable/bg_count_request_friend"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="60dp"
                android:minWidth="28dp"
                android:text="+24"
                android:maxLines="1"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottom_line_request_friend"
        android:background="?attr/ItemSeparatorColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
