<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="-1px"
                android:top="-1px"
                android:right="-1px">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/ItemBackgroundPress"/>
                    <stroke
                        android:width="1px"
                        android:color="?attr/ItemSeparatorColor"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item
                android:left="-1px"
                android:top="-1px"
                android:right="-1px">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/ItemBackgroundPress"/>
                    <stroke
                        android:width="1px"
                        android:color="?attr/ItemSeparatorColor"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@drawable/bg_with_bottom_border"/>
</selector>
