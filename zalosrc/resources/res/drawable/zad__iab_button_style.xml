<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <padding
                android:left="@dimen/zad__iab_padding"
                android:top="@dimen/zad__iab_padding"
                android:right="@dimen/zad__iab_padding"
                android:bottom="@dimen/zad__iab_padding"/>
            <solid android:color="@color/zad__iab_normal_color"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <padding
                android:left="@dimen/zad__iab_padding"
                android:top="@dimen/zad__iab_padding"
                android:right="@dimen/zad__iab_padding"
                android:bottom="@dimen/zad__iab_padding"/>
            <solid android:color="@color/zad__iab_active_color"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <padding
                android:left="@dimen/zad__iab_padding"
                android:top="@dimen/zad__iab_padding"
                android:right="@dimen/zad__iab_padding"
                android:bottom="@dimen/zad__iab_padding"/>
            <solid android:color="@color/zad__iab_active_color"/>
        </shape>
    </item>
</selector>
